<< @(#) $Id$ >>

<int name='editid'>
<string name='url'>

<int name='edittag'>
<string name='subject'>
<string name='body'>

<html>
<preamble>
<body>
 <top ident='index'>
 <complain_obj id='$editid' url='$url'>
 <setup>
 <if what='$editid'>
  <form_table title='Редактирование жалобы'>
 <else>
  <form_table title='Добавление жалобы'>
 </if>
 <form method=post enctype='multipart/form-data'
       action='/actions/complain/modify'>
  <hidden name='edittag' value=1>
  <ifzero what='$editid'>
   <ifnzero what='$redirid'>
    <hidden name='okdir' value#='/complains/?redirid=$redirid'>
   <else>
    <hidden name='okdir' value='/complains/'>
   </ifnzero>
  <else>
   <hidden name='okdir' value='$--'>
  </ifzero>
  <hidden name='faildir' value='$-'>
  <hidden name='editid' value='$editid'>
  <error id='*EC_NO_SEND'
	 text='Посылать жалобы могут только зарегистрированные пользователи'>
  <error id='*EC_NO_EDIT' text='У вас нет права редактировать эту жалобу'>
  <error id='*EC_SUBJECT_ABSENT' text='Заголовок пуст'>
  <form_edit title='Ссылка'
             comment='Если вы жалуетесь на сообщение на сайте или в форуме,
	              укажите здесь ссылку на него.'
	     value='$=,URL' name='url' size=52 maxlength=250 mandatory='*false'>
  <form_section title='Текст жалобы/предложения'>
  <form_edit title='Заголовок' mandatory='*true' name='subject'
             value='$=,Subject' size=70 maxlength=250>
  <error id='*EC_BODY_ABSENT'
	 text='Напишите хотя бы пару строчек в теле жалобы'>
  <form_editor title='Текст' mandatory='*true'
               comment='Изложите подробно суть жалобы или предложения.'
	       name='body' body='$,Body'>
  <<help_link href='stotext-help-subs.php'
	     title='Список обозначений, используемых в тексте'>>
  <if what='$editid'>
   <form_buttons title='Изменить'>
  <else>
   <form_buttons title='Добавить'>
  </if>
 </form>
 </form_table>
 <bottom>
</body>
</html>
