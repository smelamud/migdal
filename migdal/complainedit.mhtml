<< @(#) $Id$ >>
<< Based-on: demo/complainedit.mhtml 1.3 >>

<int name='editid'>
<int name='link'>
<html>
<head>
 <title>Мигдаль - Жалоба</title>
</head>
<body>
 <top ident='complains' image='pics/complain.gif'>
 <complain_obj id='$editid' ident='$ident' link='$link'>
 <setup>
 <if what="$,Display!=''">
  <include name='$,Display'>
  <decel name='complain_subject' params='link'>
  <complain_subject link='$,Link'>
  <p>
 </if>
 <form method=post enctype='multipart/form-data'
       action='actions/complainmod.php'>
  <hidden name='edittag' value=1>
  <hidden name='redir' value='$redir'>
  <hidden name='editid' value='$editid'>
  <hidden name='type_id' value='$,TypeId'>
  <hidden name='link' value='$,Link'>
  <table>
   <error id='*EC_NO_SEND'
	  text='Посылать жалобы могут только зарегистрированные пользователи'>
   <error id='*EC_NO_EDIT' text='У вас нет права редактировать эту жалобу'>
   <error id='*EC_NO_TYPE' text='Такого типа жалобы не существует'>
   <error id='*EC_STORE_SQL' text='Ошибка базы данных при обновлении записи'
	  color='magenta'>
   <tr><td><table>
    <error id='*EC_SUBJECT_ABSENT' text='Заголовок пуст' span=2>
    <edit_line title='Заголовок' value='$,Subject' name='subject'
	       size=42 maxlength=250>
   </table></td></tr>
   <error id='*EC_BODY_ABSENT'
	  text='Напишите хотя бы пару строчек в теле жалобы'>
   <editor_line name='body' title='Текст' body='$,Body'>
  </table>
  <if what='$editid'>
   <input type=submit value='Изменить'>
  <else>
   <input type=submit value='Добавить'>
  </if>
  <input type=reset value='Очистить'>
 </form>
 <bottom>
</body>
</html>
