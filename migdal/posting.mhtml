<< @(#) $Id$ >>

<int name='postid'>
<grps>
<posting_full name='posting' id='$postid' grp='*GRP_FORUMS'>
<log event=posting text#='post($,Id)'>
<pagetitle title='$,SubjectDesc'>

<html>
<preamble>
<body>
 <top ident='$,MenuIndex'>
 <table width=100% cellpadding=5>
  <tr valign=top>
   <notprint>
    <if what='$,Grp!=*GRP_LINKS'>
     <td width=150 class='eframe'>
      <topics posting='$,'>
     </td>
    <else>
     <td width=150 class='nframe'>
      <topics_links posting='$,'>
     </td>
    </tr>
    <tr valign=top>
    </if>
   </notprint>
   <td class='cframe'>
    <posting posting='$posting' showdiscuss='*true' showcomplain='*true'>
   </td>
  </tr>
 </table>
 <bottom>
</body>
</html>
