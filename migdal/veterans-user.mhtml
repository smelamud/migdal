<< @(#) $Id$ >>

<int name='offset'>
<int name='user_id'>
<int name='sort'>
<ifzero what='$sort'>
 <assign name='sort' value='*SORT_PSENT'>
<else>
 <meta_noindex>
</ifzero>
<grps>
<user_obj name='user' id='$user_id'>
<pagetitle title#='Уголок ветерана - $user.FullName'>
<topictitle title='$user.FullName'>
<log event=veterans text#='user($user.Id) offset=$offset'>

<html>
<preamble>
<body>
 <top ident='index'>
 <table width=100% cellspacing=5 cellpadding=5><tr valign=top>
  <td width=150 class='eframe'><zone>
   <topics_veterans id='$user.Id'>
   <topics_major ident='veterans'>
  </zone></td>
  <td>
   <div class='cframe' style='padding: 5'>
    <subtitle>
    <div class='ninept'>
     <a href='userinfo.php?id=$user.Id&redirid=$_'
	onClick="UserInfo($user.Id);return false">О пользователе $user.Login</a>
     <ifne what='$user.ReplyLink'>
      $user.ReplyLink<image src='$$style_mail_image' border=0></a>
     </ife>
    </div>
    <ifzero what='$offset'>
     <p>
     <postings grp='*GRP_BLOG_FORUMS' topic_id='$`veterans`'
               limit=0 user_id='$user.Id'>
    </ifzero>
   </div>
   <p>
   <blog_gallery topic_id='$`veterans`' user_id='$user.Id'
                   rows='$userPictureRowPortion'
		   cols='$userPictureColumnPortion' offset='$offset'
		   sort='$sort'>
  </td>
 </tr></table>
 <bottom>
</body>
</html>
