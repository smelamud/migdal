<< @(#) $Id$ >>

<int name='offset'>
<int name='user_id'>
<grps>
<user_obj name='user' id='$user_id'>
<pagetitle title#='Таглит - $user.FullName'>
<topictitle title='$user.FullName'>
<log event=taglit text#='user($user.Id) offset=$offset'>

<html>
<preamble>
<body>
 <top ident='index'>
 <table width=100% cellspacing=5 cellpadding=5><tr valign=top>
  <td width=120 class='eframe'><zone>
   <topics_taglit id='$user.Id'>
   <topics_major ident='taglit'>
  </zone></td>
  <td>
   <div class='cframe' style='padding: 5'>
    <subtitle icon='pics/taglit.gif'>
    <div class='batcher'>
     <a href='userinfo.php?id=$user.Id&redirid=$_'
	onClick="UserInfo($user.Id);return false"
	class='add'>О пользователе $user.Login</a>
     <ifne what='$user.ReplyLink'>
      $user.ReplyLink<image src='$$style_mail_image' border=0></a>
     </ife>
    </div>
    <ifzero what='$offset'>
     <p>
     <postings grp='*GRP_TAGLIT_FORUMS' topic='$`taglit`' root='$`taglit`'
               limit=0 user_id='$user.Id' showadvert='*false'>
    </ifzero>
   </div>
   <p>
   <taglit_gallery user_id='$user.Id' rows='$userPictureRowPortion'
 		   cols='$userPictureColumnPortion' offset='$offset'>
  </td>
 </tr></table>
 <bottom>
</body>
</html>
