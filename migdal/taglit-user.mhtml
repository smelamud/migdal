<< @(#) $Id$ >>

<int name='offset'>
<int name='user_id'>
<grps>
<topic_obj name='taglit' id='taglit'>
<user_obj name='user' id='$user_id'>
<pagetitle title#='Таглит - $user.FullName'>
<topictitle title='$user.FullName'>
<zone><log event=taglit text#='user($user.Id) offset=$offset'></zone>

<html>
<preamble>
<body>
 <top ident='index'>
 <table width=100%><tr valign=top>
  <td width=120><zone>
   <posting_new grp='*GRP_TAGLIT_FORUMS' topic_id='$taglit.Id'
                sender_id='$user.Id'>
   <topics posting='$,' showchapters='*true'>
  </zone></td>
  <td width=5>&nbsp;</td>
  <td>
   <subtitle icon='pics/taglit.gif'>
   <div class='batcher'>
    <a href='userinfo.php?id=$user.Id&redirid=$_'
       onClick="UserInfo($user.Id);return false"
       class='add'>О пользователе $user.Login</a>
    <ifne what='$user.ReplyLink'>
     $user.ReplyLink<image src='$$style_mail_image' border=0></a>
    </ife>
   </div>
   <ifzero what='$offset'>
    <p>
    <taglit_postings taglit_id='$taglit.Id' user_id='$user.Id'>
   </ifzero>
   <p>
   <taglit_gallery taglit_id='$taglit.Id' user_id='$user.Id'
                   rows='$userPictureRowPortion'
 		   cols='$userPictureColumnPortion' offset='$offset'>
  </td>
 </tr></table>
 <bottom>
</body>
</html>
