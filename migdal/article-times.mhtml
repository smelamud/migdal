<< @(#) $Id$ >>
<< Based-on: migdal/article.mhtml 1.30 >>

<ident name='artid' table='postings'>
<read_posting id='$artid'>
<posting_full id='$artid' grp='*GRP_TIMES_ARTICLES'>
<log event=article text#='post($,Id)'>
<pagetitle title='$,Subject'>

<html>
<stylesheet ident='article'>
<stylesheet ident='times'>
<preamble>
<body>
 <top ident='index'>
 <table width=100% cellspacing=5 cellpadding=5><tr valign=top>
  <td width=120 class='eframe'>
   <topics_major ident='times'>
  </td>
  <td class='article cframe'>
   <article_controls posting='$,' root='$`migdal-times`'>
   <ifnzero what='$,Id'>
    <zone>
     <posting_obj name='cover' grp='*GRP_TIMES_COVERS' topic='$`migdal-times`'
		  index1='$,Index1'>
     <times_issue issue='$,Index1' month='$,Source' separate='*true' align=right>
    </zone>
   </ifnzero>
   <h1>
    <a href='index.php?topic_id=$,TopicId' class='topic'
       title='$,TopicDescription'>$,TopicName</a>
    <br>
    $,Subject
    <ifne what='$,Author'>
     <div class='author'>$,HTMLAuthor</div>
    </ifne>
   </h1>
   <article_full posting='$,'>
   <article_controls posting='$,' root='$`migdal-times`'>
  </td>
 </tr></table>
 <bottom>
</body>
</html>
