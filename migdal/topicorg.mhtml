<< @(#) $Id$ >>

<ident name='up'>

<element name='hd' params='item,full_name' defaults="full_name=''">
 <ifne what='$item.Ident'>
  <assign name='info' value#='[$=item.Ident=$item.Id]'>
 <else>
  <assign name='info' value#='[$item.Id]'>
 </ifne>
 <ife what='$full_name'>
  <assign name='full_name' value='$item.Subject'>
 </ife>
 <iswrite what='$item'>
  <a href='/admin/topics/$item.Id/edit/?redirid=$_'
     title='$=item.BodyNormal'>$=full_name</a>&sp;$info&sp;
 <else>
  $=full_name&sp;$info&sp;
 </iswrite>
 <br>$item.Catalog
</element>

<element name='branch' params='up,append,write,root' defaults="root='*false'">
 <iterate_topiclist grp='*GRP_ALL' up='$up'>
 <if what='$up!=0 && ($;Count!=0 || $append || $write)'>
  <br>
 </if>
 <if what='!$root && $;Count!=0'>
  <a href='/admin/topics/$up/' class='edit'>Ветка</a>
 </if>
 <if what='$append'>
  <a href='/admin/topics/$up/add/?redirid=$_' class='edit'>Добавить</a>
 </if>
 <if what='$up!=0 && $write'>
  <a href='topicdel.php?redirid=$_&topic_id=$up' class='edit'>Удалить</a>
  <a href='chmod.php?redirid=$_&topic_id=$up' class='edit'>Права</a>
  <a href='topics-reorder.php?redirid=$_&up=$up' class='edit'>Расставить</a>
 </if>
 <ifnzero what='$;Count'>
  <ul class='names'>
   <for>
    <li><hd item='$.'><br>
    <tt>$.PermHTML&nbsp;$=.Login:$=.GroupLogin</tt>
    <branch up='$.Id' append='$.isAppendable' write='$.isWritable'>
   </for>
  </ul>
 </ifnzero>
</element>

<html>
<preamble>
<body>
 <style><!--
 TT {
 	font-family: $style_courier;
 }
 //-->
 </style>
 <top ident='index'>
 <table width=100% cellpadding=5>
  <tr valign=top>
   <td width=150 class='eframe'>
    <topics_admin ident='admin-topics'>
   </td>
   <td class='cframe'>
    <subtitle>
    <div class='ninept topics' style='padding: 0px'>
     <ifnzero what='$up'>
      <topic_full_name name='full_name' id='$up'>
      <topic_obj id='$up'>
      <a href='/admin/topics/$,UpValue/' class='edit'>На уровень вверх</a>
      <br><br>
      <hd item='$,' full_name='$full_name'>
     </ifnzero>
     <branch up='$up' append='$userAdminTopics' write='$userAdminTopics'
             root='*true'>
    </div>
   </td>
  </tr>
 </table>
 <bottom>
</body>
</html>
