<< @(#) $Id$ >>

<pagetitle title='Организатор тем'>
<topictitle title='Организатор тем'>

<element name='branch' params='up,append,write'>
 <iterate_topiclist grp='*GRP_ALL' up='$up'>
 <if what='$up!=0 && ($append || $write)'>
  <br>
 </if>
 <if what='$append'>
  <a href='topicedit.php?redirid=$_&up=$up' class='edit'>Добавить</a>
 </if>
 <if what='$up!=0 && $write'>
  <a href='topicdel.php?redirid=$_&topic_id=$up' class='edit'>Удалить</a>
  <a href='chmod.php?redirid=$_&topic_id=$up' class='edit'>Права</a>
  <a href='topics-reorder.php?redirid=$_&up=$up' class='edit'>Расставить</a>
 </if>
 <ifnzero what='$;Count'>
  <ul class='names'>
   <for name='item'>
    <ifne what='$.Ident'>
     <assign name='info' value#='[$.Ident=$.Id]'>
    <else>
     <assign name='info' value#='[$.Id]'>
    </ifne>
    <iswrite what='$item'>
     <li><a href='topicedit.php?editid=$.Id&redirid=$_'
	    title='$.Description'>$.Name</a>&sp;$info&sp;
    <else>
     <li>$.Name&sp;$info&sp;
    </iswrite>
    <br>
    <tt>$.PermHTML&nbsp;$.Login:$.GroupLogin</tt>
    <branch up='$.Id' append='$.isAppendable' write='$.isWritable'>
   </for>
  </ul>
 </ifnzero>
</element>

<html>
<preamble>
<body>
 <style><!--
 TT {
 	font-family: $style_courier;
 }
 //-->
 </style>
 <top ident='index'>
 <table width=100% cellpadding=5>
  <tr valign=top>
   <td width=150 class='eframe'>
    <topics_admin ident='admin-topics'>
   </td>
   <td class='cframe'>
    <subtitle>
    <div class='ninept topics' style='padding: 0px'>
     <branch up=0 append='$userAdminTopics' write='$userAdminTopics'>
    </div>
   </td>
  </tr>
 </table>
 <bottom>
</body>
</html>
