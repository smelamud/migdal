<< @(#) $Id$ >>

<pagetitle title='Организатор тем'>

<element name='branch' params='up'>
 <iterate_topiclist grp='*GRP_ALL' up='$up'>
 <admin_topics>
  <a href='topicedit.php?redirid=$_&up=$up' class='edit'>Добавить</a>
  <ifnzero what='$up'>
   <a href='topicdel.php?redirid=$_&topic_id=$up' class='edit'>Удалить</a>
  </ifnzero>
 </admin_topics>
 <ifnzero what='$;Count'>
  <ul class='names'>
   <for>
    <ifne what='$.Ident'>
     <assign name='name' value#='$.Name [$.Ident]'>
    <else>
     <assign name='name' value='$.Name'>
    </ifne>
    <ifne what='$.Login'>
     <assign name='name' value#='$name <i>($.Login)</i>'>
    </ifne>
    <admin_topics>
     <li><a href='topicedit.php?editid=$.Id&redirid=$_'
	    title='$.Description' class='item'>$name</a>
    <else>
     <li>$name
    </admin_topics>
    <branch up='$.Id'>
   </for>
  </ul>
 </ifnzero>
</element>

<html>
<preamble>
<body>
 <top ident='index'>
 <div class='ninept topics cframe' style='padding: 5px'>
  <branch up=0>
 </div>
 <bottom>
</body>
</html>
