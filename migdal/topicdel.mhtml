<< @(#) $Id$ >>

<pagetitle title='Удаление темы'>

<conf>
<int name='topic_id'>
<int name='destid'>

<postings_info topic_id='$topic_id'>
<assign name='posts' value='$,Total'>
<topic_count name='tops' id='$topic_id'>

<html>
<preamble>
<body>
 <top ident='index'>
 <formtable title='Удалить тему'>
  <form method=post action='actions/topicdel.php'>
   <hidden name='okdir' value='$--'>
   <hidden name='faildir' value='$-'>
   <hidden name='id' value='$topic_id'>
   <table>
    <starinfo span=2>
    <tr><td colspan=2 class='comment'>
     Тема содержит
     <ifnzero what='$tops'>
      <array vals='подтему,подтемы,подтем'>
      <plural value='$tops'>
      <em>$tops</em> $,
     </ifnzero>
     <if what='$tops!=0 && $posts!=0'>&sp;и&sp;</if>
     <ifnzero what='$posts'>
      <array vals='сообщение,сообщения,сообщений'>
      <plural value='$posts'>
      <em>$posts</em> $,
     </ifnzero>
     <asp>.
    </td></tr>
    <tr><td colspan=2>&nbsp;</td></tr>
    <error id='*ET_NO_EDIT' text='У вас нет права менять список тем' span=2>
    <topicselect title='Отправить в' name='destid' grp='*GRP_ALL'
		 value='$destid' root=-1 mandatory='*true'>
    <formbuttons title='Удалить' span=2>
   </table>
  </form>
 </formtable>
 <bottom>
</body>
</html>
