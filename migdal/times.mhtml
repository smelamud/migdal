<< @(#) $Id$ >>

<int name='postid'>
<int name='issue'>
<grps>

<topic_obj name='times' id='$`times`'>
<posting_obj name='cover' id='$postid' grp='*GRP_TIMES_COVERS'
             topic_id='$`times`'>
<assign name='issues' value!='$cover.Id>0 ? $cover.getIssues : $issue'>

<log event=times text#='issue($issue)'>

<macro name='editor'>
 <ispost what='$$times'>
</macro>
<endif name='/editor'>

<element name='cover'>
<editor>
 <table class='info'><tr valign=center>
  <td><image src='/pics/sheet.gif'></td>
  <td>
   <a href='postingedit.php?topic_id=$`migdal-times`&grp=*GRP_TIMES_COVERS&redirid=$_'
      >Добавить обложку</a>
  </td>
 </tr></table>
</editor>
<ifnzero what='$$cover.Id'>
 <center class='pic'>
  <img border=0 width='$$cover.ImageX' height='$$cover.ImageY'
       src='$$cover.ImageURL'>
 </center>
 <vote_frame align=right id='$$cover.Id' color='$$style_nframe_back'>
 <center><table width=150 class='posting-bottom'><tr>
  <editor>
   <td><editlink posting='$$cover'></td>
  </editor>
  <td align=right><discusslink posting='$$cover'></td>
 </tr></table></center>
</ifnzero>
</element>

<element name='times_issue'>
<table width=120>
 <tr><td class='issue'>
  No.$$issues
 </td></tr>
 <ifnzero what='$$cover.Id'>
  <tr><td class='month'>
   $$=cover.Comment0
  </td></tr>
 </ifnzero>
</table>
</element>

<<element name='batcher' params='times,issue'>
<editor>
 <table class='info'><tr valign=center>
  <td><image src='pics/sheet.gif'></td>
  <td>
   <a href='postingedit.php?topic_id=$`migdal-times`&grp=*GRP_TIMES_ARTICLES&redirid=$_'
      >Добавить статью</a>
  </td>
  <if what='$issue>0'>
   <td>&nbsp;</td>
   <td>
    <a href='reorder.php?issue=$issue&topic_id=$`migdal-times`&grp=*GRP_TIMES_ARTICLES&up=-1&redirid=$_'
       >Расставить</a>
   </td>
  </if>
 </tr></table>
</editor>
</element>

<element name='select_issue' params='issue'>
<form method=get action='$~'><table class='ninept nframe'>
 <tr>
  <td>Номер</td>
  <td><select name='issue'>
   <iterate_article_covers articlegrp='*GRP_TIMES_ARTICLES'
 			   covergrp='*GRP_TIMES_COVERS'>
   <for>
    <assign name='nfirst' value!='$.Index1!=0 ? $.Index1 : -1'>
    <assign name='nlast' value!='$nfirst+$.Index2'>
    <assign name='no' value!='$nfirst>=$nlast ? $nfirst : "$nfirst-$nlast"'>
    <radio title#='No.$no&nbsp;$.Source' value='$nfirst' peervalue='$issue'>
   </for>
  </select></td>
 </tr>
 <tr>
  <td colspan=2 align=right>
   <input type=submit value='Выбрать'>
  </td>
 </tr>
</tr></table></form>
</element>>

