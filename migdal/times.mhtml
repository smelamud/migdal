</div>
</element>

<<element name='issue_further' params='issue,pic,title'>
<ifnzero what='$issue'>
 <table><tr valign=center>
  <td align=left>
   <a href='times.php?issue=$issue' class='eightpt'>$title</a>
  </td>
  <td><image src='$pic'></td>
 </tr></table>
 <p>
</ifnzero>
</element>

<element name='navigator'>
<assign name='nfirst' value='$issue'>
<for n!=2>
 <sibling_index1 name='prev' grp='*GRP_TIMES_COVERS' index1='$nfirst'
		 next='*true'>
 <ifnzero what='$prev'>
  <assign name='nfirst' value='$prev'>
 </ifnzero>
</for>
<sibling_index1 grp='*GRP_TIMES_COVERS' index1='$nfirst' next='*true'>
<issue_further issue='$,' pic='pics/upper.gif' title='Новые номера'>
<iterate_postinglist name='covers' grp='*GRP_TIMES_COVERS' limit=5
		     sort='*SORT_RINDEX1' fields='*SELECT_IMAGES'
		     index1='$nfirst'>
<for>
 <islast what='$covers'>
  <assign name='nlast' value='$.Index1'>
 </islast>
 <table>
  <tr><td align=right>
   <rating value!='$.VoteCount!=0 ? $.Vote20 : -1' showtitle='*false'>
  </td></tr>
  <tr><td class=pic>
   <a href='times.php?issue=$.Index1'><image_tag_put id='$.ImageId'></a>
  </td></tr>
  <tr><td align=center><b>
   <if what='$issue!=$.Index1'>
    <a href='times.php?issue=$.Index1'>
     No.<times_no index1='$.Index1' index2='$.Index2'></a>
   <else>
     No.<times_no index1='$.Index1' index2='$.Index2'>
   </if>
  </b></td></tr>
 </table>
 <p>
</for>
<sibling_index1 grp='*GRP_TIMES_COVERS' index1='$nlast' next='*false'>
<issue_further issue='$,' pic='pics/lower.gif' title='Старые номера'>
</element>>

<html>
<stylesheet ident='times'>
<preamble>
<body>
 <top ident='times'>
 <table width=100% cellpadding=5><tr valign=top>
  <td class='mtimes cframe'>
   <table><tr valign=bottom><td>
    <a href='/times/'><asp>
     <image src='/pics/times.gif' alt='Мигдаль Times' border=0>
    <asp></a>
   </td><td>
    <times_issue>
   </td></tr></table>
   <p>
   <table width=100% cellspacing=5 cellpadding=0><tr valign=top>
    <td width=150><div class='nframe' style='padding: 5px'>
     <cover>
     <p>
     <times_info>
    </div></td>
    <td>
     <select_issue issue='$issue'>
     <p>
     <<batcher times='$times' issue='$issue'>
     <iterate_postinglist grp='*GRP_TIMES_ARTICLES' topic_id='$`migdal-times`'
			  recursive='*true' limit=0 sort='*SORT_INDEX0'
			  index1!='$issue<0 ? 0 : $issue'>
     <assign name='topicname' value=''>
     <for>
      <if what='$topicname!=$^.Comment0'>
       <assign name='topicname' value='$^.Comment0'>
       <ifne what='$topicname'>
        <table width=100% class=heading><tr>
	 <td align=left><image src='pics/times-bullet.gif'></td>
	 <td align=right>$topicname</td>
	</tr></table>
       </ifne>
      </if>
      <posting_times posting='$.' showtopic='*false' showdiscuss='*true'>
     </for>
     <ifnzero what='$;Count'>
      <batcher times='$times' issue='$issue'>
     </ifnzero>>
    </td>
   </tr></table>
  </td>
  <td width=80 align=center class='mtimes'>
   <<navigator>>
  </td>
 </tr></table>
 <bottom>
</body>
</html>
