<< @(#) $Id$ >>

<int name='issue'>
<grps>
<pagetitle title='Мигдаль Times'>

<macro name='editor'>
 <if what='$times.UserId==$$userId || $$userModerator'>
</macro>
<endif name='/editor'>

<element name='cover' params='times,cover'>
<editor>
 <div class=batcher>
  <a href='postingedit.php?root=$`migdal-times`&topic_id=$`migdal-times`&grp=*GRP_TIMES_COVERS&redirid=$_'
     class=add>Добавить обложку</a>
 </div>
</editor>
<ifnzero what='$cover.Id'>
 <div class=pic>
  <image_tag_put id='$cover.ImageId' size=large>
 </div>
 <vote_frame align=right id='$cover.Id' color='$$style_cframe_back'
             image='$$style_cframe_back_pic'>
 <div class='posting'><table width=150 class='bottom'><tr>
  <editor>
   <td>
    <a href="postingedit.php?editid=$cover.Id&root=$`migdal-times`&topic_id=$`migdal-times`&grp=$cover.Grp&redirid=$_"
     >Изменить</a>
   </td>
  </editor>
  <community>
   <td align=right><discusslink posting='$cover'></td>
  </community>
 </tr></table></div>
</ifnzero>
</element>

<element name='times_issue' params='issue,month'>
<if what='$issue>0'>
 <table width=120>
  <tr><td class='issue'>
   No.$issue
  </td></tr>
  <tr><td class='month'>
   $month
  </td></tr>
 </table>
</if>
</element>

<element name='batcher' params='times,issue'>
<editor>
 <div class='batcher'>
  <a href='postingedit.php?root=$`migdal-times`&grp=*GRP_TIMES_ARTICLES&redirid=$_'
     class=add>Добавить статью</a>
  <if what='$issue>0'>
   &nbsp;<a href='times-reorder.php?issue=$issue&redirid=$_'
            class=add>Расставить</a>
  </if>
 </div>
</editor>
</element>

<element name='select_issue' params='issue'>
<form method=get action='$~'><table class='eightpt form'>
 <tr>
  <th rowspan=2>&nbsp;</th>
  <td>Номер</td>
  <td><select name='issue'>
   <iterate_article_covers articlegrp='*GRP_TIMES_ARTICLES'
 			   covergrp='*GRP_TIMES_COVERS'>
   <for>
    <assign value!='$.Index1!=0 ? $.Index1 : -1'>
    <radio title#='No.$.Index1&nbsp;$.Source' value='$*' peervalue='$issue'>
   </for>
  </select></td>
 </tr>
 <tr>
  <td class='buttons-nosplit' colspan=2 align=right>
   <input type=submit value='Выбрать'>
  </td>
 </tr>
</tr></table></form>
</element>

<element name='times_info' params='issue'>
