<< @(#) $Id$ >>

<posting_full id='$`postings:methodic-center`' grp='*GRP_REVIEW'>
<log event=review text#='post($,Id)'>
<pagetitle title='$,Subject'>
<topictitle title='$,Subject'>

<element name='methodics'>
<iterate_postinglist grp='*GRP_BOOKS' topic_id='$`methodics`'
                     recursive='*false' limit=0 sort='*SORT_PSENT'
		     fields='*SELECT_TOPICS' showshadows='*true'>
<ifnzero what='$;Count'>
 <topics_table title='Методические пособия'>
  <for>
   <identify posting='$.'>
   <topics_line time='$.Sent' href#='$.DetailsHref' text#='$.Subject'
                class='item ninept'>
  </for>
 </topics_table>
</ifnzero>
</element>

<html>
<stylesheet ident='article'>
<preamble>
<body>
 <top ident='index'>
 <table width=100% cellpadding=5><tr valign=top>
  <notprint>
   <td width=150 class='eframe'>
    <topics posting='$,'>
    <ears>
   </td>
  </notprint>
  <td class='cframe'>
   <table width=100% cellspacing=0 cellpadding=5><tr valign=top>
    <td>
     <ifnzero what='$,Id'>
      <subtitle>
      <news>
      <outer><div class='nframe' style='padding: 5'><inner>
       <seealso_links topic_id='$`methodics`' topic_grp='*GRP_REVIEWS'
		      title='См. также в разделе ссылок'>
       <seealso_other topic_id='$`methodics`' topic_grp='*GRP_REVIEWS'
		      title='По этой теме в других разделах'>
      </inner></div></outer>
      <span class='article'>
       <article_controls posting='$,'>
       <article posting='$,' withvote='*false'>
       <article_controls posting='$,'>
      </span>
     </ifnzero>
    </td>
    <notprint>
     <td width=130 class='nframe'>
      <methodics>
     </td>
    </notprint>
   </tr></table>
  </td>
 </tr></table>
 <bottom>
</body>
</html>
