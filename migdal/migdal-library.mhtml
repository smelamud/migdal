<log event=review text#='post($`post.migdal.library`)'>

<element name='novelties'>
<notprint>
 <iterate_postinglist grp='*GRP_LIBRARY_NOVELTIES' topic_id='$`migdal.library`'
		      recursive='*false' limit=10 sort='*SORT_PSENT'>
 <ifnzero what='$;Count'>
  <table class='nframe' width=180 align=right
	 cellpadding=5 cellspacing=0 style='margin-left: 5px'>
   <tr><td>
    <topics_table title='Новинки'>
     <for>
      <topics_line time='$.Modified' href='$.GrpDetailsHref' text='$=.Heading'
                   class='eightpt'>
     </for>
     <tr><td align=center colspan=2>
      <a href='/migdal/library/novelties/' class='eightpt'><b>Все новинки</b></a>
     </td></tr>
    </topics_table>
   </td></tr>
  </table>
 </ifnzero>
</notprint>
</element>

<html>
<stylesheet ident='article'>
<preamble>
<body>
 <top ident='index'>
 <table width=100% cellpadding=5><tr valign=top>
  <notprint>
   <td width=150 class='eframe'>
    <topics>
    <ears>
   </td>
  </notprint>
  <td class='cframe'>
   <posting_obj id='$`post.migdal.library`' grp='*GRP_REVIEWS'
                fields!='*SELECT_GENERAL|*SELECT_LARGE_BODY'>
   <ifnzero what='$,Id'>
    <subtitle>
    <novelties>
    <span class='article'>
     <article_controls posting='$,'>
     <article posting='$,' withvote='*false'>
     <article_controls posting='$,'>
    </span>
   </ifnzero>
  </td>
 </tr></table>
 <bottom>
</body>
</html>
