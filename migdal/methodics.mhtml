<< @(#) $Id$ >>

<int name='offset'>

<grps>
<topic_obj name='methodics' id='$`methodics`'>
<log event=review text#='topic($`methodics`)'>
<pagetitle title='Методический центр'>
<topictitle title='Методический центр'>

<element name='batcher' params='list'>
<table width=100% class='batcher'><tr valign=bottom>
 <td align=left>
  <if what='$$methodics.UserId==$$userId || $$userModerator'>
   <a href='postingedit.php?topic_id=$`methodics`&root=$`methodics`&grp=*GRP_BOOKS&redirid=$_'
      class='add'>Добавить книгу</a>
  </if>
 </td>
 <td align=center><spin list='$list'></td>
</tr></table>
</element>

<element name='catalog' params='offset'>
<iterate_postinglist grp='*GRP_BOOKS' topic='$`methodics`'
                     limit='$$userMsgPortion' offset='$offset'
                     sort='*SORT_PSENT' showshadows='*true'>
<if what='$$userId>0 || $;Count!=0'>
 <batcher list='$;'>
 <for>
  <assign name='post' value='$.'>
  <posting posting='$post' showtopic='*false' shorten='*true'
           showdiscuss='*true' showcomplain='*false'>
 </for>
 <ifnzero what='$;Count'>
  <batcher list='$;'>
 </ifnzero>
<else>
 &nbsp;
</if>
</element>

<html>
<preamble>
<body>
 <top ident='index'>
 <table width=100% cellpadding=5><tr valign=top>
  <td width=150 class='eframe'>
   <zone>
    <posting_new grp='*GRP_BOOKS' topic_id='$`methodics`'>
    <topics posting='$,'>
   </zone>
  </td>
  <td class='cframe'>
   <subtitle>
   <catalog offset='$offset'>
  </td>
 </tr></table>
 <bottom>
</body>
</html>
