<< @(#) $Id$ >>

<ident name='chapid' table='postings'>
<posting_obj id='$chapid' grp='*GRP_BOOK_CHAPTERS'
             fields!='*SELECT_GENERAL|*SELECT_IMAGES|*SELECT_ANSWERS|*SELECT_TOPICS'>
<ifzero what='$,Id'>
 <fail>
</ifzero>
<zone>
 <message_posting id='$,UpValue'>
 <posting_obj name='book' id='$,' grp='*GRP_BOOKS' fields='*SELECT_GENERAL'>
</zone>
<log event=chapter text#='post($,Id) post($book.Id)'>
<pagetitle title#='$book.Subject - $,Subject'>

<html>
<stylesheet ident='article'>
<stylesheet ident='book'>
<preamble>
<body>
 <top ident='index'>
 <table width=100% cellpadding=5><tr valign=top>
  <notprint>
   <td width=150 class='eframe'>
    <topics posting='$,'>
    <ears>
   </td>
  </notprint>
  <td class='article cframe'>
   <article_controls posting='$,'>
   <table align=right class='sent'>
    <tr><td>&nbsp;</td></tr>
    <tr><td align=right><sentview date='$,Sent'></td></tr>
    <tr><td align=right><senderlink message='$,'></td></tr>
   </table>
   <book_ring book='$book' index='$,Index0'>
   <h1>$,Subject
    <ifne what='$,Author'>
     <div class='author'>$,HTMLAuthor</div>
    </ifne>
   </h1>
   <article posting='$,' withvote='*false'>
   <book_ring book='$book' index='$,Index0'>
   <article_controls posting='$,'>
  </td>
 </tr></table>
 <bottom>
</body>
</html>
