<< @(#) $Id$ >>

<int name='editid'>
<int name='parent_id'>
<int name='peerid'>
<pagetitle title='Комментарий'>
<conf>

<html>
<preamble>
<body>
 <top ident='discuss'>
 <ifnzero what='$peerid'>
  <forum_answer_obj id='$peerid'>
  <assign name='quote' value='$,Body'>
 <else>
  <assign name='quote' value=''>
 </ifnzero>
 <forum_answer_obj id='$editid' parent_id='$parent_id' quote='$quote'
                   quote_width=60>
 <setup>
 <if what='$editid'>
  <assign name='head' value='Изменить комментарий'>
 <else>
  <assign name='head' value='Добавить комментарий'>
 </if>
 <center>
  <formtable title='$head'>
   <form method=post enctype='multipart/form-data'
	 action='actions/forumanswermod.php'>
    <hidden name='edittag' value=1>
    <hidden name='okdir' value='$--'>
    <hidden name='faildir' value='$-'>
    <hidden name='editid' value='$editid'>
    <hidden name='parent_id' value='$answer.ParentId'>
    <table>
     <starinfo>
     <error id='*EFA_NO_SEND'
	    text='Добавлять комментарии могут только зарегистрированные пользователи'>
     <error id='*EFA_NO_EDIT'
	    text='У вас нет права редактировать это сообщение'>
     <error id='*EFA_STORE_SQL' color='magenta'
	    text='Ошибка базы данных при обновлении записи'>
     <error id='*EFA_NO_UP'
	    text='Сообщение, на которое вы пытаетесь ответить, еще не написано'>
     <error id='*EFA_BODY_ABSENT'
	    text='Напишите хотя бы пару строчек в теле сообщения'>
     <editor_line name='body' title='Текст' body='$answer.Body'
		  mandatory='$$forumanswerMandatoryBody' rows=12 cols=65>
     <help_link href='stotext-help-subs.php'
		title='Список обозначений, используемых в тексте'>
     <checkbox_line name='hidden' value='$answer.isHidden'
		    title='Не показывать'>
     <moderator>
      <checkbox_line name='disabled' value='$answer.isDisabled'
		     title='Запретить показ'>
     </moderator>
     <if what='$editid'>
      <formbuttons title='Изменить'>
     <else>
      <formbuttons title='Добавить'>
     </if>
    </table>
   </form>
  </formtable>
 </center>
 <bottom>
</body>
</html>
