<< @(#) $Id$ >>

<ident name='bookid' table='postings'>
<posting_obj id='$bookid' grp='*GRP_BOOKS' fields='*SELECT_ALLPOSTING'>

<< Traps >>
<< Wed Sep 24 02:36:32 EEST 2003 >>
<if what='$,Grp==*GRP_BOOK_CHAPTERS'>
 <trap text='Book chapter replaced book'>
 <reload href#='book-chapter.php?chapid=$bookid'>
</if>
<< /Traps >>

<log event=book text#='post($,Id)'>
<pagetitle title='$,Subject'>

<html>
<stylesheet ident='article'>
<stylesheet ident='book'>
<preamble>
<body>
 <top ident='index'>
 <table width=100% cellpadding=5><tr valign=top>
  <notprint>
   <td width=150 class='eframe'>
    <topics posting='$,'>
    <ears>
   </td>
  </notprint>
  <td class='article cframe'>
   <article_controls posting='$,'>
   <table width=100% cellspacing=0 cellpadding=0>
    <tr>
     <td colspan=3 align=right>
      <table class='sent'>
       <tr><td>&nbsp;</td></tr>
       <tr><td align=right><sentview date='$,Sent'></td></tr>
       <tr><td align=right><senderlink message='$,'></td></tr>
      </table>
     </td>
    </tr>
    <tr valign=top>
     <td width=100>&nbsp;</td>
     <td>
      <ifnzero what='$,ImageId'>
       <table class=pic align=left style='padding-right: 5px'><tr><td>
	<image_tag_put id='$,ImageId' size=large>
       </td></tr></table>
      </ifnzero>
      <topiclink posting='$,'>
      <ifne what='$,Author'>
       <p class='author'>$,HTMLAuthor</p>
      </ifne>
      <p><h1 style='margin: 0'>$,Subject</h1></p>
      <ifne what='$,Source'>
       <p class='source'>$,HTMLSource</p>
      </ifne>
      <p style='clear: left'>$,HTMLBody</p>
      <notprint>
       <zone>
	<sibling up='$,MessageId' index0='-1'>
	<if what='$,>0'>
	 <p>
	  <table class='ring' cellpadding=0>
	   <tr valign=center>
	    <td align=right><image src='pics/further.gif' border=0></td>
	    <td>&nbsp;</td>
	    <td><a href='book-chapter.php?chapid=$,'>Читать книгу</a></td>
	   </tr>
	   <tr valign=center>
	    <td align=right><image src='pics/print.gif' border=0></td>
	    <td>&nbsp;</td>
	    <td><a href='book-print.php?bookid=$bookid&print=1'>Вся книга
	     для печати</a></td>
	   </tr>
	   <iterate_packages posting_id='$bookid'>
	   <for>
	    <tr valign=center>
	     <td align=right><image src='pics/package.gif' border=0></td>
	     <td>&nbsp;</td>
	     <td>
	      <if what='$.Type==*PT_BOOK_ONEFILE'>
	       <assign name='title' value='Вся книга одним файлом в архиве'>
	      <else>
	       <assign name='title' value='Вся книга по главам в архиве'>
	      </if>
	      <a href='$.Href'>$title</a>
	     </td>
	    </tr>
	    <tr valign=center>
	     <td colspan=2>&nbsp;</td>
	     <td><i>(ZIP, ${.SizeKB}KB)</i></td>
	   </for>
	  </table>
	 </p>
	</if>
       </zone>
      </notprint>
     </td>
     <td width=100>
      <vote_frame id='$,Id' color='$$style_cframe_back'
		  image='$$style_cframe_back_pic'>
     </td>
    </tr>
   </table>
   <p>
   <article_controls posting='$,'>
  </td>
 </tr></table>
 <bottom>
</body>
</html>
