<< @(#) $Id$ >>

<element name='UserLink' params='align,user'>
<if what="$align=='right' || $$style_details_noleft">
 <span class='name'>$user.LoginLink</span>&nbsp;<asp>
 <if what='$user.isVisible'>
  <asp><a href='userinfo.php?id=$user.Id&redir=$_'
          onClick="UserInfo($user.Id);return false"
	  title='подробнее'
	  target=_blank><img src='$$style_details_image' border=0></a>
 </if>
<else>
 <if what='$user.isVisible'>
  <a href='userinfo.php?id=$user.Id&redir=$_'
     onClick="UserInfo($user.Id);return false"
     title='подробнее'
     target=_blank><img src='$$style_details_image' border=0></a>&nbsp;<asp>
 </if>
 <asp><span class='name'>$user.LoginLink</span>
</if>
</element>

<html>
<refresh period='$$userChatRefresh' url='$-'>
<head>
 <script src='/window.js' language='JavaScript'></script>
</head>
<body>
 <update_last_chat>
 <iterate_chat_users>
 <table cellspacing=0 cellpadding=0>
  <tr><td>
   <zone>
    <chat_users_count name='count'>
    <array vals='человек,человека,человек'>
    <plural value='$count'>
    В чате сейчас $count&nbsp;$,
   </zone>
  </td></tr>
  <for>
   <tr>
    <td><userlink align='left' user='$.'></td>
   </tr>
  </for>
 </table>
</body>
</html>
