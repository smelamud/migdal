<< @(#) $Id$ >>

<sorts>
<int name='offset'>
<int name='sort'>
<ifzero what='$sort'>
 <assign name='sort' value='*SORT_LOGIN'>
<else>
 <meta_noindex>
</ifzero>

<pagetitle title='Пользователи'>

<element name='batcher' params='&list'>
<table width=100%><tr valign=bottom>
 <admin_users>
  <td align=left class='info'>
   <table><tr valign=center>
    <td><image src='pics/sheet.gif'></td>
    <td>
     <a href='register.php?redirid=$_'>Добавить пользователя</a>
    </td>
   </tr></table>
  </td>
 </admin_users>
 <td align=center><spin list='$list'></td>
</tr></table>
</element>

<element name='navigator'>
<table width=100% class='nframe'>
 <tr><td align=right class='eightpt'>
  <b>Сортировать</b>
  <navi_sort title='по нику' value='*SORT_LOGIN'>|
  <navi_sort title='по имени' value='*SORT_NAME'>|
  <navi_sort title='по еврейскому имени' value='*SORT_JEWISH_NAME'>|
  <navi_sort title='по фамилии' value='*SORT_SURNAME'>
 </td></tr>
 <tr><td align=left style='padding: 10px'>
  <iterate_user_alphabet sort='$$sort'>
  <for>
   <if what='$.Offset!=$$offset'>
    <a href='$[offset=$.Offset]'>$.Letter</a>&sp;
   <else>
    <b>$.Letter</b>&sp;
   </if>
   <if what="$.Letter=='Z'"><br></if>
  </for>
 </td></tr>
 <tr><td align=left class='ninept'>
  <users_summary name='summary'>
  <array vals='зарегистрирован,зарегистрировано,зарегистрировано'>
  <plural name='i_reg' value='$summary.Total'>
  <array vals='пользователь,пользователя,пользователей'>
  <plural name='i_users' value='$summary.Total'>
  Всего $i_reg <em>$summary.Total</em> $i_users
  <ifnzero what='$summary.Waiting'>
   &nbsp;(<em>$summary.Waiting</em> в процессе регистрации)
  </ifnzero>
 </td></tr>
</table>
</element>

<element name='fullname' params='user'>
<if what='$$sort==SORT_NAME'>
 $user.FullNameCivil
<else>
 <if what='$$sort==SORT_SURNAME'>
  $user.FullNameSurname
 <else>
  $user.FullName
 </if>
</if>
</element>

<html>
<preamble>
<body>
 <top ident='users'>
 <navigator>
 <p>
 <iterate_userlist limit=30 offset='$offset' sort='$sort'>
 <batcher list='$;'>
 <table width=100% class='catalog'>
  <tr valign=top>
   <th>Ник</th><th>Имя</th><th>Возраст</th>
   <th><img src='pics/tower.gif' title='Мигдалевец'></th>
   <th>Адрес</th><th>Последний раз<br>был здесь</th>
  </tr>
  <for>
   <if what='$;isOdd'><tr class='odd'><else><tr></if>
    <td class='subject ninept'>
     <a href='userinfo.php?id=$.id'>$.Login</a>
    </td>
    <td class='eightpt'><fullname user='$.'></td>
    <if what='$.isConfirmed'>
     <td align=center class='eightpt'>$.Age</td>
     <td align=center>
      <if what='$.isMigdalStudent'>
       <img src='pics/check.gif'>
      <else>
       &nbsp;
      </if>
     </td>
     <td>
      <ifne what='$.EmailLink'>
       <span class='email ninept'>$.EmailLink</span>
       <ifne what='$.ICQ'><br></ifne>
      </ifne>
      <ifne what='$.ICQ'>
       <span class='eightpt'>$.ICQStatusImage&nbsp;$.ICQ</span>
      </ifne>
     </td>
     <lastonline_cell user='$.' class='eightpt'>
    <else>
     <td colspan=4 class='eightpt'>
      <zone>
       <array vals='остался,осталось,осталось'>
       <plural name='lasts' value='$.ConfirmDays'>
       <array vals='день,дня,дней'>
       <plural name='days' value='$.ConfirmDays'>
       Идет регистрация ($lasts&nbsp;$.ConfirmDays&nbsp;$days)
       <admin_users>
        <a href='/actions/userconfirm.php?id=$.Id'>
	 Подтвердить</a>
       </admin_users>
      </zone>
     </td>
    </if>
   </tr>
  </for>
 </table>
 <batcher list='$;'>
 <bottom>
</body>
</html>
