<< @(#) $Id$ >>

<html>
<head>
 <title>Мигдаль - Пользователи</title>
</head>
<body>
 <top ident='users'>
 <zone>
  <users_summary name='summary'>
  <array vals='зарегистрирован,зарегистрировано,зарегистрировано'>
  <plural name='i_reg' value='$summary.Total'>
  <array vals='пользователь,пользователя,пользователей'>
  <plural name='i_users' value='$summary.Total'>
  <span class='info'>
   Всего $i_reg <em>$summary.Total</em> $i_users
   <ifnzero what='$summary.Waiting'>
    &nbsp;(<em>$summary.Waiting</em> в процессе регистрации)
   </ifnzero>
  </span>
 </zone>
 <p>
 <table width=100% class='catalog'>
  <tr valign=top>
   <th class='subject'>Ник</th><th>Имя</th><th>Возраст</th>
   <th><img src='pics/tower.gif' title='Мигдалевец'></th>
   <th>Адрес</th><th>Последний раз<br>был здесь</th>
  </tr>
  <iterate_userlist>
  <for>
   <if what='$;isOdd'><tr class='odd'><else><tr></if>
    <td class='subject'>
     <a href="userinfo.php?id=$.id&redir=$_">$.Login</a>
    </td>
    <td>$.FullName</td>
    <if what='$.isConfirmed'>
     <td align='center'>$.Age</td>
     <td align='center'>
      <if what='$.isMigdalStudent'>
       <img src='pics/check.gif'>
      <else>
       &nbsp;
      </if>
     </td>
     <td>
      <ifne what='$.EmailLink'>
       <span class='email'>$.EmailLink</span>
       <ifne what='$.ICQ'><br></ifne>
      </ifne>
      $.ICQStatusImage&nbsp;$.ICQ
     </td>
     <lastonline_cell user='$.'>
    <else>
     <td colspan=4>
      <zone>
       <array vals='остался,осталось,осталось'>
       <plural name='lasts' value='$.ConfirmDays'>
       <array vals='день,дня,дней'>
       <plural name='days' value='$.ConfirmDays'>
       Идет регистрация ($lasts&nbsp;$.ConfirmDays&nbsp;$days)
       <admin_users>
        <a href='/actions/userconfirm.php?id=$.Id&redir$_'
	   class='control'>Подтвердить</a>
       </admin_users>
      </zone>
     </td>
    </if>
   </tr>
  </for>
 </table>
 <bottom>
</body>
</html>
