<< @(#) $Id$ >>

<force_community>

<element name='batcher_users'>
<admin_users>
 <div class='batcher'>
  <a href='register.php?redirid=$_' class='add'>Добавить пользователя</a>
 </div>
</admin_users>
</element>

<pagetitle title='Пользователи'>

<html>
<preamble>
<body>
 <top ident='users'>
 <zone>
  <users_summary name='summary'>
  <array vals='зарегистрирован,зарегистрировано,зарегистрировано'>
  <plural name='i_reg' value='$summary.Total'>
  <array vals='пользователь,пользователя,пользователей'>
  <plural name='i_users' value='$summary.Total'>
  <span class='info'>
   Всего $i_reg <b>$summary.Total</b> $i_users
   <ifnzero what='$summary.Waiting'>
    &nbsp;(<b>$summary.Waiting</b> в процессе регистрации)
   </ifnzero>
  </span>
 </zone>
 <p>
 <batcher_users>
 <table width=100% class='catalog'>
  <tr valign=top>
   <th>Ник</th><th>Имя</th><th>Возраст</th>
   <th><img src='pics/tower.gif' title='Мигдалевец'></th>
   <th>Адрес</th><th>Последний раз<br>был здесь</th>
  </tr>
  <iterate_userlist>
  <for>
   <if what='$;isOdd'><tr class='odd'><else><tr></if>
    <td class='subject ninept'>
     <a href="userinfo.php?id=$.id&redirid=$_">$.Login</a>
    </td>
    <td class='eightpt'>$.FullName</td>
    <if what='$.isConfirmed'>
     <td align=center class='eightpt'>$.Age</td>
     <td align=center>
      <if what='$.isMigdalStudent'>
       <img src='pics/check.gif'>
      <else>
       &nbsp;
      </if>
     </td>
     <td>
      <ifne what='$.EmailLink'>
       <span class='email ninept'>$.EmailLink</span>
       <ifne what='$.ICQ'><br></ifne>
      </ifne>
      <ifne what='$.ICQ'>
       <span class='eightpt'>$.ICQStatusImage&nbsp;$.ICQ</span>
      </ifne>
     </td>
     <lastonline_cell user='$.' class='eightpt'>
    <else>
     <td colspan=4 class='eightpt'>
      <zone>
       <array vals='остался,осталось,осталось'>
       <plural name='lasts' value='$.ConfirmDays'>
       <array vals='день,дня,дней'>
       <plural name='days' value='$.ConfirmDays'>
       Идет регистрация ($lasts&nbsp;$.ConfirmDays&nbsp;$days)
       <admin_users>
        <a href='/actions/userconfirm.php?id=$.Id'>
	 Подтвердить</a>
       </admin_users>
      </zone>
     </td>
    </if>
   </tr>
  </for>
 </table>
 <batcher_users>
 <bottom>
</body>
</html>
