<< @(#) $Id$ >>
<< Based-on: demo/menuedit.mhtml 1.7 >>

<int name='menuid'>
<html>
<head>
 <title>Мигдаль - Главное меню</title>
</head>
<body>
 <menu_obj id='$menuid'>
 <setup>
 <top ident='$,Ident' image='pics/index.gif'>
 <table>
  <error id='*EMIX_NO_EDIT' text='Вы не администратор'>
  <error id='*EMIX_NO_FIRST' text='Первого пункта меню не существует'>
  <error id='*EMIX_NO_SECOND' text='Второго пункта меню не существует'>
  <error id='*EMIX_SQL_FIRST' text='Ошибка при обновлении записи для первого пункта'
         color=magenta>
  <error id='*EMIX_SQL_SECOND' text='Ошибка при обновлении записи для второго пункта'
         color=magenta>
  <error id='*EMID_NO_EDIT' text='Вы не администратор'>
  <error id='*EMID_NO_ITEM' text='Такого пункта меню не существует'>
  <error id='*EMID_SQL' text='Ошибка при удалении записи' color=magenta>
 </table>
 <table width=100%><tr valign=top>
  <td>
   <iterate_menu>
   <table class='topics' width=100%>
    <col width='0*'>
    <tr><th colspan=2>Меню</th></tr>
    <tbody class='names'>
     <for>
      <ifnzero what='$next'>
       <tr><td></td><td>
	<a href='actions/menuxchg.php?firstid=$.Id&secondid=$next&okdir=$_&faildir=$_'>
	 <img src='pics/menudown.png' alt='Переместить ниже' border=0></a>
	<assign name='next' value='0'>
       </td></tr>
      </ifnzero>
      <if what='$.Id==$menuid && !$;isFirst'>
       <tr><td></td><td>
	<a href='actions/menuxchg.php?firstid=$prev&secondid=$.Id&okdir=$_&faildir=$_'>
	 <img src='pics/menuup.png' alt='Переместить выше' border=0></a>
       </td></tr>
      </if>
      <tr>
       <td>
	<if what='$.Id==$menuid'>
         <img src='$$style_topics_arrow' width=11 height=12>
	</if>
       </td>
       <td>
	<a href='$[err edittag menuid=$.Id]'>$.Name</a>
	<if what='$.Id==$menuid'>
	 &nbsp;
	 <a href='/actions/menudel.php?id=$.Id&okdir=$_&faildir=$_'
	    class='edit'>Удалить</a>
	 <assign name='next' value='$.Id'>
	</if>
       </td>
      </tr>
      <assign name='prev' value='$.Id'>
     </for>
     <tr>
      <td>
       <ifzero what='$menuid'>
        <img src='$$style_topics_arrow' width=11 height=12>
       </ifzero>
      </td>
      <td><a href='$[err edittag menuid=0]' class='new'>Добавить</a></td>
     </tr>
    </tbody>
   </table>
  </td>
  <td>
   <if what='$menuid'>
    <formtable title='Изменить пункт меню'>
   <else>
    <formtable title='Добавить пункт меню'>
   </if>
   <form method=post action='actions/menumod.php'>
    <hidden name='edittag' value=1>
    <hidden name='okdir' value='$-'>
    <hidden name='faildir' value='$-'>
    <hidden name='editid' value='$menuid'>
    <table>
     <starinfo span=2>
     <error id='*EMI_NO_EDIT' text='Вы не администратор' span=2>
     <error id='*EMI_NAME_ABSENT' text='Название не указано' span=2>
     <error id='*EMI_STORE_SQL' text='Ошибка базы данных при обновлении записи'
            color='magenta' span=2>
     <edit_line title='Название' name='name' value='$,Name' size=30
                maxlength=30 mandatory='*true'>
     <error id='*EMI_IDENT_ABSENT' text='Обозначение не указано' span=2>
     <error id='*EMI_IDENT_UNIQUE' text='Так уже обозначен другой пункт меню' span=2>
     <edit_line title='Обозначение' name='ident' value='$,Ident' size=15
                maxlength=15 mandatory='*true'>
     <edit_line title='Ссылка' name='link' value='$,Link' size=40 maxlength=70>
     <tr><td></td><td>
      <checkbox name='hidden' value='$,isHidden' title='Не показывать'>
     </td>
    <if what='$menuid'>
     <formbuttons title='Изменить' span=2>
    <else>
     <formbuttons title='Добавить' span=2>
    </if>
    </table>
   </form>
   </formtable>
  </td>
 </tr></table>
 <bottom>
</body>
</html>
