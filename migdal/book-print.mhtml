<< @(#) $Id$ >>

<ident name='bookid' table='postings'>
<posting_obj id='$bookid' grp='*GRP_BOOKS' fields='*SELECT_GENERAL'>
<ifzero what='$,Id'>
 <fail>
</ifzero>
<log event=book text#='post($,Id)'>
<pagetitle title='$,Subject'>

<html>
<stylesheet ident='article'>
<preamble>
<body>
<div class='article' style='padding: 5'>
 <table width=50% cellspacing=0 cellpadding=0><tr><td>
  <ifne what='$,Author'>
   <p class='author'>$,HTMLAuthor</p>
  </ifne>
  <p><h1 style='margin-left: 0'>$,Subject</h1></p>
  <ifne what='$,Source'>
   <p class='source'>$,HTMLSource</p>
  </ifne>
  <p>$,HTMLBody</p>
 </td></tr></table>
 <h1>Оглавление</h1>
 <iterate_postinglist grp='*GRP_BOOK_CHAPTERS' limit=0 sort='*SORT_INDEX0'
		      up='$,MessageId' fields='*SELECT_GENERAL'>
 <ul>
  <for>
   <li>$.Subject
  </for>
 </ul>
 <reset_iterator>
 <for>
  <posting_obj id='$.Id' grp='*GRP_BOOK_CHAPTERS' fields='*SELECT_IMAGES'>
  <h1 style='clear: both; padding-top: 20px'>$,Subject
   <ifne what='$,Author'>
    <div class='author'>$,HTMLAuthor</div>
   </ifne>
  </h1>
  <article posting='$,' withvote='*false'>
 </for>
</div>
</body>
</html>
