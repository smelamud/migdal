! @(#) $Id$

.topics {
	margin-top: 10px;
	border-spacing: 0;
	border-collapse: collapse;
}

.topics TH {
	color: %topics_title;
	border-bottom: solid 1px %topics_title;
	text-align: left;
	font-weight: bold;
	font-size: 10pt;
}

.topics TD {
	padding-top: 2px;
	padding-bottom: 2px;
}

.topics .arrow * {
	font-weight: bold;
}

.topics A {
	text-decoration: none;
}

.topics A:hover {
	text-decoration: underline;
}

.topics A.edit {
	color: %topics_controls;
	font-size: 8pt;
}

.topics A.edit:hover {
	color: %topics_controls_hover;
}

.topics .names {
	vertical-align: middle;
}

.topics .names A.item {
	color: %topics_names;
}

.topics .names A.item:hover {
	color: %topics_names_hover;
}

.topics .names A.new {
	color: %topics_new;
	font-style: italic;
}

.topics .names A.new:hover {
	color: %topics_names_hover;
}

.topics A .answers {
	color: %topics_answers;
}

.topics A:hover .answers {
	color: %topics_names_hover;
}

.topics .rating {
	font-size: 7pt;
}

.topics .comment {
	color: %topics_comment;
}
