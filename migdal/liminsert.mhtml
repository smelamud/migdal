<< @(#) $Id$ >>

<element name=place params='value'>
<if what='$value==$$image.Placement'>
 <input type='radio' name='placement' value=$value checked>
<else>
 <input type='radio' name='placement' value=$value>
</if>
</element>

<int name='postid'>
<int name='par'>
<pagetitle title='Размещение картинки'>

<html>
<preamble>
<body>
 <top ident='index'>
 <posting_obj id='$postid'>
 <zone><stotext_image_obj id='$,StotextId' par='$par'><setup></zone>
 <formtable title='Размещение картинки'>
  <form method=post action='actions/liminsert.php'>
   <hidden name='edittag' value=1>
   <hidden name='okdir' value='$--'>
   <hidden name='faildir' value='$-'>
   <hidden name='postid' value='$postid'>
   <hidden name='par' value='$par'>
   <table>
    <starinfo>
    <error id='*ELII_NO_EDIT'
	   text='Вы не имеете права редактировать это сообщение'>
    <error id='*ELII_MESSAGE_ABSENT' text='Такого сообщения не существует'>
    <error id='*ELII_IMAGE_ABSENT' text='Такой картинки не существует'>
    <error id='*ELII_STORE_SQL' text='Ошибка при обновлении записи'
	   color=magenta>
   </table>
   <table cellspacing=10>
    <tr>
     <td>Картинка</td>
     <td>
      <select name='image_id'>
       <iterate_imageset imageset='$,LargeImageSet'>
       <option value=0>--- Без картинки ---</option>
       <for>
	<if what='$.Id==$image.ImageId'>
	 <option value=$.Id selected>$.Filename (${.SmallX}x$.SmallY)</option>
	<else>
	 <option value=$.Id>$.Filename (${.SmallX}x$.SmallY)</option>
	</if>
       </for>
      </select>
     </td>
     <td>
      <a href='/limedit.php?postid=$postid&editid=$image.ImageId&redirid=$_'
	 >Список &gt;&#x3e;&gt;</a>
     </td>
    </tr>
    <tr>
     <td>Размещение</td>
     <td>
      <table>
       << Disabled due to incorrect behavior of rendering engine TODO
	<tr>
	 <td align=center><place value='*IPL_TOPLEFT'></td>
	 <td align=center></td>
	 <td align=center><place value='*IPL_TOPRIGHT'></td>
	</tr>
       >>
       <tr>
	<td align=center><place value='*IPL_CENTERLEFT'></td>
	<td align=center><place value='*IPL_CENTER'></td>
	<td align=center><place value='*IPL_CENTERRIGHT'></td>
       </tr>
       <tr>
	<td align=center><place value='*IPL_BOTTOMLEFT'></td>
	<td align=center><i>Абзац</i></td>
	<td align=center><place value='*IPL_BOTTOMRIGHT'></td>
       </tr>
      </table>
     </td>
    </tr>
    <formbuttons title='Изменить' span=3>
   </table>
  </form>
 </formtable>
 <bottom>
</body>
</html>
