<element name='controls' params='posting'>
<div align=right>
 <table class='controls'>
  <tr>
   <isedit what='$posting'>
    <td>
     <a href="postingedit.php?editid=$posting.Id&grp=$posting.Grp&redir=$_"
	>Изменить</a>
    </td>
    <td>
     <a href="limedit.php?postid=$posting.Id&redir=$_">Список иллюстраций</a>
    </td>
    <if what='$posting.isModerable'>
     <td>
      <if what='$posting.isDisabled'>
       <a href="actions/moderate.php?editid=$posting.MessageId&hide=0&okdir=$_&faildir=$_"
	>Разрешить показ</a>
      <else>
       <a href="actions/moderate.php?editid=$posting.MessageId&hide=1&okdir=$_&faildir=$_"
	>Запретить показ</a>
      </if>
     </td>
    </if>
   </isedit>
   <td>
    <a href='forum.php?redir=$_&msgid=$posting.Id'
     >Обсудить ($posting.AnswerCount)</a>
   </td>
  </tr>
 </table>
</div>
</element>

<macro name='isplaced'>
<if what='$par->isPlaced(%place)'>
</macro>

<macro name='/isplaced'>
</if>
</macro>

<macro name='notplaced'>
<if what='!$par->isPlaced(%place)'>
</macro>

<macro name='/notplaced'>
</if>
</macro>

<element name='pic' params='posting,par'>
<image_placements>
<ifnzero what='$par.ImageId'>
 <notplaced place='IPL_TOP'>
  </p>
 </notplaced>
 <isplaced place='IPL_BOTTOM'>
  <p>
 </isplaced>
 <isplaced place='IPL_VCENTER'>
  <isplaced place='IPL_LEFT'>
   <table width=100%><tr><td align=left>
  </isplaced>
  <isplaced place='IPL_HCENTER'>
   <table width=100%><tr><td align=center>
  </isplaced>
  <isplaced place='IPL_RIGHT'>
   <table width=100%><tr><td align=right>
  </isplaced>
 </isplaced>
  <isplaced place='IPL_LEFT'>
   <table align=left>
  </isplaced>
  <isplaced place='IPL_HCENTER'>
   <table>
  </isplaced>
  <isplaced place='IPL_RIGHT'>
   <table align=right>
  </isplaced>
  <isedit what='$posting'>
   <tr><td align=center>
    <a href='liminsert.php?postid=$$artid&par=$par.Number&redir=$_'
       class='piclink'>Картинка</a>
   </td></tr>
  </isedit>
   <tr><td>
    <image_linked_tag id='$par.ImageId' enlarge='$par.hasLargeImage'>
   </td></tr>
   <ifne what='$par.Title'>
    <tr><td class='imagetitle'>$par.HTMLTitle</td></tr>
   </ifne>
  </table>
 <isplaced place='IPL_VCENTER'>
  </td></tr></table>
 </isplaced>
 <isplaced place='IPL_TOP'>
  </p>
 </isplaced>
 <notplaced place='IPL_BOTTOM'>
  <p>
 </notplaced>
<else>
 </p>
 <isedit what='$posting'>
  <p>
  <a href='liminsert.php?postid=$$artid&par=$par.Number&redir=$_'
     class='piclink'>Картинка</a>
  </p>
 </isedit>
 <p>
</ifnzero>
</element>

<string name='artid'>
<grps>
<text_formats>
<read_posting id='$artid'>
<posting_full id='$artid' grp='*GRP_FORUMS'>
<html>
<head>
 <title>Мигдаль - Статьи - $,Subject</title>
</head>
<body>
 <top ident='articles'>
 <table width=100%><tr valign=top>
  <zone>
   <require name='lib/grps.php'>
   <grpdata name='g' grp='$,Grp'>
  </zone>
  <td width=120><topics g='$g' topic_id='$,TopicId' navi='*true'></td>
  <td width=20>&nbsp;</td>
  <td class='article'>
   <controls posting='$,'>
   <h1>$,Subject</h1>
   <ifne what='$,Author'>
    <div class='author'>$,HTMLAuthor</div>
   </ifne>
   <if what='$,LargeFormat==*TF_PRE'><pre></if>
   <iterate_posting_paragraphs posting='$,'>
   <p>
   <for>
    <pic posting='$,' par='$.'>
    $.HTMLBody
   </for>
   </p>
   <if what='$,LargeFormat==*TF_PRE'></pre></if>
   <ifne what='$,Source'>
    <div class='source' align=right>$,HTMLSource</div>
   </ifne>
   <controls posting='$,'>
  </td>
 </tr></table>
 <bottom>
</body>
</html>
