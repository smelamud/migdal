<< @(#) $Id$ >>

<ident name='postid'>

<< Traps >>
<if what='$postid>=283 && $postid<=286 || $postid==301'>
 <trap text='Ecology and Torah'>
 <reload href#="book-chapter.php?chapid=$postid">
</if>
<< /Traps >>

<posting_obj id='$postid' grp='*GRP_ARTICLES'
             fields!='*SELECT_GENERAL|*SELECT_LARGE_BODY'>
<log event=article text#='post($,Id)'>
<pagetitle title='$,Subject'>

<html>
<stylesheet ident='article'>
<preamble>
<body>
 <ife what='$$menu_main'>
  <assign_global name='menu_main' value='index'>
 </ife>
 <top ident='$$menu_main'>
 <table width=100% cellpadding=5><tr valign=top>
  <notprint>
   <td width=150 class='eframe'>
    <topics>
    <ears>
   </td>
  </notprint>
  <td class='article cframe'>
   <article_controls posting='$,'>
   <table align=right class='sent'>
    <tr><td>&nbsp;</td></tr>
    <tr><td align=right><sentview date='$,Sent'></td></tr>
    <tr><td align=right><senderlink message='$,'></td></tr>
   </table>
   <h1>
    <topiclink posting='$,'>
    <br>
    $=,Subject
    <ifne what='$,Author'>
     <div class='author'>$,AuthorHTML</div>
    </ifne>
   </h1>
   <article_full posting='$,'>
   <article_controls posting='$,'>
  </td>
 </tr></table>
 <bottom>
</body>
</html>
