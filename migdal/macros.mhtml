<macro name='posting'
       defaults="showtopic='*true' showdiscuss='*true' showcomplain='*true' shorten='*false'">
 <zone>
  <require name='parts/posting.php'>
  <require name='parts/gallery-picture.php'>
  <require name='parts/taglit-posting.php'>
  <require name='parts/posting-times.php'>
  <require name='parts/posting-times-cover.php'>
  <require name='parts/taglit-gallery-picture.php'>
  <if what='%posting.TapeCenter'><center></if>
  <call element='%posting.TapeElement' arg1%!posting='%posting'
	arg2%!showtopic='%showtopic' arg3%!showdiscuss='%showdiscuss'
	arg4%!showcomplain='%showcomplain' arg5%!shorten='%shorten'>
  <if what='%posting.TapeCenter'></center></if>
 </zone>
</macro>

<< HTML shortcuts >>
<macro name='/at'>
 <asp></a><asp>
</macro>

<macro name='edit_line' defaults="mandatory='*false'">
 <tr>
  <td>%title <if what='%mandatory'><star></if></td>
  <tdspan span=%span>
   <edit name='%name' value='%value' size=%size maxlength=%maxlength>
  </td>
 </tr>
</macro>

<macro name='editor_line' defaults="span=0 rows=10 mandatory='*false'">
 <tr><tdspan span=%span>%title <if what='%mandatory'><star></if></tdspan></tr>
 <tr><tdspan span=%span>
  <textarea name='%name' rows=%rows cols=50 wrap='virtual'>%body</textarea>
 </tdspan></tr>
</macro>

<macro name='preamble'>
 <zone>
  <assign_global name='communityDomain' value!="$$userDomain=='community'">
  <assign_global name='officialDomain' value!="$$userDomain=='info'">
  <stylesheet ident='style'>
  <head>
   <title>Мигдаль<ifne what='$pageTitle'> - $pageTitle</ifne></title>
  </head>
 </zone>
</macro>

<< Biff >>
<macro name='biff' defaults="small='*false'">
 <ifbiff time%!time='%time'>
  <if what='%small'>
   &nbsp;<image src='pics/ner-small.gif' title='новое'>&nbsp;
  <else>
   &nbsp;<image src='pics/ner.gif' title='новое'>&nbsp;
  </if>
 </ifbiff>
</macro>

