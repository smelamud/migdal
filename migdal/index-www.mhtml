<preamble>
<body>
 <top ident='index'
      transref!='$topic_id<=0 ? "http://english.$$siteDomain/" : ""'>
 <table width=100% cellpadding=5>
  <tr valign=top>
   <td width=150 class='eframe'>
    <posting_new topic_id='$topic_id' grp='*GRP_NEWS'>
    <topics posting='$,'>
    <ears>
    <if what='$topic_id<=0'>
     <p>&nbsp;</p>
     <p><rabbi></p>
    </if>
   </td>
   <td class='cframe'>
    <table width=100% cellspacing=0 cellpadding=5><tr valign=top>
     <td>
      <subtitle>
      <outer><div class='nframe' style='padding: 5'><inner>
       <seealso_links topic_id='$topic_id' topic_grp='*GRP_TAPE'
                      title='См. также в разделе ссылок'>
       <seealso_other topic_id='$topic_id' topic_grp='*GRP_TAPE'
                      title='По этой теме в других разделах'>
      </inner></div></outer>
      <if what='$topic_id<=0'>
       <<kaitana_announce>>
       <textears>
      </if>
      <postings grp='*GRP_TAPE' topic_id='$topic_id' limit=10 offset='$offset'
                showshadows!='$topic_id>0'>
     </td>
     <td width=130 class='nframe'>
      <tzdaka>
      <tip>
      <hit_parade_month grp='*GRP_WRITINGS' topic_id='$topic_id'
			showshadows!='$topic_id>0'>
      <if what='$topic_id<=0'>
       <discussions limit=7>
      </if>
     </td>
    </tr></table>
   </td>
  </tr>
 </table>
 <bottom>
</body>
