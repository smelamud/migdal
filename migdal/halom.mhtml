<< @(#) $Id$ >>

<int name='day'>
<int name='postid'>
<int name='topic_id'>

<< Traps >>
<< /Traps >>

<grps>
<assign name='day' value!='$day<=0 ? 1 : $day'>
<ifnzero what='$postid'>
 <posting_full name='posting' id='$postid' grp='*GRP_KAITANA_NEWS'>
 <topic_obj name='halom' id='$posting.TopicId'>
<else>
 <topic_obj name='halom' id='$topic_id'>
 <posting_full name='posting' grp='*GRP_KAITANA_NEWS' topic_id='$halom.Id'
               index1='$day'>
</ifzero>
<pagetitle title#='$halom.Name - $posting.Subject'>
<topictitle title='$halom.Name'>
<log event=halom text#='topic($halom.Id) post($posting.Id)'>

<macro name='editor'>
 <ispost what='$halom'>
</macro>
<endif name='/editor'>

<element name='batcher' params='halom'>
<editor>
 <table class='info'><tr valign=center>
  <td><image src='pics/sheet.gif'></td>
  <td>
   <a href='postingedit.php?topic_id=$halom.Id&grp=*GRP_KAITANA_NEWS&redirid=$_'
      >Добавить новость</a>
  </td>
  <td>&nbsp;</td>
  <td><image src='pics/sheet.gif'></td>
  <td>
   <a href='postingedit.php?topic_id=$halom.Id&grp=*GRP_KAITANA_GALLERY&redirid=$_'
      >Добавить картинку</a>
  </td>
 </tr></table>
</editor>
</element>

<element name='controls' params='posting,halom'>
<ifnzero what='$posting.Id'>
 <div align=right><table class=controls>
  <tr>
   <editor>
    <td>
     <editlink posting='$posting'>
     &nbsp;
    </td>
   </editor>
   <td><discusslink posting='$posting'></td>
  </tr>
 </table></div>
<else>
 &nbsp;
</ifnzero>
</element>

<element name='halom_ring' params='posting'>
<notprint>
 <table width=100% style='clear: both' class='ring'>
  <tr valign=center>
   <sibling_issue grp='*GRP_KAITANA_NEWS' topic_id='$posting.TopicId'
                  index1='$posting.Index1' next='*false'>
   <if what='$,>0'>
    <posting_obj id='$,' grp='*GRP_KAITANA_NEWS'>
    <td align=left width=40%>
     <pointer href#='halom.php?topic_id=$,TopicId&day=$,Index1'
              text='$,Subject' title='Предыдущий выпуск' left='*true'>
    </td>
   <else>
    <td width=40%>&nbsp;</td>
   </if>
   <td width=20%>&nbsp;</td>
   <sibling_issue grp='*GRP_KAITANA_NEWS' topic_id='$posting.TopicId'
                  index1='$posting.Index1' next='*true'>
   <if what='$,>0'>
    <posting_obj id='$,' grp='*GRP_KAITANA_NEWS'>
    <td align=right width=40%>
     <pointer href#='halom.php?topic_id=$,TopicId&day=$,Index1'
              text='$,Subject' title='Следующий выпуск' left='*false'>
    </td>
   <else>
    <td width=40%>&nbsp;</td>
   </if>
  </tr>
 </table>
</notprint>
</element>

<html>
<stylesheet ident='article'>
<preamble>
<body>
 <top ident='index'>
 <table width=100% cellspacing=5 cellpadding=5><tr valign=top>
  <td width=140 class='eframe'><zone>
   <topics posting='$posting'>
  </zone></td>
  <td class='cframe'>
   <subtitle>
   <batcher halom='$halom'>
   <table class=article width=100% cellspacing=5 cellpadding=0><tr valign=top>
    <iterate_postinglist topic_id='$halom.Id' grp='*GRP_KAITANA_GALLERY'
			 sort='*SORT_RATING' limit=0
 	                 index1!='$posting.Id!=0 ? $posting.Index1 : $day'
			 fields!='*SELECT_IMAGES|*SELECT_TOPICS'>
    <td width=140>
     <for>
      <if what='$;isOdd'>
       <kaitana_picture picture='$.'>
      </if>
     </for>
    </td>
    <td>
     <controls posting='$posting' halom='$halom'>
     <ifnzero what='$posting.Id'>
      <table class=sent align=right>
       <tr><td>&nbsp;</td></tr>
       <tr><td align=right><sentview date='$posting.Sent'></td></tr>
       <tr><td align=right><senderlink message='$posting'></td></tr>
      </table>
      <halom_ring posting='$posting'>
      <h1 style='clear: both'>$posting.Subject</h1>
      <p>$posting.HTMLBody</p>
      <vote_frame id='$posting.Id' color='$$style_cframe_back'
		  image='$$style_cframe_back_pic' align=center>
      <halom_ring posting='$posting'>
      <controls posting='$posting' halom='$halom'>
     </ifnzero>
    </td>
    <td width=140>
     <reset_iterator>
     <for>
      <if what='!$;isOdd'>
       <kaitana_picture picture='$.'>
      </if>
     </for>
    </td>
   </tr></table>
  </td>
 </tr></table>
 <bottom>
</body>
</html>
