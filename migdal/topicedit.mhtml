<< @(#) $Id$ >>

<pagetitle title='Редактирование темы'>

<conf>
<int name='editid'>
<int name='up'>

<html>
<preamble>
<body>
 <top ident='index'>
 <topic_obj id='$editid' up='$up'>
 <setup>
 <if what='$editid'>
  <formtable title='Изменить тему'>
 <else>
  <formtable title='Добавить тему'>
 </if>
 <form method=post enctype='multipart/form-data' action='actions/topicmod.php'>
  <hidden name='edittag' value=1>
  <hidden name='okdir' value='$--'>
  <hidden name='faildir' value='$-'>
  <hidden name='editid' value='$editid'>
  <table>
   <starinfo>
   <error id='*ET_NO_EDIT' text='Вы не можете редактировать эту тему'>
   <error id='*ET_STORE_SQL' text='Ошибка базы данных при обновлении записи'
	  color='magenta'>
   <error id='*ET_TRACK_SQL' color='magenta'
	  text='Ошибка базы данных при обновлении маршрута темы'>
   <tr><td><table>
    <error id='*ET_NO_UP' text='Такой темы не существует' span=2>
    <error id='*ET_LOOP_UP' span=2
           text='Тема не может быть подтемой самой себя'>
    <error id='*ET_NO_APPEND' span=2
           text='Вы не можете добавлять подтемы для этой темы'>
    <topicselect title='Надтема' name='up' grp='*GRP_ALL' value='$,UpValue'
                 root=-1>
    <error id='*ET_NAME_ABSENT' text='Название не было введено' span=2>
    <edit_line title='Название' value=$,Name name='name' size=30 maxlength=70
               mandatory='*true'>
    <error id='*ET_IDENT_UNIQUE' text='Так уже обозначена другая тема' span=2>
    <edit_line title='Обозначение' name='ident' value='$,Ident'
	       size=15 maxlength=15>
    <error id='*ET_NO_USER' text='Такого пользователя не существует' span=2>
    <edit_line title='Владелец' name='login' value='$,Login' size=20
	       maxlength=30>
    <error id='*ET_NO_GROUP' text='Такой группы не существует' span=2>
    <edit_line title='Группа' name='group_login' value='$,GroupLogin' size=20
	       maxlength=30>
    <error id='*ET_BAD_PERMS' text='Права заданы некорректно' span=2>
    <edit_line title='Права' name='perm_string' value='$,PermHTML' size=17
               maxlength=17>
   </table></td></tr>
   <error id='*ET_DESCRIPTION_ABSENT' text='Описание не было задано'>
   <editor_line title='Описание' name='description' body='$,Description'
                mandatory='$topicMandatoryDescription'>
   <checkbox_line name='separate' value='$,isSeparate' title='Отдельная'>
   <error id='*ET_MUST_ALLOW'
          text='Тема должна быть для какого-то вида сообщений'>
   <tr><td><table width=100%>
    <iterate_grps>
    <for>
     <if what='$.isValid'>
      <assign name='premoderateIdent' value#='premoderate_$.GrpIdent'>
      <assign name='allow' value!='($,Allow & $.Grp)!=0'>
      <assign name='premoderate' value!='($,Premoderate & $.Grp)!=0'>
      <assign name='foritems' value#='Тема для $.GrpForItemsTitle'>
      <assign name='titles' value#='$.GrpTitles премодерируются'>
      <tr>
       <td><checkbox name='$.GrpIdent' value='$allow' title='$foritems'></td>
       <td><checkbox name='$premoderateIdent' value='$premoderate'
		     title='$titles'></td>
      </tr>
     </if>
    </for>
   </table></td></tr>
  <if what='$editid'>
   <formbuttons title='Изменить'>
  <else>
   <formbuttons title='Добавить'>
  </if>
  </table>
 </form>
 </formtable>
 <bottom>
</body>
</html>
