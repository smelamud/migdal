<< @(#) $Id$ >>

<string name='topic_id'>
<int name='offset'>
<ifzero what='$topic_id'>
 <reload href='$[topic_id=-1]'>
</ifzero>
<ifnzero what='$grp'>
 <trap text='grp!=0 in index.php'>
 <reload href='$[grp]'>
</ifnzero>
<zone>
 <ident_id table='topics' ident='$topic_id'>
 <log event=index text#='topic($,) offset=$offset'>
 <ifzero what='$offset'>
  <log event=enter text#='domain=$$userDomain'>
 </ifzero>
</zone>
<grps>
<unititle topic_id='$topic_id'>

<html>
<preamble>
<body>
 <top ident='index'>
 <table width=100% cellpadding=5><tr valign=top>
  <td width=120 class='eframe'>
   <topics_major ident='index'>
   <topics_minor id='$topic_id' withpostings='$$officialDomain'
                 subdomain!='$$officialDomain ? 1 : -1' grp='*GRP_TAPE'
		 href='index.php' title='Раздельчики'>
  </td>
  <td class='cframe'>
   <subtitle>
   <postings grp='*GRP_TAPE' topic='$topic_id' limit='$userMsgPortion'
	     offset='$offset' subdomain!='$$officialDomain ? 1 : -1'>
   <if what='$topic_id==-1 && $offset==0'>
    </div>
   </if>
  </td>
  <community>
   <td width=115 class='eframe'>
    <tip>
    <hit_parade grp='*GRP_WRITINGS' topic_id='$topic_id'>
    <<friends>>
   </td>
  </community>
 </tr></table>
 <bottom>
</body>
</html>
