<< @(#) $Id$ >>

<int name='topic_id'>
<int name='offset'>
<ifzero what='$topic_id'>
 <reload href='$[topic_id=-1]'>
</ifzero>
<ifnzero what='$grp'>
 <log event=trap text='grp!=0 in index.php'>
 <reload href='$[grp]'>
</ifnzero>
<zone>
 <log event=index text#='topic($topic_id) offset=$offset'>
 <log event=enter text#='domain=$$userDomain'>
</zone>
<grps>
<unititle topic_id='$topic_id'>

<html>
<preamble>
<body>
 <top ident='index'>
 <table width=100%><tr valign=top>
  <td width=120>
   <posting_new grp='*GRP_NEWS' topic_id='$topic_id'>
   <topics posting='$,' showchapters='*true'>
  </td>
  <td width=5>&nbsp;</td>
  <td>
   <subtitle icon='pics/all-big.gif'>
   <postings grp='*GRP_TAPE' topic='$topic_id' limit='$userMsgPortion'
             offset='$offset'>
  </td>
  <td width=5>&nbsp;</td>
  <td width=100><hit_parade grp='*GRP_WRITINGS' topic_id='$topic_id'></td>
 </tr></table>
 <bottom>
</body>
</html>
