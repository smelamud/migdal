<< @(#) $Id$ >>

<element name='topic' params='posting,showtopic'>
<if what='$showtopic'>
 <assign name='title' value=''>
 <iterate_topic_hierarchy topic_id='$posting.TopicId' root='$`links`'>
 <for>
  <if what='!$;isFirst'><assign name='title' value#='$title / '></if>
  <assign name='title' value#='$title$.Subject'>
 </for>
 <topiclink posting='$posting' title='$title'
            comment='$posting.TopicBodyNormal'>
 <br>
</if>
</element>

<element name='further_url' params='posting'>
<a href='actions/link.php?id=$posting.Id&okdir=$#posting.Url'
   target=_blank>$posting.URLEllip</a>
<if what='$posting.URLCheckFailDays>=3'>
 <array vals='день,дня,дней'>
 <plural value='$posting.URLCheckFailDays'>
 <span class='error'>
  (Ссылка не работает $posting.URLCheckFailDays&sp;$,)
 </span>
</if>
</element>

<element name='posting_link'>
<dl class='posting'>
 <dt>
  <span class='subject'>
   <topic posting='$posting' showtopic='$showtopic'>
   <vote_frame align=right id='$posting.Id' color='$$style_cframe_back'
	       image='$$style_cframe_back_pic'>
   $=posting.Subject<biff time='$posting.Sent'>
  </span><br>
  <further_url posting='$posting'>
 </dt>
 <dd><p>
  <if what='$posting.hasSmallImage'>
   <table align=left class='pic'><tr><td>
    <posting_image posting='$posting'>
   </td></tr></table>
  </ifnzero>
  <if what="$posting.Lang!='' && $posting.Lang!='ru'">
   <i>(Язык: $posting.LangName)</i>
  </if>
  $posting.BodyHTML
 </p>
 <div width=90% style="clear: left; text-align: left" class='sent'>
  <sentview date='$posting.Sent'>&nbsp;
  <senderlink message='$posting'>
 </div>
 <posting_controls posting='$posting' showdiscuss='$showdiscuss'
	           showcomplain='$showcomplain'>
</dl>
</element>
