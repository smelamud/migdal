<< @(#) $Id$ >>

<grps>

<element name='topics_links'>
<table class='topics' style='margin: 0'>
 <tr><th>$posting.TopicName</th></tr>
</table>
<div class='ninept' style='padding-left: 20px; padding-top: 5px'>
 <a href='/links.php'>Ссылки</a>
 /
 <iterate_topic_hierarchy topic_id='$posting.TopicId' root='$`links`'>
 <for>
  <a href='/links.php?topic_id=$.Id'>$.Name</a>
  /
 </for>
</div>
<postings_info grp='*GRP_LINKS' topic_id='$posting.TopicId'
	       recursive='*false'>
<assign name='post_count' value!='$,Total-1'>
<topic_count name='topic_count' id='$posting.TopicId' recursive='*true'>
<if what='$post_count!=0 || $topic_count!=0'>
 <p>
 <a href='/links.php?topic_id=$posting.TopicId'>
  Еще&sp;
 <ifnzero what='$post_count'>
  <array vals='ссылка,ссылки,ссылок'>
  <plural value='$post_count'>
  $post_count&sp;$,
 </ifnzero>
 <if what='$post_count!=0 && $topic_count!=0'>
  &sp;и&sp;
 </if>
 <ifnzero what='$topic_count'>
  <array vals='подкатегория,подкатегории,подкатегорий'>
  <plural value='$topic_count'>
  $topic_count&sp;$,
 </ifnzero>
  &sp;по этой теме
 </a>
</if>
</element>
