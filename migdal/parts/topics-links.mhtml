<< @(#) $Id$ >>

<grps>

<element name='topics_links'>
<links_switcher ident='catalog'>
<div class='ninept' style='padding-left: 20px; padding-top: 5px'>
 <a href='links/'>Ссылки</a> /
 <iterate_topic_hierarchy topic_id='$posting.TopicId' root='$`links`'>
 <for>
  <a href='$.Catalog'>$=.Subject</a> /
 </for>
</div>
<postings_info grp='*GRP_LINKS' topic_id='$posting.TopicId' recursive='*false'>
<assign name='post_count' value!='$,Total-1'>
<topic_count name='topic_count' id='$posting.TopicId' recursive='*true'>
<if what='$post_count!=0 || $topic_count!=0'>
 <zone>
  <array vals='ссылка,ссылки,ссылок'>
  <plural name='links' value='$post_count'>
 </zone>
 <zone>
  <array vals='подкатегория,подкатегории,подкатегорий'>
  <plural name='topics' value='$topic_count'>
 </zone>
 <p>
 <a href='$posting.GrpGeneralHref'><asp>
  <asp>Еще&sp;<ifnzero what='$post_count'>$post_count&sp;$links</ifnzero>
  <if what='$post_count!=0 && $topic_count!=0'>&sp;и&sp;</if>
  <ifnzero what='$topic_count'>$topic_count&sp;$topics</ifnzero>
  &sp;по этой теме<asp>
 <asp></a>
</if>
</element>
