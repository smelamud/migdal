<< @(#) $Id$ >>

<element name='topics_events'>
<topic_obj name='topic' id='$`events`'>
<topics_table class='ninept' title='События'>
 <iterate_topiclist grp='*GRP_EVENT' up='$,Id' recursive='*true' level=2
                    fields='*SELECT_INFO'>
 <for>
  <topics_line time='$.LastMessage' text='$.Name' title='$.Description'
               href#='event.php?topic_id=$.Id' arrow!='$posting.TopicId==$.Id'>
 </for>
</topics_table>
</element>

<element name='topics_gallery_events'>
<topic_obj name='topic' id='$`events`'>
<topics_table class='ninept' title='События'>
 <iterate_topiclist grp='*GRP_EVENT' up='$,Id' recursive='*true' level=2
                    fields='*SELECT_GENERAL'>
 <for>
  <posting_info grp='*GRP_GRAPHICS' topic_id='$.Id' recursive='*true'>
  <topics_line time='$,MaxSent' text='$.Name' title='$.Description'
               count='$,Total' href#='gallery.php?topic_id=$.Id'
	       arrow!='$posting.TopicId==$.Id'>
 </for>
</topics_table>
</element>
