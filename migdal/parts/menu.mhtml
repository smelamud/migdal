<< @(#) $Id$ >>

<element name='menuitem' params='ident,link,target,current,time'
         defaults='time=0'>
<biff time='$time'>
<at href='$link' target='$target'>
 <if what='$current==$ident'>
  <image src#='pics/menu-${ident}.gif' border=0>
 <else>
  <image src#='pics/menu-${ident}-na.gif' border=0>
 </if>
</at>
</element>

<element name='menu'>
<table class='menu' width=100% cellspacing=0 cellpadding=0 vspace=0>
 <tr valign=bottom>
  <td><asp>
   <posting_last name='forums_time' grp='*GRP_FORUMS' answers='*GRP_DISCUSS'>
   <posting_last name='gallery_time' grp='*GRP_GALLERY' topic_id='general'
		 recursive='*true'>
   <menuitem ident='index' link='index.php?topic_id=-1' target='$target'
             current='$ident'>
   <community>
    <menuitem ident='discuss' link='forumcatalog.php?topic_id=-1'
              target='$target' current='$ident' time='$forums_time'>
   </community>
   <menuitem ident='gallery' link='gallery.php?topic_id=-1' target='$target'
             current='$ident' time='$gallery_time'>
   <community>
    <menuitem ident='chat' link='chat.php' target='$target' current='$ident'>
    <menuitem ident='users' link='users.php' target='$target' current='$ident'>
   </community>
  <asp></td>
  <td align=right><asp>
   <asp><noindex><tune ident='$ident' target='$target'></noindex><asp>
  <asp></td>
 </tr>
 <tr><td colspan=2 class='date'><today>&nbsp;</td></tr>
</table>
</element>
