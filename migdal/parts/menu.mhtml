<< @(#) $Id$ >>

<element name='menuitem' params='ident,link,target,current,time,alt'
         defaults="time=0 alt=''">
<ifbiff time='$time'>
 <assign name='biff' value='-ner'>
<else>
 <assign name='biff' value=''>
</ifbiff>
<at href='$link' target='$target'>
 <if what='$current==$ident'>
  <image src#='pics/menu$biff-${ident}.gif' alt='$alt' border=0>
 <else>
  <image src#='pics/menu$biff-${ident}-na.gif' alt='$alt' border=0>
 </if>
</at>
</element>

<element name='menu'>
<table class='menu' width=100% cellspacing=0 cellpadding=0 vspace=0>
 <notenglish>
  <tr valign=bottom>
   <td><asp>
    <posting_last name='times_time' topic_id='$`migdal-times`'
                  recursive='*true'>
    <posting_last name='forums_time' grp='*GRP_FORUMS' answers='*GRP_DISCUSS'>
    <posting_last name='gallery_time' grp='*GRP_GRAPHICS' topic_id='-1'>
    <posting_last name='links_time' grp='*GRP_LINKS' topic_id='$`links`'
		  recursive='*true'>
    <menuitem ident='index' alt='Главная' link='index.php' target='$target'
	      current='$ident'>
    <menuitem ident='times' alt='Мигдаль Times' link='times.php'
              target='$target' current='$ident' time='$times_time'>
    <menuitem ident='discuss' alt='Форум' link='forumcatalog.php'
	      target='$target' current='$ident' time='$forums_time'>
    <menuitem ident='gallery' alt='Галерея' link='gallery.php' target='$target'
	      current='$ident' time='$gallery_time'>
    <menuitem ident='links' alt='Ссылки' link='links/' target='$target'
	      current='$ident' time='$links_time'>
    <master>
     <menuitem ident='chat' alt='Чат' link='chat.php' target='$target'
	       current='$ident'>
    </master>
    <menuitem ident='users' alt='Пользователи' link='users/'
	      target='$target' current='$ident'>
   <asp></td>
   <td align=right><asp>
    <menuitem ident='search' alt='Поиск' link='search.php'
              target='$target' current='$ident'>
    <asp><noindex><menuitem ident='style' alt='Настройки'
                            link#='style.php?redirid=$_' target='$target'
			    current='$ident'></noindex><asp>
   <asp></td>
  </tr>
 </notenglish>
 <tr><td colspan=2 class='date' align=right><today>&nbsp;</td></tr>
</table>
</element>
