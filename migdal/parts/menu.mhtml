<element name='Menu'>
<table class='menu' width=100%><tr><td>
 <iterate_menu name='menu'>
 <for>
  <assign name='name' value='$.Name'>
  <if what='$.Ident==$ident'>
   <at href='$.Link' class='selected' target='$target'>$name</at>
  <else>
   <if what="$.Ident=='chat'">
    <zone>
     <chat_users_count>
     <concat name='name' value='$name ($,)'>
    </zone>
   </if>
   <at href='$.Link' target='$target'>$name</at>
  </if>
  <notlast name='menu'>
   &nbsp;
  </notlast>
 </for>
 <admin_menu>
  &nbsp;
  <at href='menuedit.php' target='$target'>Изменить</at>
 </admin_menu>
</td></tr></table>
</element>
