<< @(#) $Id$ >>

<grps>

<element name='batcher' params='list,topic,grp,root,showadvert'>
<community>
 <posting_new grp='$grp'>
 <table width=100% class='batcher'><tr valign=bottom>
  <td align=left>
   <logged>
    <if what='$,isValid'>
     <a href='postingedit.php?topic_id=$topic&root=$root&grp=$grp&redirid=$_'
	class='add'>Добавить $,GrpItemTitle</a>
    <else>
     <a href='postingedit.php?topic_id=$topic&root=$root&grp=*GRP_NEWS&redirid=$_'
	class='add'>Добавить новость</a>,
     <a href='postingedit.php?topic_id=$topic&root=$root&grp=*GRP_ARTICLES&redirid=$_'
	class='add'>статью</a>
    </if>
   <else>
    <if what='$showadvert'>
     <span class='info'>
      <b>
       <if what='$,isValid'>
	Хотите добавлять $,GrpItemsTitle?
       <else>
	Хотите добавлять новости и статьи?
       </if>
      </b>
      <a href='/register.php?redirid=$_'>Зарегистрируйтесь!</a>
     </span>
    </if>
   </logged>
  </td>
  <td align=center><spin list='$list'></td>
 </tr></table>
</community>
</element>

<element name='postings'>
<iterate_postinglist grp='$grp' topic='$topic' limit='$limit' offset='$offset'
                     sort='*SORT_PSENT' subdomain='$subdomain'
		     user='$user_id'>
<if what='$$userId>0 || $;Count!=0'>
 <batcher list='$;' topic='$topic' grp='$grp' root='$root'
          showadvert='$showadvert'>
 <table>
  <error id='*EMH_NO_MESSAGE' text='Такого сообщения не существует'>
  <error id='*EMH_NO_MODERATE' text='Вы не модератор'>
  <error id='*EMR_NO_RENEW' text='Вы не модератор'>
  <error id='*EMR_NO_MESSAGE' text='Такого сообщения не существует'>
  <error id='*EMR_SQL' text='Ошибка базы данных при обновлении записи'>
 </table>
 <for>
  <assign name='post' value='$.'>
  <posting posting='$post' showtopic!='$topic<0' shorten='*true'
           showdiscuss='$$communityDomain' showcomplain='$$communityDomain'>
 </for>
 <ifnzero what='$;Count'>
  <batcher list='$;' topic='$topic' grp='$grp' root='$root'
           showadvert='$showadvert'>
 </ifnzero>
<else>
 &nbsp;
</if>
</element>
