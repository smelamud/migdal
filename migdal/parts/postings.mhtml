<< @(#) $Id$ >>

<grps>

<element name='batcher' params='&list,topic_id,grp,showadvert,access'>
<posting_new grp='$grp'>
<table width=100%><tr valign=bottom>
 <td align=left class='info'>
  <if what='$access || $showadvert'>
   <table><tr valign=center>
    <td><image src='pics/sheet.gif'></td>
    <td>
     <assign name='noguests' value!='$access ? 0 : 1'>
     <if what='$,isValid'> <<isValid deprecated>>
      <a href='postingedit.php?topic_id=$topic_id&grp=$grp&noguests=$noguests&redirid=$_'
	 >Добавить $,GrpItemTitle</a>
     <else>
      <notenglish>
       <a href='postingedit.php?topic_id=$topic_id&grp=*GRP_NEWS&noguests=$noguests&redirid=$_'
	  >Добавить новость</a>,
       <a href='postingedit.php?topic_id=$topic_id&grp=*GRP_ARTICLES&noguests=$noguests&redirid=$_'
	  >статью</a>,
       <a href='postingedit.php?topic_id=$topic_id&grp=*GRP_BOOKS&noguests=$noguests&redirid=$_'
	  >книгу</a>
      <else>
       <a href='postingedit.php?topic_id=$topic_id&grp=*GRP_NEWS&noguests=$noguests&redirid=$_'
	  >Add news</a>,
       <a href='postingedit.php?topic_id=$topic_id&grp=*GRP_ARTICLES&noguests=$noguests&redirid=$_'
	  >article</a>
      </notenglish>
     </if>
    </td>
   </tr></table>
  </if>
 </td>
 <td align=center><spin list='$list'></td>
</tr></table>
</element>

<element name='postings'>
<if what='$topic_id>0'>
 <perms table='topics' id='$topic_id'>
 <assign name='access' value='$,isPostable'>
<else>
 <assign name='access' value!='$$userId>0'>
</if>
<iterate_postinglist grp='$grp' topic_id='$topic_id' limit='$limit'
                     offset='$offset' sort='$sort' subdomain='$subdomain'
		     user='$user_id' showshadows='$showshadows'
		     recursive='$recursive'>
<if what='$access || $showadvert || $;Count!=0'>
 <batcher list='$;' topic_id='$topic_id' grp='$grp' showadvert='$showadvert'
          access='$access'>
 <for>
  <posting posting='$.' showtopic!='$recursive || $topic_id<0' shorten='*true'
           showdiscuss='*true' showcomplain='*true'>
 </for>
 <ifnzero what='$;Count'>
  <batcher list='$;' topic_id='$topic_id' grp='$grp' showadvert='$showadvert'
           access='$access'>
 </ifnzero>
<else>
 &nbsp;
</if>
</element>
