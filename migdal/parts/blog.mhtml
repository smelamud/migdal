<< @(#) $Id$ >>

<element name='blog'>
 <iterate_posting_users topic_id='$topic_id'>
 <iterate_rows cols='$$userPictureColumnPortion'>
 <table cellspacing=10 cellpadding=0><tr valign=top>
 <for>
  <td>
   <posting_random grp='*GRP_GALLERY' topic_id='$topic_id'
                   user_id='$.Id'>
   <posting_obj id='$,' grp='*GRP_GALLERY' fields='*SELECT_IMAGES'>
   <picture_main href#='$href?user_id=$.Id' biff='$.LastMessage'
                 name='$.FullName' image_id='$,ImageId'>
  </td>
  <if what='$;isEol'>
   </tr><tr valign=top>
  </if>
 </for>
 </tr></table>
</element>
