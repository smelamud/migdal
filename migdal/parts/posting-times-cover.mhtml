<< @(#) $Id$ >>
<< Based-on: migdal/posting.mhtml 1.36 >>

<element name='topic' params='posting,showtopic'>
<if what='$showtopic'>
 <a href='times.php?issue=$posting.Index1' class='topic'
    title='$posting.TopicDescription'>$posting.TopicName</a>
 <br>
</if>
</element>

<element name='further' params='posting'>
<asp><a href='times.php?issue=$posting.Index1'><asp>
 <image src='pics/further.gif' border=0 title='Читать журнал'>
<asp></a>&nbsp;
</element>

<element name='controls' params='posting,showdiscuss,times'>
<table width=90% class='bottom'><tr>
 <td>
  <isedit what='$posting'>
   <a href="postingedit.php?editid=$posting.Id&root=$times.Id&topic_id=$times.Id&grp=$posting.Grp&redirid=$_"
    >Изменить</a>
   <if what='$posting.isModerable'>
    &nbsp;
    <if what='$posting.isDisabled'>
     <a href="actions/moderate.php?editid=$posting.MessageId&hide=0&okdir=$#-&faildir=$#-"
      >Разрешить показ</a>
    <else>
     <a href="actions/moderate.php?editid=$posting.MessageId&hide=1&okdir=$#-&faildir=$#-"
      >Запретить показ</a>
    </if>
    &nbsp;
    <a href="actions/messagerenew.php?id=$posting.MessageId&okdir=$#-&faildir=$#-"
     >Осовременить</a>
   </if>
  </isedit>
 </td>
 <if what='$showdiscuss'>
  <td align=right><discusslink posting='$posting'></td>
 </if>
</tr></table>
</element>

<element name='posting_times_cover'>
<ifzero what='$times'>
 <topic_obj name='times' id='migdal-times'>
</ifzero>
<dl class='posting'>
 <dt class='subject'>
  <topic posting='$posting' showtopic='$showtopic'>
  <biff time='$posting.Sent'>
  <vote_frame align=right id='$posting.Id' color='$$style_cframe_back'
              image='$$style_cframe_back_pic'>
  &lt;&lt;Мигдаль Times&gt;&gt; No.$posting.Index1
 </dt>
 <dd><p>
 <ifnzero what='$posting.ImageSet'>
  <table align=left class='pic'>
   <tr><td>
    <image_linked_tag id='$posting.ImageId' enlarge='$posting.hasLargeImage'>
   </td></tr>
   <ifne what='$posting.Title'>
    <tr><td>$posting.HTMLTitle</td></tr>
   </ifne>
  </table>
 </ifnzero>
 $posting.HTMLBody&nbsp;<asp>
 <further posting='$posting'>
 </p>
 <div class='sent' style="clear: left">
   <sentview date='$posting.Sent'>&nbsp;
   <senderlink message='$posting'>
 </div>
 <controls posting='$posting' showdiscuss='$showdiscuss' times='$times'>
</dl>
</element>
