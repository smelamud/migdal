<< Based-on: migdal/posting.mhtml 1.36 >>

<element name='topic' params='posting,showtopic'>
<if what='$showtopic'>
 <topiclink posting='$posting'>
 <br>
</if>
</element>

<element name='further' params='posting'>
<asp><a href='times.php?issue=$posting.Index1'><asp>
 <image src='pics/further.gif' border=0 title='Читать журнал'>
<asp></a>&nbsp;
</element>

<element name='controls' params='posting,showdiscuss'>
<table width=90% class='bottom'><tr>
 <td>
  <isedit what='$posting'>
   <editlink posting='$posting'>
  </isedit>
 </td>
 <if what='$showdiscuss'>
  <td align=right><discusslink posting='$posting'></td>
 </if>
</tr></table>
</element>

<element name='posting_times_cover'>
<dl class='posting'>
 <dt class='subject'>
  <topic posting='$posting' showtopic='$showtopic'>
  <biff time='$posting.Sent'>
  <vote_frame align=right id='$posting.Id' color='$$style_cframe_back'
              image='$$style_cframe_back_pic'>
  <a href='times.php?issue=$posting.Index1'>
   &lt;&lt;Мигдаль Times&gt;&gt; No.$posting.Index1</a>
 </dt>
 <dd><p>
 <ifnzero what='$posting.ImageSet'>
  <table align=left class='pic'>
   <tr><td>
    <image_linked_tag id='$posting.ImageId' enlarge='$posting.hasLargeImage'>
   </td></tr>
   <ifne what='$posting.Title'>
    <tr><td>$posting.HTMLTitle</td></tr>
   </ifne>
  </table>
 </ifnzero>
 $posting.HTMLBody&nbsp;<asp>
 <further posting='$posting'>
 </p>
 <div class='sent' style="clear: left">
   <sentview date='$posting.Sent'>&nbsp;
   <senderlink message='$posting'>
 </div>
 <controls posting='$posting' showdiscuss='$showdiscuss'>
</dl>
</element>
