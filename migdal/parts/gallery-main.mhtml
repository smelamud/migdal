<< @(#) $Id$ >>

<element name='gallery_main'>
<grpdata>
<grpitemtitle>
<grpitemstitle>
<iterate_topiclist grp='$grp' withpostings='*true' cols='$cols'>
<div class='batcher'>
 <logged>
  <if what='$g.Valid'>
   <a href='postingedit.php?topic_id=-1&grp=$grp&redirid=$_'
      class='add'>Добавить $grpitemtitle</a>
  <else>
   <a href='postingedit.php?topic_id=-1&grp=*GRP_NEWS&redirid=$_'
      class='add'>Добавить новость</a>,
   <a href='postingedit.php?topic_id=-1&grp=*GRP_FORUMS&redirid=$_'
      class='add'>мнение</a>,
   <a href='postingedit.php?topic_id=-1&grp=*GRP_ARTICLES&redirid=$_'
      class='add'>статью</a>
  </if>
 <else>
  <span class='advert'>
   <if what='$g.Valid'>
    Хотите добавлять $grpitemstitle?
   <else>
    Хотите добавлять новости и статьи?
   </if>
  <a href='/register.php?redirid=$_'>Зарегистрируйтесь!</a>
  </span>
 </logged>
</div>
<table width=100%>
 <error id='*EMH_NO_MESSAGE' text='Такого сообщения не существует'>
 <error id='*EMH_NO_MODERATE' text='Вы не модератор'>
 <tr valign=top>
  <for>
   <td>
    <posting_random grp='$grp' topic_id='$.Id'>
    <posting_full id='$,' grp='$grp'>
    <picture_main picture='$,' grp='$grp' topic='$.'>
   </td>
   <if what='$;isEol'>
    </tr><tr valign=top>
   </if>
  </for>
 </tr>
</table>
</element>
