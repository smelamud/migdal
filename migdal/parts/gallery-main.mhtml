<< @(#) $Id$ >>

<element name='batcher'>
<div>
 <logged>
  <table class='info'><tr valign=center>
   <td><image src='pics/sheet.gif'></td>
   <td>
    <a href='postingedit.php?topic_id=-1&root=$`general`&grp=*GRP_GALLERY&redirid=$_'
       >Добавить картинку</a>
   </td>
  </tr></table>
 <else>
  <em>Хотите добавлять картинки?</em>
  <a href='/register.php?redirid=$_'>Зарегистрируйтесь!</a>
 </logged>
</div>
</element>

<element name='gallery_main'>
<iterate_topiclist up='$`general`' grp='*GRP_GALLERY' withpostings='*true'
                   subdomain='$subdomain'>
<iterate_rows cols='$cols'>
<batcher>
<table cellspacing=10 cellpadding=0>
 <tr valign=top>
  <for>
   <td>
    <posting_random grp='*GRP_GALLERY' topic_id='$.Id'>
    <posting_full id='$,' grp='*GRP_GALLERY'>
    <picture_main href#='gallery.php?topic_id=$,TopicId'
                  biff='$.LastMessage' name='$,TopicName'
		  text='$,TopicDescription' image_id='$,ImageId'>
   </td>
   <if what='$;isEol'>
    </tr><tr valign=top>
   </if>
  </for>
 </tr>
</table>
</element>
