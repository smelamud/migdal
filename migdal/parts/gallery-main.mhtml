<< @(#) $Id$ >>

<element name='gallery_main'>
<iterate_topiclist up='general' grp='*GRP_GALLERY' withpostings='*true'
                   cols='$cols'>
<div class='batcher'>
 <logged>
  <a href='postingedit.php?topic_id=-1&up=general&grp=*GRP_GALLERY&redirid=$_'
     class='add'>Добавить картинку</a>
 <else>
  <span class='advert'>
   Хотите добавлять картинки?
   <a href='/register.php?redirid=$_'>Зарегистрируйтесь!</a>
  </span>
 </logged>
</div>
<table width=100%>
 <error id='*EMH_NO_MESSAGE' text='Такого сообщения не существует'>
 <error id='*EMH_NO_MODERATE' text='Вы не модератор'>
 <tr valign=top>
  <for>
   <td>
    <posting_random grp='*GRP_GALLERY' topic_id='$.Id'>
    <posting_full id='$,' grp='*GRP_GALLERY'>
    <picture_main picture='$,' grp='*GRP_GALLERY' topic='$.'>
   </td>
   <if what='$;isEol'>
    </tr><tr valign=top>
   </if>
  </for>
 </tr>
</table>
</element>
