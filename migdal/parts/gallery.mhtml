<element name='gallery'>
<?php $limit=$rows*$cols; ?>
<iterate_postinglist name='list' grp='*GRP_GALLERY' topic='$topic'
                     offset='$offset' limit='$limit' sort='*SORT_RATING'
		     subdomain='$subdomain'>
<iterate_rows cols='$cols'>
<if what='$$userId>0 || $list.Count!=0'>
 <batcher list='$list' topic='$topic' grp='*GRP_GALLERY'>
 <table cellspacing=10 cellpadding=0>
  <error id='*EMH_NO_MESSAGE' text='Такого сообщения не существует'
         span='$cols'>
  <error id='*EMH_NO_MODERATE' text='Вы не модератор' span='$cols'>
  <tr valign=top>
   <for>
    <td>
     <gallery_picture picture='$.' showtopic!='$topic<0'
                      showdiscuss='$$communityDomain'
                      showcomplain='$$communityDomain'>
    </td>
    <if what='$;isEol'>
     </tr><tr valign=top>
    </if>
   </for>
  </tr>
 </table>
 <ifnzero what='$list.Count'>
  <batcher list='$list' topic='$topic' grp='*GRP_GALLERY'>
 </ifnzero>
<else>
 &nbsp;
</if>
</element>
