<< @(#) $Id$ >>

<element name='batcher' params='&list,topic_id,access,noedit'>
<table width=100%>
 <tr valign=bottom>
  <if what='!$noedit'>
   <td align=left class='info'>
    <table><tr valign=center>
     <td><image src='/pics/sheet.gif'></td>
     <td>
      <a href='postingedit.php?topic_id=$topic_id&grp=*GRP_GALLERY&noguests=$access&redirid=$_'
	 >Добавить картинку</a>
     </td>
    </tr></table>
   </td>
  </if>
  <td align=center><spin list='$list'></td>
  <td align=right class='eightpt'>
   <b>Сортировать</b>
   <navi_sort title='по дате' value='*SORT_PSENT'>|
   <navi_sort title='по рейтингу' value='*SORT_RATING'>
  </td>
 </tr>
</table>
</element>

<element name='gallery'>
<if what='$topic_id>0'>
 <perms table='topics' id='$topic_id'>
 <assign name='access' value='$,isPostable'>
 <entry_grps id='$topic_id'>
 <assign name='noedit' value!='!in_array(*GRP_GALLERY,$,)'>
<else>
 <assign name='access' value!='$$userId>0'>
 <assign name='noedit' value='*false'>
</if>
<assign name='limit' value!='$rows * $cols'>
<iterate_postinglist name='list' grp='*GRP_GRAPHICS' topic_id='$topic_id'
                     offset='$offset' limit='$limit' sort='$sort'
		     subdomain='$subdomain' user='$user_id'>
<iterate_rows cols='$cols'>
<batcher list='$list' topic_id='$topic_id' access='$access' noedit='$noedit'>
<if what='$access || $list.Count!=0'>
 <table cellspacing=10 cellpadding=0>
  <tr valign=top>
   <for>
    <td>
     <picture picture='$.' showtopic!='$topic_id<0' showdiscuss='*true'
              showcomplain='*true'>
    </td>
    <if what='$;isEol'>
     </tr><tr valign=top>
    </if>
   </for>
  </tr>
 </table>
 <ifnzero what='$list.Count'>
  <batcher list='$list' topic_id='$topic_id' access='$access' noedit='$noedit'>
 </ifnzero>
</if>
</element>
