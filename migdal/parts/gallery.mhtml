<< @(#) $Id$ >>

<element name='batcher' params='list,topic'>
<community>
 <table width=100% class='batcher'><tr valign=bottom>
  <td align=left>
   <logged>
    <a href='postingedit.php?topic_id=$topic&root=general&grp=*GRP_GALLERY&redirid=$_'
       class='add'>Добавить картинку</a>
   <else>
    <span class='info'>
     <b>Хотите добавлять картинки?</b>
     <a href='/register.php?redirid=$_'>Зарегистрируйтесь!</a>
    </span>
   </logged>
  </td>
  <td><spin list='$list'></td>
 </tr></table>
</community>
</element>

<element name='gallery'>
<iterate_picturelist grp='*GRP_GALLERY' topic='$topic' rows='$rows'
                     cols='$cols' offset='$offset' sort='*SORT_RATING'
		     subdomain='$subdomain'>
<if what='$$userId>0 || $;Count!=0'>
 <batcher list='$;' topic='$topic' grp='*GRP_GALLERY'>
 <table width=100%>
  <error id='*EMH_NO_MESSAGE' text='Такого сообщения не существует'>
  <error id='*EMH_NO_MODERATE' text='Вы не модератор'>
  <tr valign=top>
   <for>
    <td>
     <gallery_picture picture='$.' showtopic!='$topic<0'
                      showdiscuss='$$communityDomain'
                      showcomplain='$$communityDomain'>
    </td>
    <if what='$;isEol'>
     </tr><tr valign=top>
    </if>
   </for>
  </tr>
 </table>
 <ifnzero what='$;Count'>
  <batcher list='$;' topic='$topic' grp='*GRP_GALLERY'>
 </ifnzero>
<else>
 &nbsp;
</if>
</element>
