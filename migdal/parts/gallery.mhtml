<element name='gallery'>
<?php $limit=$rows*$cols; ?>
<iterate_postinglist name='list' grp='*GRP_GALLERY' topic='$topic'
                     offset='$offset' limit='$limit' sort='*SORT_RATING'
		     subdomain='$subdomain'>
<iterate_rows cols='$cols'>
<batcher list='$list' topic='$topic' grp='*GRP_GALLERY'>
<if what='$$userId>0 || $list.Count!=0'>
 <table cellspacing=10 cellpadding=0>
  <tr valign=top>
   <for>
    <td>
     <gallery_picture picture='$.' showtopic!='$topic<0' showdiscuss='*true'
                      showcomplain='*true'>
    </td>
    <if what='$;isEol'>
     </tr><tr valign=top>
    </if>
   </for>
  </tr>
 </table>
 <ifnzero what='$list.Count'>
  <batcher list='$list' topic='$topic' grp='*GRP_GALLERY'>
 </ifnzero>
</if>
</element>
