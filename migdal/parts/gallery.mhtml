<element name='batcher_gallery' params='list,topic'>
<table width=100% class='batcher'><tr valign=bottom>
 <td align=left>
  <logged>
   <a href='postingedit.php?topic_id=$topic&up=general&grp=*GRP_GALLERY&redirid=$_'
      class='add'>Добавить картинку</a>
  <else>
   <span class='advert'>
    Хотите добавлять картинки?
    <a href='/register.php?redirid=$_'>Зарегистрируйтесь!</a>
   </span>
  </logged>
 </td>
 <td><spin list='$list'></td>
</tr></table>
</element>

<element name='gallery'>
<iterate_picturelist grp='*GRP_GALLERY' topic='$topic' rows='$rows'
                     cols='$cols' offset='$offset' sort='*SORT_PSENT'>
<if what='$$userId>0 || $;Count!=0'>
 <batcher_gallery list='$;' topic='$topic' grp='*GRP_GALLERY'>
 <table width=100%>
  <error id='*EMH_NO_MESSAGE' text='Такого сообщения не существует'>
  <error id='*EMH_NO_MODERATE' text='Вы не модератор'>
  <tr valign=top>
   <for>
    <if what='$topic<0'>
     <assign name='showtopic' value='*true'>
    <else>
     <assign name='showtopic' value='*false'>
    </if>
    <td><picture picture='$.' grp='*GRP_GALLERY' showtopic='$showtopic'></td>
    <if what='$;isEol'>
     </tr><tr valign=top>
    </if>
   </for>
  </tr>
 </table>
 <ifnzero what='$;Count'>
  <batcher_gallery list='$;' topic='$topic' grp='*GRP_GALLERY'>
 </ifnzero>
<else>
 &nbsp;
</if>
</element>
