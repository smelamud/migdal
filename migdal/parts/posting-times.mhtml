<< @(#) $Id$ >>

<element name='topic' params='posting,showtopic'>
<if what='$showtopic'>
 <a href='times.php?issue=$posting.Index1' class='topic'
    title='$posting.TopicDescription'>$posting.TopicName</a>
 <br>
</if>
</element>

<element name='further' params='posting,title'>
 <asp><a href='$posting.DetailsFile?redirid=$_&$posting.DetailsId=$posting.Id'><asp>
  <image src='pics/further.gif' border=0 title='$title'>
 <asp></a>&nbsp;<asp>
</element>

<element name='controls' params='posting,showdiscuss'>
<table width=90% class='bottom'><tr>
 <td>
  <isedit what='$posting'>
   <editlink posting='$posting'>
  </isedit>
 </td>
 <if what='$showdiscuss'>
  <td align=right><discusslink posting='$posting'></td>
 </if>
</tr></table>
</element>

<element name='posting_times'>
<dl class='posting'>
 <dt class='subject'>
  <topic posting='$posting' showtopic='$showtopic'>
  <vote_frame align=right id='$posting.Id' color='$$style_cframe_back'
              image='$$style_cframe_back_pic'>
  <a href='$posting.DetailsFile?redirid=$_&$posting.DetailsId=$posting.Id'>
     $posting.Subject</a>
  <ifne what='$posting.Author'>
   <br><span class='author'>$posting.Author</span>
  </ifne>
 </dt>
 <dd>
 <ifnzero what='$posting.ImageSet'>
  <table align=left class='pic'>
   <tr><td>
    <image_linked_tag id='$posting.ImageId' enlarge='$posting.hasLargeImage'>
   </td></tr>
   <ifne what='$posting.Title'>
    <tr><td>$posting.HTMLTitle</td></tr>
   </ifne>
  </table>
 </ifnzero>
 $posting.HTMLBody&nbsp;<asp>
 <further posting='$posting' title='Читать статью'>
 <controls posting='$posting' showdiscuss='$showdiscuss'>
</dl>
</element>
