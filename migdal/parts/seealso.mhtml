<< @(#) $Id$ >>

<grps>

<element name='fullname' params='topic_id'>
<iterate_topic_hierarchy topic_id='$topic_id' root='$`links`'>
<for>
 <if what='!$;isFirst'>&sp;/&sp;</if>
 $.Name
</for>
</element>

<element name='seealso_links'>
<if what='$topic_id>0'>
 <outer><table class='topics ninept' style='margin: 0'>
  <inner>
   <iterate_topic_cross cross='$topic_id' topic_grp='$topic_grp'
                        peer_grp='*GRP_LINKS'>
   <if what='$;Count!=0 || $$userAdminTopics'>
    <tr><td><b>$title:</b></td></tr>
   </if>
   <admin_topics>
    <tr><td>
     <a href='topiclinkadd.php?topic_id=$topic_id&topic_grp=$topic_grp&peer_grp=*GRP_LINKS&redirid=$_'
	class='edit'>Добавить</a>
    </td></tr>
   </admin_topics>
   <ifnzero what='$;Count'>
    <tr><td>
     <for>
      <if what='!$;isFirst'><br></if>
      <a href='links.php?topic_id=$.TopicId'><fullname topic_id=$.TopicId></a>
      <admin_topics>
       <asp>&nbsp;<asp>
       <a href='actions/topiclinkdel.php?topic_id=$topic_id&topic_grp=$topic_grp&peer_grp=*GRP_LINKS&peer_id=$.TopicId&okdir=$#-&faildir=$#-'
	  class='edit'><asp>
	<asp>Удалить</a>
      </admin_topics>
     </for>
    </td></tr>
   </ifnzero>
  </inner>
 </table></outer>
</if>
</element>

<element name='seealso_other'>
<if what='$topic_id>0'>
 <outer><table class='topics ninept' style='margin: 0'>
  <inner>
   <iterate_topic_cross cross='$topic_id' topic_grp='$topic_grp'
                        peer_grp='*GRP_NOT_LINKS'>
   <if what='$;Count!=0 || $$userAdminTopics'>
    <tr><td><b>$title:</b></td></tr>
   </if>
   <admin_topics>
    <tr><td>
     <a href='topiclinkadd.php?topic_id=$topic_id&topic_grp=$topic_grp&peer_grp=*GRP_NOT_LINKS&redirid=$_'
	class='edit'>Добавить</a>
    </td></tr>
   </admin_topics>
   <ifnzero what='$;Count'>
    <tr><td>
     <for name='link'>
      <if what='!$;isFirst'><br></if>
      <iterate_grps>
      <assign name='first' value='*true'>
      <for>
       <ifnzero what='$link.Grp & $.Grp'>
	<if what='!$first'><br></if>
	<assign name='first' value='*false'>
	<posting_new topic_id='$link.TopicId' topic_name='$link.TopicName'
		     grp='$.Grp'>
	<topiclink posting='$,'>
	<admin_topics>
	 <asp>&nbsp;<asp>
	 <a href='actions/topiclinkdel.php?topic_id=$topic_id&topic_grp=$topic_grp&peer_grp=$,Grp&peer_id=$,TopicId&okdir=$#-&faildir=$#-'
	    class='edit'><asp>
	  <asp>Удалить</a>
	</admin_topics>
       </ifnzero>
      </for>
     </for>
    </td></tr>
   </ifnzero>
  </inner>
 </table></outer>
</if>
</element>
