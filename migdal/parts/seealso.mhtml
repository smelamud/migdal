<< @(#) $Id$ >>

<link_types>

<element name='seealso'>
<notprint>
 <outer><table class='topics ninept' style='margin: 0'>
  <assign name='source_name' value='$$LocationInfo.LinkName'>
  <assign name='source_id' value='$$LocationInfo.LinkId'>
  <if what="$source_name!='' || $source_id>0">
   <iterate_entry_cross source_name='$source_name' source_id='$source_id'
			link_type='$link_type'>
   <tr><td><b>$title:</b></td></tr>
   <inner>
    <<admin_topics>
     <tr><td>
      <a href='topiclinkadd.php?topic_id=$topic_id&topic_grp=$topic_grp&peer_grp=*GRP_LINKS&redirid=$_'
	 class='edit'>Добавить</a>
     </td></tr>
    </admin_topics>>
    <outer><tr><td><ul><inner>
     <assign name='icon' value=''>
     <for>
      <if what="$icon!=$.PeerIcon && $icon!=''">
       <br>&nbsp;
      </if>
      <assign name='icon' value='$.PeerIcon'>
      <li class='seealso-$icon'><a href='$.PeerPath'>$=.PeerSubject</a>
      <<admin_topics>
       <asp>&nbsp;<asp>
       <a href='actions/topiclinkdel.php?topic_id=$topic_id&topic_grp=$topic_grp&peer_grp=*GRP_LINKS&peer_id=$.PeerId&okdir=$#-&faildir=$#-'
	  class='edit'><asp>
	<asp>Удалить</a>
      </admin_topics>>
     </for>
    </inner></ul></td></tr></outer>
   </inner>
  </if>
 </table></outer>
</notprint>
</element>

<element name='seealso_frame'>
<outer><div class='nframe' style='padding: 5'><inner>
 <seealso link_type='$link_type' title='$title'>
</inner></div></outer>
</element>
