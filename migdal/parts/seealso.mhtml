<< @(#) $Id$ >>

<grps>

<element name='fullname' params='topic_id'>
<iterate_topic_hierarchy topic_id='$topic_id' root='$`links`'>
<for>
 <if what='!$;isFirst'>&sp;/&sp;</if>
 $.Name
</for>
</element>

<element name='seealso_links'>
<notprint>
 <if what='$topic_id>0'>
  <outer><table class='topics ninept' style='margin: 0'>
   <iterate_topic_cross topic_id='$topic_id' topic_grp='$topic_grp'
			peer_grp='*GRP_LINKS'>
   <tr><td><b>$title:</b></td></tr>
   <inner>
    <admin_topics>
     <tr><td>
      <a href='topiclinkadd.php?topic_id=$topic_id&topic_grp=$topic_grp&peer_grp=*GRP_LINKS&redirid=$_'
	 class='edit'>Добавить</a>
     </td></tr>
    </admin_topics>
    <outer><tr><td><ul><inner>
     <for>
      <li><a href='links.php?topic_id=$.PeerId'><fullname topic_id=$.PeerId></a>
      <admin_topics>
       <asp>&nbsp;<asp>
       <a href='actions/topiclinkdel.php?topic_id=$topic_id&topic_grp=$topic_grp&peer_grp=*GRP_LINKS&peer_id=$.PeerId&okdir=$#-&faildir=$#-'
	  class='edit'><asp>
	<asp>Удалить</a>
      </admin_topics>
     </for>
    </inner></ul></td></tr></outer>
   </inner>
  </table></outer>
 </if>
</notprint>
</element>

<element name='seealso_other'>
<notprint>
 <if what='$topic_id>0'>
  <outer><table class='topics ninept' style='margin: 0'>
   <iterate_topic_cross topic_id='$topic_id' topic_grp='$topic_grp'
			peer_grp='*GRP_NOT_LINKS'>
   <tr><td><b>$title:</b></td></tr>
   <inner>
    <admin_topics>
     <tr><td>
      <a href='topiclinkadd.php?topic_id=$topic_id&topic_grp=$topic_grp&peer_grp=*GRP_NOT_LINKS&redirid=$_'
	 class='edit'>Добавить</a>
     </td></tr>
    </admin_topics>
    <outer><tr><td><ul><inner>
     <for>
      <if what='$.PeerId!=$`major` && $.PeerId!=$`major-gallery`'>
       <li><topiclink posting='$.PeerPosting'>
       <admin_topics>
	<asp>&nbsp;<asp>
	<a href='actions/topiclinkdel.php?topic_id=$topic_id&topic_grp=$topic_grp&peer_grp=$.PeerGrp&peer_id=$.PeerId&okdir=$#-&faildir=$#-'
	   class='edit'><asp>
	 <asp>Удалить</a>
       </admin_topics>
      </if>
     </for>
    </inner></ul></td></tr></outer>
   </inner>
  </table></outer>
 </if>
</notprint>
</element>
