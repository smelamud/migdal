<< @(#) $Id$ >>

<element name='form_table'>
<if what='$mini'>
 <assign name='width' value='50%'>
<else>
 <assign name='width' value='95%'>
</if>
<if what='$minititle'>
 <assign_global name='formStar' value='*false'>
 <assign_global name='formTitleWidth' value='10%'>
 <assign_global name='formValueWidth' value='90%'>
<else>
 <assign_global name='formStar' value='*true'>
 <assign_global name='formTitleWidth' value='25%'>
 <assign_global name='formValueWidth' value='75%'>
</if>
<center><table class='form' width='$width' cellspacing='0' cellpadding='1'>
 <ifne what='$title'>
  <tr><td class='form-title'>$title</td></tr>
 </ifne>
<tr><td><table class='form-layer' width='100%' cellspacing='1' cellpadding='5'>
</element>

<element name='/form_table'>
</table></td></tr></table></center>
</element>

<element name='star'>
<if what='$mandatory'>
 <asp><span class='form-star'>* </span><asp>
<else>
 <asp><span class='form-star' style='visibility: hidden'>* </span><asp>
</if>
</element>

<element name='starinfo'>
<tr valign='top'><td class='form-cell eightpt' colspan=2>
 Поля, отмеченные <star mandatory='*true'>, заполнять обязательно
</td></tr>
</element>

<element name='form_line'>
<tr valign='top'>
 <th class='form-cell' width='$$formTitleWidth'><asp>
  <if what='$$formStar'>
   <star mandatory='$mandatory'>
  </if>
  <asp>$title
  <ifne what='$comment'>
   <p class='form-comment'>$comment</p>
  </ifne>
 </th>
 <td class='form-cell ninept' width='$$formValueWidth'>
</element>

<element name='/form_line'>
 </td>
</tr>
</element>

<element name='form_comment'>
<tr><td class='form-cell' colspan=2>
</element>

<element name='/form_comment'>
</td></tr>
</element>

<element name='form_section'>
<tr valign='top'>
 <th class='form-section' colspan=2>&nbsp;&nbsp;$title</th>
</tr>
</element>

<element name='edit'>
<input type='text' name='$name' value='$value' size='$size'
       maxlength='$maxlength'>
</element>

<element name='form_edit'>
<form_line title='$title' mandatory='$mandatory' comment='$comment'>
 <edit name='$name' value='$value' size='$size' maxlength='$maxlength'>
 <ifnzero what='$xmlid'>
  <br><xml_text id='$xmlid' name='$name'>
 </ifnzero>
</form_line>
</element>

<element name='form_password'>
<form_line title='$title' mandatory='$mandatory' comment='$comment'>
 <input type='password' name='$name' size='$size' maxlength='$maxlength'>
</form_line>
</element>

<element name='form_editor'>
<form_line title='$title' mandatory='$mandatory' comment='$comment'>
 <textarea name='$name' rows='$rows' wrap='virtual'
           style='width: 100%'>$body</textarea>
 <ifnzero what='$xmlid'>
  <br><xml_text id='$xmlid' name='$name'>
 </ifnzero>
</form_line>
</element>

<element name='form_checkbox'>
<form_line title='$title' mandatory='$mandatory' comment='$comment'>
 <if what="$style=='select'">
  <select name='$name'>
   <select_option value='$value' selected='$checked' title='Да'>
   <select_option value='0' selected='!$checked' title='Нет'>
  </select>
 <elif what="$style=='radio'">
  <radio name='$name' value='$value' checked='$checked' title='Да'>
  &nbsp;
  <radio name='$name' value='0' checked='!$checked' title='Нет'>
 <elif what="$style=='box'">
  <checkbox_button name='$name' value='$value' checked='$checked'>
 <else>
  <checkbox_button name='$name' value='$value' checked='$checked'>
 </if>
</form_line>
</element>

<element name='form_buttons'>
<tr><td colspan='2' class='form-section' style='text-align: center'>
 <input type=submit value='$title'>&nbsp;&nbsp;
 <input type=reset value='Очистить'>
</td></tr>
</element>

<element name='form_select'>
<form_line title='$title' mandatory='$mandatory' comment='$comment'>
 <if what="$style=='list'">
  <if what='$multiple'>
   <select name='$name' size='$rows' multiple>
  <else>
   <select name='$name'>
  </if>
 <elif what="$style=='box'">
  <table border='0' cellspacing='0' cellpadding='3' width='100%'>
 </if>
 <assign_global name='FormSelectName' value='$name'>
 <assign_global name='FormSelectStyle' value='$style'>
 <assign_global name='FormSelectMultiple' value='$multiple'>
</element>

<element name='/form_select'>
 <if what="$$FormSelectStyle=='list'">
  </select>
 <elif what="$$FormSelectStyle=='box'">
  </table>
 </if>
</form_line>
</element>

<element name='form_option'>
<if what="$$FormSelectStyle=='list'">
 <if what='$selected'>
  <option value='$value' selected>$title
 <else>
  <option value='$value'>$title
 </if>
<elif what="$$FormSelectStyle=='box'">
 <assign name='type' value!='$$FormSelectMultiple ? "checkbox" : "radio"'>
 <tr>
  <td width='1'>
   <if what='$selected'>
    <input id='$name$value' type='$type' name='$$FormSelectName' value='$value'
           checked>
   <else>
    <input id='$name$value' type='$type' name='$$FormSelectName' value='$value'>
   </if>
  </td>
  <td><label for='$name$value'>$title</label></td>
 </tr>
</if>
</element>
