<< @(#) $Id$ >>
<< Based-on: demo/parts/forumanswer.mhtml 1.3 >>

<macro name='rebe'>
 <if what='$answer.isRebe'><font color=red></if>
</macro>

<macro name='/rebe'>
 <if what='$answer.isRebe'></font></if>
</macro>

<element name='Forum_Answer'>
<table width=100% class='forum'>
<tr>
 <td width=25% align=left valign=center class='header'><table cellpadding=0>
  <tr><td><rebe><senderlink message='$answer'></rebe></td></tr>
  <tr><td class='sent'><sentview date='$answer.Sent'></td></tr>
 </table></td>
 <td width=75% align=left valign=top class='body'>
  <rebe>$answer.HTMLBody</rebe>
 </td>
</tr>
<tr>
 <td class='controls'>&nbsp;
  <isedit name='answer'>
   <a href="forumansweredit.php?editid=$answer.Id&redir=$_"
    >Изменить</a>
   <moderator>
    &nbsp;
    <if what='$answer.isDisabled'>
     <a href="actions/moderate.php?editid=$answer.MessageId&hide=0&redir=$_"
      >Разрешить&nbsp;показ</a>
    <else>
     <a href="actions/moderate.php?editid=$answer.MessageId&hide=1&redir=$_"
      >Запретить&nbsp;показ</a>
    </if>
   </moderator>
  <else>
   <if what='$complain'>
    <logged>
     <a href="complainedit.php?ident=forum&link=$answer.Id&redir=$_"
      >Жалоба</a>
    </logged>
   </if>
  </isedit>
 </td>
 <td class='body'>&nbsp;</td>
</tr>
</table>
</element>
