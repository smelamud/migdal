<< @(#) $Id$ >>

<element name='forum_answer'>
<table width=100% class='forum' cellspacing=1 cellpadding=0>
 <tr valign=top>
  <td class='header' rowspan=2 width=150 align=left>
   <table cellpadding=0>
    <tr>
     <td><senderlink message='$answer'></td>
     <td rowspan=2><biff time='$answer.Sent'></td>
    </tr>
    <tr><td class='sent'>
     <sentview date='$answer.Sent'>
    </td></tr>
   </table>
   <<p align=center>
    <img src='...'>
   </p>
   <p>>
  </td>
  <td class='body ninept' align=left>
   $answer.HTMLBody
  </td>
 </tr>
 <tr valign=bottom>
  <td class='controls' height=22>&nbsp;
   <a href="forumansweredit.php?parent_id=$answer.ParentId&peerid=$answer.Id&redirid=$_"
      title='Ответить с цитированием'>Ответить</a>
   <isedit what='$answer'>
    &nbsp;
    <a href="forumansweredit.php?editid=$answer.Id&redirid=$_"
     >Изменить</a>
    <moderator>
     &nbsp;
     <if what='$answer.isDisabled'>
      <a href="actions/moderate.php?editid=$answer.MessageId&hide=0&okdir=$#-&faildir=$#-"
       >Разрешить&nbsp;показ</a>
     <else>
      <a href="actions/moderate.php?editid=$answer.MessageId&hide=1&okdir=$#-&faildir=$#-"
       >Запретить&nbsp;показ</a>
     </if>
    </moderator>
   </isedit>
  </td>
 </tr>
</table>
</element>
