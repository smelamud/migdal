<element name='Forum_Answer'>
<if what='$answer.isRebe'><span class='rebe'></if>
 <table width=100% class='forum'>
  <tr>
   <td class='header'><table cellpadding=0>
    <tr><td><senderlink message='$answer'></td></tr>
    <tr><td class='sent'><sentview date='$answer.Sent'></td></tr>
   </table></td>
   <td class='body'>
    $answer.HTMLBody
   </td>
  </tr>
  <tr>
   <td class='controls'>&nbsp;
    <isedit name='answer'>
     <a href="forumansweredit.php?editid=$answer.Id&redir=$_"
      >Изменить</a>
     <moderator>
      &nbsp;
      <if what='$answer.isDisabled'>
       <a href="actions/moderate.php?editid=$answer.MessageId&hide=0&redir=$_"
	>Разрешить&nbsp;показ</a>
      <else>
       <a href="actions/moderate.php?editid=$answer.MessageId&hide=1&redir=$_"
	>Запретить&nbsp;показ</a>
      </if>
     </moderator>
    </isedit>
   </td>
   <td class='body'>&nbsp;</td>
  </tr>
 </table>
<if what='$answer.isRebe'></span></if>
</element>
