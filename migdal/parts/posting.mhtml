<< @(#) $Id$ >>

<element name='posting_further' params='posting,title'>
 <asp><a href='$posting.DetailsFile?redirid=$_&$posting.DetailsId=$posting.Id'><asp>
  <image src='pics/further.gif' border=0 title='$title'>
 <asp></a>&nbsp;<asp>
</element>

<element name='posting_further_url' params='posting,url'>
 <asp><a href='actions/link.php?postid=$posting.Id&okdir=$#url' target=_blank><asp>
  <image src='pics/further-far.gif' border=0
         title='Подробности на другом сайте'>
 <asp></a>&nbsp;<asp>
</element>

<element name='posting_general'>
<if what='$posting.isRebe'><span class='rebe'></if>
 <dl class='posting'>
  <dt class='subject'>
   <biff time='$posting.Sent'>
   <if what='$showtopic'>
    <a href='index.php?topic_id=$posting.TopicId'
       class='topic' title='$posting.TopicDescription'>
     $posting.TopicName
    </a>
    <br>
   </if>
   $posting.Subject
   <ifne what='$posting.Author'>
    <br><span class='author'>$posting.Author</span>
   </ifne>
  </dt>
  <dd><p>
  <ifnzero what='$posting.ImageSet'>
   <table align=left class='pic'>
    <tr><td>
     <image_linked_tag id='$posting.ImageId' enlarge='$posting.hasLargeImage'>
    </td></tr>
    <ifne what='$posting.Title'>
     <tr><td>$posting.HTMLTitle</td></tr>
    </ifne>
   </table>
  </ifnzero>
  <if what='$shorten && !$posting.hasLargeBody'>
   $posting.HTMLBodyMedium&nbsp;<asp>
   <if what='!$posting.isBodyMedium'>
    <posting_further posting='$posting' title='Читать дальше'>
   </if>
  <else>
   $posting.HTMLBody&nbsp;<asp>
  </if>
  <if what='$posting.hasLargeBody'>
   <posting_further posting='$posting' title='Читать статью'>
  </if>
  <ifne what='$posting.URL'>
   <posting_further_url posting='$posting' url='$posting.URL'>
  </ifne>
  </p>
  <table width=90% style="clear: left"><tr>
   <td align=left class='sent'>
    <sentview date='$posting.Sent'>&nbsp;
    <senderlink message='$posting'>
   </td>
   <ifne what='$posting.Source'>
    <td class='source'>
     $posting.HTMLSource
    </td>
   </ifne>
  </tr></table>
  <if what='$$userId>0 || $showdiscuss || $posting.hasLargeBody'>
   <table width=90% class='bottom'><tr>
    <td>
     <if what='$posting.hasLargeBody'>
      <a href='article.php?redirid=$_&artid=$posting.Id'
	      class='read'>Читать</a>
      &nbsp;
     </if>
     <isedit what='$posting'>
      <a href="postingedit.php?editid=$posting.Id&up=general&grp=$posting.Grp&redirid=$_"
       >Изменить</a>
      <if what='$posting.isModerable'>
       &nbsp;
       <if what='$posting.isDisabled'>
	<a href="actions/moderate.php?editid=$posting.MessageId&hide=0&okdir=$#-&faildir=$#-"
	 >Разрешить показ</a>
       <else>
	<a href="actions/moderate.php?editid=$posting.MessageId&hide=1&okdir=$#-&faildir=$#-"
	 >Запретить показ</a>
       </if>
       &nbsp;
       <a href="actions/messagerenew.php?id=$posting.MessageId&okdir=$#-&faildir=$#-"
        >Осовременить</a>
      </if>
     <else>
      <if what='!$posting.isModerable && $showcomplain'>
       <logged>
	<a href="complainedit.php?ident=posting&link=$posting.Id&redirid=$_"
	 >Жалоба</a>
       </logged>
      </if>
     </isedit>
    </td>
    <if what='$showdiscuss'>
     <td align=right><discusslink posting='$posting'></td>
    </if>
   </tr></table>
  </if>
 </dl>
<if what='$posting.isRebe'></span></if>
</element>
