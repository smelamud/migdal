<< @(#) $Id$ >>
<< Based-on: demo/parts/posting.mhtml 1.8 >>

<grps>
<element name='Posting'>
<if what='$posting.isRebe'><span class='rebe'></if>
 <table width=100% class='posting'>
  <tr class='top'><td><table width=100%><tr>
   <td align=left class='sent'>
    <sentview date='$posting.Sent'>
    <biff time='$posting.Sent'>
   </td>
   <td align=right><senderlink message='$posting'></td>
  </tr></table></td></tr>
  <tr><td><table width=100%><tr>
   <td width=75% align=left>
    <span class='subject'>
    <if what='$posting.hasLargeBody'>
     <a href='article.php?redir=$_&artid=$posting.Id'
        title='Читать'>$posting.Subject</a>
    <else>
     $posting.Subject
    </if>
    </span>
    <ifne what='$posting.Author'>
     <br><span class='author'>$posting.Author</span>
    </ifne>
   </td>
   <td width=25% align=right>
    <grpitemtitlei grp='$posting.Grp'>
    <grpicon grp='$posting.Grp'>
    <img src='$grpicon' title='$grpitemtitlei'>&nbsp;
    <if what='$topic<0'>
     <a href='postings.php?redir=$_&grp=$grp&topic_id=$posting.TopicId'
	class='topic' title='$posting.TopicDescription'>
      $posting.TopicName
     </a>
    </if>
   </td>
  </tr></table></td></tr>
  <tr><td>
   <ifnzero what='$posting.ImageSet'>
    <table align=left>
     <tr><td>
      <image_linked_tag id='$posting.ImageId' enlarge='$posting.hasLargeImage'>
     </td></tr>
     <ifne what='$posting.Title'>
      <tr><td class='imagetitle'>$posting.HTMLTitle</td></tr>
     </ifne>
    </table>
   </ifnzero>
   $posting.HTMLBody&nbsp;<asp>
  </td></tr>
  <if what='$$userId>0 || $discuss || $posting.hasLargeBody'>
   <tr><td><table width=100% class='bottom'><tr>
    <td>
     <if what='$posting.hasLargeBody'>
      <a href='article.php?redir=$_&artid=$posting.Id'
	      class='read'>Читать</a>
      &nbsp;
     </if>
     <isedit what='$posting'>
      <a href="postingedit.php?editid=$posting.Id&grp=$posting.Grp&redir=$_"
       >Изменить</a>
      <if what='$posting.isModerable'>
       &nbsp;
       <if what='$posting.isDisabled'>
	<a href="actions/moderate.php?editid=$posting.MessageId&hide=0&okdir=$_&faildir=$_"
	 >Разрешить показ</a>
       <else>
	<a href="actions/moderate.php?editid=$posting.MessageId&hide=1&okdir=$_&faildir=$_"
	 >Запретить показ</a>
       </if>
      </if>
     <else>
      <if what='!$posting.isModerable && $complain'>
       <logged>
	<a href="complainedit.php?ident=posting&link=$posting.Id&redir=$_"
	 >Жалоба</a>
       </logged>
      </if>
     </isedit>
    </td>
    <td align=right>
     <logged>
      <if what='$discuss'>
       <biff time='$posting.LastAnswer'>
       <a href='forum.php?redir=$_&msgid=$posting.Id'>
	Обсудить
	<ifnzero what='$posting.AnswerCount'>
	 ($posting.AnswerCount)<asp>
	</ifnzero>
       <asp></a>
      </if>
     <else>
      <if what='$discuss'>
       <biff time='$posting.LastAnswer'>
       <a href='forum.php?redir=$_&msgid=$posting.Id'>
	Обсуждение
	<ifnzero what='$posting.AnswerCount'>
	 &nbsp;($posting.AnswerCount)<asp>
	</ifnzero>
       <asp></a>
      </if>
     </logged>
    </td>
   </tr></table></td></tr>
  </if>
 </table>
<if what='$posting.isRebe'></span></if>
</element>
