<< @(#) $Id$ >>

<element name='editlink'>
<a href="postingedit.php?editid=$posting.Id&topic_id=$posting.TopicId&grp=$posting.Grp&redirid=$_"
   >Изменить</a>
</element>

<element name='discusslink'>
<table cellspacing=0 cellpadding=0><tr>
 <td>
  <a href='forum.php?redirid=$_&msgid=$posting.Id'>
   <asp>Обсудить<asp>
   <ifnzero what='$posting.AnswerCount'>
    <asp>&nbsp;($posting.AnswerCount)<asp>
   </ifnzero>
  <asp></a>
 </td>
 <ifbiff time='$posting.LastAnswer'>
  <td>&nbsp;<image src='pics/discussion-new.gif'></td>
 <else>
  <td>&nbsp;<image src='pics/discussion.gif'></td>
 </ifbiff>
</tr></table>
</element>

<element name='posting'>
<require name='parts/posting-general.php'>
<require name='parts/gallery-picture.php'>
<require name='parts/blog-posting.php'>
<require name='parts/posting-book.php'>
<require name='parts/posting-times.php'>
<require name='parts/posting-times-cover.php'>
<require name='parts/blog-gallery-picture.php'>
<require name='parts/kaitana-picture.php'>
<require name='parts/tip-posting.php'>
<require name='parts/link-posting.php'>
<if what='$posting.TapeCenter'><center></if>
 <exec element='$posting.TapeElement' arg1='$posting' arg2='$showtopic'
       arg3='$showdiscuss' arg4='$showcomplain' arg5='$shorten'>
<if what='$posting.TapeCenter'></center></if>
</element>
