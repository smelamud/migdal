<< @(#) $Id$ >>

<grps>
<element name='posting_further' params='id'>
 <asp><a href='forum.php?redirid=$_&msgid=$id'><asp>
  <image src='pics/further.gif' border=0 title='Читать дальше'>
 <asp></a>&nbsp;<asp>
</element>

<element name='posting_further_article' params='id'>
 <asp><a href='article.php?redirid=$_&artid=$id'><asp>
  <image src='pics/further.gif' border=0 title='Читать статью'>
 <asp></a>&nbsp;<asp>
</element>

<element name='posting'>
<if what='$posting.isRebe'><span class='rebe'></if>
 <table width=100% class='posting'>
  <tr class='top'><td><table width=100%><tr>
   <td align=left class='sent'>
    <sentview date='$posting.Sent'>
    <biff time='$posting.Sent'>
   </td>
   <td align=right><senderlink message='$posting'></td>
  </tr></table></td></tr>
  <tr><td><table width=100%><tr>
   <td width=75% align=left>
    <span class='subject'>
    <if what='$posting.hasLargeBody'>
     <a href='article.php?redirid=$_&artid=$posting.Id'
        title='Читать'>$posting.Subject</a>
    <else>
     $posting.Subject
    </if>
    </span>
    <ifne what='$posting.Author'>
     <br><span class='author'>$posting.Author</span>
    </ifne>
   </td>
   <td width=25% align=right>
    <grpitemtitlei grp='$posting.Grp'>
    <grpicon grp='$posting.Grp'>
    <image src='$grpicon' title='$grpitemtitlei'>&nbsp;
    <if what='$topic<0'>
     <a href='index.php?grp=$grp&topic_id=$posting.TopicId'
	class='topic' title='$posting.TopicDescription'>
      $posting.TopicName
     </a>
    </if>
   </td>
  </tr></table></td></tr>
  <tr><td>
   <ifnzero what='$posting.ImageSet'>
    <table align=left>
     <tr><td>
      <image_linked_tag id='$posting.ImageId' enlarge='$posting.hasLargeImage'>
     </td></tr>
     <ifne what='$posting.Title'>
      <tr><td class='imagetitle'>$posting.HTMLTitle</td></tr>
     </ifne>
    </table>
   </ifnzero>
   <if what='$shorten'>
    $posting.HTMLBodyMedium&nbsp;<asp>
    <if what='!$posting.isBodyMedium'>
     <posting_further id='$posting.Id'>
    </if>
   <else>
    $posting.HTMLBody&nbsp;<asp>
   </if>
   <if what='$posting.hasLargeBody'>
    <posting_further_article id='$posting.Id'>
   </if>
  </td></tr>
  <ifne what='$posting.Source'>
   <tr><td class='source'>
    $posting.HTMLSource
   </td></tr>
  </ifne>
  <if what='$$userId>0 || $discuss || $posting.hasLargeBody'>
   <tr><td><table width=100% class='bottom'><tr>
    <td>
     <if what='$posting.hasLargeBody'>
      <a href='article.php?redirid=$_&artid=$posting.Id'
	      class='read'>Читать</a>
      &nbsp;
     </if>
     <isedit what='$posting'>
      <a href="postingedit.php?editid=$posting.Id&grp=$posting.Grp&redirid=$_"
       >Изменить</a>
      <if what='$posting.isModerable'>
       &nbsp;
       <if what='$posting.isDisabled'>
	<a href="actions/moderate.php?editid=$posting.MessageId&hide=0&okdir=$#-&faildir=$#-"
	 >Разрешить показ</a>
       <else>
	<a href="actions/moderate.php?editid=$posting.MessageId&hide=1&okdir=$#-&faildir=$#-"
	 >Запретить показ</a>
       </if>
      </if>
     <else>
      <if what='!$posting.isModerable && $complain'>
       <logged>
	<a href="complainedit.php?ident=posting&link=$posting.Id&redirid=$_"
	 >Жалоба</a>
       </logged>
      </if>
     </isedit>
    </td>
    <if what='$discuss'>
     <td align=right><discusslink posting='$posting'></td>
    </if>
   </tr></table></td></tr>
  </if>
 </table>
<if what='$posting.isRebe'></span></if>
</element>
