<< @(#) $Id$ >>

<element name='book_chapters'>
<grps>
<topics_table title='Оглавление'>
 <isedit what='$book'>
  <tr><td colspan=2>
   <a href='postingedit.php?redirid=$_&topic_id=$book.TopicId&grp=*GRP_BOOK_CHAPTERS&up=$book.MessageId'
      class='edit'>Добавить</a>
  </td></tr>
  <tr><td colspan=2>
   <a href='reorder.php?redirid=$_&issue=-1&topic_id=-1&grp=*GRP_BOOK_CHAPTERS&up=$book.MessageId'
      class='edit'>Расставить</a>
  </td></tr>
 </isedit>
 <topics_line time='$book.Sent' text='О книге' href#='book.php?bookid=$book.Id'
              arrow!='$id<=0' class='item ninept'>
 <iterate_postinglist grp='*GRP_BOOK_CHAPTERS' limit=0 sort='*SORT_INDEX0'
                      up='$book.MessageId' fields='*SELECT_GENERAL'>
 <for>
  <topics_line time='$.Sent' text='$.Subject'
               href#='book-chapter.php?chapid=$.Id' arrow!='$.Id==$id'
	       class='item ninept'>
 </for>
 <topics_splitter>
 <iterate_packages posting_id='$book.Id'>
 <for>
  <if what='$.Type==*PT_BOOK_ONEFILE'>
   <assign name='title' value='Вся книга одним файлом в архиве'>
  <else>
   <assign name='title' value='Вся книга по главам в архиве'>
  </if>
  <topics_line text='$title' class='item ninept' nobullet='*true'
               href='$.Href' count#='${.SizeKB}KB' indent='-1' span=2>
 </for>
</topics_table>
</element>
