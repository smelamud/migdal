<element name='taglit_picture'>
<if what='$picture.isRebe'><span class='rebe'></if>
 <table class='picture'>
  <tr><td class='top topic'>
   <biff time='$user.LastMessage'>
   <a href='taglit-user.php?user_id=$user.Id' class='name'>
    $user.FullName</a>
  </td></tr>
  <ifnzero what='$picture.ImageSet'>
   <tr><td class='image'>
    <a href='taglit-user.php?user_id=$user.Id'>
     <image_tag_put id='$picture.ImageId'>
    </a>
   </td></tr>
  </ifnzero>
 </table>
<if what='$picture.isRebe'></span></if>
</element>
