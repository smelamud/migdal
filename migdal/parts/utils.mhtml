<< @(#) $Id$ >>

<element name='at' params='target,class,href' defaults="target='' class=''">
<ifne what='$target'>
 <ifne what='$class'>
  <a href='$href' target='$target' class='$class'>
 <else>
  <a href='$href' target='$target'>
 </ifne>
<else>
 <ifne what='$class'>
  <a href='$href' class='$class'>
 <else>
  <a href='$href'>
 </ifne>
</ifne>
</element>

<element name='perror'>
<if what='$$err==$id'>
 <tr><tdspan span=$span>
  <a name='error'></a>
  <span class='error' color='$color'>$text</span>
 </tdspan></tr>
</if>
</element>

<element name='senderlink'>
<if what='$message.isSenderVisible'>
 <a href='userinfo.php?id=$message.SenderId&redirid=$_'
    onClick="UserInfo($message.SenderId);return false"
    title='подробнее' class='name'>$message.Login</a><asp>
<else>
 $message.Login<asp>
</if>
<ifne what='$message.ReplyLink'>
 <asp>&nbsp;$message.ReplyLink<image src='$$style_mail_image' border=0></a>
</ife>
</element>

<element name='discusslink'>
<logged>
 <biff time='$posting.LastAnswer'>
 <a href='forum.php?redirid=$_&msgid=$posting.Id'>
  Обсудить<asp>
  <ifnzero what='$posting.AnswerCount'>
   &nbsp;($posting.AnswerCount)<asp>
  </ifnzero>
 <asp></a>
<else>
 <biff time='$posting.LastAnswer'>
 <a href='forum.php?redirid=$_&msgid=$posting.Id'>
  Обсуждение<asp>
  <ifnzero what='$posting.AnswerCount'>
   &nbsp;($posting.AnswerCount)<asp>
  </ifnzero>
 <asp></a>
</logged>
</element>

<element name='lastonline_cell'>
<if what='$user.isOnline'>
 <td align=center>
  <ifnzero what='$user.LastMinutes'>
   <zone>
    <array vals='минуту,минуты,минут'>
    <plural value='$user.LastMinutes'>
    $user.lastMinutes&nbsp;$, назад
   </zone>
  <else>
   Сейчас
  </if>
  <zone>
   <time>
   <biff time='$,'>
  </zone>
 </td>
<else>
 <if what='$user.isTooOld'>
  <td align=center>Очень давно</td>
 <else>
  <td>
   <sentview date='$user.LastOnline'>
   <biff time='$user.LastOnline'>
  </td>
 </if>
</if>
</element>
