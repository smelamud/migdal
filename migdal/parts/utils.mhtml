<element name='at' params='target,class,href' defaults="target='' class=''">
<if what="$target!=''">
 <if what="$class!=''">
  <a href='$href' target='$target' class='$class'>
 <else>
  <a href='$href' target='$target'>
 </if>
<else>
 <if what="$class!=''">
  <a href='$href' class='$class'>
 <else>
  <a href='$href'>
 </if>
</if>
</element>

<element name='perror'>
<if what='$$err==$id'>
 <tr><tdspan span=$span>
  <a name='error'></a>
  <span class='error' color='$color'>$text</span>
 </tdspan></tr>
</if>
</element>

<element name='SenderLink'>
<if what="$align=='right' || $$style_details_noleft">
 <span class='name'>$message.LoginLink</span>&nbsp;<asp>
 <if what='$message.isSenderVisible'>
  <asp><a href='userinfo.php?id=$message.SenderId&redir=$_'
          onClick="UserInfo($message.SenderId);return false"
	  title='подробнее'><img src='$$style_details_image' border=0></a>
 </if>
<else>
 <if what='$message.isSenderVisible'>
  <a href='userinfo.php?id=$message.SenderId&redir=$_'
     onClick="UserInfo($message.SenderId);return false"
     title='подробнее'><img src='$$style_details_image' border=0></a>&nbsp;<asp>
 </if>
 <asp><span class='name'>$message.LoginLink</span>
</if>
</element>

<element name='lastonline_cell'>
<if what='$user.isOnline'>
 <td align=center>
  <ifnzero what='$user.LastMinutes'>
   <zone>
    <array vals='минуту,минуты,минут'>
    <plural value='$user.LastMinutes'>
    $user.lastMinutes&nbsp;$, назад
   </zone>
  <else>
   Сейчас
  </if>
 </td>
<else>
 <if what='$user.isTooOld'>
  <td align=center>Очень давно</td>
 <else>
  <td><sentview date='$user.LastOnline'></td>
 </if>
</if>
</element>
