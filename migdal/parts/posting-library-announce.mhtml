<< @(#) $Id$ >>

<element name='posting_library_announce'>
<div class='posting'>
 <table width=100%>
  <if what='$showtopic'>
   <tr><td colspan=2 class='subject'><topiclink posting='$posting'></td></tr>
  </if>
  <tr valign=top>
   <ifnzero what='$posting.ImageSet'>
    <td class='pic' width=110>
     <image_linked_tag id='$posting.ImageId' enlarge='$posting.hasLargeImage'>
    </td>
   </ifnzero>
   <td>
    <vote_frame align=right id='$posting.Id' color='$$style_cframe_back'
		image='$$style_cframe_back_pic'>
    <biff time='$posting.Sent'>
    <span class='subject'>
     $posting.Author&sp;&lt;&lt;$posting.Source&gt;&gt;
    </span>
    <br>
    <i>$posting.Subject</i>
    <p>$posting.HTMLBody&nbsp;</p>
   </td>
  </tr>
 </table>
 <table width=100%><tr>
  <td align=left class='sent'>
   <sentview date='$posting.Sent'>&nbsp;
   <senderlink message='$posting'>
  </td>
 </tr></table>
 <posting_controls posting='$posting' showdiscuss='$showdiscuss'
	           showcomplain='$showcomplain' len='100%'>
</div>
</element>
