<?php $later=time()-31*24*60*60; ?>
<hit_parade grp='$grp' topic_id='$topic_id' title='Избранное<br>за месяц'
	    later='$later' showshadows='$showshadows'>
</element>

<element name='hit_parade_gallery_month'>
<?php $later=time()-31*24*60*60; ?>
<hit_parade_gallery grp='$grp' topic_id='$topic_id'
                    title='Избранное<br>за месяц' later='$later'
		    showshadows='$showshadows'>
</element>
