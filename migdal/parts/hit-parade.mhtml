<< @(#) $Id$ >>

<element name='hit_parade'>
<iterate_postinglist grp='$grp' topic_id='$topic_id' limit='$limit'
		     sort='$sort' recursive='*true' later='$later'
		     showshadows='$showshadows' fields='*SELECT_TOPICS'>
<ifnzero what='$;Count'>
 <topics_table class='eightpt' title='$title'>
  <for>
   <topics_line time='$.Sent' href#='$.DetailsFile?$.DetailsId=$.Id'
		text#='$.SubjectDesc' rating!='$.VoteCount!=0 ? $.Vote20 : -1'>
  </for>
 </topics_table>
</ifnzero>
</element>

<element name='hit_parade_gallery'>
<iterate_postinglist grp='$grp' topic_id='$topic_id' limit='$limit'
		     sort='$sort' recursive='*true' later='$later'
		     showshadows='$showshadows'
		     fields!='*SELECT_TOPICS|*SELECT_IMAGES'>
<ifnzero what='$;Count'>
 <topics_table class='eightpt' title='$title'>
  <for>
   <topics_splitter>
   <tr><td colspan=2 class='pic' align=center>
    <ifnzero what='$.ImageSet'>
     <a href='$.DetailsFile?$.DetailsId=$.Id'>
      <image_tag_put id='$.ImageId'></a>
    </ifnzero>
   </td></tr>
   <tr><td colspan=2 align=left>
    <rating value!='$.VoteCount!=0 ? $.Vote20 : -1'>
   </td></tr>
  </for>
 </topics_table>
</ifnzero>
</element>

