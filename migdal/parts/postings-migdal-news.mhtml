<< @(#) $Id$ >>

<grps>

<element name='batcher' params='&list,topic_id,access'>
<table width=100%><tr valign=bottom>
 <td align=left class='info'>
  <table><tr valign=center>
   <td><image src='/pics/sheet.gif'></td>
   <td>
    <a href='postingedit.php?topic_id=$topic_id&grp=*GRP_NEWS&noguests=$access&redirid=$_'
       >Добавить новость</a>,
    <a href='postingedit.php?topic_id=$topic_id&grp=*GRP_ARTICLES&noguests=$access&redirid=$_'
       >статью</a>,
    <a href='postingedit.php?topic_id=$topic_id&grp=*GRP_BOOKS&noguests=$access&redirid=$_'
       >книгу</a>
   </td>
  </tr></table>
 </td>
 <td align=center><spin list='$list'></td>
</tr></table>
</element>

<element name='postings_migdal_news'>
<perms id='$topic_id'>
<assign name='access' value='$,isPostable'>
<if what='$topic_id==$`migdal.news`'>
 <array name='topic_ids' val1='$topic_id' val2='$`events`'>
 <array name='recursive' val1='*true' val2='*true'>
<else>
 <array name='topic_ids' val1='$topic_id'>
 <array name='recursive' val1='*false'>
</if>
<iterate_postinglist topic_id='$topic_ids' recursive='$recursive'
                     grp='*GRP_TAPE' limit=10 offset='$offset'>
<batcher list='$;' topic_id='$topic_id' access='$access'>
<for>
 <posting posting='$.' showtopic!='$topic_id==$`migdal.news`'
          shorten='*true' showdiscuss='*true' showcomplain='*true'>
</for>
<ifnzero what='$;Count'>
 <batcher list='$;' topic_id='$topic_id' access='$access'>
</ifnzero>
</element>
