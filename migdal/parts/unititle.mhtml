<< @(#) $Id$ >>

<element name='unititle'>
<if what='$topic_id==-1'>
 <topictitle title=''>
 <ife what='$chapter'>
  <pagetitle>
 <else>
  <pagetitle title='$chapter'>
 </if>
<else>
 <topic_obj id='$topic_id'>
 <topictitle title='$,Name'>
 <ife what='$chapter'>
  <assign name='title' value#='$,Name'>
 <else>
  <assign name='title' value#='$chapter - $,Name'>
 </if>
 <pagetitle title='$title'>
</if>
</element>
