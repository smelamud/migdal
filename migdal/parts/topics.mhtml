<< @(#) $Id$ >>
<< Based-on: demo/parts/topics.mhtml 1.5 >>

<element name='topics'>
<iterate_topiclist grp='$g.Effective'>
<if what='$$userAdminTopics || $;Count!=0'>
 <table class='topics' width=100%>
  <col width='0*'>
  <if what="$title!=''">
   <tr><th colspan=2>$title</th></tr>
  </if>
  <admin_topics>
   <tr class='controls'><td colspan=2>
    <a href='topicedit.php?redir=$_'>Добавить</a>
    &nbsp;
    <a href="$[ignoregrp='$g.InvIgnore']">Показать
     <if what='$g.Ignore'>активные<else>все</if></a>
   </td></tr>
  </admin_topics>
  <tbody class='names'>
   <tr>
    <td>
     <if what='$topic_id==-1'>
      <img src='pics/arrow.gif' width=11 height=12>
     </if>
    </td>
    <td><a href='$[topic_id=-1]' class='new'>NEW!</a></td>
   </tr>
   <for>
    <tr>
     <td>
      <if what='$topic_id==$.Id'>
       <img src='pics/arrow.gif' width=11 height=12>
      </if>
     </td>
     <td>
      <a href='$[topic_id=$.Id]' title='$.Description'>
       $.Name&nbsp;($.MessageCount)</a>
     <admin_topics>
      <a href='topicedit.php?editid=$.Id&redir=$_' class='edit'>Изменить</a>
     </admin_topics>
     </td>
    </tr>
   </for>
  </tbody>
 </table>
</if>
</element>
