<< @(#) $Id$ >>

<macro name='arrow' defaults="ident=''">
 <td>
  <assign name='idn' value='%ident'>
  <if what='$topic_id==%id || $topic_id===$idn'>
   <ifbiff time='%time'>
    <image src='$$style_topics_ner_arrow' title='новое'>
   <else>
    <image src='$$style_topics_arrow'>
   </ifbiff>
  <else>
   <ifbiff time='%time'>
    <image src='pics/ner.gif' title='новое'>
   <else>
    &nbsp;
   </ifbiff>
  </if>
 </td>
</macro>

<element name='chapter' params='id,link,topic_id'
         defaults="topic_id='$topic_id'">
 <tr>
  <topic_obj id='$id'>
  <arrow id='$,Id' ident='$,Ident' time='$,LastMessage'>
  <td><a href='$link' title='$,Description' class='item large'>$,Name</a></td>
 </tr>
</element>

<element name='topics'>
<iterate_topiclist grp='$grp' withpostings='$withpostings'
                   withanswers='$withanswers' up='general'>
<if what='$$userAdminTopics || $;Count!=0'>
 <table class='ninept topics' width=100%>
  <col width=0*>
  <admin_topics>
   <tr><td colspan=2>
    <a href='topicedit.php?redirid=$_' class='edit'>Добавить</a>
    <a href='topicorg.php?redirid=$_' class='edit'>Организовать</a>
   </td></tr>
  </admin_topics>
  <tbody class='names'>
   <tr>
    <arrow id='-1'>
    <td><a href='$file?topic_id=-1' class='new'>Все темы</a></td>
   </tr>
   <chapter id='taglit' link='taglit.php'>
   <for>
    <tr>
     <arrow id='$.Id' time='$.LastMessage'>
     <td>
      <a href='$file?topic_id=$.Id' title='$.Description' class='item'>
	 $.Name&nbsp;<span class='answers'>($.MessageCount)</span></a>
      <admin_topics>
       <br>
       <a href='topicedit.php?editid=$.Id&redirid=$_' class='edit'>Изменить</a>
      </admin_topics>
     </td>
    </tr>
   </for>
  </tbody>
 </table>
</if>
</element>
