<< @(#) $Id$ >>

<macro name='arrow'>
 <td>
  <if what='$topic_id==%id'>
   <ifbiff time='%time'>
    <image src='$$style_topics_ner_arrow' title='новое'>
   <else>
    <image src='$$style_topics_arrow'>
   </ifbiff>
  <else>
   <ifbiff time='%time'>
    <image src='pics/ner.gif' title='новое'>
   <else>
    &nbsp;
   </ifbiff>
  </if>
 </td>
</macro>

<element name='topics'>
<topic_obj id='$topic_id'>
<iterate_topiclist grp='$grp' withpostings='$withpostings'
                   withanswers='$withanswers'>
<if what='$$userAdminTopics || $;Count!=0'>
 <table class='topics' width=100%>
  <col width=0*>
  <admin_topics>
   <tr class='controls'><td colspan=2>
    <a href='topicedit.php?redirid=$_'>Добавить</a>
   </td></tr>
  </admin_topics>
  <tbody class='names'>
   <tr>
    <arrow id='-1'>
    <td><a href='$file?grp=$grp&topic_id=-1' class='new'>Все темы</a></td>
   </tr>
   <for>
    <tr>
     <arrow id='$.Id' time='$.LastMessage'>
     <td>
      <a href='$file?grp=$grp&topic_id=$.Id' title='$.Description'>
	 $.Name&nbsp;<span class='answers'>($.MessageCount)</span></a>
      <admin_topics>
       <br>
       <a href='topicedit.php?editid=$.Id&redirid=$_' class='edit'>Изменить</a>
      </admin_topics>
     </td>
    </tr>
   </for>
  </tbody>
 </table>
</if>
</element>
