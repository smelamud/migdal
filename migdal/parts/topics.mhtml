<< Based-on: demo/parts/topics.mhtml 1.5 >>

<macro name='grayed'>
 <if what='$g.Effective==*GRP_%^group'>
  <img src='pics/%file.gif' title='%title'>
 <else>
  <if what='*GRP_%^group==*GRP_GALLERY'>
   <assign name='fname' value='gallery.php'>
  <else>
   <assign name='fname' value='index.php'>
  </if>
  <a href='$fname?grp=*GRP_%^group&topic_id=$topic_id'>
   <img border=0 src='pics/%{file}-gray.gif' title='%title'></a>
 </if>
</macro>

<macro name='arrow'>
 <td>
  <if what='$topic_id==%id'>
   <ifbiff time='%time'>
    <img src='$$style_topics_ner_arrow' width=12 height=17 title='новое'>
   <else>
    <img src='$$style_topics_arrow' width=11 height=12>
   </ifbiff>
  <else>
   <ifbiff time='%time'>
    <img src='pics/ner.gif' title='новое'>
   <else>
    &nbsp;
   </ifbiff>
  </if>
 </td>
</macro>

<element name='topics'>
<iterate_topiclist grp='$g.Effective' withpostings='$withpostings'
                   withanswers='$withanswers'>
<if what='$navi'>
 <grayed group='tape' file='all' title='Все'>
 <grayed group='news' file='new' title='Новости'>
 <grayed group='forums' file='opinion' title='Мнения'>
 <grayed group='articles' file='article' title='Статьи'>
 <grayed group='gallery' file='gall' title='Галерея'>
</if>
<if what='$$userAdminTopics || $;Count!=0'>
 <table class='topics' width=100%>
  <col width=15>
  <admin_topics>
   <tr class='controls'><td colspan=2>
    <a href='topicedit.php?redir=$_'>Добавить</a>
   </td></tr>
  </admin_topics>
  <if what='$g.Grp==*GRP_GALLERY'>
   <assign name='fname' value='gallery.php'>
  <else>
   <assign name='fname' value='index.php'>
  </if>
  <tbody class='names'>
   <tr>
    <arrow id='-1'>
    <td><a href='$fname?grp=$g.Grp&topic_id=-1' class='new'>NEW!</a></td>
   </tr>
   <for>
    <tr>
     <arrow id='$.Id' time='$.LastMessage'>
     <td>
      <a href='$fname?grp=$g.Grp&topic_id=$.Id' title='$.Description'>
	 $.Name&nbsp;<span class='answers'>($.MessageCount)</span></a>
      <admin_topics>
       <br>
       <a href='topicedit.php?editid=$.Id&redir=$_' class='edit'>Изменить</a>
      </admin_topics>
     </td>
    </tr>
   </for>
  </tbody>
 </table>
</if>
</element>
