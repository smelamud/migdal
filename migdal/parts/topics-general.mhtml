<element name='topics'>
<if what='$posting.Grp==*GRP_FORUMS || $posting.Grp==*GRP_NEWS || $posting.Grp==*GRP_ARTICLES || $posting.Grp==*GRP_QUOTES'>
 <topics_major ident='index'>
 <topics_minor id='$posting.TopicId' withpostings='$$officialDomain'
               subdomain!='$$officialDomain ? 1 : -1' grp='*GRP_TAPE'
               href='index.php' title='Раздельчики'>
</if>
<if what='$posting.Grp==*GRP_GALLERY'>
 <topics_minor id='$posting.TopicId' subdomain!='$$officialDomain ? 1 : -1'
	       withpostings='$$officialDomain' grp='*GRP_GALLERY'
	       href='gallery.php' title='Галерея'>
</if>
<if what='$posting.Grp==*GRP_TIMES_COVERS || $posting.Grp==*GRP_TIMES_ARTICLES'>
 <topics_major ident='times'>
</if>
<if what='$posting.Grp==*GRP_TAGLIT_FORUMS || $posting.Grp==*GRP_TAGLIT_GALLERY'>
 <topic_obj name='taglit' id='taglit'>
 <topics_taglit taglit='$taglit' id='$posting.SenderId'>
 <topics_major ident='taglit'>
</if>
<if what='$posting.Grp==*GRP_KAITANA_NEWS || $posting.Grp==*GRP_KAITANA_GALLERY'>
 <topic_obj name='kaitana' id='kaitana'>
 <topics_kaitana kaitana='$kaitana' day='$posting.Index1'>
 <topics_major ident='kaitana'>
</if>
<if what='$posting.Grp==*GRP_TIPS'>
 <help_navi ident='tips'>
</if>
</element>
