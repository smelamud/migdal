<< @(#) $Id$ >>

<require name='parts/topics-home.php'>
<require name='parts/topics-migdal.php'>
<require name='parts/topics-kaitana.php'>

<element name='topics_www' params='posting,ident'>
<ifnzero what='$posting'>
 <identify posting='$posting'>
 <ifne what='$posting.UplevelHref'>
  <ifne what='$posting.UplevelTitle'>
   <upper_level name='$posting.UplevelTitle' href='$posting.UplevelHref'>
  <else>
   <upper_level title='На главную страницу' href='$posting.UplevelHref'>
  </ifne>
 </ifne>
 <exec element='$posting.TopicElement' arg1='$posting'>
 <<if what='($posting.Grp & (*GRP_FORUMS|*GRP_NEWS|*GRP_ARTICLES|*GRP_QUOTES|
			    *GRP_BOOKS|*GRP_BOOK_CHAPTERS|*GRP_REVIEWS|
			    *GRP_LIBRARY_ANNOUNCES))!=0'>
  <elif what='$/$posting.TopicId,0/==$`help`'>
   <topics_help posting='$posting'>
   <topics_major ident='help'>
  </if>
 <elif what='$posting.Grp==*GRP_GALLERY'>
  <if what='$/$posting.TopicId,0/==$`taglit`'>
   <topics_taglit id='$posting.SenderId'>
   <topics_major posting='$posting'>
  <elif what='$/$posting.TopicId,0/==$`veterans`'>
   <topics_veterans id='$posting.SenderId'>
   <topics_major posting='$posting'>
  <elif what='$/$posting.TopicId,0/==$`migdal`'>
   <topics_migdal posting='$posting'>
   <topics_major ident='migdal' posting='$posting'>
  <else>
   <topics_gallery posting='$posting'>
  </if>
 <elif what='($posting.Grp & (*GRP_TIMES_COVERS|*GRP_TIMES_ARTICLES))!=0'>
  <posting_obj name='cover' grp='*GRP_TIMES_COVERS' index1='$posting.Index1'
	       topic_id='-1'>
  <times_articles issue='$posting.Index1' length='$cover.Index2'
                  id='$posting.Id'>
 <elif what='($posting.Grp & *GRP_BLOG_FORUMS)!=0'>
  <if what='$/$posting.TopicId,0/==$`taglit`'>
   <topics_taglit id='$posting.SenderId'>
   <topics_major posting='$posting'>
  <else>
   <topics_veterans id='$posting.SenderId'>
   <topics_major posting='$posting'>
  </if>
 <elif what='($posting.Grp & (*GRP_KAITANA_NEWS|*GRP_KAITANA_GALLERY))!=0'>
  <topics_migdal posting='$posting'>
  <topics_major ident='migdal' posting='$posting'>
 </if>>
<elif what="$ident=='help-subs' || $ident=='help-types'">
 <upper_level href='index.php' title='На главную страницу'>
 <topics_help ident='$ident'>
<else>
 <topics_major ident='$ident'>
</ifnzero>
</element>

<element name='topics_english' params='posting,ident'>
 <topics_migdal_english posting='$posting'>
</element>

<element name='topics'>
<notenglish>
 <topics_www ident='$ident' posting='$posting'>
<else>
 <topics_english ident='$ident' posting='$posting'>
</notenglish>
</element>
