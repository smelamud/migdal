<< @(#) $Id$ >>

<element name='topics_www' params='posting'>
<if what='($posting.Grp & (*GRP_FORUMS|*GRP_NEWS|*GRP_ARTICLES|*GRP_QUOTES|
	                   *GRP_BOOKS|*GRP_BOOK_CHAPTERS|*GRP_REVIEWS|
			   *GRP_LIBRARY_ANNOUNCES))!=0'>
 <if what='$/$posting.TopicId,0/!=$`migdal` &&
           $/$posting.TopicId,1/!=$`migdal-news`'>
  <topics_major ident='index'>
  <topics_minor id='$posting.TopicId' withpostings='$$officialDomain'
		grp='*GRP_TAPE' href='index.php' title='Раздельчики'>
 <else>
  <topics_migdal posting='$posting'>
  <topics_major ident='migdal'>
 </if>
</if>
<if what='$posting.Grp==*GRP_GALLERY'>
 <if what='$/$posting.TopicId,0/!=$`migdal`'>
  <topics_minor id='$posting.TopicId' withpostings='*false' grp='*GRP_GALLERY'
                href='gallery.php' title='Галерея'>
 <else>
  <topics_migdal posting='$posting'>
  <topics_major ident='migdal'>
 </if>
</if>
<if what='($posting.Grp & (*GRP_TIMES_COVERS|*GRP_TIMES_ARTICLES))!=0'>
 <topics_major ident='times'>
</if>
<if what='($posting.Grp & (*GRP_BLOG_FORUMS|*GRP_BLOG_GALLERY))!=0'>
 <if what='$/$posting.TopicId,0/==$`taglit`'>
  <topics_taglit id='$posting.SenderId'>
  <topics_major ident='taglit'>
 <else>
  <topics_veterans id='$posting.SenderId'>
  <topics_major ident='veterans'>
 </if>
</if>
<if what='($posting.Grp & (*GRP_KAITANA_NEWS|*GRP_KAITANA_GALLERY))!=0'>
 <topics_kaitana day='$posting.Index1' topic_id='$posting.TopicId'>
 <topics_kaitanot topic_id='$posting.TopicId'>
 <topics_migdal posting='$posting'>
 <topics_major ident='migdal'>
</if>
<if what='$posting.Grp==*GRP_TIPS'>
 <help_navi ident='tips'>
</if>
</element>

<element name='topics_english' params='posting'>
 <topics_migdal_english posting='$posting'>
</element>

<element name='topics'>
<notenglish>
 <topics_www posting='$posting'>
<else>
 <topics_english posting='$posting'>
</notenglish>
</element>
