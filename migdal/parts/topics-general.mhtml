<< @(#) $Id$ >>

<element name='navi_taglit' params='posting'>
<topic_obj name='taglit' id='taglit'>

<posting_last topic_id='$taglit.Id' recursive='*false'>
<topics_line arrow!="($posting.TopicId==$taglit.Id || $posting.TopicId==='taglit') && $posting.SenderId==0"
             time='$,' href='taglit.php' title='$taglit.Description'
	     text='$taglit.Name' class='item large' span=2>

<if what='$posting.TopicId==$taglit.Id || $posting.TopicId===$taglit.Ident'>
 <iterate_posting_users topic_id='$taglit.Id'>
 <for>
  <topics_line indent=1 time='$.LastMessage' arrow!='$posting.SenderId==$.Id'
               href#='taglit-user.php?user_id=$.Id' class='item eightpt'
	       text='$.FullName'>
 </for>
</if>
</element>

<element name='topics'>
<topics_table class='ninept'>
 <admin_topics>
  <tr><td colspan=3>
   <a href='topicedit.php?redirid=$_' class='edit'>Добавить</a>
   <a href='topicorg.php?redirid=$_' class='edit'>Организовать</a>
  </td></tr>
 </admin_topics>
 <topics_line arrow!='$posting.TopicId==-1' href#='$file?topic_id=-1'
	      text='Все темы' class='new' span=2>
 <if what='$showchapters'>
  <navi_taglit posting='$posting'>
 </if>
 <iterate_topiclist grp='$posting.PageGroup' withpostings='$withpostings'
		    withanswers='$withanswers' up='$up'>
 <for>
  <topics_line arrow!='$posting.TopicId==$.Id' time='$.LastMessage'
	       href#='$posting.PageFile?topic_id=$.Id' title='$.Description'
	       text='$.Name' count='$.MessageCount' span=2>
  <admin_topics>
   <topics_line href#='topicedit.php?editid=$.Id&redirid=$_' class='edit'
		text='Изменить' span=2>
  </admin_topics>
 </for>
</topics_table>
</element>
