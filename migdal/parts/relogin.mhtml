<< @(#) $Id$ >>

<relogin>

<element name='form_relogin'>
<error id='*EL_INVALID' text='Неверный ник или пароль'>
<form_line title='Подписать сообщение как'>
 <logged>
  <assign name='relogin' value='*RELOGIN_SAME'>
 <else>
  <assign name='relogin' value!='$noguests ? *RELOGIN_LOGIN : *RELOGIN_GUEST'>
 </logged>
 <table border='0' cellspacing='0' cellpadding='3'>
  <tr valign='middle'>
   <if what='!$noguests'>
    <td width='1'>
     <radio_button name='relogin' value='*RELOGIN_GUEST' peervalue='$relogin'
                   id='relogin-guest'>
    </td>
    <td colspan=6>
     <label for='relogin-guest'>анонимный пользователь (Гость)</label>
    </td>
   <else>
    <td width='1' align='center'>
     (&nbsp;)
    </td>
    <td colspan=6><i>анонимно писать нельзя</i></td>
   </if>
  </tr>
  <logged>
   <tr valign='middle'>
    <td width='1'>
     <radio_button name='relogin' value='*RELOGIN_SAME' peervalue='$relogin'
                   id='relogin-same'>
    </td>
    <td colspan=6>
     <label for='relogin-same'>Зарегистрированный пользователь</label>
     <b><a href='users/$$#userFolder/'>$$=userLogin</a></b>
    </td>
   </tr>
  </logged>
  <tr valign='middle'>
   <td width='1'>
    <radio_button name='relogin' value='*RELOGIN_LOGIN' peervalue='$relogin'
                  id='relogin-login'>
   </td>
   <td>Ник</td>
   <td>
    <input type=text name='login' size=15 maxlength=30
           onkeypress='document.getElementById("relogin-login").checked=true'>
   </td>
   <td>Пароль</td>
   <td>
    <input type=password name='password' size=15
           onkeypress='document.getElementById("relogin-login").checked=true'>
   </td>
   <td>Войти?</td>
   <td><checkbox_button name='remember' value='$$remember'></td>
   <master>
    <tr valign='top'>
     <td width='1'>&nbsp;</td>
     <td colspan=6>
      <a href='register/?redirid=$_'>Зарегистрироваться</a>&nbsp;&nbsp;<asp>
      <asp><a href='userlost.php?redirid=$_'>Забыли пароль?</a>
     </td>
    </tr>
   </master>
  </tr>
 </table>
</form_line>
</element>
