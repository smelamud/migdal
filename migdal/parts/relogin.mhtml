<< @(#) $Id$ >>

<element name='relogin'>
<notlogged>
 <tr><td colspan=2><table>
  <tr><td colspan=2>Добавить $title как:</td></tr>
  <if what='!$noguests'>
   <tr>
    <assign name='check' value!="!$$relogin ? 'checked' : ''">
    <td><input type='radio' id='relogin-0' name='relogin' value=0 $check></td>
    <td>
     <label for='relogin-0'>$$userLogin <i>(анонимный пользователь)</i></label>
    </td>
   </tr>
  </if>
  <error id='*EL_INVALID' text='Неверный ник или пароль' span=2>
  <if what='!$noguests'>
   <tr>
    <assign name='check' value!="$$relogin ? 'checked' : ''">
    <td><input type='radio' id='relogin-1' name='relogin' value=1 $check></td>
    <td><label for='relogin-1'>Зарегистрированный пользователь:</label></td>
   </tr>
  <else>
   <hidden name='relogin' value=1>
  </if>
  <tr>
   <td>&nbsp;</td>
   <td>
    <table>
     <tr>
      <td>Ник</td>
      <td>
       <input type=text name='login' size=15 maxlength=30 value='$$login'>
      </td>
      <td>Пароль</td>
      <td><input type=password name='password' size=15></td>
      <td>Войти?</td>
      <td><checkbox_button name='remember' value='$$remember'></td>
     </tr>
    </table>
   </td>
  </tr>
 </table></td></tr>
</notlogged>
</element>
