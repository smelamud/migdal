<< @(#) $Id$ >>

<element name='batcher_forums' params='list,parent_id'>
<table width=100% class='batcher'><tr valign=bottom>
 <td align=left>
  <logged>
   <a href='forumansweredit.php?parent_id=$parent_id&redirid=$_'
      class='add'>Добавить сообщение</a>
  <else>
   <span class='info'>
    <b>Хотите участвовать в обсуждении?</b>
    <a href='/register.php?redirid=$_'>Зарегистрируйтесь!</a>
   </span>
  </logged>
 </td>
 <td>
  <spin list='$list'>
 </td>
</tr></table>
</element>

<element name='forums'>
<iterate_forum_answerlist parent_id='$parent_id' limit='$limit'
                          offset='$offset'>
<div class='forums'>
 <batcher_forums list='$;' parent_id='$parent_id'>
 <table width=100%>
  <error id='*EMH_NO_MESSAGE' text='Такого сообщения не существует'>
  <error id='*EMH_NO_MODERATE' text='Вы не модератор'>
  <for>
   <tr><td><forum_answer answer='$.'></td></tr>
  </for>
 </table>
 <ifnzero what='$;Count'>
  <batcher_forums list='$;' parent_id='$parent_id'>
 </ifnzero>
</span>
</element>
