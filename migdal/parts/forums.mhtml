<< @(#) $Id$ >>

<element name='batcher' params='&list,parent_id'>
<table width=100%><tr valign=bottom>
 <td align=left class='info'>
  <table><tr valign=center>
   <td><image src='pics/sheet.gif'></td>
   <td>
    <a href='forumansweredit.php?parent_id=$parent_id&redirid=$_'
       >Добавить комментарий</a>
   </td>
  </tr></table>
 </td>
 <td>
  <spin list='$list'>
 </td>
</tr></table>
</element>

<element name='forums'>
<iterate_forum_answerlist parent_id='$parent_id' limit='$limit'
                          offset='$offset'>
<batcher list='$;' parent_id='$parent_id'>
<table width=100% cellspacing=0 cellpadding=0 class='forums'><tr><td>
 <error id='*EMH_NO_MESSAGE' text='Такого сообщения не существует'>
 <error id='*EMH_NO_MODERATE' text='Вы не модератор'>
 <for>
  <forum_answer answer='$.'>
 </for>
</tr></td></table>
<ifnzero what='$;Count'>
 <batcher list='$;' parent_id='$parent_id'>
</ifnzero>
</element>
