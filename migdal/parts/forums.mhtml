<element name='batcher_forums' params='list,up'>
<table width=100% class='batcher'>
 <form method=get action='$~'>
  <hiddenget remove='fp'>
  <tr>
   <td align=left>
    <logged>
     <a href='forumansweredit.php?up=$up&redirid=$_'
        class='add'>Добавить сообщение</a>
    <else>
     <span class='info'>
      <b>Хотите участвовать в обсуждении?</b>
      <a href='/register.php?redirid=$_'>Зарегистрируйтесь!</a>
     </span>
    </logged>
   </td>
   <td>
    <spin list='$list'>
   </td>
  </tr>
 </form>
</table>
</element>

<element name='forums'>
<iterate_forum_answerlist up='$up' limit='$limit' offset='$offset'>
<div class='forums'>
 <batcher_forums list='$;' up='$up'>
 <table width=100%>
  <error id='*EMH_NO_MESSAGE' text='Такого сообщения не существует'>
  <error id='*EMH_NO_MODERATE' text='Вы не модератор'>
  <for>
   <tr><td><forum_answer answer='$.'></td></tr>
  </for>
 </table>
 <ifnzero what='$;Count'>
  <batcher_forums list='$;' up='$up'>
 </ifnzero>
</span>
</element>
