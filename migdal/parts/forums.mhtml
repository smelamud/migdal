<< @(#) $Id$ >>

<element name='batcher' params='&list,parent_id'>
<table width=100%><tr valign=bottom>
 <perms id='$parent_id'>
 <if what='$,isPostable'>
  <td align=left class='info'>
   <table><tr valign=center>
    <td><image src='/pics/sheet.gif'></td>
    <td>
     <a href='/forum/$parent_id/add?redirid=$_'>Добавить комментарий</a>
    </td>
   </tr></table>
  </td>
 </if>
 <td align=center>
  <spin list='$list'>
 </td>
</tr></table>
</element>

<element name='forums'>
<iterate_forumlist parent_id='$parent_id' limit='$limit' offset='$offset'
                   sort='*SORT_RSENT'>
<batcher list='$;' parent_id='$parent_id'>
<table width=100% cellspacing=0 cellpadding=0 class='forums'><tr><td>
 <error id='*EMH_NO_ENTRY' text='Такого сообщения не существует'>
 <error id='*EMH_NO_MODERATE' text='Вы не модератор'>
 <for>
  <forum forum='$.' parent_path#='$parent_prefix/$.ParentId'>
 </for>
</tr></td></table>
<ifnzero what='$;Count'>
 <batcher list='$;' parent_id='$parent_id'>
</ifnzero>
</element>
