<< @(#) $Id$ >>

<element name='topic' params='posting,showtopic'>
<if what='$showtopic'>
 <topiclink posting='$posting'>
 <br>
</if>
</element>

<element name='further' params='posting'>
<sibling up='$posting.MessageId' index0='-1'>
<if what='$,>0'>
 <p><image src='pics/further.gif'>&sp;
 <a href='book-chapter.php?chapid=$,'>Читать книгу</a>
</if>
</element>

<element name='posting_book'>
<identify posting='$posting'>
<dl class='posting'>
 <dt class='subject'>
  <topic posting='$posting' showtopic='$showtopic'>
  <vote_frame align=right id='$posting.Id' color='$$style_cframe_back'
	      image='$$style_cframe_back_pic'>
  <biff time='$posting.Sent'>
  <a href='$posting.DetailsHref'>$posting.Subject</a>
  <ifne what='$posting.Author'>
   <br><span class='author'>$posting.Author</span>
  </ifne>
 </dt>
 <dd><p>
 <ifnzero what='$posting.ImageSet'>
  <table align=left class='pic'>
   <tr><td>
    <image_linked_tag id='$posting.ImageId' enlarge='$posting.hasLargeImage'>
   </td></tr>
  </table>
 </ifnzero>
 $posting.HTMLBody&nbsp;<asp>
 <further posting='$posting'>
 <iterate_packages posting_id='$posting.Id'>
 <for>
  <br><image src='pics/package.gif' border=0>&sp;
  <if what='$.Type==*PT_BOOK_ONEFILE'>
   <assign name='title' value='Вся книга одним файлом в архиве'>
  <else>
   <assign name='title' value='Вся книга по главам в архиве'>
  </if>
  <a href='$.Href'>$title</a>&sp;<i>(ZIP, ${.SizeKB}KB)</i>
 </for>
 </p>
 <table width=100% style="clear: left"><tr>
  <td align=left class='sent'>
   <sentview date='$posting.Sent'>&nbsp;
   <senderlink message='$posting'>
  </td>
 </tr></table>
 <posting_controls posting='$posting' showdiscuss='$showdiscuss'
	           showcomplain='$showcomplain'>
</dl>
</element>
