<< @(#) $Id$ >>

<element name='events'>
<topic_obj name='topic' id='$`events`'>
<topics_table class='ninept' title='События'>
 <iswrite what='$topic'>
  <tr><td colspan=2>
   <a href='topics-reorder.php?up=$,Id&level=2&redirid=$_'
      class='edit'>Расставить</a>
  </td></tr>
 </iswrite>
 <iterate_topiclist grp='*GRP_EVENT' up='$,Id' recursive='*true' level=2
                    sort='*SORT_RINDEX0'>
 <for>
  <topics_line time='$.LastMessage' text='$.Name' title='$.Description'
               href#='event.php?topic_id=$.Id&redirid=$_'>
 </for>
</topics_table>
</element>
