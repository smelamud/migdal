<< @(#) $Id$ >>

<element name='topics_kes' params='posting'>
<topics_table title='КЕС' span=2>
 <posting_obj id='$`postings:kes`'>
 <topics_line time='$,Sent' text='О клубе' span=2
              href#='migdal.php?artid=$`postings:kes`'
              arrow!='$posting.Id==$`postings:kes`' class='item ninept'>
 <posting_last grp='*GRP_GALLERY' topic_id='$`kes`' recursive='*false'>
 <topics_line time='$,' text='Галерея' indent=1
              href#='gallery.php?topic_id=$`kes`&general=1'
              arrow!='$posting.Grp==*GRP_GALLERY && $posting.TopicId==$`kes`'
	      class='item eightpt'>
</topics_table>
</element>

<element name='topics_jcc' params='posting'>
<if what='$/$posting.TopicId,2/==$`kes`'>
 <topics_kes posting='$posting'>
</if>

<topic_obj name='jcc' id='$`jcc`'>
<topics_table title='$,Name' span=2>
 <ispost what='$jcc'>
  <tr><td colspan=3>
   <a href='postingedit.php?redirid=$_&topic_id=$,Id&grp=*GRP_REVIEWS'
      class='edit'>Добавить</a>
  </td></tr>
  <tr><td colspan=3>
   <a href='reorder.php?redirid=$_&issue=-1&topic_id=$,Id&grp=*GRP_REVIEWS'
      class='edit'>Расставить</a>
  </td></tr>
 </ispost>
 <iterate_postinglist grp='*GRP_REVIEWS' limit=0 sort='*SORT_INDEX0'
                      topic_id='$,Id' recursive='*false'
		      fields='*SELECT_TOPICS'>
 <posting_obj id='$`postings:jcc`'>
 <topics_line time='$,Sent' text='$,Subject' href#='migdal.php'
              arrow!='$,Id==$posting.Id' indent=0 span=2 class='item ninept'>
 <for>
  <if what='$.Id!=$`postings:jcc`'>
   <topics_line time='$.Sent' text='$.Subject' href#='migdal.php?artid=$.Id'
                arrow!='$.Id==$posting.Id' indent=1 span=1 class='item eightpt'>
  </if>
 </for>
 <posting_last topic_id='$`kaitana`' recursive='*true'>
 <topics_line time='$,' text='Дневные детские лагеря' href='kaitana-main.php'
              arrow!="$/$posting.TopicId,2/==$`kaitana`" indent=1
	      class='item eightpt'>
 <posting_last topic_id='$`kes`' recursive='*true'>
 <topics_line time='$,' text='Клуб Еврейского Студента'
              href#='migdal.php?artid=$`postings:kes`'
              arrow!="$/$posting.TopicId,2/==$`kes`" indent=1
	      class='item eightpt'>
</topics_table>
</element>

<element name='topics_mazltov' params='posting'>
<topics_table title='Мазл Тов' span=2>
 <posting_obj id='$`postings:mazltov`'>
