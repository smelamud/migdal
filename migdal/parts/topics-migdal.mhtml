</topics_table>
</element>

<element name='topics_methodics' params='posting'>
<topics_table title='Методический центр' span=2>
 <posting_obj id='$`postings:methodic-center`'>
 <topics_line time='$,Sent' text='О центре' span=2 href#='methodic-center.php'
              arrow!='$posting.Id==$,Id' class='item ninept'>
 <posting_last grp='*GRP_BOOKS' topic_id='$`methodics`' recursive='*true'>
 <topics_line time='$,' text='Методические пособия' indent=1
              href#='methodics.php'
              arrow!='($posting.Grp & (*GRP_BOOKS|*GRP_BOOK_CHAPTERS))!=0 &&
	              $posting.TopicId==$`methodics`'
	      class='item eightpt'>
</topics_table>
</element>

<element name='topics_migdal_library' params='posting'>
<topics_table title='Библиотека' span=2>
 <topics_line text='О библиотеке' span=2 href#='migdal-library.php'
              arrow!='$posting.Id==$`postings:migdal-library`'
	      class='item ninept'>
 <posting_last grp='*GRP_LIBRARY_ANNOUNCES' topic_id='$`migdal-library`'
               recursive='*false'>
 <topics_line time='$,' text='Новые поступления' indent=1
              href#='migdal-library-news.php'
              arrow!='$posting.Grp==*GRP_LIBRARY_ANNOUNCES &&
	              $posting.TopicId==$`migdal-library`'
	      class='item eightpt'>
</topics_table>
</element>

<element name='topics_museum' params='posting'>
<topics_table title='Музей евреев Одессы' span=2>
 <posting_obj id='$`postings:museum`'>
 <topics_line time='$,Sent' text='О музее' span=2
              href#='migdal.php?artid=$`postings:museum`'
              arrow!='$posting.Id==$`postings:museum`' class='item ninept'>
 <posting_last grp='*GRP_NEWS' topic_id='$`museum-news`' recursive='*false'>
 <topics_line time='$,' text='Новости' indent=1
              href#='migdal-news.php?topic_id=$`museum-news`'
              arrow!='($posting.Grp & *GRP_TAPE)!=0 &&
	              $posting.TopicId==$`museum-news`'
	      class='item eightpt'>
</topics_table>
</element>

<element name='topics_migdal'>
<if what='$/$posting.TopicId,1/==$`jcc`'>
 <topics_jcc posting='$posting'>
</if>
<if what='$/$posting.TopicId,1/==$`mazltov` ||
          $/$posting.TopicId,2/==$`mazltov-news`'>
 <topics_mazltov posting='$posting'>
</if>
<if what='$/$posting.TopicId,1/==$`methodics`'>
 <topics_methodics posting='$posting'>
</if>
<if what='$/$posting.TopicId,1/==$`migdal-library`'>
 <topics_migdal_library posting='$posting'>
</if>
<if what='$/$posting.TopicId,1/==$`museum` ||
          $/$posting.TopicId,2/==$`museum-news`'>
 <topics_museum posting='$posting'>
</if>
</element>

<element name='topics_migdal_main'>
<posting_last topic_id='$`migdal-news`' recursive='*true'>
<topics_line time='$,' href#='migdal-news.php' text='Новости'
	     arrow!="$posting!=0 && $posting.TopicId==$`migdal-news`" indent=1
	     class='item eightpt'>
<posting_last topic_id='$`jcc`' recursive='*true'>
<topics_line time='$,' href#='jcc.php' text='Общинный центр (JCC)'
	     title='Живопись, музыка, танцы, программы для всех возрастов'
	     arrow!="$posting!=0 && $/$posting.TopicId,1/==$`jcc`" indent=1
	     class='item eightpt'>
<posting_last topic_id='$`migdal-library`' recursive='*true'>
<topics_line time='$,' href#='migdal-library.php' text='Библиотека'
	     arrow!="$posting!=0 && $/$posting.TopicId,1/==$`migdal-library`"
	     indent=1 class='item eightpt'>
<hash>
 <hash_topic topic_id='$`museum`' recursive='*true'>
 <hash_topic topic_id='$`museum-news`' recursive='*true'>
</hash>
<posting_last topic_id='$*'>
<topics_line time='$,' href#='migdal.php?artid=$`postings:museum`'
	     text='Музей евреев Одессы'
	     arrow!="$posting!=0 &&
	             ($/$posting.TopicId,1/==$`museum` ||
		      $/$posting.TopicId,2/==$`museum-news`)" indent=1
	     class='item eightpt'>
<topics_line href#='migdal.php?artid=$`postings:migdal-ohr`'
	     text='Одесский еврейский театр &lt;&lt;Мигдаль-ор&gt;&gt;'
	     arrow!="$posting!=0 && $/$posting.TopicId,1/==$`migdal-ohr`"
	     indent=1 class='item eightpt'>
<hash>
 <hash_topic topic_id='$`mazltov`' recursive='*true'>
 <hash_topic topic_id='$`mazltov-news`' recursive='*true'>
</hash>
<posting_last topic_id='$*'>
<topics_line time='$,' href#='migdal.php?artid=$`postings:mazltov`'
	     text='Центр раннего развития детей &lt;&lt;Мазл Тов&gt;&gt;'
	     arrow!="$posting!=0 &&
	             ($/$posting.TopicId,1/==$`mazltov` ||
		      $/$posting.TopicId,2/==$`mazltov-news`)" indent=1
	     class='item eightpt'>
<posting_last topic_id='$`methodics`' recursive='*true'>
<topics_line time='$,' text='Методический центр'
	     href#='methodic-center.php'
	     arrow!="$posting!=0 && $/$posting.TopicId,1/==$`methodics`"
	     indent=1 class='item eightpt'
	     title='Южно-украинский региональный методический центр'>
</element>
