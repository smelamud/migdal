</if>
<if what='$/$posting.TopicId,1/==$`mazltov` ||
          $/$posting.TopicId,2/==$`mazltov-news`'>
 <topics_mazltov posting='$posting'>
</if>
<if what='$/$posting.TopicId,1/==$`methodics`'>
 <topics_methodics posting='$posting'>
</if>
<if what='$/$posting.TopicId,1/==$`migdal-library`'>
 <topics_migdal_library posting='$posting'>
</if>
<topic_obj name='migdal' id='$`migdal`'>
<topics_table title='$,Name' span=2>
 <ispost what='$migdal'>
  <tr><td colspan=3>
   <a href='postingedit.php?redirid=$_&topic_id=$,Id&grp=*GRP_REVIEWS'
      class='edit'>Добавить</a>
  </td></tr>
  <tr><td colspan=3>
   <a href='reorder.php?redirid=$_&issue=-1&topic_id=$,Id&grp=*GRP_REVIEWS'
