 <iterate_postinglist grp='*GRP_REVIEWS' limit=0 sort='*SORT_INDEX0'
                      topic_id='$,Id' recursive='*false'>
 <posting_obj id='$`postings:migdal`'>
 <topics_line time='$,Sent' text='$,Subject' href#='migdal.php'
              arrow!='$,Id==$posting.Id' indent=0 span=2 class='item ninept'>
 <posting_last topic_id='$`migdal-news`' recursive='*true'>
 <topics_line time='$,' href#='migdal-news.php' text='Новости'
              arrow!="$posting.TopicId==$`migdal-news`" indent=1
	      class='item eightpt'>
 <posting_last topic_id='$`jcc`' recursive='*true'>
