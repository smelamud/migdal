              href#='migdal.php?artid=$`postings:mazltov`'
              arrow!='$posting.Id==$`postings:mazltov`' class='item ninept'>
 <posting_last grp='*GRP_NEWS' topic_id='$`mazltov-news`' recursive='*false'>
 <topics_line time='$,' text='Новости' indent=1
              href#='migdal-news.php?topic_id=$`mazltov-news`'
              arrow!='($posting.Grp & *GRP_TAPE)!=0 &&
	              $posting.TopicId==$`mazltov-news`'
	      class='item eightpt'>
 <posting_last grp='*GRP_GALLERY' topic_id='$`mazltov`' recursive='*false'>
 <topics_line time='$,' text='Галерея' indent=1
              href#='gallery.php?topic_id=$`mazltov`&general=1'
