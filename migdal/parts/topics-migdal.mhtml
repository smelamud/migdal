<< @(#) $Id$ >>

<element name='topics_chapters' params='posting,title,id,rtitle,rid'>
<topics_table title='$title'>
 <posting_obj id='$rid'>
 <topics_line time='$,Sent' text='$rtitle' href#='migdal.php?artid=$rid'
              arrow!='$posting.Id==$rid' class='item eightpt'>
 <posting_last grp='*GRP_GALLERY' topic_id='$id' recursive='*true'>
 <topics_line time='$,' text='Галерея' href#='gallery.php?topic_id=$id'
              arrow!='$posting.Grp==*GRP_GALLERY && $posting.TopicId==$id'
	      class='item eightpt'>
</topics_table>
</element>

<element name='topics_migdal'>
<grps>
<if what='$/$posting.TopicId,1/==$`kes`'>
 <topics_chapters posting='$posting' title='КЕС' id='$`kes`'
                  rtitle='О клубе' rid='$`postings:kes`'>
</if>
<if what='$/$posting.TopicId,1/==$`mazltov`'>
 <topics_chapters posting='$posting' title='Мазл Тов' id='$`mazltov`'
                  rtitle='О программе' rid='$`postings:mazltov`'>
</if>
<topic_obj id='$`migdal`'>
<topics_table title='$,Name' span=2>
 <if what='$,UserId==$$userId || $$userModerator'>
  <tr><td colspan=3>
   <a href='postingedit.php?redirid=$_&topic_id=$,Id&root=$,Id&grp=*GRP_REVIEWS'
      class='edit'>Добавить</a>
  </td></tr>
  <tr><td colspan=3>
   <a href='reorder.php?redirid=$_&issue=-1&topic_id=$,Id&grp=*GRP_REVIEWS'
      class='edit'>Расставить</a>
  </td></tr>
 </if>
 <iterate_postinglist grp='*GRP_REVIEWS' limit=0 sort='*SORT_INDEX0'
                      topic='$,Id' recursive='*false'>
 <for>
  <topics_line time='$.Sent' text='$.Subject'
               href#='migdal.php?artid=$.Id' arrow!='$.Id==$posting.Id'
	       indent!="$.Id==$`postings:migdal` ? 0 : 1"
	       span!="$.Id==$`postings:migdal` ? 2 : 1"
	       class!="$.Id==$`postings:migdal`
	               ? 'item ninept' : 'item eightpt'"
	       nobullet!='$.Id==$`postings:migdal`'>
 </for>
 <posting_last topic_id='$`mazltov`' recursive='*true'>
 <topics_line time='$,' text='Мазл Тов'
              href#='migdal.php?artid=$`postings:mazltov`'
              arrow!="$/$posting.TopicId,1/==$`mazltov`" indent=1
	      class='item eightpt'>
 <posting_last topic_id='$`kes`' recursive='*true'>
 <topics_line time='$,' text='Клуб Еврейского Студента'
              href#='migdal.php?artid=$`postings:kes`'
              arrow!="$/$posting.TopicId,1/==$`kes`" indent=1
	      class='item eightpt'>
 <posting_last topic_id='$`methodics`' recursive='*true'>
 <topics_line time='$,' text='Методический кабинет' href#='methodics.php'
              arrow!="$/$posting.TopicId,1/==$`methodics`" indent=1
	      class='item eightpt'>
 <posting_last topic_id='$`kaitana`' recursive='*true'>
 <topics_line time='$,' text='Площадка' href='kaitana.php'
              arrow!="$posting.TopicId==$`kaitana`" indent=1
	      class='item eightpt'>
</topics_table>
</element>

<element name='topics_migdal_main'>
<grps>
<iterate_postinglist grp='*GRP_REVIEWS' limit=0 sort='*SORT_INDEX0'
		     topic='$`migdal`' recursive='*false'>
<for>
 <if what='$.Id!=$`postings:migdal`'>
  <topics_line time='$.Sent' text='$.Subject' href#='migdal.php?artid=$.Id'
               indent=1 class='item eightpt'>
 </if>
</for>
<posting_last topic_id='$`mazltov`' recursive='*true'>
<topics_line time='$,' text='Мазл Тов'
	     href#='migdal.php?artid=$`postings:mazltov`' indent=1
	     class='item eightpt'>
<posting_last topic_id='$`kes`' recursive='*true'>
<topics_line time='$,' text='Клуб Еврейского Студента'
	     href#='migdal.php?artid=$`postings:kes`' indent=1
	     class='item eightpt'>
<posting_last topic_id='$`methodics`' recursive='*true'>
<topics_line time='$,' text='Методический кабинет' href#='methodics.php'
             indent=1 class='item eightpt'>
<posting_last topic_id='$`kaitana`' recursive='*true'>
<topics_line time='$,' text='Площадка' href='kaitana.php' indent=1
	     class='item eightpt'>
</element>
