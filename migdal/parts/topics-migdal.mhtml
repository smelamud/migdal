              title='Живопись, музыка, танцы, программы для всех возрастов'
	      arrow!="$/$posting.TopicId,1/==$`jcc`" indent=1
	      class='item eightpt'>
 <posting_last topic_id='$`migdal-library`' recursive='*true'>
 <topics_line time='$,' href#='migdal-library.php' text='Библиотека'
	      arrow!="$/$posting.TopicId,1/==$`migdal-library`" indent=1
	      class='item eightpt'>
 <for>
  <if what='$.Id!=$`postings:migdal`'>
   <topics_line time='$.Sent' text='$.Subject' href#='migdal.php?artid=$.Id'
                arrow!='$.Id==$posting.Id' indent=1 span=1 class='item eightpt'>
  </if>
 </for>
 <posting_last topic_id='$`mazltov`' recursive='*true'>
 <topics_line time='$,' href#='migdal.php?artid=$`postings:mazltov`'
              text='Центр раннего развития детей &lt;&lt;Мазл Тов&gt;&gt;'
              arrow!="$/$posting.TopicId,1/==$`mazltov` ||
                      $/$posting.TopicId,2/==$`mazltov-news`" indent=1
	      class='item eightpt'>
 <posting_last topic_id='$`methodics`' recursive='*true'>
 <topics_line time='$,' text='Методический центр'
              href#='migdal.php?artid=$`postings:methodic-center`'
              arrow!="$/$posting.TopicId,1/==$`methodics`" indent=1
	      class='item eightpt'
	      title='Южно-украинский региональный методический центр'>
</topics_table>
</element>

