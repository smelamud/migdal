<< @(#) $Id$ >>

<grps>

<element name='topic' params='posting'>
<dt class='subject'>
 <topiclink posting='$posting'>
</dt>
</element>

<element name='further' params='posting'>
<asp><a href='$posting.DetailsFile?redirid=$_&$posting.DetailsId=$posting.Id'><asp>
 <image src='pics/further.gif' border=0 title='Читать дальше'>
<asp></a>&nbsp;<asp>
</element>

<element name='tip_posting'>
<if what='$posting.isRebe'><span class='rebe'></if>
 <if what='$showtopic'>
  <dl class='posting'>
   <topic posting='$posting'>
   <dd>
   <assign name='len' value='90%'>
  <else>
   <div class='posting'>
   <assign name='len' value='100%'>
  </if>
  <p>
  <biff time='$posting.Sent'>
  <if what='$shorten'>
   $posting.HTMLBodyMedium&nbsp;<asp>
   <if what='!$posting.isBodyMedium'>
    <further posting='$posting'>
   </if>
  <else>
   $posting.HTMLBody&nbsp;<asp>
  </if>
  </p>
  <table width=$len style="clear: left" class='sent'><tr>
   <td align=left>
    <sentview date='$posting.Sent'>
   </td>
   <td align=right>
    <senderlink message='$posting'>
   </td>
  </tr></table>
  <posting_controls posting='$posting' showdiscuss='$showdiscuss'
                    showcomplain='$showcomplain' len='$len'>
 <if what='$showtopic'></dl><else></div></if>
<if what='$posting.isRebe'></span></if>
</element>
