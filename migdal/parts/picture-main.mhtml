<element name='picture_main'>
<if what='$picture.isRebe'><span class='rebe'></if>
 <table class='picture'>
  <tr><td class='top topic'>
   <biff time='$topic.LastMessage'>
   <a href='gallery.php?grp=$grp&topic_id=$picture.TopicId'
      class='name' title='$picture.TopicDescription'>
    $picture.TopicName</a>
  </td></tr>
  <ifnzero what='$picture.ImageSet'>
   <tr><td class='image'>
    <a href='gallery.php?grp=$grp&topic_id=$picture.TopicId'>
     <image_tag_put id='$picture.ImageId'>
    </a>
   </td></tr>
  </ifnzero>
  <admin_topics>
   <tr><td class='modify'>
    <a href="topicedit.php?editid=$picture.TopicId&redirid=$_">Изменить</a>
   </td></tr>
  </admin_topics>
  <tr><td class='body'>
   $picture.TopicDescription
  </td></tr>
 </table>
<if what='$picture.isRebe'></span></if>
</element>
