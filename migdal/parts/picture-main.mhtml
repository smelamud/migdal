<< @(#) $Id$ >>

<element name='picture_main'>
<table class='picmain'>
 <ifnzero what='$image_id'>
  <tr><td>
   <a href='$href'>
    <ifnzero what='$image_id'>
     <img border=0 width=150 height=120 src='image-main.php?id=$image_id'></a>
    <else>
     <image border=0 src='pics/film.png'></a>
    </ifnzero>
  </td></tr>
 </ifnzero>
 <tr><td>
  <biff time='$biff' small='*true'>
  <ifne what='$text'>
   <a href='$href' title='$text'>$name</a>
  <else>
   <a href='$href'>$name</a>
  </ifne>
 </td></tr>
</table>
</element>
