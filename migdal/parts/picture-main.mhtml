<element name='picture_main'>
<if what='$picture.isRebe'><span class='rebe'></if>
 <table class='picture'>
  <tr><td class='top topic'>
    <span class='name'>
     <a href='gallery.php?grp=$grp&topic_id=$picture.TopicId'
	class='topic' title='$picture.TopicDescription'>
      $picture.TopicName</a>
    </span>
  </td></tr>
  <ifnzero what='$picture.ImageSet'>
   <tr><td class='image'>
    <a href='gallery.php?grp=$grp&topic_id=$picture.TopicId'>
     <image_tag_put id='$picture.ImageId'>
    </a>
   </td></tr>
  </ifnzero>
  <tr><td class='body'>
   $picture.TopicDescription
  </td></tr>
 </table>
<if what='$picture.isRebe'></span></if>
</element>
