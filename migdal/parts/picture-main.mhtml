<< @(#) $Id$ >>

<element name='picture_main'>
<table class='picture'>
 <tr><td class='top topic'>
  <biff time='$biff'>
  <ifne what='$text'>
   <a href='$href' class='name' title='$text'>$name</a>
  <else>
   <a href='$href' class='name'>$name</a>
  </ifne>
 </td></tr>
 <ifnzero what='$image_id'>
  <tr><td class='image'>
   <a href='$href'><image_tag_put id='$image_id'></a>
  </td></tr>
 </ifnzero>
 <ifne what='$text'>
  <tr><td class='body'>
   $text
  </td></tr>
 </ifne>
</table>
</element>
