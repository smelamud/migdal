<< @(#) $Id$ >>

<element name='rating'>
<if what='$showtitle'><span class='rating'>Рейтинг: </span></if>
<if what='$value>=0'>
 <image border=0 src#='pics/bar-small-${value}.gif' title='Рейтинг'>
<else>
 <image border=0 src='pics/bar-small-null.gif' title='Рейтинг'>
</if>
</element>

<element name='vote_frame'>
<notprint>
 <notenglish>
  <ifne what='$align'>
   <assign name='al' value#='align=$align'>
  <else>
   <assign name='al' value=''>
  </ifne>
  <iframe frameborder=0 $al width=140 height=35
	  src='rating.php?color=$#color&image=$#image&postid=$id'
	  scrolling=no></iframe>
 </notenglish>
</notprint>
</element>
