<< @(#) $Id$ >>

<element name='times_articles'>
<grps>
<assign name='nlast' value!='$issue+$length'>
<assign name='no' value!='$issue>=$nlast ? $issue : "$issue-$nlast"'>
<topics_table title#='В номере No.$no'>
 <iterate_postinglist grp='*GRP_TIMES_ARTICLES' topic_id='$`migdal-times`'
		      recursive='*true' limit=0 sort='*SORT_INDEX0'
		      index1='$issue'>
 <for>
  <identify posting='$.'>
  <topics_line time='$.Sent' text='$.Subject' href#='$.DetailsHref'
               arrow!='$.Id==$id' class='item ninept'>
 </for>
</topics_table>
</element>
