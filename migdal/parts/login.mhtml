<< @(#) $Id$ >>
<< Based-on: demo/parts/login.mhtml 1.1 >>

<errors>
<element name='LoginError' params='err'>
<if what='$err==EL_INVALID'>
 <tr><td colspan=5><a name='error'>
  <font color='red'>Неверный ник или пароль</font>
 </td></tr>
</if>
</element>

<element name='Login'>
<notlogged>
 <form method=post action='actions/login.php'>
<else>
 <form method=post action='actions/logout.php'>
</notlogged>
<input type=hidden name='redir' value="$[err]">
<table>
<loginerror err='$err'>
<notlogged>
 <tr>
  <td>Ник</td>
  <td><input type=text name='login' size=6 maxlength=30></td>
  <td>Пароль</td>
  <td><input type=password name='password' size=6></td>
  <td><input type=submit value='Войти'></td>
 </tr>
 <if what="$flags!='no_new'">
  <tr><td colspan=5>
   <a href='/useredit.php?redir=$_'>Зарегистрироваться</a>
  </td></tr>
 </if>
<else>
 <tr>
  <td>Пользователь: 
   <b>
   <if what='$$userHidden'>
    $$userLogin
   <else>
    <a href='/useredit.php?editid=$$userId&redir=$_'>$$userLogin</a>
   </if>
   </b>
  </td>
  <td><input type=submit value='Выйти'></td>
 </tr>
</notlogged>
</table>
</form>
</element>
