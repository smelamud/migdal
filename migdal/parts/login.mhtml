<< @(#) $Id$ >>

<macro name='tform'>
 <ifne what='$target'>
  <form method='post' action='%action' target='$target'>
 <else>
  <form method='post' action='%action'>
 </ifne>
 <hidden name='okdir' value="$$[err]">
 <hidden name='faildir' value="$$[err]">
</macro>

<macro name='/tform'>
 </form>
</macro>

<errors>
<element name='login'>
<notenglish>
 <ifne what='$$err'>
  <table class='ninept'>
   <error id='*EL_INVALID' text='Неверный ник или пароль'>
   <error id='*EUS_NO_SWITCH' text='Вы не администратор'>
   <error id='*EUS_NO_USER' text='Такого пользователя не существует'>
  </table>
 </ifne>
 <table class='login ninept' cellspacing=0 cellpadding=0>
  <notlogged>
   <tform action='actions/login.php'>
    <tr>
     <td>Ник</td>
     <td><image src='pics/leftinput.gif'></td>
     <td><input class=line type=text name='login' size=6 maxlength=30></td>
     <td><image src='pics/rightinput.gif'></td>
     <td>&nbsp;</td>
     <td>Пароль</td>
     <td><image src='pics/leftinput.gif'></td>
     <td><input class=line type=password name='password' size=6></td>
     <td><image src='pics/rightinput.gif'></td>
     <td>&nbsp;</td>
     <td><input type=image src='pics/enter.gif'></td>
    </tr>
    <master>
     <tr><td colspan=11 align=right>
      <at href#='register/?redirid=$_'
	  target='$target'>Зарегистрироваться<asp></at>&nbsp;&nbsp;<asp>
      <at href#='userlost.php?redirid=$_'
	  target='$target'>Забыли пароль?</at>
     </td></tr>
    </master>
   </tform>
  <else>
   <tform action='actions/logout.php'>
    <tr>
     <admin_users><td colspan=3><else><td></admin_users>
      <b>
      <if what='$$userHidden'>
       $$=userLogin
      <else>
       <at href#='/userinfo.php?id=$$userId' class='name'
	   target='$target'>$$=userLogin</at>
      </if>
      </b>
     </td>
     <td>&nbsp;</td>
     <td><input type='image' src='pics/exit.gif'></td>
    </tr>
   </tform>
   <admin_users>
    <tform action='actions/userswitch.php'>
     <tr>
      <td><image src='pics/leftinput.gif'></td>
      <td><input class='line' type='text' name='login' size=10 maxlength=30></td>
      <td><image src='pics/rightinput.gif'></td>
      <td>&nbsp;</td>
      <td><input type='image' src='pics/su.gif'></td>
     </tr>
    </tform>
   </admin_users>
  </notlogged>
 </table>
</notenglish>
</element>
