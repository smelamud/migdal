<< @(#) $Id$ >>
<< Based-on: demo/parts/login.mhtml 1.3 >>

<errors>
<element name='Login'>
<notlogged>
 <ifne what='$target'>
  <form method=post action='actions/login.php' target='$target'>
 <else>
  <form method=post action='actions/login.php'>
 </ifne>
<else>
 <ifne what='$target'>
  <form method=post action='actions/logout.php' target='$target'>
 <else>
  <form method=post action='actions/logout.php'>
 </ifne>
</notlogged>
<ife what='$re'>
 <hidden name='okdir' value="$[err]">
 <hidden name='faildir' value="$[err]">
<else>
 <hidden name='okdir' value="$re">
 <hidden name='faildir' value="$re">
</ife>
<table class='login'>
<error id='*EL_INVALID' text='Неверный ник или пароль' span=5>
<notlogged>
 <tr>
  <td>Ник</td>
  <td><input type=text name='login' size=6 maxlength=30></td>
  <td>Пароль</td>
  <td><input type=password name='password' size=6></td>
  <td><input type=submit value='Войти'></td>
 </tr>
 <if what="$flags!='no_new'">
  <tr><td colspan=5 align=right>
   <ife what='$re'>
    <concat name='link' value='/register.php?redir=$_'>
   <else>
    <concat name='link' value='/register.php?redir=$re?$?'>
   </ife>
   <at href='$link' target='$target'>Зарегистрироваться</at>
  </td></tr>
 </if>
<else>
 <tr>
  <td>Пользователь: 
   <b>
   <if what='$$userHidden'>
    $$userLogin
   <else>
    <concat value='/userinfo.php?id=$$userId&redir=$_'>
    <at href='$*' class='name' target='$target'>$$userLogin</at>
   </if>
   </b>
  </td>
  <td><input type=submit value='Выйти'></td>
 </tr>
</notlogged>
</table>
</form>
</element>
