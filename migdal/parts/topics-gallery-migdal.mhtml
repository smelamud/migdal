<posting_info grp='*GRP_GRAPHICS' topic_id='$`museum`' recursive='*true'>
<topics_line time='$,MaxSent' count='$,Total'
             href#='gallery.php?topic_id=$`museum`'
	     text='Музей евреев Одессы'
