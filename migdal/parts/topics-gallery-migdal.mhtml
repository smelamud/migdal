	     count='$,Total' href#='gallery.php?topic_id=$`kes`'
	     arrow!="$/$posting.TopicId,2/==$`kes`" indent=1
	     class='item eightpt'>
<posting_info grp='*GRP_GRAPHICS' topic_id='$`kaitana`' recursive='*true'>
<topics_line time='$,MaxSent' text='Дневные детские лагеря'
	     count='$,Total' href#='gallery.php?topic_id=$`kaitana`'
