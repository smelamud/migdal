<< @(#) $Id$ >>

<element name='navi_main' params='ident,span' defaults='span=1'>
<topics_line href='index.php' title='На главную страницу'
	     text='Главная' arrow!="$ident=='index'" span='$span'>
</element>

<element name='navi_migdal' params='ident,span' defaults='span=1'>
<topic_obj name='migdal' id='$`migdal`'>

<posting_last topic_id='$`migdal`' recursive='*true'>
<topics_line time='$,' href='migdal.php' title='$migdal.Description'
	     text='$migdal.Name' arrow!="$ident=='migdal'" span='$span'>
</element>

<element name='navi_times' params='ident,span' defaults='span=1'>
<topic_obj name='times' id='$`migdal-times`'>

<posting_last topic_id='$`migdal-times`' recursive='*true'>
<topics_line time='$,' href='times.php' title='$times.Description'
	     text='$times.Name' arrow!="$ident=='times'" span='$span'>
</element>

<element name='navi_taglit' params='ident,span' defaults='span=1'>
<topic_obj name='taglit' id='$`taglit`'>

<posting_last topic_id='$`taglit`' recursive='*false'>
<topics_line time='$,' href='taglit.php' title='$taglit.Description'
	     text='$taglit.Name' arrow!="$ident=='taglit'"
	     class='item ninept' span='$span'>
</element>

<element name='navi_veterans' params='ident,span' defaults='span=1'>
<topic_obj name='veterans' id='$`veterans`'>

<posting_last topic_id='$`veterans`' recursive='*false'>
<topics_line time='$,' href='veterans.php' title='$veterans.Description'
	     text='$veterans.Name' arrow!="$ident=='veterans'"
	     class='item ninept' span='$span'>
</element>

<element name='topics_major'>
<assign name='spn' value!='$unroll ? 2 : 1'>
<assign name='sp' value!='$spn+1'>
<topics_table title='Разделы' span='$spn'>
 <admin_topics>
  <tr><tdspan span='$sp'>
   <a href='topicorg.php?redirid=$_' class='edit'>Организовать</a>
  </tdspan></tr>
 </admin_topics>
 <moderator>
  <tr><tdspan span='$sp'>
   <a href='postingorg.php?redirid=$_' class='edit'>Сообщения</a>
  </tdspan></tr>
 </moderator>
 <admin_users>
  <tr><tdspan span='$sp'>
   <a href='journal.php?redirid=$_' class='edit'>Журнал</a>
  </tdspan></tr>
 </admin_users>
 <navi_main ident='$ident' span='$spn'>
 <navi_migdal ident='$ident' span='$spn'>
 <if what='$unroll'>
  <topics_migdal_main>
 </if>
 <navi_times ident='$ident' span='$spn'>
 <navi_taglit ident='$ident' span='$spn'>
 <navi_veterans ident='$ident' span='$spn'>
</topics_table>
</element>
