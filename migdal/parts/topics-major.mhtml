<< @(#) $Id$ >>

<element name='navi_main' params='index,span' defaults='span=1'>
<topics_line href='/' title='На главную страницу' text='Главная'
             arrow!="$index=='index'" span='$span'>
</element>

<element name='navi_migdal' params='index,span' defaults='span=1'>
<topics_line href='/migdal/' text='Мигдаль'
             arrow!="$index=='migdal'" span='$span'>
</element>

<element name='navi_help' params='index,span' defaults='span=1'>
<topic_obj name='tips' id='$`tips`'>

<posting_last topic_id='$`tips`' recursive='*false'>
<topics_line time='$,' href='tips.php' title='Помощь по работе с сайтом'
	     text='Справка' arrow!="$index=='help'" class='topics-item ninept'
	     span='$span'>
</element>

<element name='general' params='index,span' defaults='span=1'>
<admin_topics>
 <tr><td colspan=3 class='eightpt'>
  <a href='topiclinks.php?topic_id=$`major`&topic_grp=*GRP_NEWS&peer_grp=*GRP_NEWS&redirid=$_'>
     Изменить</a>
 </td></tr>
</admin_topics>
<iterate_entry_cross source_name='major' link_type='*LINKT_MAJOR'>
<for>
 <topic_obj name='topic' id='$.PeerId' fields='*SELECT_INFO'>
 <assign name='info' value='$,PostingsInfo'>
 <topics_line class='topics-item ninept' time='$info.MaxSent' href#='/$,Catalog'
              title='$,BodyNormal' text='$,Subject' span='$span'
	      arrow!='$,Id==$index'>
</for>
</element>

<element name='navi_archive' params='index,span' defaults='span=1'>
 <topics_line href='archive.php' text='Архив' arrow!="$index=='archive'"
              class='topics-item eightpt' span='$span'>
</element>

<element name='topics_major'>
<topics_table title='Разделы' span=2>
 <navi_main index='$index' span=2>
 <navi_migdal index='$index' span=2>
 <topics_migdal index='$index'>
 <general index='$index' span=2>
 <topics_splitter>
 <navi_help index='$index' span=2>
 <navi_archive index='$index' span=2>
</topics_table>
</element>
