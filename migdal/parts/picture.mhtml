<< @(#) $Id$ >>

<grps>

<element name='topic' params='picture,topiclink,showtopic'>
<if what='$showtopic'>
 <tr><td class='topic'>
   <a href='$topiclink' class='topic' title='$picture.TopicDescription'>
    $picture.TopicName
   </a>
 </td></tr>
</if>
</element>

<element name='controls' params='picture,root,showcomplain'>
<logged>
 <tr><td class='modify'>
  <isedit what='$picture'>
   <a href="postingedit.php?editid=$picture.Id&topic_id=$picture.TopicId&root=$root&grp=$picture.Grp&redirid=$_"
      >Изменить</a>
   <moderator>
    <br>
    <a href="actions/messagerenew.php?id=$picture.MessageId&okdir=$#-&faildir=$#-"
       >Осовременить</a>
    <br>
    <a href='actions/shadow.php?postid=$picture.Id&okdir=$#-&faildir=$#-'
       >Тень<ifnzero what='$picture.Shadow'> (*)</ifnzero></a>
   </moderator>
  <else>
   <if what='$showcomplain'>
    <a href="complainedit.php?type_id=*COMPL_POSTING&link=$picture.Id&redirid=$_"
       >Жалоба</a>
   </if>
  </isedit>
 </td></tr>
</logged>
</element>

<element name='picture'>
<if what='$picture.isRebe'><span class='rebe'></if>
 <table class='picture'>
  <tr class='top'><td align=right>
   <biff time='$picture.Sent' small='*true'>
   <senderlink message='$picture'>
  </td></tr>
  <topic picture='$picture' topiclink='$topiclink' showtopic='$showtopic'>
  <tr><td align=right>
   <vote_frame id='$picture.Id' color='$$style_picture_back'
               image='$$style_picture_back_pic'>
  </td></tr>
  <ifnzero what='$picture.ImageSet'>
   <tr><td class='image'>
    <image_linked_tag id='$picture.ImageId' enlarge='$picture.hasLargeImage'>
   </td></tr>
  </ifnzero>
  <controls picture='$picture' root='$root' showcomplain='$showcomplain'>
  <tr><td class='body'>
   $picture.HTMLBody
  </td></tr>
  <if what='$showdiscuss'>
   <tr><td class='discuss'><discusslink posting='$picture'></td></tr>
  </if>
  <ifnzero what='$picture.ImageSet'>
   <tr><td class='bottom'>
    ${picture.ImageX}x${picture.ImageY}, ${picture.ImageSizeKB}KB
   </td></tr>
  </ifnzero>
 </table>
<if what='$picture.isRebe'></span></if>
</element>
