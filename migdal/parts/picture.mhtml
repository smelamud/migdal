<grps>
<element name='Picture'>
<if what='$picture.isRebe'><span class='rebe'></if>
 <table class='picture'>
  <tr class='top'><td align=right>
   <biff time='$picture.Sent'>
   <senderlink message='$picture'>
  </td></tr>
  <if what='$topic<0'>
   <tr><td class='topic'>
     <a href='gallery.php?redir=$_&grp=$grp&topic_id=$picture.TopicId'
	class='topic' title='$picture.TopicDescription'>
      $picture.TopicName
     </a>
   </td></tr>
  </if>
  <ifnzero what='$picture.ImageSet'>
   <tr><td class='image'>
    <image_linked_tag id='$picture.ImageId' enlarge='$picture.hasLargeImage'>
   </td></tr>
  </ifnzero>
  <logged>
   <tr><td class='modify'>
    <isedit what='$picture'>
     <a href="postingedit.php?editid=$picture.Id&grp=$picture.Grp&redir=$_"
      >Изменить</a>
    <else>
     <if what='$complain'>
      <a href="complainedit.php?ident=posting&link=$picture.Id&redir=$_"
       >Жалоба</a>
     </if>
    </isedit>
   </td></tr>
  </logged>
  <tr><td class='body'>
   $picture.HTMLBody
  </td></tr>
  <if what='$discuss'>
   <tr><td class='discuss'>
    <logged>
     <if what='$discuss'>
      <biff time='$picture.LastAnswer'>
      <a href='forum.php?redir=$_&msgid=$picture.Id'>
       Обсудить
       <ifnzero what='$picture.AnswerCount'>
	($picture.AnswerCount)<asp>
       </ifnzero>
      <asp></a>
     </if>
    <else>
     <if what='$discuss'>
      <biff time='$picture.LastAnswer'>
      <ifnzero what='$picture.AnswerCount'>
       <a href='forum.php?redir=$_&msgid=$picture.Id'>
	Обсуждение&nbsp;($picture.AnswerCount)</a>
      </ifnzero>
     </if>
    </logged>
   </td></tr>
  </if>
  <ifnzero what='$picture.ImageSet'>
   <tr><td class='bottom'>
    ${picture.ImageX}x${picture.ImageY}, ${picture.ImageSizeKB}KB
   </td></tr>
  </ifnzero>
 </table>
<if what='$picture.isRebe'></span></if>
</element>
