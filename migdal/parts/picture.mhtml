<< @(#) $Id$ >>

<grps>

<element name='topic' params='picture,showtopic'>
<if what='$showtopic'>
 <tr><td class='eightpt' align=center>
  <topiclink posting='$picture'>
 </td></tr>
</if>
</element>

<element name='controls' params='picture,showcomplain'>
<logged>
 <tr><td class='control' align=center
         style='padding-top: 0; padding-bottom: 1ex'>
  <iswrite what='$picture'>
   <editlink posting='$picture'>
  <else>
   <if what='$showcomplain'>
    <a href="complainedit.php?type_id=*COMPL_POSTING&link=$picture.Id&redirid=$_"
       >Жалоба</a>
   </if>
  </iswrite>
 </td></tr>
</logged>
</element>

<element name='picture'>
<if what='$picture.isRebe'><span class='rebe'></if>
 <table class='picture'>
  <tr class='border'><td align=right>
   <biff time='$picture.Sent' small='*true'>
   <senderlink message='$picture'>
  </td></tr>
  <topic picture='$picture' showtopic='$showtopic'>
  <tr><td align=right>
   <vote_frame id='$picture.Id' color='$$style_picture_back'
               image='$$style_picture_back_pic'>
  </td></tr>
  <ifnzero what='$picture.ImageSet'>
   <tr><td class='image'>
    <image_linked_tag id='$picture.ImageId' enlarge='$picture.hasLargeImage'>
   </td></tr>
  </ifnzero>
  <controls picture='$picture' showcomplain='$showcomplain'>
  <tr><td class='body ninept'>
   $picture.HTMLBody
  </td></tr>
  <ifne what='$picture.HTMLSource'>
   <tr><td class='source eightpt' align=right>
    $picture.HTMLSource
   </td></tr>
  </ifne>
  <if what='$showdiscuss'>
   <tr><td class='control' align=right>
    <discusslink posting='$picture'>
   </td></tr>
  </if>
  <ifnzero what='$picture.ImageSet'>
   <tr><td class='border' align=center>
    ${picture.ImageX}x${picture.ImageY}, ${picture.ImageSizeKB}KB
   </td></tr>
  </ifnzero>
 </table>
<if what='$picture.isRebe'></span></if>
</element>
