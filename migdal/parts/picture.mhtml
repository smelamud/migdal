<< @(#) $Id$ >>
<< Based-on: migdal/parts/posting.mhtml 1.21 >>

<grps>
<element name='picture'>
<if what='$picture.isRebe'><span class='rebe'></if>
 <table class='picture'>
  <tr class='top'><td align=right>
   <biff time='$picture.Sent' small='*true'>
   <senderlink message='$picture'>
  </td></tr>
  <if what='$showtopic'>
   <tr><td class='topic'>
     <a href='$topiclink' class='topic' title='$picture.TopicDescription'>
      $picture.TopicName
     </a>
   </td></tr>
  </if>
  <tr><td align=right>
   <vote_frame id='$picture.Id' color='$$style_picture_back'
               image='$$style_picture_back_pic'>
  </td></tr>
  <ifnzero what='$picture.ImageSet'>
   <tr><td class='image'>
    <image_linked_tag id='$picture.ImageId' enlarge='$picture.hasLargeImage'>
   </td></tr>
  </ifnzero>
  <logged>
   <tr><td class='modify'>
    <isedit what='$picture'>
     <a href="postingedit.php?editid=$picture.Id&topic_id=$picture.TopicId&up=$up&grp=$picture.Grp&redirid=$_"
      >Изменить</a>
    <else>
     <if what='$showcomplain'>
      <a href="complainedit.php?ident=posting&link=$picture.Id&redirid=$_"
       >Жалоба</a>
     </if>
    </isedit>
   </td></tr>
  </logged>
  <admin_domain>
   <tr><td class='modify'>
    <ifzero what='$picture.Subdomain'>
     <a href="actions/domainmod.php?editid=$picture.Id&domain=1&okdir=$#-&faildir=$#-"
      >На&nbsp;официальную</a>
    <else>
     <a href="actions/domainmod.php?editid=$picture.Id&domain=0&okdir=$#-&faildir=$#-"
      >Убрать&nbsp;с&nbsp;официальной</a>
    </if>
   </td></tr>
  </admin_domain>
  <tr><td class='body'>
   $picture.HTMLBody
  </td></tr>
  <if what='$showdiscuss'>
   <tr><td class='discuss'><discusslink posting='$picture'></td></tr>
  </if>
  <ifnzero what='$picture.ImageSet'>
   <tr><td class='bottom'>
    ${picture.ImageX}x${picture.ImageY}, ${picture.ImageSizeKB}KB
   </td></tr>
  </ifnzero>
 </table>
<if what='$picture.isRebe'></span></if>
</element>
