<< @(#) $Id$ >>
<< Based-on: demo/parts/complain.mhtml 1.6 >>

<element name='Complain'>
<error id='*EC_NO_ASSIGN' span=2
       text='Вы не имеете права направлять жалобы на рассмотрение'>
<error id='*EC_NO_COMPLAIN' text='Такой жалобы не существует' span=2>
<error id='*EC_LOGIN_ASSIGN' text='Такой пользователь не зарегистрирован'
       span=2>
<error id='*EC_SQL_ASSIGN' text='Ошибка SQL при обновлении записи'
       color=magenta span=2>
<tr class='head'>
 <td>
  <sentview date='$complain.Sent'>
  <biff time='$complain.Sent'>
 </td>
 <td align=right><senderlink message='$complain'></td>
</tr>
<tr class='head'>
 <td>&nbsp;</td>
 <td align=right>
  <judge>
   <table><tr>
    <form method=post action='actions/complainassign.php'>
    <hidden name='okdir' value='$-'>
    <hidden name='faildir' value='$-'>
    <hidden name='id' value='$complain.Id'>
    <td>Рассматривает</td>
    <td><edit name='login' value='$complain.RecipientLogin' size=10
	      maxlength=30></td>
    <td><input type=submit value='Изменить'></td>
    </form>
   </tr></table>
  <else>
   Рассматривает:
   <ifne what='$complain.RecipientLogin'>
    <senderlink message='$complain.RecipientInfo'>
   <else>
    Никто
   </ifne>
  </judge>
 </td>
</tr>
<tr><td colspan=2>
 <span class='subject'>$complain.Subject</span>
</td></tr>
<tr><td colspan=2>
 $complain.HTMLBody
</td></tr>
<tr class='tail'>
 <if what='$$userId==$complain.RecipientId || $$adminComplainAnswers'>
  <td><table><tr>
   <if what='$$userId==$complain.RecipientId'>
    <form method=get action='complainanswer.php'>
     <hidden name='redir' value='$-'>
     <hidden name='complain_id' value='$complain.Id'>
     <td><select name='actid'>
      <iterate_complain_actionlist type='$complain.TypeId'>
      <for>
       <if what='$.isAutomatic'>
	<option value='$.Id' selected>$.Name
       <else>
	<option value='$.Id'>$.Name
       </if>
      </for>
     </select></td>
     <td><input type=submit value='Ответить'></td>
    </form> 
   </if>
   <admin_complain_answers>
    <td><a href='complainactionedit.php?typeid=$complain.TypeId&redir=$_'>
     Редактировать&nbsp;список&nbsp;&gt;&gt;&gt;</a></td>
   </admin_complain_answers>
  </tr></table></td>
 <else>
  <td>&nbsp;</td>
 </if>
 <td align=right>
  <b>Закрыто: </b>
  <if what='$complain.isClosed'>
   <sentview date='$complain.Closed'>
  <else>
   Нет
  </if>
 </td>
</tr>
<if what='$complain.isEditable || $discuss'>
 <tr class='controls'>
  <td>
   <isedit what='$complain'>
    <a href="complainedit.php?editid=$complain.Id&redir=$_"
     >Изменить</a>
   <else>
    &nbsp;
   </isedit>
  </td>
  <td align=right>
   <if what='$discuss'>
    <a href='complainforum.php?redir=$_&compid=$complain.Id'
       >Обсудить ($complain.AnswerCount)</a>
   <else>
    &nbsp;
   </if>
  </td>
 </tr>
</if>
</element>
