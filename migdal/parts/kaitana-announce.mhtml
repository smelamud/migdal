<< @(#) $Id$ >>

<element name='day' params='n'>
<time>
<assign name='current_kaitana' value!='$,@z-1'>
<assign name='link' value='*false'>
<if what='$n==3 || $n==10'>
 <td class=sh>
<else>
 <if what='$n<$$current_kaitana'>
  <td class=p>
  <assign name='link' value='*true'>
 <else>
  <if what='$n==$$current_kaitana'>
   <td class=n>
  <else>
   <td class=f>
  </if>
 </if>
</if>
 <if what='$link'>
  <a href='kaitana.php?topic_id=$`kaitana-w-5763`&day=$n'><asp>
 </if>
 <if what='$n>=1 && $n<=9'>&nbsp;</if>$n
 <if what='$link'>
  <asp></a>
 </if>
</td>
</element>

