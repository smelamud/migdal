<< @(#) $Id$ >>

<assign_global name='current_kaitana' value=7>

<macro name='day'>
 <assign name='link' value='*false'>
 <if what='(%n)==6 || (%n)==13'>
  <td class=sh>
 <else>
  <if what='(%n)<$$current_kaitana'>
   <td class=p>
   <assign name='link' value='*true'>
  <else>
   <if what='(%n)==$$current_kaitana'>
    <td class=n>
   <else>
    <td class=f>
   </if>
  </if>
 </if>
  <if what='$link'>
   <a href='kaitana.php?day=%n'><asp>
  </if>
  <if what='(%n)>=1 && (%n)<=9'>&nbsp;</if>%n
  <if what='$link'>
   <asp></a>
  </if>
 </td>
</macro>

