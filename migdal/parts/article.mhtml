<callback name='article_image'>
<assign name='image' value='$data.Image'>
<ifne what='$data.Align'>
 <assign name='align' value#='align="$data.Align"'>
</ifne>
<table $align>
 <notprint>
  <if what='$$editmode'>
   <tr><td align=center>
    <<a href='liminsert.php?postid=$data.Id&par=$par.Number&redirid=$_'
       class='ninept'><notenglish>Картинка<else>Picture</notenglish></a>>
    <a href='liminsert.php?postid=$data.Id&redirid=$_'
       class='ninept'><notenglish>Картинка<else>Picture</notenglish></a>
   </td></tr>
  </if>
 </notprint>
 <ifnzero what='$image'>
  <tr><td>
   <posting_image posting='$image'>
  </td></tr>
  <ifne what='$image.Title'>
   <tr><td>$image.TitleHTML</td></tr>
  </ifne>
 </ifnzero>
</table>
</callback>

