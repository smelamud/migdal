<< @(#) $Id$ >>

<element name='topics_kaitana_days'>
<topic_obj name='kaitana' id='$base'>
<topics_table class='eightpt' title='$=,Subject'>
 <ispost what='$kaitana'>
  <tr><td colspan=2>
   <a href='postingedit.php?redirid=$_&topic_id=$,Id&grp=*GRP_ARTICLES'
      class='edit'>Добавить</a>
  </td></tr>
  <tr><td colspan=2>
   <a href='reorder.php?redirid=$_&issue=-1&topic_id=$,Id&grp=*GRP_ARTICLES'
      class='edit'>Расставить</a>
  </td></tr>
 </ispost>
 <iterate_postinglist grp='*GRP_ARTICLES' limit=0 sort='*SORT_INDEX0'
                      topic_id='$,Id' recursive='*false'>
 <for>
  <topics_line time='$.Modified' text='$=.Heading' href#='$.GrpDetailsHref'
	       arrow!='$.Id==$index'>
 </for>
 <ifnzero what='$;Count'>
  <topics_splitter>
 </ifnzero>
 <iterate_postinglist topic_id='$,Id' grp='*GRP_KAITANA_NEWS'
                      sort='*SORT_INDEX1' limit=0>
 <for>
  <topics_line time='$.Modified' text='$=.Heading'
               href#='/${,Catalog}day-$.Index1/' arrow!='$.Id==$index'>
 </for>
</topics_table>
</element>

<<element name='topics_kaitanot' params='topic_id,root,href'
         defaults="topic_id=-1 root='$`kaitana`' href='kaitana.php'">
<topic_obj id='$root'>
<iterate_topiclist grp='*GRP_KAITANA_GALLERY' up='$root' sort='*SORT_RINDEX0'>
<topics_table class='eightpt' title='$,Name'>
 <for>
  <posting_last topic_id='$.Id' recursive='*false'>
  <topics_line time='$,' text='$.Name' href#='$href?topic_id=$.Id'
               arrow!='$topic_id==$.Id'>
 </for>
</topics_table>
</element>

<element name='topics_kaitana'>
<if what='$posting.TopicId!=$`kaitana`'>
 <topics_kaitana_days posting='$posting' href='kaitana.php'>
<else>
 <topics_kaitanot topic_id='$posting.TopicId' root='$`kaitana`'
		  href='kaitana.php'>
</if>
</element>

<element name='topics_halom'>
<if what='$posting.TopicId!=$`halom`'>
 <topics_kaitana posting='$posting' href='halom.php'>
<else>
 <topics_kaitanot topic_id='$posting.TopicId' root='$`halom`' href='halom.php'>
</if>
</element>>
