<< @(#) $Id$ >>

<element name='topicselect'>
<iterate_sortedtopicnames grp='$grp' up='$up'>
<ifnzero what='$;Count'>
 <tr>
  <td>$title <if what='$mandatory'><star></if></td>
  <td>
   <select name='$name'>
    <assign name='none' value!='$up<0 ? 0 : $up'>
    <radio title='-- Без темы --' value='$none' peervalue='$value'>
    <for>
     <radio title='$.FullName' value='$.Id' peervalue='$value'>
    </for>
   </select>
  </td>
 </tr>
<else>
 <hidden name='$name' value='$up'>
</ifnzero>
</element>
