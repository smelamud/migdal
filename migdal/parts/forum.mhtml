<< @(#) $Id$ >>

<element name='forum'>
<table width=100% class='forum' cellspacing=1 cellpadding=0>
 <tr valign=top>
  <td class='header' rowspan=2 width=150 align=left>
   <table cellpadding=0>
    <tr>
     <td><senderlink message='$forum'></td>
     <td rowspan=2><biff time='$forum.Modified'></td>
    </tr>
    <tr><td class='sent'>
     <sentview date='$forum.Sent'>
    </td></tr>
   </table>
   <<p align=center>
    <img src='...'>
   </p>
   <p>>
  </td>
  <td class='body ninept' align=left>
   $forum.BodyHTML
  </td>
 </tr>
 <tr valign=bottom>
  <td class='controls' height=22>&nbsp;
   <a href="forumansweredit.php?parent_id=$forum.ParentId&peerid=$forum.Id&redirid=$_"
      title='Ответить с цитированием'>Ответить</a>
   <iswrite what='$forum'>
    &nbsp;
    <a href="forumansweredit.php?editid=$forum.Id&redirid=$_"
     >Изменить</a>
    <moderator>
     &nbsp;
     <if what='$forum.isDisabled'>
      <a href="actions/moderate.php?editid=$forum.Id&hide=0&okdir=$#-&faildir=$#-"
       >Разрешить&nbsp;показ</a>
     <else>
      <a href="actions/moderate.php?editid=$forum.Id&hide=1&okdir=$#-&faildir=$#-"
       >Запретить&nbsp;показ</a>
     </if>
    </moderator>
   </iswrite>
  </td>
 </tr>
</table>
</element>
