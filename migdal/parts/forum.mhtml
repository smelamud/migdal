<< @(#) $Id$ >>

<element name='forum_selflink'>
<selflink href#='$[offset tid=$forum.Id]#t$forum.Id'>
</element>

<element name='forum'>
<a name='t$forum.Id'></a>
<table width=100% class='forum' cellspacing=1 cellpadding=0>
 <tr valign=top>
  <td class='header' rowspan=2 width=150 align=left>
   <table cellpadding=0>
    <tr>
     <td><senderlink message='$forum'></td>
     <td rowspan=2><biff time='$forum.Modified'></td>
    </tr>
    <tr><td class='sent'>
     <sentview date='$forum.Sent'>
    </td></tr>
   </table>
   <<p align=center>
    <img src='...'>
   </p>
   <p>>
  </td>
  <td class='body ninept' align=left>
   $forum.BodyHTML
  </td>
 </tr>
 <tr valign=bottom>
  <td class='controls' height=22>
   <table cellspacing=0 cellpadding=0><tr valign=bottom>
    <td>&nbsp;&nbsp;&nbsp;</td>
    <td><forum_selflink forum='$forum'></td>
    <td>&nbsp;&nbsp;&nbsp;</td>
    <td>
     <a href="forumansweredit.php?parent_id=$forum.ParentId&peerid=$forum.Id&redirid=$_"
	title='Ответить с цитированием'>Ответить</a>
    </td>
    <iswrite what='$forum'>
     <td>&nbsp;&nbsp;&nbsp;</td>
     <td>
      <a href="forumansweredit.php?editid=$forum.Id&redirid=$_"><asp>
       <asp>Изменить<asp>
      <asp></a>
     </td>
     <moderator>
      <td>&nbsp;&nbsp;&nbsp;</td>
      <td>
       <if what='$forum.isDisabled'>
	<a href="actions/moderate.php?editid=$forum.Id&hide=0&okdir=$#-&faildir=$#-"><asp>
	 <asp>Разрешить&nbsp;показ<asp>
	<asp></a>
       <else>
	<a href="actions/moderate.php?editid=$forum.Id&hide=1&okdir=$#-&faildir=$#-"><asp>
	 <asp>Запретить показ<asp>
	<asp></a>
       </if>
      </td>
     </moderator>
    </iswrite>
   </tr></table>
  </td>
 </tr>
</table>
</element>
