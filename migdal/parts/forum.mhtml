<< @(#) $Id$ >>

<element name='forum_selflink'>
<selflink href#='$forum.ParentHref/?tid=$forum.Id#t$forum.Id'>
</element>

<element name='forum'>
<a name='t$forum.Id'></a>
<table width=100% class='forum' cellspacing=1 cellpadding=0>
 <tr valign=top>
  <td class='header' rowspan=2 width=150 align=left>
   <senderlink message='$forum'><br>
   <span class='sent'><sentview date='$forum.Sent'></span>
   <p>
   <biff time='$forum.Modified'>
  </td>
  <td class='body ninept' align=left>
   $forum.BodyHTML
  </td>
 </tr>
 <tr valign=bottom>
  <td class='controls' height=22>
   <table cellspacing=0 cellpadding=0><tr valign=bottom>
    <td>&nbsp;&nbsp;&nbsp;</td>
    <td><forum_selflink forum='$forum'></td>
    <td>&nbsp;&nbsp;&nbsp;</td>
    <td>
     <a href="$forum.ParentHref/reply/?peerid=$forum.Id&redirid=$_"
	title='Ответить с цитированием'>Ответить</a>
    </td>
    <iswrite what='$forum'>
     <td>&nbsp;&nbsp;&nbsp;</td>
     <td>
      <a href="$forum.ParentHref/update/?editid=$forum.Id&redirid=$_"><asp>
       <asp>Изменить<asp>
      <asp></a>
     </td>
     <moderator>
      <td>&nbsp;&nbsp;&nbsp;</td>
      <td>
       <if what='$forum.isDisabled'>
	<a href="/actions/entry/moderate?editid=$forum.Id&hide=0&okdir=$#-&faildir=$#-"><asp>
	 <asp>Разрешить&nbsp;показ<asp>
	<asp></a>
       <else>
	<a href="/actions/entry/moderate?editid=$forum.Id&hide=1&okdir=$#-&faildir=$#-"><asp>
	 <asp>Запретить показ<asp>
	<asp></a>
       </if>
      </td>
      <td>&nbsp;&nbsp;&nbsp;</td>
      <td>
       <a href="/actions/forum/delete?id=$forum.Id&okdir=$#-&faildir=$#-"><asp>
	<asp>Удалить<asp>
       <asp></a>
      </td>
     </moderator>
    </iswrite>
   </tr></table>
  </td>
 </tr>
</table>
</element>
