<grps>
<zone>
 <ident_id table='topics' ident='$topic_id'>
 <log event=gallery text#='topic($,) offset=$offset'>
</zone>
<if what='$user_id<=0'>
 <unititle chapter='Галерея' topic_id='$topic_id'>
 <if what='$topic_id<=0'>
  <topictitle title='Галерея'>
 </if>
<else>
 <topic_obj name='topic' id='$topic_id'>
 <user_obj id='$user_id'>
 <pagetitle title#='Галерея - $topic.Name - $,FullName'>
 <topictitle title#='$topic.Name --- $,FullName'>
</if>

<element name='notonly' params='posting'>
<if what='!$$general'>
 <identify posting='$posting'>
 <ifne what='$posting.MainHref'>
  <div class='ninept'>
   Этот раздел содержит не только картинки.
   <a href='$posting.MainHref'>Увидеть раздел полностью.</a>
  </div>
 </ifne>
</if>
</element>

<macro name='main_gallery'>
 <if what='$user_id<=0 && ($topic_id<=0 || $,GalleryNews)'>
</macro>
<endif name='/main_gallery'>

<html>
<preamble>
<body>
 <top ident!="$general ? 'index' : 'gallery'">
 <posting_new grp='*GRP_GALLERY' topic_id='$topic_id' sender_id='$user_id'>
 <table width=100% cellpadding=5><tr valign=top>
  <td width=150 class='eframe'>
   <if what='$general'>
    <topics posting='$,'>
    <ears>
   <else>
    <topics_gallery posting='$,'>
    <main_gallery>
    <else>
     <ears>
    </main_gallery>
   </if>
  </td>
  <main_gallery>
   <td class='cframe'><outer>
    <table width=100% cellspacing=0 cellpadding=5><tr valign=top>
     <td><common>
      <subtitle>
      <outer><div class='nframe' style='margin-bottom: 5px; padding: 5px'>
       <inner><notonly posting='$,'></inner>
      </div></outer>
      <p>
      <outer><div class='nframe' style='padding: 5'><inner>
       <seealso_links topic_id='$topic_id' topic_grp='*GRP_GALLERY'
		      title='См. также в разделе ссылок'>
       <seealso_other topic_id='$topic_id' topic_grp='*GRP_GALLERY'
		      title='По этой теме в других разделах'>
      </inner></div></outer>
      <gallery_main topic_id='$topic_id' offset='$offset'>
     </common></td>
     <td width=130 class='nframe'><inner>
      <hit_parade_gallery_month grp='*GRP_GRAPHICS' topic_id='$topic_id'
			        showshadows!='$topic_id>0'>
     </inner></td>
    </tr></table>
   </outer></td>
  <else>
   <td>
    <div class='nframe' style='margin-bottom: 5px; padding: 5px'>
     <subtitle>
     <notonly posting='$,'>
     <p>
     <seealso_links topic_id='$topic_id' topic_grp='*GRP_GALLERY'
		    title='См. также в разделе ссылок'>
     <seealso_other topic_id='$topic_id' topic_grp='*GRP_GALLERY'
		    title='По этой теме в других разделах'>
    </div>
    <gallery topic_id='$topic_id' rows='$userPictureRowPortion'
	     cols='$userPictureColumnPortion' offset='$offset' sort='$sort'
	     user_id='$user_id'>
   </td>
  </main_gallery>
 </tr></table>
 <bottom>
</body>
</html>
