<< @(#) $Id$ >>

<ident name='topic_id' table='topics'>
<int name='offset'>

<ifzero what='$topic_id'>
 <assign name='topic_id' value='-1'>
</ifzero>

<< Traps >>
<if what='$topic_id==8'>
 <trap text='Taglit gallery'>
 <reload href='taglit.php'>
</if>
<ifnzero what='$grp'>
 <trap text='grp!=0 in gallery.php'>
 <reload href='$[grp]'>
</ifnzero>
<< /Traps >>

<grps>
<zone>
 <ident_id table='topics' ident='$topic_id'>
 <log event=gallery text#='topic($,) offset=$offset'>
</zone>
<unititle chapter='Галерея' topic_id='$topic_id'>

<html>
<preamble>
<body>
 <top ident='gallery'>
 <table width=100% cellspacing=5 cellpadding=5><tr valign=top>
  <td width=120 class='eframe'>
   <topics_minor id='$topic_id' subdomain!='$$officialDomain ? 1 : -1'
                 withpostings='$$officialDomain' grp='*GRP_GALLERY'
		 href='gallery.php' title='Галерея'>
  </td>
  <td>
   <if what='$topic_id<=0'>
    <gallery_main cols='$userPictureColumnPortion'
                  subdomain!='$$officialDomain ? 1 : -1'>
   <else>
    <div class='aframe' style='margin-bottom: 5px; padding: 5px'>
     <subtitle icon='pics/gall-big.gif'>
     <seealso_links topic_id='$topic_id'
		    title='См. также в разделе ссылок'>
    </div>
    <gallery topic='$topic_id' rows='$userPictureRowPortion'
	     cols='$userPictureColumnPortion' offset='$offset'
	     subdomain!='$$officialDomain ? 1 : -1'>
   </if>
  </td>
 </tr></table>
 <bottom>
</body>
</html>
