<< @(#) $Id$ >>

<ident name='topic_id' table='topics'>
<ifzero what='$topic_id'>
 <assign name='topic_id' value='-1'>
</ifzero>
<int name='offset'>
<int name='sort'>
<ifzero what='$sort'>
 <assign name='sort' value='*SORT_PSENT'>
</ifzero>

<< Traps >>
<if what='$topic_id==4'>
 <trap text='Arab-Israel gallery'>
 <reload href='index.php?topic_id=4'>
</if>
<if what='$topic_id==143'>
 <trap text='Museum gallery'>
 <reload href='migdal.php?artid=1582'>
</if>
<if what='$topic_id==27'>
 <trap text='Veterans gallery'>
 <reload href='veterans.php'>
</if>
<ifnzero what='$grp'>
 <trap text='grp!=0 in gallery.php'>
 <reload href='$[grp]'>
</ifnzero>
<< /Traps >>

<grps>
<zone>
 <ident_id table='topics' ident='$topic_id'>
 <log event=gallery text#='topic($,) offset=$offset'>
</zone>
<unititle chapter='Галерея' topic_id='$topic_id'>

<html>
<preamble>
<body>
 <top ident='gallery'>
 <table width=100% cellspacing=5 cellpadding=5><tr valign=top>
  <td width=150 class='eframe'>
   <zone>
    <posting_new grp='*GRP_GALLERY' topic_id='$topic_id'>
    <topics_gallery posting='$,'>
   </zone>
  </td>
  <td>
   <if what='$topic_id<=0'>
    <gallery_main cols='$userPictureColumnPortion'>
   <else>
    <div class='nframe' style='margin-bottom: 5px; padding: 5px'>
     <subtitle icon='pics/gall-big.gif'>
     <seealso_links topic_id='$topic_id' topic_grp='*GRP_GALLERY'
		    title='См. также в разделе ссылок'>
     <seealso_other topic_id='$topic_id' topic_grp='*GRP_GALLERY'
		    title='По этой теме в других разделах'>
     <notlogged>
      <div class='info'>
       <em>Хотите добавлять картинки?</em>
       <a href='/register.php?redirid=$_'>Зарегистрируйтесь!</a>
      </div>
     </notlogged>
    </div>
    <gallery topic_id='$topic_id' rows='$userPictureRowPortion'
	     cols='$userPictureColumnPortion' offset='$offset' sort='$sort'>
   </if>
  </td>
 </tr></table>
 <bottom>
</body>
</html>
