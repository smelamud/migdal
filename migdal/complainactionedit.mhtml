<< @(#) $Id$ >>

<int name='editid'>

<html>
<preamble>
<body>
 <top ident='index'>
 <table width=100%><tr valign=top>
  <td class='eframe' width=200>
   <topics_table class='ninept' title='Ответы'>
    <iterate_complain_actionlist>
    <for>
     <topics_line arrow!='$editid==$.Id' href='$[err edittag editid=$.Id]'
		  text='$.Name'>
     <topics_line href#='/actions/complain/action/delete?editid=$.Id&okdir=$#-&faildir=$#-'
		  class='edit' text='Удалить' nobullet='*true'>
    </for>
    <topics_line arrow!='$editid==0' href='$[err edittag editid=0]'
                 class='new' text='-- Добавить --'>
   </topics_table>
  </td>
  <td>
   <complain_action_obj id='$editid'>
   <setup>
   <if what='$editid'>
    <form_table title='Редактирование ответа на жалобу'>
   <else>
    <form_table title='Добавление ответа на жалобу'>
   </if>
   <form method=post action='/actions/complain/action/modify'>
    <hidden name='edittag' value=1>
    <hidden name='okdir' value='$-'>
    <hidden name='faildir' value='$-'>
    <hidden name='editid' value='$editid'>
    <starinfo>
    <error id='*ECAD_NO_EDIT' text='Вы не администратор'>
    <error id='*ECAD_NO_ACTION' text='Такого ответа на жалобу не существует'>
    <error id='*ECAM_NO_EDIT' text='Вы не администратор'>
    <error id='*ECAM_NO_SCRIPT' text='Такого скрипта не существует'>
    <form_complainactionselect title='Действие' name='script_id'
                               value='$,ScriptId' mandatory='*false'>
    <error id='*ECAM_NAME_ABSENT' text='Укажите заголовок ответа'>
    <form_edit title='Заголовок' mandatory='*true' name='name' value='$=,Name'
               size=40 maxlength=70>
    <error id='*ECAM_TEXT_ABSENT'
	   text='Напишите хотя бы пару строчек в теле ответа'>
    <form_editor title='Текст' mandatory='*true' name='text' body='$=,Text'>
    <if what='$editid'>
     <form_buttons title='Изменить'>
    <else>
     <form_buttons title='Добавить'>
    </if>
   </form>
   </form_table>
  </td>
 </tr></table>
 <bottom>
</body>
</html>
