<< @(#) $Id$ >>

<pagetitle title='Расстановка тем'>

<int name='up'>
<int name='level'>
<int name='index4'>

<element name='order_selector' params='sels,current'>
<select name='topic[]'>
 <reset_iterator list='$sels'>
 <for list='sels'>
  <radio title='$.Name' value='$.Id' peervalue='$current'>
 </for>
</select>
</element>

<html>
<preamble>
<body>
 <top ident='index'>
 <formtable title='Расстановка тем'>
  <form method=post action='actions/topicsreorder.php'>
   <hidden name='edittag' value=1>
   <hidden name='okdir' value='$--'>
   <hidden name='faildir' value='$-'>
   <iterate_topiclist name='sels' grp='*GRP_ALL' up='$up' sort='*SORT_INDEX0'
                      recursive!='$level>=2' level='$level' index4='$index4'>
   <iterate_topiclist grp='*GRP_ALL' up='$up' sort='*SORT_INDEX0'
                      recursive!='$level>=2' level='$level' index4='$index4'>
   <table>
    <error id='*ETO_DUPS' text='Некоторые темы указаны дважды' span=2>
    <error id='*ETO_NO_TOPIC' text='Темы не существует' span=2>
    <error id='*ETO_NO_REORDER' text='Вы не имеете права менять порядок тем'
           span=2>
    <error id='*ETO_SQL' text='Ошибка базы данных при обновлении записи'
           span=2 color=magenta>
    <for>
     <tr>
      <td>$;NextPosition.</td>
      <td><order_selector sels='$sels'
                          current!='$edittag ? $art[$;Position] : $.Id'></td>
     </tr>
    </for>
   </table>
   <formbuttons title='Изменить'>
  </form>
 </formtable>
 <bottom>
</body>
</html>
