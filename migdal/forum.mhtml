<< @(#) $Id$ >>

<int name='msgid'>
<int name='offset'>
<grps>
<posting_full name='posting' id='$msgid' grp='*GRP_FORUMS'>
<log event=forum text#='post($,Id)'>
<notenglish>
 <pagetitle title#='Обсуждение &lt;&lt;$,SubjectDesc&gt;&gt;'>
<else>
 <pagetitle title#='Comments: $,SubjectDesc'>
</notenglish>

<html>
<preamble>
<body>
 <top ident='$,MenuIndex'>
 <table width=100% cellpadding=5>
  <tr valign=top>
   <if what='$,Grp!=*GRP_LINKS'>
    <td width=150 class='eframe'>
     <topics posting='$,'>
    </td>
   <else>
    <td width=150 class='nframe'>
     <topics_links posting='$,'>
    </td>
   </tr>
   <tr valign=top>
   </if>
   <td class='cframe'>
    <posting posting='$posting' shorten='*true' showdiscuss='*false'
	     showcomplain='*true'>
    <p>
    <forums parent_id='$,MessageId' limit='$$userForumPortion' offset='$offset'>
   </td>
  </tr>
 </table>
 <bottom>
</body>
</html>
