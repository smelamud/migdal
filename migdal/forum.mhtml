<int name='msgid'>
<grps>
<html>
<head>
 <title>Мигдаль - Обсуждение</title>
</head>
<body>
 <top ident='forums'>
 <posting_full id='$msgid' grp='*GRP_FORUMS'>
 <table width=100%><tr valign=top>
  <zone>
   <require name='lib/grps.php'>
   <grpdata name='g' grp='$,Grp'>
  </zone>
  <td width=120><topics g='$g' topic_id='$,TopicId' navi='*true'></td>
  <td width=20>&nbsp;</td>
  <td>
   <center>
    <if what='$,Grp!=*GRP_GALLERY'>
     <posting posting='$,' grp='*GRP_FORUMS' discuss='*false'>
    <else>
     <picture picture='$,' grp='*GRP_GALLERY' discuss='*false'>
    </if>
   </center>
   <p>
   <forums up='$,MessageId' limit='$$userForumPortion'>
  </td>
 </tr></table>
 <bottom>
</body>
</html>
