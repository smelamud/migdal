<< @(#) $Id$ >>

<force_community>

<html>
<refresh period='$$userChatRefresh' url='$-'>
<stylesheet ident='chat'>
<preamble>
<body class='ninept chatboard'>
 <update_last_chat>
 <iterate_chat limit='$$userChatPortion'>
 <time>
 <assign name='day' value='$,@d'>
 <table cellspacing=0 cellpadding=0>
  <for>
   <if what='$day!=$.Sent@d'>
    <tr><td colspan=3 class='split'>$.Sent@d.$.Sent@m.$.Sent@Y</td></tr>
    <assign name='day' value='$.Sent@d'>
   </if>
   <tr>
    <td class='time'>[$.Sent@H:$.Sent@i:$.Sent@s]</td>
    <td>&nbsp;</td>
    <td><span class='name'>$.Login:</span> $.HTMLText</td>
   </tr>
  </for>
 </table>
</body>
</html>
