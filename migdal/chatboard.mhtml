<< @(#) $Id$ >>

<html>
<refresh period='$$userChatRefresh' url='$-'>
<zone>
 <stylesheet ident='chat'>
 <preamble>
</zone>
<body class='chatboard'>
 <update_last_chat>
 <iterate_chat limit='$$userChatPortion'>
 <assign name='day' value=''>
 <table cellspacing=0 cellpadding=0>
  <for>
   <ifne what='$day'>
    <if what='$day!=$.Sent@d'>
     <tr><td colspan=2 class='split'>$.Sent@d.$.Sent@m.$.Sent@Y</td></tr>
     <assign name='day' value='$.Sent@d'>
    </if>
   <else>
    <assign name='day' value='$.Sent@d'>
   </ifne>
   <tr>
    <td class='time'>[$.Sent@H:$.Sent@i:$.Sent@s]</td>
    <td>&nbsp;</td>
    <td><span class='name'>$.Login:</span> $.HTMLText</td>
   </tr>
  </for>
 </table>
</body>
</html>
