<< @(#) $Id$ >>

<int name='postid'>
<pagetitle title#='Редактирование флагов сообщения'>

<element name='check' params='name,value,title,letter'>
<tr>
 <td align=center class='nframe'><b>$letter</b></td>
 <td align=left>
  <checkbox name='$name' value='$value' title='$title'>
 </td>
</tr>
</element>

<html>
<preamble>
<body>
 <top ident='index'>
 <posting_obj id='$postid' fields='*SELECT_GENERAL'>
 <formtable title#='Редактирование флагов сообщения'>
  <form method=post action='actions/moderateone.php'>
   <hidden name='okdir' value='$--'>
   <hidden name='faildir' value='$-'>
   <hidden name='id' value='$,MessageId'>
   <hidden name='edittag' value=1>
   <table>
    <error id='*EMO_NO_MODERATE' text='Вы не модератор' span=2>
    <error id='*EMO_NO_MESSAGE' text='Такого сообщения не существует' span=2>
    <check letter='h' name='hidden' value='$,isHidden' title='Не показывать'>
    <check letter='d' name='disabled' value='$,isDisabled' title='Запретить'>
    <iterate_modbits>
    <for>
     <check letter='$.Letter' name#='bit$.Bit' value!='$,getModbits & $.Bit'
            title='$.Name'>
    </for>
   </table>
   <formbuttons title='Изменить'>
  </form>
 </formtable>
 <bottom>
</body>
</html>
