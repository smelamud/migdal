<< @(#) $Id$ >>

<element name='batcher' params='&list'>
<table width=100%><tr>
 <td align=left class='info'>
  <table><tr valign=center>
   <td><image src='pics/sheet.gif'></td>
   <td>
    <a href='complainedit.php?type_id=*COMPL_NORMAL&redirid=$_'
       >Добавить жалобу</a>
   </td>
  </tr></table>
 </td>
 <td><spin list='$list'></td>
</tr></table>
</element>

<int name='offset'>
<pagetitle title='Жалобная книга'>

<html>
<preamble>
<body>
 <top ident='index'>
 <iterate_complainlist name='list' limit=20 offset='$offset'>
 <batcher list='$;'>
 <assign name='closed' value='*true'>
 <div style='padding: 5px'>
  <for>
   <if what='$list.isFirst || $.isClosed!=$closed'>
    <notfirst what='$list'>
     </table>
     <p>
    </notfirst>
    <table class='catalog'>
     <tr valign=center class='div'>
      <if what='!$.isClosed'>
       <td colspan=6>Открытые жалобы</td>
      <else>
       <td colspan=7>Закрытые жалобы</td>
      </if>
     </tr>
     <tr valign=top>
      <th>No.</th><th>Прислано</th><th>Автор</th><th>Заголовок</th>
      <th>Рассматривает</th><if what='$.isClosed'><th>Закрыто</th></if>
      <th>Ответы</th>
     </tr>
    <assign name='closed' value='$.isClosed'>
   </if>
   <if what='$;isOdd'><tr class='odd'><else><tr></if>
    <td align=right class='eightpt'>$.Id</td>
    <td class='eightpt'><sentview date='$.Sent'></td>
    <td class='eightpt'><senderlink message='$.'></td>
    <td class='subject ninept'>
     <a href='complainforum.php?compid=$.Id&redirid=$_'>$.Subject</a>
     <biff time='$.Sent'>
    </td>
    <if what='$.isAssigned'>
     <td class='eightpt'><senderlink message='$.RecipientInfo'></td>
    <else>
     <td align=center>-</td>
    </if>
    <if what='$.isClosed'>
     <td class='eightpt'><sentview date='$.Closed'></td>
    </if>
    <td class='ninept' align=center>
     <biff time='$.LastAnswer' small='*true'>
     $.AnswerCount
    </td>
   </tr>
  </for>
  </table>
 </div>
 <batcher list='$;'>
 <bottom>
</body>
</html>
