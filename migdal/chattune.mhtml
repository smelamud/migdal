<< @(#) $Id$ >>

<force_community>
<pagetitle title='Настроить чат'>

<html>
<preamble>
<body>
 <top ident='chattune'>
 <formtable title='Настройка чата'>
  <form method=get action='/chat.php'>
   <hiddenget remove='chr chp redir redirid'>
   <table>
    <tr>
     <td>Обновлять каждые</td>
     <td>
      <select_portion name='chr' value='$$userChatRefresh'
		      vals='5 7 10 12 15 17 20 25 30'>
     </td>
     <td>сек.</td>
    </tr>
    <tr>
     <td>Обновлять пользователей каждые</td>
     <td>
      <select_portion name='chur' value='$$userChatUsersRefresh'
		      vals='30 45 60 120 180 240 300'>
     </td>
     <td>сек.</td>
    </tr>
    <tr>
     <td>Показывать по</td>
     <td>
      <select_portion name='chp' value='$$userChatPortion'
                      vals='10 15 20 25 30 35 40'>
     </td>
     <td>сообщений</td>
    </tr>
    <formbuttons title='Изменить' span=3>
   </table>
  </form>
 </formtable>
</body>
</html>
