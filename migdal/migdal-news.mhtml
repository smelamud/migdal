<< @(#) $Id$ >>

<ident name='topic_id' table='topics'>
<int name='offset'>
<ifzero what='$topic_id'>
 <assign name='topic_id' value='$`migdal-news`'>
</ifzero>

<log event=index text#='topic($topic_id) offset=$offset'>
<grps>
<topic_obj id='$`migdal-news`'>
<assign name='title' value='$,Name'>
<if what='$topic_id!=$`migdal-news`'>
 <topic_obj id='$topic_id'>
 <assign name='title' value#='$title :: $,Name'>
</if>
<pagetitle title='$title'>
<topictitle title='$title'>

<html>
<preamble>
<body>
 <top ident='index'>
 <table width=100% cellpadding=5>
  <tr valign=top>
   <td width=150 class='eframe'>
    <posting_new topic_id='$topic_id' grp='*GRP_NEWS'>
    <topics posting='$,'>
   </td>
   <td class='cframe'>
    <subtitle>
    <outer><div class='nframe' style='padding: 5'>
     <inner>
      <seealso_links topic_id='$topic_id' title='См. также в разделе ссылок'>
     </inner>
    </div></outer>
    <postings grp='*GRP_TAPE' topic_id='$topic_id' limit='$userMsgPortion'
	      offset='$offset' recursive!='$topic_id==$`migdal-news`'>
   </td>
  </tr>
 </table>
 <bottom>
</body>
</html>
