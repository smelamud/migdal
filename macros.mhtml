<< @(#) $Id$ >>
<< GRP >>
<macro name='grp' defaults='name=g ignore=0' x=>
 <header>
  <require name='lib/grps.php'>
  <require name='lib/grputils.php'>
  <obj name='%name' class='GrpData' arg1='$grp' arg2='%ignore'>
  <reload why='$g.Invalid' var='grp' value='*GRP_FORUMS'>
 </header>
</macro>
<< Iterators >>
<macro name='iterate_userlist'>
 <require name='lib/users.php'>
 <iterate name='%name' class='UserListIterator'>
</macro>
<macro name='iterate_topiclist'>
 <require name='lib/topics.php'>
 <iterate name='%name' class='TopicListIterator' arg1='%grp'>
</macro>
<macro name='iterate_topicnames'>
 <require name='lib/topics.php'>
 <iterate name='%name' class='TopicNamesIterator' arg1='%grp'>
</macro>
<< Calls >>
<macro name='topic_name' defaults='name=topic id="$topic_id"'>
 <require name='lib/topics.php'>
 <call name='%name' func='getTopicNameById' arg1='%id'>
</macro>
<macro name='message' defaults='name=message grp=0 topic=0'>
 <require name='lib/messages.php'>
 <call name='%name' func='getMessageById' arg1='%id' arg2='%grp' arg3='%topic'>
</macro>
<macro name='image_name' defaults='name=image'>
 <require name='lib/images.php'>
 <call name='%name' func='getImageNameBySet' arg1='%set'>
</macro>
<< Permissions >>
<macro name='admin_topics'>
 <if what='$$userAdminTopics'>
</macro>
<macro name='/admin_topics'>
 </if>
</macro>
<< Typecasts >>
<macro name='int'>
 <header>
  <settype name='%name' type='integer'>
 </header>
</macro>
<< Elements >>
<decel name='reload' file='lib/utils.php' params='why,var,value'>
<decel name='top' file='parts/top.php' params='ident'>
<decel name='messages' file='parts/messages.php'
       params='grp,topic,limit,offset' defaults='topic=0 limit=10 offset=0'>
