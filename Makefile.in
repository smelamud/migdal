# Makefile for Migdal website

# @(#) $Id$

%.php: %.mhtml miparser macros.mhtml
	./miparser $< > $@

all: complainedit.php complainforum.php complains.php forum.php index.php \
     messageedit.php messages.php topics.php topicedit.php useredit.php \
     userok.php users.php
	(cd parts; $(MAKE) all)

Makefile: Makefile.in
	cp Makefile.in Makefile

conf/migdal.conf: configure
	./configure

dbinfo:
	mysqldump -u root -p migdal --no-data > migdal.db
	mysqldump -u root -p migdal menu complain_types --no-create-info >> migdal.db

install: all
	(cd parts; $(MAKE) install)
