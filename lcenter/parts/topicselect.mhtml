<< @(#) $Id$ >>

<element name='topicselect'>
<if what='$root<0'>
 <assign name='recursive' value='*false'>
</if>
<iterate_sortedtopicnames grp='$grp' up='$root' recursive='$recursive'>
<if what='$;Count-$recursive>0'>
 <tr>
  <td>$title <if what='$mandatory'><star></if></td>
  <td>
   <select name='$name'>
    <assign name='none' value!='$root<0 ? 0 : $root'>
    <radio title='-- Без темы --' value='$none' peervalue='$value'>
    <for>
     <ifne what='$.FullName'>
      <radio title='$.FullName' value='$.Id' peervalue='$value'>
     </ifne>
    </for>
   </select>
  </td>
 </tr>
<else>
 <hidden name='$name' value='$root'>
</if>
</element>
