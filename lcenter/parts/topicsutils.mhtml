<< @(#) $Id$ >>

<element name='topics_line'>
<if what='$arrow'>
 <li class='arrow'>
  $text
  <ifne what='$comment'>
   <br /><span class='comment'>$comment</span>
  </ifne>
 </li>
<else>
 <if what='!$nobullet'><li><else><li class='nobullet'></if>
  <ifne what='$title'>
   <a href='$href' title='$title' class='$class'><asp>
  <else>
   <a href='$href' class='$class'><asp>
  </ifne>
  <asp>$text</a>
  <ifne what='$comment'>
   <br /><span class='comment'>$comment</span>
  </ifne>
 </li>
</if>
</element>

<element name='topics_table'>
<ifne what='$class'>
 <div class='topics $class'>
<else>
 <div class='topics'>
</ifne>
 <ifne what='$title'>
  <span class='header'>$title</span>
 </ifne>
 <ul>
</element>

<element name='topics_table_end'>
 </ul>
</div>
</element>
