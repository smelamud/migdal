<< @(#) $Id$ >>

<macro name='trace'>
 <backtrace_url url%!url='%url' isbottom='*false'>
</macro>

<element name='backtrace_url' params='url,isbottom,&name'
         defaults="isbottom='*true' name='$name'">
<parse_url url='$url'>
<if what="$basename=='about.php'">
 <trace url='index.php'>
 <assign name='name' value='О нас'>
<elif what="$basename=='course-details.php'">
 <posting_obj id='$id' fields='*SELECT_GENERAL'>
 <trace url='courses.php'>
 <assign name='name' value='$,SubjectDesc'>
<elif what="$basename=='courses.php'">
 <if what='$id==0 || $id==$`postings:courses`'>
  <trace url='index.php'>
  <assign name='name' value='Курсы'>
 <else>
  <posting_obj id='$id' fields='*SELECT_GENERAL'>
  <trace url='courses.php'>
  <assign name='name' value='$,SubjectDesc'>
 </if>
<elif what="$basename=='grouporg.php'">
 <trace url='index.php'>
 <assign name='name' value='Администратор групп'>
<elif what="$basename=='journal.php'">
 <trace url='index.php'>
 <assign name='name' value='Журнал репликаций'>
<elif what="$basename=='login.php'">
 <trace url='index.php'>
 <assign name='name' value='Вход'>
<elif what="$basename=='news.php'">
 <posting_obj id='$id' fields='*SELECT_GENERAL'>
 <trace url='index.php'>
 <assign name='name' value='$,SubjectDesc'>
<elif what="$basename=='index.php' || $basename==''">
 <assign name='name' value='Главная'>
<elif what="$basename=='postingorg.php'">
 <trace url='index.php'>
 <assign name='name' value='Администратор сообщений'>
<elif what="$basename=='topicorg.php'">
 <trace url='index.php'>
 <assign name='name' value='Администратор тем'>
</if>
<if what='!$isbottom'>
 <nobr><a href='$url'>$name</a>&sp;&gt;</nobr>
</if>
</element>

<element name='backtrace'>
<iterate_redirs name='redirs'>
<outer>
 <div class='return ninept'>
  <image src='pics/bullet-mor.gif'>&nbsp;
  <for>
   <assign name='name' value='$.Name'>
   <isfirst what='$redirs'>
    <inner>
    <backtrace_url url='$.URI' target='$target'>
   </isfirst>
   <islast what='$redirs'>
    </inner>
    <nobr><b>$name</b></nobr>
   <else>
    <nobr><a href='$.URI'>$name</a>&sp;&gt;</nobr>
   </islast>
  </for>
 </div>
</outer>
</element>
