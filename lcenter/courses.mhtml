<< @(#) $Id$ >>

<ident name='id'>
<ifzero what='$id'>
 <assign name='id' value='$`postings:courses`'>
</ifzero>

<posting_obj id='$id' grp='*GRP_REVIEWS'
             fields!='*SELECT_GENERAL|*SELECT_IMAGES|*SELECT_TOPICS'>
<pagetitle title='$,Subject'>
<topictitle title='$,Subject'>

<html>
<preamble>
<body>
 <top ident='courses'>
 <table width="100%" cellspacing="3" cellpadding="5"><tr valign="top">
  <td width='150' class='eframe'>
   <topics_courses id='$id'>
  </td>
  <td class='article'>
   <subtitle>
   <article_controls posting='$,'>
   <article_full posting='$,'>
   <article_controls posting='$,'>
   <if what='$id==$`postings:courses`'>
    <iterate_postinglist grp='*GRP_REVIEWS' topic_id='$`courses-details`'
			 limit=0	sort='*SORT_NAME' fields='*SELECT_TOPICS'>
    <ul>
     <for>
      <li><a href='/course-details.php?id=$.Id'>$.Subject</a></li>
     </for>
    </ul>
   </if>
  </td>
 </tr></table>
 <bottom>
</body>
</html>
