<< @(#) $Id$ >>

<errors>

<html>
<preamble>
<body>
 <top ident='index'>
 <notlogged>
  <formtable title="Вход">
 <else>
  <formtable title="Выход">
 </notlogged>
  <outer><table><inner>
   <error id='*EL_INVALID' text='Неверный ник или пароль'>
   <error id='*EUS_NO_SWITCH' text='Вы не администратор'>
   <error id='*EUS_NO_USER' text='Такого пользователя не существует'>
  </inner></table></outer>
  <notlogged>
   <form method="post" action="actions/login.php">
    <table>
     <hidden name='okdir' value="$$[err]">
     <hidden name='faildir' value="$$[err]">
     <tr><td span="2">&nbsp;</td></tr>
     <edit_line title='Логин' name='login' size=15 maxlength=30>
     <tr>
      <td>Пароль</td>
      <td><input class="line" type="password" name="password" size=15></td>
     </tr>
     <formbuttons title='Войти' span=2>
    </table>
   </form>
  <else>
   <form method="post" action="actions/logout.php">
    <hidden name='okdir' value="$$[err]">
    <hidden name='faildir' value="$$[err]">
    <table>
     <tr><td>&nbsp;</td></tr>
     <tr><td align="center"><b>
      <if what='$$userHidden'>
       $$userLogin
      <else>
       <a href='/userinfo.php?id=$$userId' class='name'>$$userLogin</a>
      </if>
     </b></td></tr>
     <formbuttons title='Выйти'>
    </table>
   </form>
  </notlogged>
 </formtable>
 <admin_users>
  <p><formtable title="Смена пользователя">
   <form method="post" action="actions/userswitch.php">
    <hidden name='okdir' value="$$[err]">
    <hidden name='faildir' value="$$[err]">
    <table>
     <tr><td span="2">&nbsp;</td></tr>
     <edit_line title='Логин' name='login' size=15 maxlength=30>
     <formbuttons title='Сменить' span=2>
    </table>
   </form>
  </formtable></p>
 </admin_users>
 <bottom>
</body>
</html>
