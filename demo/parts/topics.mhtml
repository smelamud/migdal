  <for>
   <p>
   <b><a href='postings.php?grp=$g.Effective&redir=$_&topic_id=$.Id'>
	  $.Name ($.MessageCount)</a></b>&nbsp;
   <admin_topics>
    <a href='topicedit.php?editid=$.Id&redir=$_'>[Изменить]</a>
   </admin_topics>
   <br>$.HTMLDescription
  </for>
 </td><tr></table>
