<if what='$$userAdminTopics || $;Count!=0'>
 <table class='topics' width=100%><tr><td>
  <if what="$title!=''">
   <center><h2>$title</h2></center>
  </if>
  <admin_topics>
   <p>
   <a href='topicedit.php?up=$up&redir=$_'>Добавить</a>
