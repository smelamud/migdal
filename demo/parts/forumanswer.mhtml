<< @(#) $Id$ >>

<macro name='rebe'>
 <if what='$answer.isRebe'><font color=red></if>
</macro>

<macro name='/rebe'>
 <if what='$answer.isRebe'></font></if>
</macro>

<element name='Forum_Answer'>
<table width=100% class='forum'>
<tr>
 <td width=25%>
 <rebe><senderlink message='$answer'></rebe><br>
 <sentview date='$answer.Sent'><br>
 <isedit name='answer'>
  <a href="forumansweredit.php?editid=$answer.Id&redir=$_"
   >[Изменить]</a>
  <moderator>
   <if what='$answer.isDisabled'>
    <a href="actions/moderate.php?editid=$answer.MessageId&hide=0&okdir=$_&faildir=$_"
     >[Разрешить показ]</a>
   <else>
    <a href="actions/moderate.php?editid=$answer.MessageId&hide=1&okdir=$_&faildir=$_"
     >[Запретить показ]</a>
   </if>
  </moderator>
 <else>
  <if what='$complain'>
   <logged>
    <a href="complainedit.php?ident=forum&link=$answer.Id&redir=$_">[Жалоба]</a>
   </logged>
  </if>
 </isedit>
 </td>
 <td width=75% align=left valign=top>
  <rebe>$answer.HTMLBody</rebe>
 </td>
</tr>
</table>
</element>
