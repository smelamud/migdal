<element name='batcher_messages' params='value'>
<table width=100%>
 <form method=get action='$~'>
  <hiddenget remove='mp'>
  <tr><td align=right><table><tr valign=center>
   <td>Показывать по&nbsp;</td>
   <td>
    <select_portion name='mp' value='$value' vals='10 15 20 25 30 35 40'>
   </td>
   <td>сообщений&nbsp;</td>
   <td><input type=submit value='Изменить'></td>
  </tr></table></td></tr>
 </form>
</table><br>
</element>

<element name='Messages'>
<grpdata>
<if what='$g.ValidItem'><logged>
 <a href='messageedit.php?topic_id=$topic&grp=$grp&redir=$_'
  >Добавить $g.ItemTitle</a>
</logged></if>
<iterate_messagelist grp='$grp' topic='$topic' limit='$limit' offset='$offset'>
<batcher_messages value='$limit'>
<navigator>
<table width=100%>
<error id='*EMH_NO_MESSAGE' text='Такого сообщения не существует'>
<error id='*EMH_NO_MODERATE' text='Вы не модератор'>
<for>
 <tr><td><message message='$.' grp='$grp' topic='$topic'></td></tr>
</for>
</table>
<navigator>
</element>
