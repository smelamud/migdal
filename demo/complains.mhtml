<< @(#) $Id$ >>

<macro name='rebe'>
 <if what='$complain.isRebe'><font color=red></if>
</macro>

<macro name='/rebe'>
 <if what='$complain.isRebe'></font></if>
</macro>

<int name='offset'>
<html>
<head>
 <title>Демо - Жалобная книга</title>
</head>
<body bgcolor=white>
 <top ident='complains'>
 <iterate_complainlist limit='$$userComplainPortion' offset='$offset'>
 <navigator>
 <batcher var='cp' value='$$userComplainPortion'>
 <logged>
  <a href='complainedit.php?redir=$_'>Добавить жалобу</a>
 </logged>
 <p>
 <table>
  <tr valign=top>
   <th>No.</th><th>Прислано</th><th>Автор</th><th>Заголовок</th>
   <th>Рассматривает</th><th>Закрыто</th><th>Ответы</th>
  </tr>
 <for name='complain'>
  <tr>
   <td align=center>$.Id</td>
   <td>$.SentView</td>
   <td><rebe><senderlink message='$.'></rebe></td>
   <td><rebe>
    <a href='complainforum.php?compid=$.Id&redir=$_'>$.Subject</a>
   </rebe></td>
   <if what='$.isAssigned'>
    <td><senderlink message='$.RecipientInfo'></td>
   <else>
    <td align=center>-</td>
   </if>
   <if what='$.isClosed'>
    <td>$.ClosedView</td>
   <else>
    <td align=center>Нет</td>
   </if>
   <td align=center>$.AnswerCount</td>
  </tr>
 </for>
 </table>
 <navigator>
</body>
</html>
