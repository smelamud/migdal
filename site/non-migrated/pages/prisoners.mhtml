<sorts>
<string name='prefix'>
<int name='sort'>
<ifzero what='$sort'>
 <assign name='sort' value='*SORT_NAME'>
<else>
 <meta_noindex>
</ifzero>

<element name='navigator'>
<table width=100% class='nframe'>
 <tr><td align=right class='eightpt'>
  <subtitle>
  <b>Сортировать</b>
  <navi_sort title='по имени' value='*SORT_NAME'>|
  <navi_sort title='по русскому имени' value='*SORT_NAME_RUSSIAN'>|
  <navi_sort title='по месту' value='*SORT_LOCATION'>|
  <navi_sort title='по гетто' value='*SORT_GHETTO_NAME'>|
  <navi_sort title='по сообщившему' value='*SORT_SENDER_NAME'>
 </td></tr>
 <tr><td align='center' style='padding: 10px'>
  <iterate_prisoner_alphabet limit=100 sort='$$sort'>
  <assign name='rus' value='*false'>
  <for>
   <if what="$;isFirst && $$prefix==''">
    <assign_global name='prefix' value='$.'>
   </if>
   <if what='!$rus && ord($.{0})>127'>
    <br>
    <assign name='rus' value='*true'>
   </if>
   <if what='$.!=$$prefix'>
    <a href='$[prefix=$.]'>$=.</a>&sp;
   <else>
    <b>$.</b>&sp;
   </if>
  </for>
 </td></tr>
 <tr><td align=left class='ninept'>
  <prisoners_summary name='total'>
  <array vals='запись,записи,записей'>
  <plural name='records' value='$total'>
  Всего в базе данных <em>$total</em> $records
 </td></tr>
</table>
</element>

<html>
 <preamble>

 <top ident='index'>
 <table width=100% cellpadding=5><tr valign=top>
  <notprint>
   <td width=150 class='eframe'>
    <topics>
    <ears>
   </td>
  </notprint>
  <td>
   <navigator>
   <p>
   <iterate_prisonerlist prefix='$prefix' sort='$sort'>
   <catalog_table>
    <tr valign=top>
     <th class='catalog-cell'>Имя</th>
     <th class='catalog-cell'>Русское имя</th>
     <th class='catalog-cell'>Место</th>
     <th class='catalog-cell'>Гетто</th>
     <th class='catalog-cell'>Сообщил</th>
     <th class='catalog-cell'>Сумма</th>
     <th class='catalog-cell'>Поисковые данные</th>
    </tr>
    <for>
     <if what='$;isOdd'>
      <assign name='class' value='catalog-cell-odd'>
     <else>
      <assign name='class' value='catalog-cell'>
     </if>
     <tr>
      <td class='$class ninept'>$.Name</td>
      <td class='$class ninept'>$.NameRussian</td>
      <td class='$class ninept'>$.Location</td>
      <td class='$class ninept'>$.GhettoName</td>
      <td class='$class ninept'>$.SenderName</td>
      <td class='$class ninept'>$.Sum</td>
      <td class='$class eightpt'>$.SearchData</td>
     </tr>
    </for>
   </catalog_table>
  </td>
 </tr></table>
 <bottom>
</html>
