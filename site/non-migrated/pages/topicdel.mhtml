<< @(#) $Id$ >>

<conf>
<int name='topic_id'>
<int name='destid'>

<postings_info topic_id='$topic_id'>
<assign name='posts' value='$,Total'>
<topic_count name='tops' id='$topic_id'>

<html>
 <preamble>
 <if what='$tops==0 && $posts==0'>
  <reload href#='/actions/topic/delete?id=$topic_id&okdir=$#--&faildir=$#-'>
 </if>

 <top ident='index'>
 <topic_obj id='$topic_id'>
 <form_table title#='Удалить тему &lt;&lt;$=,Subject&gt;&gt;'>
  <form method=post action='/actions/topic/delete'>
   <hidden name='okdir' value='$--'>
   <hidden name='faildir' value='$-'>
   <hidden name='id' value='$topic_id'>
   <starinfo>
   <form_comment>
    Тема &lt;&lt;$=,Subject&gt;&gt; содержит
    <ifnzero what='$tops'>
     <array vals='подтему,подтемы,подтем'>
     <plural value='$tops'>
     <em>$tops</em> $,
    </ifnzero>
    <if what='$tops!=0 && $posts!=0'>&sp;и&sp;</if>
    <ifnzero what='$posts'>
     <array vals='сообщение,сообщения,сообщений'>
     <plural value='$posts'>
     <em>$posts</em> $,
    </ifnzero>
    <asp>, которые необходимо переместить в другую тему.
   </form_comment>
   <error id='*ETD_DEST_ABSENT' text='Тема для перемещения не указана'>
   <error id='*ETD_DEST_ACCESS' text='В эту тему нельзя добавлять сообщения'>
   <error id='*ETD_NO_DELETE' text='Вы не имеете права удалять эту тему'>
   <error id='*ETD_TOPIC_ABSENT' text='Тема не указана'>
   <form_topicselect title='Отправить сообщения и подтемы в' name='destid'
                     value='$destid' only_appendable='*true'
		     only_postable='*true' mandatory='*true'>
   <form_buttons title='Удалить тему'>
  </form>
 </form_table>
 <bottom>
</html>
