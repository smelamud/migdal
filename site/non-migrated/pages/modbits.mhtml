<< @(#) $Id$ >>

<int name='postid'>

<html>
 <preamble>

 <top ident='index'>
 <posting_obj id='$postid'>
 <form_table title='Редактирование флагов сообщения' mini='*true'>
  <form method=post action='/actions/entry/modbits/'>
   <hidden name='okdir' value='$--'>
   <hidden name='faildir' value='$-'>
   <hidden name='id' value='$,Id'>
   <error id='*EMO_NO_MODERATE' text='Вы не модератор'>
   <error id='*EMO_NO_ENTRY' text='Такого сообщения не существует'>
   <form_select title='Флаги' name='modbits[]' multiple='*true' style='box'>
    <form_option title='(h) Не показывать' value='*MOD_HIDDEN'
                 selected='$,isHidden'>
    <form_option title='(d) Запретить показ' value='*MOD_DISABLED'
                 selected='$,isDisabled'>
    <iterate_posting_modbits>
    <for>
     <form_option title#='($.Letter) $.Name' value='$.Bit'
                  selected!='($,Modbits & $.Bit)!=0'>
    </for>
   </form_select>
   <form_buttons title='Изменить'>
  </form>
 </form_table>
 <bottom>
</html>
