<< @(#) $Id$ >>

<element name='rating'>
<ifzero what='$value'>
 <assign name='class' value='small-rating-zero'>
<else>
 <if what='$value>0'>
  <assign name='class' value='small-rating-plus'>
  <assign name='value' value#='+$value'>
 <else>
  <assign name='class' value='small-rating-minus'>
 </if>
</ifzero>
<ifne what='$style'>
 <assign name='st' value#=' style="$style"'>
<else>
 <assign name='st' value=''>
</ifne>
<span class='small-rating-$id&sp;$class'$st>($value)</span>
</element>

<element name='vote_panel'>
<notprint>
 <notenglish>
  <ifne what='$align'>
   <assign name='style' value#='style="float: $align"'>
  <else>
   <assign name='style' value=''>
  </ifne>
  <vote id='$id'>
  <div class='vote-panel' $style><asp>
   <if what='$,<0'>
    <logged>
     <image class#='vote-minus-$id vote-button vote-active'
            src='/pics/vote-minus.gif'
            alt='Неинтересно, плохо написано'
            title='Неинтересно, плохо написано'
            data_id='$id' data_value='2'>
    <else>
     <image class='vote-button' src='/pics/vote-minus-gray.gif'
            alt='Чтобы ставить отрицательные оценки, нужно зарегистрироваться'
            title='Чтобы ставить отрицательные оценки, нужно зарегистрироваться'>
    </logged>
   <else>
    <if what='$,>=0 && $,<3'>
     <image class='vote-button' src='/pics/vote-minus-gray.gif'>
    <else>
     <asp><div class='vote-button'>&nbsp;</div><asp>
    </if>
   </if>

   <ifzero what='$rating'>
    <assign name='class' value='rating-zero'>
   <else>
    <if what='$rating>0'>
     <assign name='class' value='rating-plus'>
     <assign name='rating' value#='+$rating'>
    <else>
     <assign name='class' value='rating-minus'>
    </if>
   </ifzero>
   <asp><div class='rating-$id&sp;$class'>$rating</div><asp>

   <if what='$,<0'>
    <image class#='vote-plus-$id vote-button vote-active'
           src='/pics/vote-plus.gif'
           alt='Интересно, хорошо написано'
           title='Интересно, хорошо написано'
           data_id='$id' data_value='4'>
   <else>
    <if what='$,>3'>
     <image class='vote-button' src='/pics/vote-plus-gray.gif'>
    <else>
     <asp><div class='vote-button'>&nbsp;</div><asp>
    </if>
   </if>
  <asp></div>
 </notenglish>
</notprint>
</element>
