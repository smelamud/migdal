<< @(#) $Id$ >>

<element name='spin'>
<if what='$list.Size>$list.Limit && $list.Limit!=0'>
 <div class='spin'>
  <span class='button'>
   <ifnzero what='$list.Offset'>
    <a href="$[offset='$list.PrevOffset' tid]" title='Предыдущая страница'>
     <image src='$picprev'></a>
   <else>
    &nbsp;
   </ifzero>
  </span>
  <form method='post' action='/actions/goto/page'>
   <hidden name='okdir' value='$-'>
   <hidden name='pagesize' value='$list.Limit'>
   <hidden name='size' value='$list.Size'>
   стр. <asp>
   <edit name='value' value='$list.Page' size=2 maxlength=5><asp>
   <asp> из $list.PageCount
  </form>
  <span class='button'>
   <if what='$list.EndValue<$list.Size'>
    <a href="$[offset='$list.NextOffset' tid]" title='Следующая страница'>
     <image src='$picnext'></a>
   <else>
    &nbsp;
   </if>
  </span>
 </div>
</if>
</element>
