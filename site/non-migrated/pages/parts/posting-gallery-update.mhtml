<< @(#) $Id$ >>

<element name='topic' params='posting,showtopic'>
<if what='$showtopic'>
 <topiclink posting='$posting' suffix='gallery/'><br>
</if>
</element>

<element name='posting_gallery_update'>
<dl class='posting'>
 <dt>
  <topic posting='$posting' showtopic='$showtopic'>
  <vote_panel align='right' id='$posting.Id' rating='$posting.Rating'>
  <biff time='$posting.Modified'>
  <array vals='фотография,фотографии,фотографий'>
  <plural value='$posting.Index1'>
  <a class='posting-subject' href='$posting.GrpDetailsHref'>
   +$posting.Index1&sp;$,</a>
 </dt>
 <dd>
 <iterate_postinglist name='list' grp='*GRP_GALLERY' limit=0 
                      cross_type='*LINKT_PUBLISH' cross_id='$posting.Id'>
 <iterate_rows cols='5'>
 <ifnzero what='$list.Count'>
  <div class='posting-gallery'>
   <for>
    <if what='$shorten && $list.Position == 20'>
     <div class='clear-floats'></div>
     </div><div style='display: none'>
    </if>
    <assign name='hollow' value!='$shorten && $list.Position >= 20'>
    <picture picture='$.' showdiscuss='*true' rel#='gallery-$posting.Id'
             list_index!='$list.Position + 1' list_size='$list.Size'
             hollow='$hollow' align='left' noclear!='!$;isBol' nomargin='*true'
             fixed_width=150 fixed_height=150>
   </for>
   <div class='clear-floats'></div>
  </div>
 </ifnzero>
 <div class='sent' style="clear: left">
  <sentview date='$posting.Sent'>&nbsp;
  <senderlink message='$posting'>
 </div>
 <posting_controls posting='$posting' showdiscuss='$showdiscuss'
                   showprint='*false' showedit='*false'>
</dl>
</element>
