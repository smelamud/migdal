<< @(#) $Id$ >>

<element name='book_chapters'>
<grps>
<topics_table title='Оглавление'>
 <isappend what='$book'>
  <li class='topics-nobullet'>
   <a href='${book.GrpDetailsHref}add/?redirid=$_' class='edit'>Добавить</a><br>
   <a href='${book.GrpDetailsHref}reorder/?redirid=$_' class='edit'>Расставить</a>
  </li>
 </isappend>
 <topics_line time='$book.Modified' text='Обложка' href='$book.GrpDetailsHref'
              arrow!='$id<=0 || $id==$book.Id' class='topics-item ninept'>
 <iterate_postinglist grp='*GRP_BOOK_CHAPTERS' limit=0 sort='*SORT_INDEX0'
                      up='$book.OrigId'>
 <for>
  <topics_line time='$.Modified' text='$=.Subject'
               href#='${book.GrpDetailsHref}$.Id/' arrow!='$.Id==$id'
	       class='topics-item ninept'>
 </for>
 <topics_splitter>
 <<iterate_packages posting_id='$book.Id'>
 <for>
  <if what='$.Type==*PT_BOOK_ONEFILE'>
   <assign name='title' value='Вся книга одним файлом в архиве'>
  <else>
   <assign name='title' value='Вся книга по главам в архиве'>
  </if>
  <topics_line text='$title' class='topics-item ninept' nobullet='*true'
               href='$.Href' count#='${.SizeKB}KB'>
 </for>>
</topics_table>
</element>
