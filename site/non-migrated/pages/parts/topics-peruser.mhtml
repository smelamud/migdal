<< @(#) $Id$ >>

<element name='topics_peruser'>
<upper_level title='На главную страницу' href='/'>
<html_cache ident#='topics_peruser-$base-$index' period!='3 * 60 * 60'
            depends='postings'>
 <topic_obj id='$base'>
 <topics_table title='$=,Subject'>
  <iterate_posting_users topic_id='$,Id' as_guest='*true'>
  <topics_line text='Все пользователи' href#='/$,Catalog' arrow!='$index<=0'
	       class='ninept topics-item'>
  <for>
   <zone>
    <posting_last name='last' topic_id='$,Id' user_id='$.Id' as_guest='*true'>
   </zone>
   <topics_line time='$last' text='$=.FullName' href#='/${,Catalog}$.Folder/'
		arrow!='$.Id==$index' class='eightpt topics-item'>
  </for>
 </topics_table>
</html_cache>
</element>
