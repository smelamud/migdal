<< @(#) $Id$ >>

<int name='editid'>
<int name='parent_id'>
<int name='peerid'>

<int name='relogin'>
<string name='login'>
<int name='remember'>

<int name='edittag'>
<string name='body'>
<string name='subject'>
<int name='small_image'>
<int name='small_image_x'>
<int name='small_image_y'>
<string name='small_image_format'>
<int name='large_image'>
<int name='large_image_x'>
<int name='large_image_y'>
<int name='large_image_size'>
<string name='large_image_format'>
<string name='large_image_filename'>
<int name='hidden'>
<int name='disabled'>

<conf>

<html>
 <preamble>

 <top ident='discuss'>
 <ifnzero what='$peerid'>
  <forum_obj id='$peerid'>
  <assign name='quote' value='$,Body'>
  <center><table width=95% cellspacing=0 cellpadding=0 class='forums'><tr><td>
   <forum forum='$,'>
  </td></tr></table></center>
 <else>
  <assign name='quote' value=''>
  <entry_type name='type' id='$parent_id'>
  <posting_obj id='$parent_id' grp='*GRP_FORUMS'>
  <center><table width=95% cellspacing=0 cellpadding=5 class='cframe'><tr><td>
   <posting posting='$,' shorten='*true'>
  </td></tr></table></center>
 </ifnzero>
 <forum_obj id='$editid' parent_id='$parent_id' quote='$quote' quote_width=70>
 <setup>
 <if what='$editid'>
  <assign name='head' value='Редактирование комментария'>
 <else>
  <assign name='head' value='Добавление комментария'>
 </if>
 <form_table title='$head'>
  <assign name='xmlid' value!='$$userModerator ? $,Id : 0'>
  <form method=post enctype='multipart/form-data'
	action='/actions/forum/modify'>
   <hidden name='edittag' value=1>
   <hidden name='okdir' value='$--'>
   <hidden name='faildir' value='$-'>
   <hidden name='editid' value='$editid'>
   <hidden name='parent_id' value='$,ParentId'>
   <hidden name='up' value='$,ParentId'>
   <starinfo>
   <error id='*EF_NO_SEND'
	  text='Добавлять комментарии могут только зарегистрированные
	        пользователи'>
   <error id='*EF_NO_EDIT' text='У вас нет права редактировать это сообщение'>
   <error id='*EF_NO_PARENT'
	  text='Сообщение, на которое вы пытаетесь ответить, еще не написано'>
   <error id='*EF_UP_APPEND' text='У вас нет права отвечать на это сообщение'>
   <error id='*EVH_NO_PARENT' text='Такого сообщения не существует'>
   <error id='*EVH_NO_UP' text='Вышестоящего сообщения не существует'>
   <error id='*EVH_LOOP' text='Сообщение не может быть ответом на себя'>
   <error id='*EVH_NOT_UP_UNDER_PARENT'
          text='Сообщение и ответ должны находиться в одной ветке'>
   <error id='*EVH_INCORRECT' text='Нарушение иерархии объектов'>
   <error id='*EL_INVALID' text='Неверный ник или пароль'>
   <error id='*EL_GUEST_LOGIN_ABSENT' text='Укажите, пожалуйста, ваше имя'>
   <if what='!$editid'>
    <zone>
     <perms id='$,ParentId'>
     <form_relogin noguests!='!$,isGuestPostable' relogin='$relogin'
                   login!='$edittag ? $login : $$userLoginHint'
		   remember='$remember' onclick='reloginSelected(this);'>
    </zone>
    <error id='*EF_CAPTCHA_ABSENT'
           text='Пожалуйста, введите цифры и буквы, которые вы видите на
                 картинке. Это необходимо нам для борьбы со спамом.'>
    <error id='*EF_CAPTCHA' text='Неверные цифры и буквы, попробуйте еще раз'>
    <form_captcha id='captcha' name='captcha'>
   </if>
   <error id='*EF_BODY_ABSENT'
	  text='Напишите хотя бы пару строчек в теле сообщения'>
   <form_editor name='body' title='Текст' body='$=,Body'
		mandatory='$$forumMandatoryBody' rows=12 xmlid='$xmlid'>
   <<help_link href='/help/formatting/'
	      title='Список обозначений, используемых в тексте'>>
   <error id='*EF_IMAGE_ABSENT' text='Отсутствует картинка'>
   <error id='*EF_NO_IMAGE' text='Указанной картинки не существует'>
   <error id='*EIU_UNKNOWN_IMAGE' text='Неизвестный формат картинки'>
   <error id='*EIU_IMAGE_LARGE' text='Картинка слишком велика (больше 2M)'>
   <error id='*EIU_UNKNOWN_THUMBNAIL'
	  text='Формат маленькой картинки, указанный при конфигурации сервера,
		не поддерживается'>
   <error id='*EIU_INTERNAL_ERROR' text='Не удалось загрузить картинку'>
   <moderator>
    <assign name='who' value='автору'>
   <else>
    <assign name='who' value='мне'>
   </moderator>
   <logged>
    <form_select title='Видимость' name='hidden' style='box'>
     <form_option title='Сообщение видно всем пользователям' value='0'
                  selected!='!$,isHidden'>
     <form_option title#='Сообщение видно только $who и модераторам' value='1'
                  selected='$,isHidden'>
    </form_select>
   <else>
    <hidden name='hidden' value='0'>
   </logged>
   <moderator>
    <form_select title='Запретить показ'
                 comment='Модераторский запрет на показ сообщения. Пользователь
		          не может снять этот запрет.'
		 name='disabled' style='box'>
     <form_option title='Нет запрета на показ всем пользователям' value='0'
                  selected!='!$,isDisabled'>
     <form_option title#='Разрешено показывать только $who и модераторам'
                  value='1' selected='$,isDisabled'>
    </form_select>
   <else>
    <hidden name='disabled' value='$,isDisabled'>
   </moderator>
   <if what='$editid'>
    <form_buttons title='Изменить'>
   <else>
    <form_buttons title='Добавить'>
   </if>
  </form>
 </form_table>
 <bottom>
</html>
