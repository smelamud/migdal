<< @(#) $Id$ >>

<int name='postid'>
<int name='issue'>
<grps>

<topic_obj name='times' id='$`times`'>
<posting_obj name='cover' id='$postid' grp='*GRP_TIMES_COVERS'
             topic_id='$`times`'>
<assign name='issues' value!='$cover.Id>0 ? $cover.getIssues : $issue'>

<log event=times text#='issue($issue)'>

<macro name='editor'>
 <ispost what='$$times'>
</macro>
<endif name='/editor'>

<element name='times_issue'>
<table width=120>
 <tr><td class='issue'>
  &no;$$issues
 </td></tr>
 <ifnzero what='$$cover.Id'>
  <tr><td class='month'>
   $$=cover.Comment0
  </td></tr>
 </ifnzero>
</table>
</element>

<element name='batcher'>
<editor>
 <div class='batcher'>
  <div class='adder'>
   <image src='/pics/sheet.gif'>&sp;
   <a href='/times/$$issue/add/?redirid=$_'>Добавить статью</a>
   <if what='$$issue>0'>
    &nbsp;
    <a href='/times/$$issue/reorder/?redirid=$_'>Расставить</a>
   </if>
  </div>
  <div class='clear-floats'></div>
 </div>
</editor>
</element>

<element name='select_issue'>
<html_cache ident#='times_select_issue-$$issue' depends='postings'
            if!='!$$times.isPostable'>
 <form method='get' action='/actions/goto/href'><table class='ninept'>
  <tr>
   <td>Номер</td>
   <td><select name='okdir'>
    <iterate_postinglist grp='*GRP_TIMES_COVERS' limit=0 sort='*SORT_RINDEX1'>
    <for>
     <assign name='title' value#='&no;$.getIssues&nbsp;$=.Comment0'>
     <if what='$.Index1==$$issue'>
      <option value='/times/$.Index1/' selected>$title
     <else>
      <option value='/times/$.Index1/'>$title
     </if>
    </for>
   </select></td>
   <td>
    <input type=submit value='Выбрать'>
   </td>
  </tr>
 </tr></table></form>
</html_cache>
</element>

<element name='announce'>
<div class='nframe'>
 <ifnzero what='$$cover.Id'>
  <table width=100% cellspacing=0 cellpadding=5>
   <editor>
    <tr><td colspan=2>
     <div class='batcher'>
      <div class='adder'>
       <image src='/pics/sheet.gif'>&sp;
       <a href='/times/add/?redirid=$_'>Добавить номер</a>
      </div>
      <div class='clear-floats'></div>
     </div>
    </td></tr>
   </editor>
   <tr><td colspan=2><select_issue></td></tr>
   <tr valign=top>
    <td class='pic' width='$$cover.ImageX'>
     <img width='$$cover.ImageX' height='$$cover.ImageY'
          src='$$cover.ImageURL'>
    </td>
    <td>
     <vote_panel align='right' id='$$cover.Id' rating='$$cover.Rating'>
     $$cover.BodyHTML
     <posting_controls posting='$$cover' showdiscuss='*true'>
    </td>
   </tr>
  </table>
 </ifnzero>
</div>
</element>

