<< @(#) $Id$ >>

<conf>
<int name='editid'>
<int name='up'>
<int name='edittag'>
<string name='body'>
<string name='subject'>
<string name='comment0'>
<string name='comment1'>
<string name='ident'>
<string name='login'>
<string name='user_name'>
<string name='group_login'>
<string name='group_name'>
<string name='perm_string'>
<int_array name='modbits'>
<int name='index2'>
<int_array name='grps'>

<html>
 <preamble>

 <top ident='index'>
 <topic_obj id='$editid' up='$up' fields!="*SELECT_GENERAL|*SELECT_GRPS">
 <setup>
 <assign name='xmlid' value!='$$userModerator ? $editid : 0'>
 <if what='$editid'>
  <form_table title='Редактирование темы'>
 <else>
  <form_table title='Добавление темы'>
 </if>
 <form method=post enctype='multipart/form-data'
       action='/actions/topic/modify/'>
  <hidden name='edittag' value=1>
  <hidden name='okdir' value='$--'>
  <hidden name='faildir' value='$-'>
  <hidden name='editid' value='$editid'>
  <starinfo>
  <form_section title='Описание темы'>
  <error id='*ET_NO_EDIT' text='Вы не можете редактировать эту тему'>
  <error id='*EVH_NO_UP' text='Вышестоящей темы не существует'>
  <error id='*EVH_LOOP' text='Тема не может быть подтемой самой себя'>
  <error id='*EVH_INCORRECT' text='Нарушение иерархии объектов'>
  <error id='*ET_NO_APPEND' text='Вы не можете добавлять подтемы для этой темы'>
  <form_topicselect title='Надтема' name='up' value='$,UpValue'
                    only_appendable='*true'>
  <error id='*ET_IDENT_UNIQUE' text='Так уже обозначена другая тема'>
  <form_edit title='Обозначение' name='ident' value='$=,Ident' size=20
	     maxlength=75>
  <error id='*ET_NAME_ABSENT' text='Название не было введено'>
  <form_edit title='Название' value='$=,Subject' name='subject' size=50
	     maxlength=70 mandatory='*true'>
  <form_edit title='Комментарий 0' value='$=,Comment0' name='comment0' size=50
	     maxlength=70 xmlid='$xmlid'>
  <form_edit title='Комментарий 1' value='$=,Comment1' name='comment1' size=50
	     maxlength=70 xmlid='$xmlid'>
  <form_edit title='Год' value='$,Index2' name='index2' size=6 maxlength=6>
  <error id='*ET_DESCRIPTION_ABSENT' text='Описание не было задано'>
  <form_editor title='Описание' name='body' body='$=,Body'
	       mandatory='$topicMandatoryDescription' xmlid='$xmlid'>
  <form_section title='Права доступа'>
  <error id='*ET_NO_USER' text='Такого пользователя не существует'>
  <form_edit title='Владелец' name='login' value='$=,Login' size=20
	     maxlength=30>
  <error id='*ET_NO_GROUP' text='Такой группы не существует'>
  <form_edit title='Группа' name='group_login' value='$=,GroupLogin' size=20
	     maxlength=30>
  <error id='*ET_BAD_PERMS' text='Права заданы некорректно'>
  <form_edit title='Права' name='perm_string' value='$,PermString' size=17
	     maxlength=17>
  <form_grpselect title='Допустимые сообщения' name='grps[]' value='$,Grps'
                  rows='8' multiple='*true'>
  <form_select title='Модерирование' name='modbits[]' style='box'
               multiple='*true'>
   <iterate_topic_modbits>
   <for>
    <form_option value='$.Bit' title='$.Name'
                 selected!='($,Modbits & $.Bit)!=0'>
   </for>
  </form_select>
  <if what='$editid'>
   <form_buttons title='Изменить'>
  <else>
   <form_buttons title='Добавить'>
  </if>
 </form>
 </form_table>
 <bottom>
</html>
