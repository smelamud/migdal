<< @(#) $Id$ >>

<element name='line' params='text,href,arrow'>
<li>
<if what='$arrow'>
 <b>$text</b>
<else>
 <a href='$href'>$text</a>
</if>
</element>

<element name='book_chapters_static'>
<grps>
<span class='title'>Оглавление</span>
<ul>
 <line text='О книге' href#='index.html' arrow!='$id<=0'>
 <iterate_postinglist grp='*GRP_BOOK_CHAPTERS' limit=0 sort='*SORT_INDEX0'
                      up='$book.MessageId' fields='*SELECT_GENERAL'>
 <for>
  <line text='$.Subject' href#='chapter-${.Index0}.html' arrow!='$.Id==$id'>
 </for>
</ul>
</element>
