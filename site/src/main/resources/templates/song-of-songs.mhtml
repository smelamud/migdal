<grps>

<topic_obj id='$`migdal.events.other.song-of-songs`'>

<log event=event text#='topic($,Id)'>

<element name='batcher' params='topic_id,access'>
<div class='batcher' style='margin: 1em'>
 <if what='$access'>
  <div class='adder'>
   <image src='/pics/sheet.gif'>&sp;
   <catalog name='catalog' id='$topic_id'>
   <a href='/${catalog}add?noguests=1&redirid=$_'>Добавить участника</a>
  </div>
 </if>
 <div class='clear-floats'></div>
</div>
</element>

<element name='selection' params='topic_id'>
<perms id='$topic_id'>
<assign name='access' value='$,isPostable'>
<iterate_postinglist grp='*GRP_REVIEWS' topic_id='$topic_id' limit=0
                     offset=0 sort='*SORT_NAME'>
<if what='$access || $;Count!=0'>
 <batcher topic_id='$topic_id' access='$access'>
 <form method=post action='/actions/posting/vote'>
  <hidden name='vote' value=4>
  <hidden name='okdir' value='$-'>
  <hidden name='faildir' value='$-'>
  <table width='100%' cellspacing='5' cellpadding='0'>
   <for>
    <tr valign='center'>
     <td><radio name='postid' value='$.Id' checked='*false'></td>
     <td class='rating-plus'>$.Rating</td>
     <td width='100%' style='padding-left: 10px'>
      <a href='$.GrpDetailsHref'>$=.Heading</a>
     </td>
    </tr>
   </for>
  </table>
  <input type=submit value='Проголосовать'>
 </form>
 <ifnzero what='$;Count'>
  <batcher topic_id='$topic_id' access='$access'>
 </ifnzero>
<else>
 &nbsp;
</if>
</element>

<html>
 <preamble>

 <top ident='index'>
 <table width=100% cellpadding=5><tr valign=top>
  <td width=150 class='eframe'>
   <topics>
   <ears>
  </td>
  <td>
   <div class='cframe' style='padding: 5'>
    <subtitle>
    <selection topic_id='$,Id'>
   </div>
  </td>
 </tr></table>
 <bottom>
</html>
