<macro name='image_linked_tag' defaults="enlarge=true align=''">
 <zone>
  <if what='%enlarge'>
   <image_link id%!id='%id'>$,<image_tag_put id%!id='%id' align%!align=%align></a>
  <else>
   <image_tag_put id%!id='%id' align%!align=%align>
  </if>
 </zone>
</macro>

<< HTML shortcuts >>
<macro name='edit_line' defaults="mandatory='*false'">
 <tr>
  <td>%title <if what='%mandatory'><star></if></td>
  <tdspan span=%span>
   <edit name='%name' value='%value' size=%size maxlength=%maxlength>
  </tdspan>
 </tr>
</macro>

<macro name='editor_line' defaults="span=0 rows=10 mandatory='*false'">
 <tr><tdspan span=%span>%title <if what='%mandatory'><star></if></tdspan></tr>
 <tr><tdspan span=%span>
  <textarea name='%name' rows=%rows cols=50 wrap='virtual'>%body</textarea>
 </tdspan></tr>
</macro>

