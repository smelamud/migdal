<element name='topics_branch'>
<iterate_topic_hierarchy name='list' topic_id='$topic_id' root='$root'
                         reverse='*true'>
<assign name='id' value='-1'>
<for>
 <ifnzero what='$.SubCount'>
  <topics_minor id='$id' up='$.Id' grp='$grp' href='$href' title='$.Name'>
 </ifnzero>
 <assign name='id' value='$.Id'>
</for>
<topics_minor id='$id' up='$root' grp='$grp' href='$href' title='Разделы'>
</element>
