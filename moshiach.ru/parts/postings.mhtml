<< @(#) $Id$ >>

<element name='batcher' params='list,grp,topic_id,root'
         defaults="list='$;' grp='$grp' topic_id='$topic_id' root='$root'">
<table width=100% class='batcher'><tr valign=bottom>
 <posting_new grp='$grp'>
 <td><a href='postingedit.php?topic_id=$topic_id&root=$root&grp=$grp&redirid=$_'
        >Добавить $,TheItemTitle</a></td>
 <td><spin list='$list'></td>
</tr></table>
</element>

<element name='topic_full' params='topic_id'>
<iterate_topic_hierarchy name='list' topic_id='$topic_id' root=general>
<for>
 <notfirst what='$list'><asp>/<asp></notfirst>$.Name<asp>
</for>
</element>

<element name='posting' params='posting'>
<dl class='posting'>
 <dt class='subject'>
  <span class='topic'><topic_full topic_id='$posting.TopicId'></span>
  <br>
  $posting.Subject
  <ifne what='$posting.Author'>
   <br><span class='author'>$posting.HTMLAuthor</span>
  </ifne>
 </dt>
 <dd><p>
 <ifnzero what='$posting.ImageSet'>
  <table align=left class='pic'>
   <tr><td>
    <image_linked_tag id='$posting.ImageId' enlarge='$posting.hasLargeImage'>
   </td></tr>
   <ifne what='$posting.Title'>
    <tr><td>$posting.HTMLTitle</td></tr>
   </ifne>
  </table>
 </ifnzero>
 $posting.HTMLBody&nbsp;<asp>
 </p>
 <ifne what='$posting.Source'>
  <div class='source' style="width: 90%; clear: left">
   $posting.HTMLSource
  </div>
 </ifne>
 <table width=90% class='bottom'><tr>
  <td>
   <a href="postingedit.php?editid=$posting.Id&root=general&grp=$posting.Grp&redirid=$_"
    >Изменить</a>
  </td>
 </tr></table>
</dl>
</element>

<element name='postings'>
<iterate_postinglist grp='$grp' offset='$offset'>
<batcher>
<for>
 <posting posting='$.'>
</for>
<ifnzero what='$;Count'>
 <batcher>
</ifnzero>
</element>
