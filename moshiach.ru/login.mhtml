<< @(#) $Id$ >>
<< Based-on: demo/parts/login.mhtml 1.1 >>

<html>
<head><title>Штаб Мошиаха - Вход</title></head>
<body>
 <top>
 <center><table>
  <tr><td colspan=2 align=center><h1>Вход</h1></td></tr>
  <notlogged>
   <form method=post action='actions/login.php'>
  <else>
   <form method=post action='actions/logout.php'>
  </notlogged>
  <input type=hidden name='redir' value="$[err]">
  <if what='$err==EL_INVALID'>
   <tr><td colspan=2><a name='error'>
    <font color='red'>Неверный ник или пароль</font>
   </td></tr>
  </if>
  <notlogged>
   <tr>
    <td>Ник</td>
    <td><input type=text name='login' size=30 maxlength=30></td>
   </tr>
   <tr>
    <td>Пароль</td>
    <td><input type=password name='password' size=30></td>
   </tr>
   <tr><td colspan=2 align=center><input type=submit value='Войти'></td></tr>
  <else>
   <tr><td>
    Пользователь: 
    <b class=admin>
    <if what='$$userHidden'>
     $$userLogin
    <else>
     <a href='/useredit.php?editid=$$userId&redir=$_'>$$userLogin</a>
    </if>
    </b>
   </td></tr>
   <tr><td align=center><input type=submit value='Выйти'></td></tr>
  </notlogged>
  </form>
 </table></center>
</body>
</html>
