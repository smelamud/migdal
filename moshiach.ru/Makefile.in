# Makefile for moshiach.ru website

# @(#) $Id$

OBJECTS = index.php
%.php: %.mhtml ../miparser ../macros.mhtml macros.mhtml
	../miparser -M ../macros.mhtml -M macros.mhtml $< > $@

all: $(OBJECTS)
	(cd parts; $(MAKE) all)

Makefile: Makefile.in ../conf/migdal.conf
	../confmake $^ > Makefile

install: all
	(cd parts; $(MAKE) install)

clean:
	-rm $(OBJECTS)
	(cd parts; $(MAKE) clean)
