<< @(#) $Id$ >>
<< Based-on: demo/topicedit.mhtml 1.9 >>

<int name='editid'>
<int name='desc'>
<html>
<head>
 <title>Штаб Мошиаха - Тема</title>
</head>
<body bgcolor=white>
 <top ident='topics'>
 <p>
 <topic_obj id='$editid' up='$up'>
 <setup>
 <form method=post enctype='multipart/form-data' action='actions/topicmod.php'>
 <input type=hidden name='edittag' value=1>
 <input type=hidden name='redir' value='$redir'>
 <input type=hidden name='editid' value='$editid'>
 <table>
  <error id='*ET_NO_EDIT' text='У вас нет права менять список тем'>
  <error id='*ET_STORE_SQL' text='Ошибка базы данных при обновлении записи'
	 color='magenta'>
  <tr><td><table>
   <error id='*ET_NO_UP' text='Такой темы не существует' span=2>
   <error id='*ET_LOOP_UP' text='Тема не может быть подтемой самой себя' span=2>
   <topicselect name='up' value='$,UpValue' grp='*GRP_ALL'>
   <error id='*ET_NAME_ABSENT' text='Название не было введено' span=2>
   <edit_line title='Название' value=$,Name name='name' size=30 maxlength=70>
   <error id='*ET_IDENT_UNIQUE' text='Так уже обозначена другая тема' span=2>
   <edit_line title='Обозначение' name='ident' value='$,Ident'
              size=15 maxlength=15>
  </table></td></tr>
  <error id='*ET_DESCRIPTION_ABSENT' text='Описание не было задано'>
  <if what='$desc'>
   <editor_line title='Описание' name='description' body='$,Description'>
  <else>
   <input type='hidden' name='description' value='Без описания'>
  </if>
  <error id='*EUL_LARGE' text='Описание слишком велико (больше 2M)'>
  <checkbox_line name='hidden' value='$,isHidden'
                 title='Не показывать в списке'>
  <input type='hidden' name='news' value='$,isNews'>
  <input type='hidden' name='premoderate_news' value='$,isNewsPremoderated'>
  <input type='hidden' name='forums' value='$,isForums'>
  <input type='hidden' name='premoderate_forums' value='$,isForumsPremoderated'>
  <input type='hidden' name='gallery' value='$,isGallery'>
  <input type='hidden' name='premoderate_gallery'
         value='$,isGalleryPremoderated'>
  <input type='hidden' name='articles' value='$,isArticles'>
  <input type='hidden' name='premoderate_articles'
         value='$,isArticlesPremoderated'>
 </table>
 <if what='$editid'>
  <input type=submit value='Изменить'>
 <else>
  <input type=submit value='Добавить'>
 </if>
 <input type=reset value='Очистить'>
 </form>
</body>
</html>
