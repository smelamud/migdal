<macro name='isplaced'>
<if what='$par->isPlaced(%place)'>
</macro>

<macro name='/isplaced'>
</if>
</macro>

<macro name='notplaced'>
<if what='!$par->isPlaced(%place)'>
</macro>

<macro name='/notplaced'>
</if>
</macro>

<element name='pic' params='posting,par'>
<image_placements>
<ifnzero what='$par.ImageId'>
 <notplaced place='IPL_TOP'>
  </p>
 </notplaced>
 <isplaced place='IPL_BOTTOM'>
  <p>
 </isplaced>
 <isplaced place='IPL_VCENTER'>
  <isplaced place='IPL_LEFT'>
   <table width=100%><tr><td align=left>
  </isplaced>
  <isplaced place='IPL_HCENTER'>
   <table width=100%><tr><td align=center>
  </isplaced>
  <isplaced place='IPL_RIGHT'>
   <table width=100%><tr><td align=right>
  </isplaced>
 </isplaced>
  <isplaced place='IPL_LEFT'>
   <table align=left>
  </isplaced>
  <isplaced place='IPL_HCENTER'>
   <table>
  </isplaced>
  <isplaced place='IPL_RIGHT'>
   <table align=right>
  </isplaced>
  <isedit what='$posting'>
   <tr><td align=center>
    <a href='liminsert.php?postid=$$artid&par=$par.Number&redir=$_'
       class='admin'>Картинка</a>
   </td></tr>
  </isedit>
   <tr><td>
    <image_linked_tag id='$par.ImageId' enlarge='$par.hasLargeImage'>
   </td></tr>
   <ifne what='$par.Title'>
    <tr><td align=center>
     <i>$par.HTMLTitle</i>
    </td></tr>
   </ifne>
  </table>
 <isplaced place='IPL_VCENTER'>
  </td></tr></table>
 </isplaced>
 <isplaced place='IPL_TOP'>
  </p>
 </isplaced>
 <notplaced place='IPL_BOTTOM'>
  <p>
 </notplaced>
<else>
 </p>
 <isedit what='$posting'>
  <p>
  <a href='liminsert.php?postid=$$artid&par=$par.Number&redir=$_'
     class='admin'>Картинка</a>
  </p>
 </isedit>
 <p>
</ifnzero>
</element>

<string name='artid'>
<grps>
<text_formats>

<html>

<head>
 <meta http-equiv="Content-Type" content="text/html; charset=koi8-r">
 <meta name="Keywords" content="Мошиах, Машиах">
 <script src="window.js" language="javascript"></script>
 <title>Штаб Мошиаха</title>
</head>

<body bgcolor=#F6F7FA topmargin=3 leftmargin=3 marginwidth=3 marginheight=3>
 <span class='pretty'>
  <posting_full name='article' id='$artid' grp='*GRP_ARTICLES'>
  <zone><topic_obj name='topic' id='$,TopicId'></zone>
  <zone><topic_obj name='high' id='$topic.UpValue'></zone>
  <top ident='study'>
  <table border=0 width=100% cellPadding=0 cellSpacing=0><tr valign=top>
   <td width=20% bgcolor=F6F7FA>
    <subtopics id='$high.Id'>
    <search>
    <subscribe>
    <editors>
   </td>
   <bldot>
   <td bgcolor=ffffff width=56%>
    <table cellPadding=2 cellSpacing=3 width=100% border=0>
     <isedit what='$article'>
      <tr><td>
       <a href="postingedit.php?editid=$article.Id&grp=$article.Grp&redir=$_"
          class='admin'>Изменить</a>&nbsp;
       <a href="limedit.php?postid=$article.Id&redir=$_"
          class='admin'>Список иллюстраций</a>
      </td></tr>
     </isedit>
     <tr><td align=center><strong>"$,Subject"</strong></td></tr>
     <tr><td>
      <a href='index.php'>Главная</a> /
      <a href='study.php'>$high.Name</a> /
      <a href='topic.php?topic_id=$topic.Id'>$topic.Name</a> /
      <if what='$,LargeFormat==*TF_PRE'><pre></if>
      <iterate_posting_paragraphs posting='$,'>
      <p>
      <for>
       <pic posting='$,' par='$.'>
       $.HTMLBody
      </for>
      </p>
      <if what='$,LargeFormat==*TF_PRE'></pre></if>
     </td></tr>
    </table>
    <qanda>
   </td>
   <bldot>
   <td width=22% bgcolor=F6F7FA>
    <updates_chapter id='$high.Id'>
    <articles_topic id='$topic.Id' title='$topic.Name'>
   </td>
  </tr></table> 
  <bottom>
 </span>         		   
</body>

</html>
