<< @(#) $Id$ >>

<grps>
<ident name='topic_id' table='topics'>
<int name='offset'>
<ifzero what='$topic_id'>
 <assign name='topic_id' value='-1'>
</ifzero>
<if what='$topic_id<=0'>
 <log event=links text#='topic(-1) offset=$offset'>
<else>
 <log event=links text#='topic($topic_id) offset=$offset'>
</if>

<element name='hierarchy' params='topic_id'>
<div class='ninept'>
 <a href='/links/'>Ссылки</a>
 <iterate_topic_hierarchy topic_id='$topic_id' root='$`links`'>
 <for>
  /
  <if what='$.Id!=$topic_id'>
   <a href='/$.Catalog'>$=.Subject</a>
  <else>
   <b>$=.Subject</b>
  </if>
 </for>
</div>
</element>

<element name='intro' params='topic_id'>
<if what='$topic_id<=0'>
 <subtitle title='Каталог еврейских ресурсов'>
<else>
 <topic_obj id='$topic_id'>
 <ife what='$,Body'>
  <subtitle title#='Еврейские ресурсы: $,Subject'>
 <else>
  <subtitle title#='Еврейские ресурсы: $,Body'>
 </ife>
</if>
<links_switcher ident='catalog'>
<if what='$topic_id>0'>
 <hierarchy topic_id='$topic_id'>
</if>
<p>
<postings_info grp='*GRP_LINKS' topic_id!='$topic_id<=0 ? $`links` : $topic_id'
               recursive='*true' as_guest='*true'>
<zone>
 <if what='$topic_id<=0'>
  <array name='words' vals='ссылку,ссылки,ссылок'>
 <else>
  <array name='words' vals='ссылка,ссылки,ссылок'>
 </if>
 <plural name='links' value='$,Total' words='$words'>
</zone>
<zone>
 <topic_count name='subs' id!='$topic_id<=0 ? $`links` : $topic_id'
              recursive='*true'>
 <if what='$topic_id<=0'>
  <array name='words' vals='категории,категориям,категориям'>
 <else>
  <array name='words' vals='подкатегория,подкатегории,подкатегорий'>
 </if>
 <plural name='cats' value='$subs' words='$words'>
</zone>
<span class='ninept'>
 <if what='$topic_id<=0'>
  Каталог содержит <em>$,Total</em> $links на различные ресурсы, имеющие
  отношение к евреям и еврейству. Ссылки тщательно отсортированы по
  <em>$subs</em> $cats.
 <else>
  В этой категории <em>$,Total</em> $links<asp>
  <ifnzero what='$subs'>&sp;и <em>$subs</em> $cats</ifnzero>.
 </if>
</span>
</element>

<element name='fastjump'>
<form method=get action='/actions/goto/topic' style='margin: 0'>
 <hidden name='okdir' value='/'>
 <hidden name='faildir' value='/links/'>
 <table class='eightpt'>
  <tr>
   <td>
    <topicselect name='topic_id' grp='*GRP_LINKS' root='$`links`'
		 null_title='Быстрый переход'>
   </td>
   <td><input type=submit value='Перейти'></td>
  </tr>
 </table>
</form>
</element>

<element name='navigator' params='topic_id'>
<table cellspacing=5><tr valign=top>
 <td><table class='topics' style='margin: 0'>
  <assign name='up' value!='$topic_id<=0 ? $`links` : $topic_id'>
  <iterate_sortedtopicnames grp='*GRP_LINKS' up='$up' name_root='$up'
                            as_guest='*true'>
  <iterate_fixed_rows rows=4 mincols=3>
  <for>
   <postings_info grp='*GRP_LINKS' topic_id='$.Id' recursive='*true'>
   <tr><td>
    <a href='/$.Catalog' class='topics-item'>
     $=.Subject&nbsp;<span class='topics-answers'>($,Total)</span><asp>
    <asp></a><asp>
    <biff time='$,MaxSent' small='*true'>
    <topic_count id='$.Id' recursive='*true'>
    <ifnzero what='$,'>
     <br>
     <zone>
      <array vals='подкатегория,подкатегории,подкатегорий'>
      <plural name='subs' value='$,'>
     </zone>
     <span class='eightpt'><em>$,</em> $subs
    </ifnzero>
   </td></tr>
   <if what='$;isEol'>
    </table></td>
    <td>&nbsp;</td>
    <td><table class='topics' style='margin: 0'>
   </if>
  </for>
 </table></td>
</tr></table>
</element>

<html>
<preamble>
<body>
 <top ident='links'>
 <table width=100% cellpadding=5>
  <tr valign=top><td class='nframe'>
   <html_cache ident#='links_navigator-$topic_id' period!='3 * 60 * 60'
               depends='topics,postings'>
    <intro topic_id='$topic_id'>
    <navigator topic_id='$topic_id'>
    <seealso>
    <fastjump>
   </html_cache>
  </td></tr>
  <tr><td class='cframe'><outer>
   <table width=100% cellspacing=0 cellpadding=5><tr valign=top>
    <td><common>
     <postings_links topic_id='$topic_id' limit!='$topic_id<=0 ? 10 : 15'
		     offset='$offset'>
     <rss>
    </common></td>
    <td width=150 class='nframe'><inner>
     <if what='$topic_id<=0'>
      <hit_parade grp='*GRP_LINKS' topic_id='$topic_id' sort='*SORT_RATING'
                  title='Избранное' showshadows='*false' limit=20>
     </if>
    </inner></td>
   </tr></table>
  </outer></td></tr>
 </table>
 <bottom>
</body>
</html>
