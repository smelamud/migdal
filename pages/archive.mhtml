<< @(#) $Id$ >>

<grps>
<int name='year'>

<html>
<stylesheet ident='index'>
<preamble>
<body>
 <top ident='index'>
 <table width=100% cellpadding=5>
  <tr valign=top>
   <td width=150 class='eframe'>
    <topics>
    <ears>
   </td>
   <td class='cframe'>
    <subtitle>
    <time>
    <assign name='endyear' value='$,@Y'>
    <ifzero what='$year'>
     <assign name='year' value='$endyear'>
    </ifzero>
    <b>Год:</b>
    <for n!='$endyear - 2000'>
     <assign name='cyear' value!='$endyear - $.'>
     <if what='$cyear==$year'>
      &nbsp;<b>$cyear</b>
     <else>
      &nbsp;<a href='/archive/$cyear/'>$cyear</a>
     </if>
    </for>
    <p>&nbsp;</p>
    <timestamp name='later' year='$year' month=1 day=1 hour=0 minute=0
               second=0>
    <timestamp name='earlier' year!='$year + 1' month=1 day=1 hour=0 minute=0
               second=0>
    <iterate_postinglist grp='*GRP_ARCHIVE' limit=0 showshadows='*false'
                         later='$later' earlier='$earlier'>
    <p>
     <array vals='сообщение,сообщения,сообщений'>
     <plural value='$;Count'>
     <b>Всего <em>$;Count</em> $,</b>
    </p>
    <assign name='day' value=0>
    <dl class='ninept index'>
     <for>
      <if what='$day!=$.Sent@d'>
       <ifnzero what='$day'><dt>&nbsp;</ifnzero>
       <dt>$.Sent@d.$.Sent@m.$.Sent@Y
       <assign name='day' value='$.Sent@d'>
      </if>
      <dd>$.Sent@H:$.Sent@i&sp;
	  <a href='$.GrpDetailsHref'>$=.Heading</a>
     </for>
    </dl>
   </td>
  </tr>
 </table>
 <bottom>
</body>
</html>
