<< @(#) $Id$ >>

<int name='postid'>
<int name='topic_id'>
<int name='day'>

<grps>
<posting_obj name='posting' id='$postid' grp='*GRP_DAILY_NEWS'
             topic_id='$topic_id'>
<topic_obj name='event' id='$posting.TopicId'>
<log event=daily text#='topic($event.Id) post($posting.Id)'>

<macro name='editor'>
 <ispost what='$event'>
</macro>
<endif name='/editor'>

<element name='batcher' params='event,day'>
<editor>
 <table class='info'><tr valign=center>
  <td><image src='/pics/sheet.gif'></td>
  <td>
   <a href='/${event.Catalog}add-day?redirid=$_'>Добавить репортаж</a>
  </td>
  <td>&nbsp;</td>
  <td><image src='/pics/sheet.gif'></td>
  <td>
   <a href='/${event.Catalog}day-$day/add-picture?redirid=$_'>Добавить картинку</a>
  </td>
 </tr></table>
</editor>
</element>

<element name='controls' params='posting,event'>
<ifnzero what='$posting.Id'>
 <div align=right><table class=controls>
  <tr valign=bottom>
   <editor>
    <td>
     <editlink posting='$posting'>
     &nbsp;
    </td>
   </editor>
   <td><discusslink posting='$posting'></td>
  </tr>
 </table></div>
<else>
 &nbsp;
</ifnzero>
</element>

<element name='daily_ring' params='current,event'>
<notprint>
 <table width=100% style='clear: both' class='ring'>
  <tr valign=center>
   <sibling_id grp='*GRP_DAILY_NEWS' topic_id='$current.TopicId'
               index1='$current.Index1' next='*false'>
   <if what='$,>0'>
    <posting_obj id='$,' grp='*GRP_DAILY_NEWS'>
    <td align=left width=40%>
     <pointer href#='/${event.Catalog}day-$,Index1/'
              text='$=,Subject' title='Предыдущий выпуск' left='*true'>
    </td>
   <else>
    <td width=40%>&nbsp;</td>
   </if>
   <td width=20%>&nbsp;</td>
   <sibling_id grp='*GRP_DAILY_NEWS' topic_id='$current.TopicId'
               index1='$current.Index1' next='*true'>
   <if what='$,>0'>
    <posting_obj id='$,' grp='*GRP_DAILY_NEWS'>
    <td align=right width=40%>
     <pointer href#='/${event.Catalog}day-$,Index1/'
              text='$=,Subject' title='Следующий выпуск' left='*false'>
    </td>
   <else>
    <td width=40%>&nbsp;</td>
   </if>
  </tr>
 </table>
</notprint>
</element>

<html>
<js_jquery>
<js src='/js/vote.js'>
<posting_og_image posting='$posting'>
<preamble>
<body>
 <top ident='index'>
 <table width=100% cellpadding=5><tr valign=top>
  <td width=140 class='eframe'><zone>
   <topics>
   <ears>
  </zone></td>
  <td class='cframe'>
   <subtitle>
   <batcher event='$event' day!='$posting.Id!=0 ? $posting.Index1 : $day'>
   <table class='article' width=100% cellspacing=5 cellpadding=0><tr valign=top>
    <iterate_postinglist topic_id='$event.Id' grp='*GRP_DAILY_GALLERY'
			 sort='*SORT_RATING' limit=0
			 index1!='$posting.Id!=0 ? $posting.Index1 : $day'>
    <outer><td width=140><inner>
     <for>
      <if what='$;isOdd'>
       <daily_picture picture='$.'>
      </if>
     </for>
    </inner></td></outer>
    <td>
     <controls posting='$posting' event='$event'>
     <ifnzero what='$posting.Id'>
      <table class=sent align=right>
       <tr><td>&nbsp;</td></tr>
       <tr><td align=right><sentview date='$posting.Sent'></td></tr>
       <tr><td align=right><senderlink message='$posting'></td></tr>
      </table>
      <daily_ring current='$posting' event='$event'>
      <h1 style='clear: both'>
       $=posting.Subject
       <ifne what='$posting.Comment0'>
        <div class='author'>$posting.Comment0HTML</div>
       </ifne>
      </h1>
      <p>$posting.BodyHTML</p>
      <vote_panel id='$posting.Id' rating='$posting.Rating' align='center'>
      <addtoany>
      <daily_ring current='$posting' event='$event'>
      <controls posting='$posting' event='$event'>
     </ifnzero>
     <rss>
    </td>
    <outer><td width=140><inner>
     <rewind_iterator>
     <for>
      <if what='!$;isOdd'>
       <daily_picture picture='$.'>
      </if>
     </for>
    </inner></td></outer>
   </tr></table>
  </td>
 </tr></table>
 <bottom>
</body>
</html>
