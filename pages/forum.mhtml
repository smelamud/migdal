<< @(#) $Id$ >>

<int name='postid'>
<int name='offset'>
<int name='tid'>
<assign name='portion' value='15'>
<if what='$offset==0 && $tid!=0'>
 <forumlist_offset name='offset' parent_id='$postid' id='$tid'
                   sort='*SORT_RSENT'>
 <assign name='offset' value!='(int)($offset / $portion) * $portion'>
</if>

<grps>
<posting_obj id='$postid' grp='*GRP_FORUMS'>
<log event=forum text#='post($,Id)'>

<html>
 <posting_og_image posting='$,'>
 <preamble>

 <top ident='discuss'>
 <table width=100% cellpadding=5><tr valign=top><td class='cframe'>
  <posting posting='$,' shorten!='$,Grp!=*GRP_FORUMS' showdiscuss='*false'>
  <p>
  <forums parent_id='$,OrigId' limit='$portion' offset='$offset'>
 </td></tr></table>
 <bottom>
</html>
