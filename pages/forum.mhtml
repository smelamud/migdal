<< @(#) $Id$ >>

<int name='postid'>
<int name='offset'>
<int name='tid'>
<if what='$offset==0 && $tid!=0'>
 <forumlist_offset name='offset' parent_id='$postid' id='$tid'
                   sort='*SORT_RSENT'>
 <assign name='offset'
         value!='(int)($offset / $$userForumPortion) * $$userForumPortion'>
</if>

<grps>
<posting_obj id='$postid' grp='*GRP_FORUMS'>
<log event=forum text#='post($,Id)'>

<html>
<preamble>
<body>
 <top ident='discuss'>
 <table width=100% cellpadding=5><tr valign=top><td class='cframe'>
  <posting posting='$,' shorten!='$,Grp!=*GRP_FORUMS' showdiscuss='*false'
           showcomplain='*true'>
  <p>
  <forums parent_id='$,OrigId' limit='$$userForumPortion' offset='$offset'
          parent_prefix='/forum'>
 </td></tr></table>
 <bottom>
</body>
</html>
