<< @(#) $Id$ >>

<int name='postid'>
<string name='color'>
<string name='image'>

<element name='votebtn' params='id,class,vote,peer,text'>
<ifzero what='$peer'>
 <td class=$class><a href='actions/vote.php?postid=$id&vote=$vote&okdir=$#-&faildir=$#-'
  		     title='$text'>$vote</a></td>
<else>
 <if what='$peer==$vote'>
  <td class='$class sel' align=left>$vote</td>
 <else>
  <td class='empty' align=left>$vote</td>
 </if>
</ifzero>
</element>

<html>
<stylesheet ident='votes'>
<preamble_tiny>
<body>
 <style><!--
  BODY {
	 background-color: $color;
	 background-image: url("$image");
  }

  TD.empty,SPAN.empty {
	  background-color: $color;
	  color: $color;
  }
  // -->
 </style>

 <noindex>
  <posting_vote id='$postid'>
  <table class='eightpt' width=130>
   <tr><td colspan=6 align=right>
    <ifnzero what='$,VoteCount'>
     $,RatingString&nbsp;<image src#='/pics/bar-${,Rating20}.gif'>
    <else>
     <span class='empty'>2.50&nbsp;</span><image src='/pics/bar-null.gif'>
    </ifnzero>
   </td></tr>
   <tr>
    <vote id='$postid'>
    <notenglish>
     <ifzero what='$,'>
      <td>Оцените:</td>
     <else>
      <td>Оценка:</td>
     </ifzero>
     <votebtn id='$postid' class=eh vote=1 peer='$,' text='Ужасно :('>
     <votebtn id='$postid' class=st vote=2 peer='$,' text='Плохо'>
     <votebtn id='$postid' class=sl vote=3 peer='$,' text='Так себе'>
     <votebtn id='$postid' class=ar vote=4 peer='$,' text='Хорошо'>
     <votebtn id='$postid' class=hm vote=5 peer='$,' text='Отлично!'>
    <else>
     <ifzero what='$,'>
      <td>Rate:</td>
     <else>
      <td>Rating:</td>
     </ifzero>
     <votebtn id='$postid' class=eh vote=1 peer='$,' text='Very bad :('>
     <votebtn id='$postid' class=st vote=2 peer='$,' text='Bad'>
     <votebtn id='$postid' class=sl vote=3 peer='$,' text='50/50'>
     <votebtn id='$postid' class=ar vote=4 peer='$,' text='Good'>
     <votebtn id='$postid' class=hm vote=5 peer='$,' text='Excellent!'>
    </notenglish>
   </tr>
  </table>
 </noindex>
</body>
</html>
