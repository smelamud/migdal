<< @(#) $Id$ >>

<int name='offset'>

<element name='batcher' params='&list'>
<table width=100%><tr>
 <td align=left class='info'>
  <table><tr valign=center>
   <td><image src='/pics/sheet.gif'></td>
   <td>
    <a href='/complains/add/?redirid=$_'>Добавить жалобу</a>
   </td>
  </tr></table>
 </td>
 <td><spin list='$list'></td>
</tr></table>
</element>

<html>
<preamble>
<body>
 <top ident='index'>
 <table width=100% cellspacing=5 cellpadding=5><tr><td class='cframe'>
  <subtitle>
  <iterate_complainlist name='list' limit=20 offset='$offset'>
  <batcher list='$;'>
  <assign name='closed' value='*true'>
  <for>
   <if what='$list.isFirst || $.isClosed!=$closed'>
    <notfirst what='$list'>
     </catalog_table>
     <p>
    </notfirst>
    <catalog_table>
    <tr valign=center>
     <td colspan=6 class='catalog-div'>
      <if what='!$.isClosed'>Открытые жалобы <else>Закрытые жалобы</if>
     </td>
    </tr>
    <tr valign=top>
     <th class='catalog-cell'>&no;</th>
     <th class='catalog-cell'>Прислано</th>
     <th class='catalog-cell'>Автор</th>
     <th class='catalog-cell'>Заголовок</th>
     <th class='catalog-cell'>Рассматривает</th>
     <th class='catalog-cell'>Ответы</th>
    </tr>
    <assign name='closed' value='$.isClosed'>
   </if>
   <if what='$;isOdd'>
    <assign name='class' value='catalog-cell-odd'>
   <else>
    <assign name='class' value='catalog-cell'>
   </if>
   <td align=right class='$class eightpt'>$.Id</td>
   <td class='$class eightpt'><sentview date='$.Sent'></td>
   <td class='$class eightpt'><senderlink message='$.'></td>
   <td class='$class ninept'>
    <a href='/complains/$.Id/?redirid=$_'>$.Subject</a>
    <biff time='$.Modified' small='*true'>
   </td>
   <if what='$.isAssigned'>
    <td class='$class eightpt'><senderlink message='$.PersonInfo'></td>
   <else>
    <td class='$class' align=center>&mdash;</td>
   </if>
   <td class='$class ninept' align=center>
    <biff time='$.LastAnswer' small='*true'>
    $.Answers
   </td>
   </tr>
  </for>
  </catalog_table>
  <batcher list='$;'>
 </td></tr></table>
 <bottom>
</body>
</html>
