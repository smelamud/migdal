<< @(#) $Id$ >>

<int name='offset'>

<element name='batcher' params='&list'>
<table width=100%>
 <tr valign=bottom>
  <td align=left class='info'>
   <table><tr valign=center>
    <td><image src='/pics/sheet.gif'></td>
    <td>
     <a href='/admin/textears/add/?redirid=$_'>Добавить ушко</a>
    </td>
   </tr></table>
  </td>
  <td align=center><spin list='$list'></td>
 </tr>
</table>
</element>

<element name='error_lines'>
<if what='$$err!=0'>
 <table>
  <error id='*EMS_NO_MESSAGE' text='Такого сообщения не существует'>
  <error id='*EMS_NO_HIDE' text='У вас нет прав на редактирование этого сообщения'>
 </table>
</if>
</element>

<html>
<preamble>
<body>
 <top ident='index'>
 <table width=100% cellpadding=5>
  <tr valign=top>
   <td width=150 class='eframe'>
    <topics>
   </td>
   <td class='cframe'>
    <subtitle>
    <iterate_postinglist name='list' grp='*GRP_TEXTEARS' topic_id='$`textears`'
			 limit=20 offset='$offset' sort='*SORT_SENT'>
    <error_lines>
    <batcher list='$list'>
    <for>
     <posting_textear posting='$.'>
    </for>
    <ifnzero what='$list.Count'>
     <batcher list='$list'>
    </ifnzero>
   </td>
  </tr>
 </table>
 <bottom>
</body>
</html>
