<< @(#) $Id$ >>

<int name='msgid'>
<int name='topic_id'>
<ifzero what='$msgid'>
 <assign name='id' value='$topic_id'>
 <assign name='itemname' value='тему'>
 <assign name='table' value='topics'>
<else>
 <assign name='id' value='$msgid'>
 <assign name='itemname' value='сообщение'>
 <assign name='table' value='messages'>
</ifzero>
<int name='r_user_name'>
<int name='r_group_name'>
<int name='r_perm'>
<pagetitle title#='Изменение прав на $itemname'>

<html>
<preamble>
<body>
 <top ident='index'>
 <perms table='$table' id='$id'>
 <setup>
 <formtable title#='Изменение прав на $itemname'>
  <form method=post action='actions/chmod.php'>
   <hidden name='okdir' value='$--'>
   <hidden name='faildir' value='$-'>
   <hidden name='msgid' value='$msgid'>
   <hidden name='topic_id' value='$topic_id'>
   <hidden name='edittag' value=1>
   <table>
    <error id='*ECHM_NO_CHMOD' span=2
           text#='Вы не можете менять права на $itemname'>
    <error id='*ECHM_USER_EMPTY' text='Укажите имя пользователя' span=2>
    <error id='*ECHM_NO_USER' text='Такого пользователя не существует' span=2>
    <edit_line title='Пользователь' name='user_name' value='$,UserName' size=20
               maxlength=30>
    <tr>
     <td>&nbsp;</td>
     <td>
      << FIXME deprecated >>
      <checkbox title='Рекурсивно' name='r_user_name' value=$r_user_name>
     </td>
    </tr>
    <error id='*ECHM_GROUP_EMPTY' text='Укажите имя группы' span=2>
    <error id='*ECHM_NO_GROUP' text='Такой группы не существует' span=2>
    <edit_line title='Группа' name='group_name' value='$,GroupName' size=20
	       maxlength=30>
    <tr>
     <td>&nbsp;</td>
     <td>
      << FIXME deprecated >>
      <checkbox title='Рекурсивно' name='r_group_name' value=$r_group_name>
     </td>
    </tr>
    <error id='*ECHM_BAD_PERMS' text='Права заданы некорректно' span=2>
    <edit_line title='Права' name='perm_string' value='$,PermHTML' size=17
	       maxlength=17>
    <tr>
     <td>&nbsp;</td>
      << FIXME deprecated >>
     <td><checkbox title='Рекурсивно' name='r_perm' value=$r_perm></td>
    </tr>
   </table>
   <formbuttons title='Изменить'>
  </form>
 </formtable>
 <bottom>
</body>
</html>
