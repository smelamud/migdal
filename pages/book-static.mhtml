<< @(#) $Id$ >>

<ident name='bookid' table='postings'>
<< FIXME |SELECT_LARGE_BODY ? >>
<posting_obj id='$bookid' grp='*GRP_BOOKS' fields='*SELECT_GENERAL'>
<ifzero what='$,Id'>
 << deprecated >>
 <fail>
</ifzero>
<< FIXME pagetitle is deprecated >>
<pagetitle title='$,Subject'>

<html>
<meta http-equiv='Content-Type' content='text/html; charset=windows-1251'>
<assign_global name='userStyle' value='-1'>
<preamble_tiny stylesheet='style/static-article.css'>
<body>
 <div class='article' style='padding: 5'>
  <table width=50% cellspacing=0 cellpadding=0><tr><td>
   <ifne what='$,Author'>
    <p class='author'>$,AuthorHTML</p>
   </ifne>
   <p><h1 style='margin-left: 0'>$,Subject</h1></p>
   <ifne what='$,Comment0'>
    <p class='source'>$,Comment0HTML</p>
   </ifne>
   <p>$,BodyHTML</p>
  </td></tr></table>
  <a name='contents'></a>
  <h1>Оглавление</h1>
  << FIXME |SELECT_LARGE_BODY ? >>
  <iterate_postinglist grp='*GRP_BOOK_CHAPTERS' limit=0 sort='*SORT_INDEX0'
		       up='$,MessageId' fields='*SELECT_GENERAL'>
  <ul>
   <for>
    <li><a href='#chap$.Id'>$.Subject</a>
   </for>
  </ul>
  <reset_iterator>
  <assign name='static_note_base' value=1>
  <for>
   << FIXME |SELECT_LARGE_BODY ? SELECT_IMAGES deprecated >>
   <posting_obj id='$.Id' grp='*GRP_BOOK_CHAPTERS' fields='*SELECT_IMAGES'>
   <a name='chap$.Id'></a>
   <h1 style='clear: both; padding-top: 20px'>$,Subject
    <ifne what='$,Author'>
     <div class='author'>$,AuthorHTML</div>
    </ifne>
   </h1>
   <article posting='$,' withvote='*false' static='*true'
	    note_base_var='static_note_base'>
   <p style='clear: both'>
    <table><tr valign=center>
     <td><image src='pics/up.gif'></td>
     <td>&nbsp;</td>
     <td><a href='#contents'>К оглавлению</a></td>
    </tr></table>
   </p>
  </for>
 </div>
</body>
</html>
