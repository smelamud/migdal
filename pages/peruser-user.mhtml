<< @(#) $Id$ >>

<int name='topic_id'>
<int name='user_id'>
<int name='offset'>
<int name='sort'>
<ifzero what='$sort'>
 <assign name='sort' value='*SORT_PSENT'>
<else>
 <meta_noindex>
</ifzero>

<grps>
<user_obj name='user' id='$user_id'>
<log event=community text#='topic($topic_id) user($user.Id) offset=$offset'>

<html>
<preamble>
<body>
 <top ident='index'>
 <table width=100% cellspacing=5 cellpadding=5><tr valign=top>
  <td width=150 class='eframe'>
   <topics>
   <ears>
  </td>
  <td>
   <div class='cframe' style='padding: 5'>
    <subtitle>
    <div class='ninept'>
     <a href='/users/$#user.Folder/?redirid=$_'
	onClick="userInfo($user.Id); return false">О пользователе $user.Login</a>
    </div>
    <ifzero what='$offset'>
     <p>
     <postings grp='*GRP_PERUSER_FORUMS' topic_id='$topic_id' limit=0
               user_id='$user.Id'>
    </ifzero>
   </div>
   <p>
   <gallery topic_id='$topic_id' rows='4' cols='5' offset='$offset'
            sort='$sort' user_id='$user.Id' noguests='*true'>
   <rss>
  </td>
 </tr></table>
 <bottom>
</body>
</html>
