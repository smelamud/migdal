<< @(#) $Id$ >>

<int name='offset'>

<grps>
<log event=review text#='topic($`migdal.printings`)'>

<element name='batcher' params='printings'>
<notprint>
 <table class='info'><tr valign=center>
  <td><image src='/pics/print.gif'></td>
  <td><a href='$[print=1]' target='_blank'>Для печати</a></td>
  <ispost what='$printings'>
   <td>&nbsp;</td>
   <td><image src='/pics/sheet.gif'></td>
   <td>
    <a href='/migdal/printings/add/?redirid=$_'>Добавить книгу</a>
   </td>
   <td>&nbsp;</td>
   <td>
    <a href='/migdal/printings/reorder/'>Расставить подразделы</a>
   </td>
  </ispost>
 </tr></table>
</notprint>
</element>

<html>
<preamble>
<body>
 <top ident='index'>
 <table width=100% cellpadding=5>
  <tr valign=top>
   <notprint>
    <td width=150 class='eframe'>
     <topics>
     <ears>
    </td>
   </notprint>
   <td class='cframe'>
    <subtitle>
    <seealso_frame>
    <perms name='printings' id='$`migdal.printings`'>
    <batcher printings='$printings'>
    <iterate_postinglist grp='*GRP_PRINTINGS' topic_id='$`migdal.printings`'
                         recursive='*true' limit=0
			 sort='*SORT_TOPIC_INDEX0_INDEX0'>
    <assign name='topic_id' value=0>
    <for>
     <if what='$topic_id!=$.TopicId'>
      <assign name='topic_id'
	      value!="$.TopicId!=$`migdal.printings` ? $.TopicId : 0">
      <ifnzero what='$topic_id'>
       <topic_name id='$topic_id'>
       <table width=100% class=heading><tr>
	<td align=left><image src='/pics/times-bullet.gif'></td>
	<td align=right>$=,Subject</td>
       </tr></table>
       <notprint>
        <ispost what='$printings'>
	 <table class='info'><tr valign=center>
	   <td>&nbsp;</td>
	   <td>
	    <a href='${.GrpGeneralHref}reorder?redirid=$_'>Расставить книги</a>
	   </td>
	 </tr></table>
        </ispost>
       </notprint>
      </ifnzero>
     </if>
     <posting posting='$.' showtopic='*false' showdiscuss='*true'>
    </for>
    <ifnzero what='$;Count'>
     <batcher printings='$printings'>
    </ifnzero>
   </td>
  </tr>
 </table>
 <bottom>
</body>
</html>
