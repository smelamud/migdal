<< @(#) $Id$ >>

<grps>
<ident name='topic_id'>
<ifzero what='$topic_id'>
 <assign name='topic_id' value='-1'>
</ifzero>
<int name='user_id'>
<int name='offset'>
<int name='sort'>
<ifzero what='$sort'>
 <assign name='sort' value='*SORT_PSENT'>
<else>
 <meta_noindex>
</ifzero>
<string name='notonly_href'>

<log event=gallery text#='topic($topic_id) offset=$offset'>

<element name='notonly'>
<ifne what='$$notonly_href'>
 <div class='ninept'>
  Этот раздел содержит не только картинки.
  <a href='$$notonly_href'>Увидеть раздел полностью.</a>
 </div>
</ifne>
</element>

<html>
<js_jquery>
<js src='/js/vote.js'>
<preamble>
<body>
 <if what="!isset($$menu_main) || $$menu_main==''">
  <assign_global name='menu_main' value='index'>
 </if>
 <top ident='$$menu_main'>
 <table width=100% cellpadding=5><tr valign=top>
  <td width=150 class='eframe'>
   <topics>
   <ears>
  </td>
  <td>
   <div class='nframe' style='margin-bottom: 5px; padding: 5px'>
    <subtitle>
    <notonly>
    <p>
    <seealso_frame>
   </div>
   <perms id='$topic_id'>
   <assign name='noguests' value!='!$,isGuestPostable'>
   <entry_grps id='$topic_id'>
   <assign name='noadd' value!='!in_array(*GRP_GALLERY,$,)'>
   <gallery topic_id='$topic_id' rows='$userPictureRowPortion'
	    cols='$userPictureColumnPortion' offset='$offset' sort='$sort'
	    user_id='$user_id' noguests='$noguests' noadd='$noadd'>
   <rss>
   <addtoany>
  </td>
 </tr></table>
 <bottom>
</body>
</html>
