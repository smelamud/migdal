<< @(#) $Id$ >>

<int name='compid'>
<int name='offset'>
<int name='tid'>
<if what='$offset==0 && $tid!=0'>
 <forumlist_offset name='offset' parent_id='$compid' id='$tid'
                   sort='*SORT_RSENT'>
 <assign name='portion' value='15'>
 <assign name='offset' value!='(int)($offset / $portion) * $portion'>
</if>

<html>
<stylesheet ident='complain'>
<preamble>
<body>
 <top ident='index'>
 <table width=100% cellspacing=5 cellpadding=0 class='cframe'>
  <tr><td>
   <complain_obj id='$compid'>
   <complain complain='$,' discuss='*false'>
  </td></tr>
  <tr><td>
   <forums parent_id='$,Id' limit='$portion' offset='$offset'>
  </td></tr>
 </table>
 <bottom>
</body>
</html>
