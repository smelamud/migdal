<< @(#) $Id$ >>

<int name='postid'>
<int name='issue'>
<grps>

<topic_obj name='times' id='$`times`'>
<posting_obj name='cover' id='$postid' grp='*GRP_TIMES_COVERS'
             topic_id='$`times`'>
<assign name='issues' value!='$cover.Id>0 ? $cover.getIssues : $issue'>

<log event=times text#='issue($issue)'>

<macro name='editor'>
 <ispost what='$$times'>
</macro>
<endif name='/editor'>

<element name='times_issue'>
<table width=120>
 <tr><td class='issue'>
  &no;$$issues
 </td></tr>
 <ifnzero what='$$cover.Id'>
  <tr><td class='month'>
   $$=cover.Comment0
  </td></tr>
 </ifnzero>
</table>
</element>

<element name='batcher'>
<editor>
 <table class='info'><tr valign=center>
  <td><image src='/pics/sheet.gif'></td>
  <td>
   <a href='postingedit.php?topic_id=$`times`&grp=*GRP_TIMES_ARTICLES&redirid=$_'
      >Добавить статью</a>
  </td>
  <if what='$$issue>0'>
   <td>&nbsp;</td>
   <td>
    <a href='reorder.php?issue=$$issue&topic_id=$`times`&grp=*GRP_TIMES_ARTICLES&up=-1&redirid=$_'
       >Расставить</a>
   </td>
  </if>
 </tr></table>
</editor>
</element>

<element name='select_issue'>
<form method='get' action='/actions/goto/href'><table class='ninept'>
 <tr>
  <td>Номер</td>
  <td><select name='okdir'>
   <iterate_postinglist grp='*GRP_TIMES_COVERS' limit=0 sort='*SORT_RINDEX1'>
   <for>
    <assign name='title' value#='&no;$.getIssues&nbsp;$=.Comment0'>
    <if what='$.Index1==$$issue'>
     <option value='/times/$.Index1/' selected>$title
    <else>
     <option value='/times/$.Index1/'>$title
    </if>
   </for>
  </select></td>
  <td>
   <input type=submit value='Выбрать'>
  </td>
 </tr>
</tr></table></form>
</element>

<element name='announce'>
<div class='nframe'>
 <ifnzero what='$$cover.Id'>
  <table width=100% cellspacing=0 cellpadding=5>
   <editor>
    <tr><td colspan=2>
     <table class='info'><tr valign=center>
      <td><image src='/pics/sheet.gif'></td>
      <td>
       <a href='postingedit.php?topic_id=$`migdal-times`&grp=*GRP_TIMES_COVERS&redirid=$_'
	  >Добавить номер</a>
      </td>
     </tr></table>
    </td></tr>
   </editor>
   <tr><td colspan=2><select_issue></td></tr>
   <tr valign=top>
    <td class='pic' width=120>
     <img border=0 width='$$cover.ImageX' height='$$cover.ImageY'
	  src='$$cover.ImageURL'>
    </td>
    <td>
     <vote_frame align=right id='$$cover.Id' color='$$style_nframe_back'>
     $$cover.BodyHTML
     <posting_controls posting='$$cover' showdiscuss='*true'>
    </td>
   </tr>
  </table>
 </ifnzero>
</div>
</element>

<element name='times_info'>
<div class='ninept'>
 <dl class='info'>
  <if what='$$issue>=26'>
   <dt>Директор издания</dt>
   <dd>Кира Верховская</dd>
  </if>
  <if what='$$issue<26'>
   <dt>Главный редактор</dt>
   <dd>Болеслав Капулкин</dd>
  <elif what='$$issue>=36'>
   <dt>Главный редактор</dt>
   <dd>Инна Найдис</dd>
  </if>

  <if what='$$issue>=38'>
   <dt>Редактор</dt>
   <dd>Ольга Ксендзюк</dd>
  </if>

  <dt>Редколлегия</dt>
  <if what='$$issue>=26'>
   <dd>Полина Блиндер</dd>
  </if>
  <if what='$$issue<27'>
   <dd>Елена Каракина</dd>
  </if>
  <dd>Анна Мисюк</dd>
  <if what='$$issue<36'>
   <dd>Инна Найдис</dd>
  </if>
  <dd>Леонид Штекель</dd>

  <dt>Адрес редакции:</dt>
  <dd>г. Одесса, ул. М. Арнаутская, 46-а, к.1. Тел.: 22-65-90.</dd>

  <dt>E-mail:</dt>
  <dd><a href='mailto:m_times@migdal.ru'>m_times@migdal.ru</a></dd>
 </dl>
