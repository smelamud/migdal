 Вс-вышнему, благословен Он, для которого нет ничего невозможного.
</div>
</element>

<element name='issue_further' params='issue,pic,title'>
<ifnzero what='$issue'>
 <table><tr valign=center>
  <td align=left>
   <a href='/times/$issue/' class='eightpt'>$title</a>
  </td>
  <td><image src='$pic'></td>
 </tr></table>
 <p>
</ifnzero>
</element>

<element name='navigator'>
<assign name='nfirst' value='$$issue'>
<for n=2>
 <sibling_index name='prev' grp='*GRP_TIMES_COVERS' index1='$nfirst'
	        next='*true'>
 <ifnzero what='$prev'>
  <assign name='nfirst' value='$prev'>
 </ifnzero>
</for>
<sibling_index grp='*GRP_TIMES_COVERS' index1='$nfirst' next='*true'>
<issue_further issue='$,' pic='/pics/upper.gif' title='Новые номера'>
<iterate_postinglist name='covers' grp='*GRP_TIMES_COVERS' limit=5
		     sort='*SORT_RINDEX1' index1='$nfirst'>
<for>
 <islast what='$covers'>
  <assign name='nlast' value='$.Index1'>
 </islast>
 <table>
  <tr><td align=right>
   <rating value!='$.VoteCount!=0 ? $.Rating20 : -1' showtitle='*false'>
  </td></tr>
  <tr><td class='pic'>
   <posting_image posting='$.' href#='/times/$.Index1/'>
  </td></tr>
  <tr><td align=center><b>
   <if what='$$issue!=$.Index1'>
    <a href='/times/$.Index1/'>&no;$.getIssues</a>
   <else>
     &no;$.getIssues
   </if>
  </b></td></tr>
 </table>
 <p>
</for>
<sibling_index grp='*GRP_TIMES_COVERS' index1='$nlast' next='*false'>
<issue_further issue='$,' pic='/pics/lower.gif' title='Старые номера'>
</element>

<html>
<stylesheet ident='times'>
<preamble>
<body>
 <top ident='times'>
 <table width=100% cellpadding=5><tr valign=top>
  <td class='mtimes cframe'>
   <table><tr valign=bottom><td>
    <a href='/times/'><asp>
     <image src='/pics/times.gif' alt='Мигдаль Times' border=0>
    <asp></a>
   </td><td>
    <times_issue>
   </td></tr></table>
   <p>
   <announce>
   <p>
   <table width=100% cellspacing=5 cellpadding=0><tr valign=top>
    <td width=150><div class='nframe' style='padding: 5px'>
     <times_info>
    </div></td>
    <td>
     <p>
     <batcher>
     <iterate_postinglist grp='*GRP_TIMES_ARTICLES' topic_id='$`times`'
			  recursive='*true' limit=0 sort='*SORT_INDEX0'
			  index1!='$issue<0 ? 0 : $issue'>
     <assign name='topicname' value=''>
     <for>
      <if what='$topicname!=$^.Comment0'>
       <assign name='topicname' value='$^.Comment0'>
       <ifne what='$topicname'>
        <table width=100% class='heading'><tr>
	 <td align=left><image src='/pics/times-bullet.gif'></td>
	 <td align=right>$=topicname</td>
	</tr></table>
       </ifne>
      </if>
      <posting_times posting='$.' showtopic='*false' showdiscuss='*true'>
     </for>
     <ifnzero what='$;Count'>
      <batcher>
     </ifnzero>
    </td>
   </tr></table>
  </td>
  <td width=80 align=center class='mtimes'>
   <navigator>
  </td>
 </tr></table>
 <bottom>
</body>
</html>
