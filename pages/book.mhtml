<< @(#) $Id$ >>

<ident name='postid' table='postings'>
<posting_obj name='book' id='$postid' grp='*GRP_BOOKS'>

<log event=book text#='post($,Id)'>

<html>
<stylesheet ident='article'>
<stylesheet ident='book'>
<preamble>
<body>
 <top ident='index'>
 <table width=100% cellpadding=5><tr valign=top>
  <notprint>
   <td width=150 class='eframe'>
    <topics>
    <ears>
   </td>
  </notprint>
  <td class='article cframe'>
   <article_controls posting='$,'>
   <table width=100% cellspacing=0 cellpadding=0>
    <tr>
     <td colspan=3 align=right>
      <table class='sent'>
       <tr><td>&nbsp;</td></tr>
       <tr><td align=right><sentview date='$,Sent'></td></tr>
       <tr><td align=right><senderlink message='$,'></td></tr>
      </table>
     </td>
    </tr>
    <tr valign=top>
     <td width=100>&nbsp;</td>
     <td>
      <if what='$,hasSmallImage'>
       <table class='pic' align=left style='padding-right: 5px'><tr><td>
        <posting_image posting='$,'>
       </td></tr></table>
      </ifnzero>
      <topiclink posting='$,'>
      <ifne what='$,Author'>
       <p class='posting-author'>$,AuthorHTML</p>
      </ifne>
      <p><h1 style='margin: 0'>$=,Subject</h1></p>
      <ifne what='$,Comment0'>
       <p class='posting-source'>$,Comment0HTML</p>
      </ifne>
      <p style='clear: left'>$,BodyHTML</p>
      <notprint>
       <zone>
	<sibling_id up='$,OrigId' index0='*SIBLING_EDGE' next='*true'>
	<if what='$,>0'>
	 <p>
	  <table class='ring' cellpadding=0>
	   <tr valign=center>
	    <td align=right><image src='/pics/further.gif' border=0></td>
	    <td>&nbsp;</td>
	    <td><a href='${book.GrpDetailsHref}$,/'>Читать книгу</a></td>
	   </tr>
	   <tr valign=center>
	    <td align=right><image src='/pics/print.gif' border=0></td>
	    <td>&nbsp;</td>
	    <td>
	     <a href='${book.GrpDetailsHref}print/'>Вся книга для печати</a>
	    </td>
	   </tr>
	   <<iterate_packages posting_id='$postid'>
	   <for>
	    <tr valign=center>
	     <td align=right><image src='/pics/package.gif' border=0></td>
	     <td>&nbsp;</td>
	     <td>
	      <if what='$.Type==*PT_BOOK_ONEFILE'>
	       <assign name='title' value='Вся книга одним файлом в архиве'>
	      <else>
	       <assign name='title' value='Вся книга по главам в архиве'>
	      </if>
	      <a href='$.Href'>$title</a>
	     </td>
	    </tr>
	    <tr valign=center>
	     <td colspan=2>&nbsp;</td>
	     <td><i>(ZIP, ${.SizeKB}KB)</i></td>
	   </for>>
	  </table>
	 </p>
	</if>
       </zone>
      </notprint>
     </td>
     <td width=100>
      <vote_panel id='$,Id' rating='$,Rating'>
     </td>
    </tr>
   </table>
   <p>
   <article_controls posting='$,'>
  </td>
 </tr></table>
 <bottom>
</body>
</html>
