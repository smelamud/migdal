<element name='hit_parade'>
<html_cache ident#='hit_parade-$grp-$topic_id' period!='15 * 60'>
 <iterate_postinglist grp='$grp' topic_id='$topic_id' limit='$limit'
		      sort='$sort' recursive='*true' later='$later'
		      showshadows='$showshadows' as_guest='*true'>
 <ifnzero what='$;Count'>
  <topics_table class='eightpt' title='$title'>
   <for>
    <topics_line time='$.Sent' href='$.GrpDetailsHref' text='$=.Heading'
		 rating='$.Rating'>
   </for>
  </topics_table>
 </ifnzero>
</html_cache>
</element>

<element name='hit_parade_gallery'>
<html_cache ident#='hit_parade_gallery-$grp-$topic_id' period!='15 * 60'>
 <iterate_postinglist grp='$grp' topic_id='$topic_id' limit='$limit'
		      sort='$sort' recursive='*true' later='$later'
		      showshadows='$showshadows' as_guest='*true'>
 <ifnzero what='$;Count'>
  <topics_table class='eightpt' title='$title'>
   <for>
    <topics_splitter>
    <li class='topics-nobullet pic' style='text-align: center'>
     <ifnzero what='$.SmallImage'>
      <a href='$.GrpDetailsHref'>
       <img width='$.SmallImageX' height='$.SmallImageY' src='$.SmallImageURL'
            alt='$=.Title' title='$=.Title'></a>
     </ifnzero>
    </li>
    <li class='topics-nobullet' style='text-align: right'>
     <rating value='$.Rating'>
    </li>
   </for>
  </topics_table>
 </ifnzero>
</html_cache>
</element>

