<< @(#) $Id$ >>

<grps>

<element name='topic' params='picture,showtopic'>
<if what='$showtopic'>
 <tr><td class='eightpt' align='center'>
  <topiclink posting='$picture'>
 </td></tr>
</if>
</element>

<element name='picture'>
<if what='$picture.hasSmallImage'>
 <iswrite what='$picture'>
  <assign name='edithref' value='auto'>
 <else>
  <assign name='edithref' value=''>
 </iswrite>
</if>
<posting_image posting='$picture'
               title_large_id#='picture-controls-$picture.Id' rel='$rel'
               edithref='$edithref' rating='$picture.Rating'>
<div id='picture-controls-$picture.Id' class='picture-controls'>
 <vote_panel id='$picture.Id' rating='$picture.Rating' align='left'>
 <span class='picture-title'>$picture.TitleLineHTML</span>
 <ifne what='$picture.Source'>$picture.SourceHTML</ifne><br />
 <div class="sent" style="clear: left">
 <sentview date='$picture.Sent'>
 &nbsp;
 <senderlink message='$picture'>
 </div>
 <div class="picture-bottom">
  <posting_selflink posting='$picture'>
  &nbsp;
  <editlink posting='$picture'>
  &nbsp;
  <discusslink posting='$picture'>
 </div>
</div>
</element>
