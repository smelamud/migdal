<< @(#) $Id$ >>

<grps>

<element name='topic' params='picture,showtopic'>
<if what='$showtopic'>
 <tr><td class='eightpt' align='center'>
  <topiclink posting='$picture'>
 </td></tr>
</if>
</element>

<element name='picture'>
<table class='picture'>
 <tr class='border'><td align=right>
  <biff time='$picture.Modified' small='*true'>
  <senderlink message='$picture'>
 </td></tr>
 <topic picture='$picture' showtopic='$showtopic'>
 <tr><td align='center'>
  <vote_panel id='$picture.Id' rating='$picture.Rating'>
 </td></tr>
 <if what='$picture.hasSmallImage'>
  <tr><td class='image'>
   <iswrite what='$picture'>
    <assign name='edithref' value='auto'>
   <else>
    <assign name='edithref' value=''>
   </iswrite>
   <posting_image posting='$picture' title='$picture.TitleHTML'
                  title_large='$picture.TitleLineHTML' rel='$rel'
                  edithref='$edithref'>
  </td></tr>
 </if>
 <ifne what='$picture.Source'>
  <tr><td class='source eightpt' align=right>
   $picture.SourceHTML
  </td></tr>
 </ifne>
 <if what='$showdiscuss'>
  <tr><td class='control' align=right>
   <discusslink posting='$picture'>
  </td></tr>
 </if>
 <if what='$picture.hasSmallImage'>
  <tr><td class='border' align=center>
   ${picture.ImageX}x${picture.ImageY}, ${picture.LargeImageSizeKB}KB
  </td></tr>
 </if>
</table>
</element>
