<< @(#) $Id$ >>

<element name='topics_events'>
<upper_level name='Мигдаль' href='/migdal/'>
<events grp='*GRP_ALL' index='$index'>
</element>

<element name='topics_gallery_events'>
<events grp='*GRP_GRAPHICS' index='$index' prefix='/gallery'>
</element>

<element name='topics_common_events'>
<html_cache ident#='topics_common_events-$id' period!='3 * 60 * 60'
            depends='postings,topics'>
 <topic_obj name='topic' id='$id'>
 <topics_table class='ninept' title='$=,Subject'>
  <iterate_topiclist grp!='*GRP_EVENT' up='$,Id' recursive='*false'
		     sort='*SORT_RINDEX2_RINDEX0' fields='*SELECT_INFO'>
  <for>
   <assign name='info' value='$.PostingsInfo'>
   <topics_line time='$info.MaxSent' text='$=.Comment1' title='$=.BodyNormal'
		href#='/$.Catalog' class='$class_line'>
  </for>
 </topics_table>
</html_cache>
</element>

<element name='topics_event'>
<upper_level name='События' href='/migdal/events/'>
<topic_obj name='topic' id='$base'>
<topics_table title='$=topic.Subject'>
 <html_cache ident#='topics_event-$base-$index' period!='3 * 60 * 60'
             depends='postings,topics'>
  <posting_last grp='*GRP_TAPE' topic_id='$topic.Id' recursive='*false'
                as_guest='*true'>
  <topics_line time='$,' text='Новости' href#='/$topic.Catalog'
               arrow!="$index=='news'" class='topics-item ninept'>
  <posting_last grp='*GRP_GALLERY' topic_id='$topic.Id' recursive='*false'
                as_guest='*true'>
  <topics_line time='$,' text='Галерея' href#='/${topic.Catalog}gallery/'
               arrow!="$index=='gallery'" class='topics-item ninept'>
 </html_cache>
</topics_table>
</element>
