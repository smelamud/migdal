<< @(#) $Id$ >>

<element name='login'>
<notenglish>
 <table cellspacing=5 cellpadding=0>
  <notlogged>
   <tr><td align='right' colspan=3>
    <a href='/signin/?redirid=$_'><image src='/pics/enter.gif'></a>
   </td></tr>
   <master>
    <tr><td class='eightpt' align='right' colspan=3>
     Чтобы войти, сначала <a href='/register/?redirid=$_'>зарегистрируйтесь</a>.
    </td></tr>
   </master>
  <else>
   <tr>
    <td>
     <if what='$$userHidden'>
      <b>$$=userLogin</b>
     <else>
      <a href='/users/$$#userFolder/' class='login'>$$=userLogin</a>
     </if>
    </td>
    <td>&nbsp;</td>
    <td>
     <a href='/actions/logout?okdir=$#-'><asp>
      <asp><image src='/pics/exit.gif'><asp>
     <asp></a>
    </td>
   </tr>
   <admin_users>
    <tr><td align='right' colspan=3>
     <a href='/signin/?redirid=$_'><image src='/pics/su.gif'></a>
    </td></tr>
   </admin_users>
  </notlogged>
 </table>
</notenglish>
</element>
