<< @(#) $Id$ >>

<element name='login'>
<notenglish>
  <notlogged>
   <div class='top-button'>
    <a href='/signin/?redirid=$_'><asp>
     <asp><image src='/pics/enter.gif' alt='Войти'></a>
   </div>
   <master>
    <div class='eightpt top-button'>
     Чтобы войти, сначала <a href='/register/?redirid=$_'>зарегистрируйтесь</a>.
    </div>
   </master>
  <else>
   <div class='top-button'>
    <if what='$$userHidden'>
     <strong id='login'>$$=userLogin</strong>
    <else>
     <a href='/users/$$#userFolder/' id='login'>$$=userLogin</a>
    </if>
    <a href='/actions/logout?okdir=$#-'><asp>
     <asp><image src='/pics/exit.gif' alt='Выйти'></a>
    <admin_users>
     <a href='/signin/?redirid=$_'><asp>
      <asp><image src='/pics/su.gif' alt='Сменить'></a>
    </admin_users>
   </div>
  </notlogged>
</notenglish>
</element>
