<< @(#) $Id$ >>

<element name='countdown'>
<notenglish>
 <time>
 <assign name='current' value!='($year-$,@Y)*365+$day-$,@z-1'>
 <if what='$current>0'>
  <ifne what='href'>
   <a href='$href'><image src='$image'></a>
  <else>
   <image src='$image'>
  </ifne>

  <array vals='остался,осталось,осталось'>
  <plural name='last' value='$current'>
  <array vals='день,дня,дней'>
  <plural name='days' value='$current'>
  <span style="font: 14pt Arial,sans-serif">
   До
   <b>
    <ifne what='$href'>
     <a href='$href'>$title</a>
    <else>
     $title
    </ifne>
   </b>
   $last<br>$current&sp;$days
  </span>
 </if>
</notenglish>
</element>

<element name='countdown_pic'>
<notenglish>
 <time>
 <assign name='current' value!='$day-$,@z-1'>
 <if what='$current>0'>
  <div style="background-image: url('$image'); width: 123px; height: 36px; padding: 22px 90px; font: bold 12pt 'Times New Roman',serif">
   <array vals='остался,осталось,осталось'>
   <plural name='last' value='$current'>
   <array vals='день,дня,дней'>
   <plural name='days' value='$current'>
   До
   <ifne what='$href'>
    <a href='$href' style="font: bold 12pt 'Times New Roman',serif">$title</a>
   <else>
    $title
   </ifne>
   $last<br>$current&sp;$days
  </div>
 </if>
</notenglish>
</element>
