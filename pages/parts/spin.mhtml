<element name='spin'>
<if what='$list.Size>$list.Limit && $list.Limit!=0'>
 <form method=post action='/actions/goto/page' style='margin: 0'>
  <hidden name='okdir' value='$-'>
  <hidden name='pagesize' value='$list.Limit'>
  <hidden name='size' value='$list.Size'>
  <table cellspacing=0 cellpadding=0 class='spin eightpt'><tr valign=center>
   <td align=right width=32>
    <ifnzero what='$list.Offset'>
     <a href="$[offset='$list.PrevOffset' tid]" title='Предыдущая страница'>
      <image src='$picprev'></a>
    </ifzero>
   </td>
   <td align=center>стр.&nbsp;</td>
   <td align=right>
    <edit name='value' value='$list.Page' size=2 maxlength=5>
   </td>
   <td align=center>&nbsp;из&nbsp;</td>
   <td align=right>
    $list.PageCount
   </td>
   <td align=left width=32>
    <if what='$list.EndValue<$list.Size'>
     <a href="$[offset='$list.NextOffset' tid]" title='Следующая страница'>
      <image src='$picnext'></a>
    </if>
   </td>
  </tr></table>
 </form>
</if>
</element>
