<element name='topic' params='posting,showtopic'>
<if what='$showtopic'>
 <topiclink posting='$posting'><br /><br />
</if>
</element>

<element name='source' params='posting'>
<ifne what='$posting.Source'>
 <p class='posting-source'>Источник: $posting.SourceHTML</p>
</ifne>
</element>

<element name='posting_gallery'>
<dl class='posting'>
 <dt>
  <topic posting='$posting' showtopic='$showtopic'>
  <vote_panel align='right' id='$posting.Id' rating='$posting.Rating'>
  <biff time='$posting.Modified'>
 </dt>
 <dd>
 <if what='$posting.hasImage'>
  <posting_image posting='$posting' title_large='$posting.TitleLineHTML'
                 align='left'>
 </if>
 $posting.TitleHTML
 <source posting='$posting'>
 <div class='sent' style="clear: left">
  <sentview date='$posting.Sent'>&nbsp;
  <senderlink message='$posting'>
 </div>
 <posting_controls posting='$posting' showdiscuss='$showdiscuss'>
</dl>
</element>
