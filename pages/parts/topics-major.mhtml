<< @(#) $Id$ >>

<element name='navi_main' params='index'>
<topics_line href='/' title='На главную страницу' text='Главная' arrow!="$index=='index'">
</element>

<element name='navi_migdal' params='index'>
<topics_line href='/migdal/' text='Мигдаль' arrow!="$index=='migdal'">
</element>

<element name='navi_help' params='index'>
<topic_obj name='tips' id='$`tips`'>

<posting_last topic_id='$`tips`' recursive='*false' as_guest='*true'>
<topics_line time='$,' href='/tips/' title='Помощь по работе с сайтом'
	     text='Справка' arrow!="$index=='tips'" class='topics-item ninept'>
</element>

<element name='general' params='index'>
<iterate_entry_cross source_name='major' link_type='*LINKT_MAJOR'>
<for>
 <topic_obj name='topic' id='$.PeerId' fields='*SELECT_INFO' as_guest='*true'>
 <assign name='info' value='$,PostingsInfo'>
 <topics_line class='topics-item ninept' time='$info.MaxSent' href#='/$,Catalog'
              title='$=,BodyNormal' text='$=,Subject' arrow!='$,Id==$index'>
</for>
</element>

<element name='navi_archive' params='index'>
 <topics_line href='/archive/' text='Архив' arrow!="$index=='archive'"
              class='topics-item eightpt'>
 <topics_line href='/chat-archive/' text='Архив чата'
              arrow!="$index=='chat-archive'" class='topics-item eightpt'>
</element>

<element name='topics_major'>
<topics_table title='Разделы'>
 <html_cache ident#='topics_major-$index' period!='3 * 60 * 60'
             depends='postings,topics'>
  <navi_main index='$index'>
  <navi_migdal index='$index'>
  <topics_migdal index='$index'>
  <general index='$index'>
  <topics_splitter>
  <navi_help index='$index'>
  <navi_archive index='$index'>
 </html_cache>
 <admin_topics>
  <li class='topics-nobullet eightpt'>
   <a href='/major/?redirid=$_'>Изменить</a>
  </li>
 </admin_topics>
</topics_table>
</element>

<element name='topics_general'>
<upper_level title='На главную страницу' href='/'>
<topic_obj name='topic' id='$base'>
<topics_table title='$=topic.Subject'>
 <html_cache ident#='topics_general-$base-$index' period!='3 * 60 * 60'
             depends='postings,topics'>
  <posting_last grp='*GRP_TAPE' topic_id='$topic.Id' recursive='*false'
                as_guest='*true'>
  <topics_line time='$,' text='Новости' href#='/$topic.Ident/'
               arrow!="$index=='news'" class='topics-item ninept'>
  <posting_last grp='*GRP_GALLERY' topic_id='$topic.Id' recursive='*false'
                as_guest='*true'>
  <topics_line time='$,' text='Галерея' href#='/$topic.Ident/gallery/'
               arrow!="$index=='gallery'" class='topics-item ninept'>
 </html_cache>
</topics_table>
</element>
