<callback name='article_image'>
<assign name='image' value='$data.Image'>
<ifne what='$data.Align'>
 <assign name='align' value#='style="float: $data.Align; clear: $data.Align"'>
<else>
 <assign name='align' value=''>
</ifne>
<outer><table $align><inner>
 <notprint>
  <if what='$$editmode'>
   <posting_obj id='$data.Id'>
   <tr><td align='center'>
    <ifnzero what='$image'>
     <notenglish>
      <assign name='ititle' value='Изменить картинку'>
     <else>
      <assign name='ititle' value='Modify the Picture'>
     </notenglish>
    <else>
     <notenglish>
      <assign name='ititle' value='Вставить картинку'>
     <else>
      <assign name='ititle' value='Insert a Picture'>
     </notenglish>
    </ifnzero>
    <a href='${,GrpDetailsHref}images/insert/?par=$data.Par'
       class='eightpt'>$ititle</a>
    <ifnzero what='$image'>
     <notenglish>
      <assign name='dtitle' value='Убрать картинку'>
     <else>
      <assign name='dtitle' value='Remove the Picture'>
     </notenglish>
     <br>
     <a href='/actions/posting/image/modify?edittag=1&insert=1&postid=$data.Id&editid=0&par=$data.Par&okdir=$#-&faildir=$#-'
        class='eightpt'>$dtitle</a>
    </ifnzero>
   </td></tr>
  </if>
 </notprint>
 <ifnzero what='$image'>
  <tr><td align='center'>
   <posting_image posting='$image'>
  </td></tr>
  <ifne what='$image.Title'>
   <tr><td class='image-title' align='center'>$image.TitleHTML</td></tr>
  </ifne>
 </ifnzero>
</inner></table></outer>
</callback>

