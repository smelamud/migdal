<< @(#) $Id$ >>

<element name='rating'>
<if what='$showtitle'><span class='rating'>Рейтинг: </span></if>
<if what='$value>=0'>
 <image border=0 src#='/pics/bar-small-${value}.gif' title='Рейтинг'>
<else>
 <image border=0 src='/pics/bar-small-null.gif' title='Рейтинг'>
</if>
</element>

<element name='vote_frame'>
<notprint>
 <notenglish>
  <ifne what='$align'>
   <assign name='al' value#='align=$align'>
  <else>
   <assign name='al' value=''>
  </ifne>
  <iframe frameborder=0 $al width=140 height=35
	  src='/rating/$id/?color=$#color&image=$#image'
	  scrolling=no></iframe>
 </notenglish>
</notprint>
</element>

<element name='vote_panel'>
<notprint>
 <notenglish>
  <ifne what='$align'>
   <assign name='al' value#='align=$align'>
  <else>
   <assign name='al' value=''>
  </ifne>
  <table cellspacing='0' cellpadding='0' $al><tr valign='center' height='16'>
   <if what='!$mini'>
    <td width='70' align='right'>Рейтинг:&nbsp;&nbsp;</td>
   </if>
   <td width='16'><image src='/pics/vote-minus.gif'></td>
   <ifzero what='$rating'>
    <assign name='color' value='#999999'>
   <else>
    <if what='$rating>0'>
     <assign name='color' value='#669966'>
     <assign name='rating' value#='+$rating'>
    <else>
     <assign name='color' value='#cc6666'>
    </if>
   </ifzero>
   <td width='50' style='text-align: center; color: $color; font-weight: bold; font-size: 14px'>$rating</td>
   <td width='16'><image src='/pics/vote-plus.gif'></td>
  </tr></table>
 </notenglish>
</notprint>
</element>
