<< @(#) $Id$ >>

<element name='rating'>
<ifzero what='$value'>
 <assign name='class' value='small-rating-zero'>
<else>
 <if what='$value>0'>
  <assign name='class' value='small-rating-plus'>
  <assign name='value' value#='+$value'>
 <else>
  <assign name='class' value='small-rating-minus'>
 </if>
</ifzero>
<span class='$class'>($value)</span>
</element>

<element name='vote_panel'>
<notprint>
 <notenglish>
  <ifne what='$align'>
   <assign name='al' value#='align=$align'>
  <else>
   <assign name='al' value=''>
  </ifne>
  <table id='vote-$id' cellspacing='0' cellpadding='0' $al>
   <tr valign='center' height='12'>
    <td width='70' align='right'>Рейтинг:&nbsp;&nbsp;</td>
    <td width='12'><asp>
     <asp><a href='/actions/posting/$id/vote?vote=2&okdir=$#-&faildir=$#-'><asp>
      <image class='vote-minus' src='/pics/vote-minus.png'
	     alt='Неинтересно, плохо написано'
	     title='Неинтересно, плохо написано'></a><asp>
    <asp></td>
    <ifzero what='$rating'>
     <assign name='class' value='rating-zero'>
    <else>
     <if what='$rating>0'>
      <assign name='class' value='rating-plus'>
      <assign name='rating' value#='+$rating'>
     <else>
      <assign name='class' value='rating-minus'>
     </if>
    </ifzero>
    <td width='40' class='$class'>$rating</td>
    <td width='12'><asp>
     <asp><a href='/actions/posting/$id/vote?vote=4&okdir=$#-&faildir=$#-'><asp>
      <image class='vote-plus' src='/pics/vote-plus.png'
	     alt='Интересно, хорошо написано'
	     title='Интересно, хорошо написано'></a><asp>
    <asp></td>
   </tr>
  </table>
 </notenglish>
</notprint>
</element>
