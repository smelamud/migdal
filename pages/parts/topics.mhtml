<< @(#) $Id$ >>

<element name='topics_ner' params='time,arrow,nobullet' defaults='time=0'>
<if what='$arrow'>
 <ifbiff time='$time'>
  <image src='$$style_topics_ner_arrow'>
 <else>
  <image src='$$style_topics_arrow'>
 </ifbiff>
<else>
 <ifbiff time='$time'>
  <image src='/pics/ner-small.gif' title='новое'>
 <else>
  <if what='$nobullet'>
   &nbsp;
  <else>
   <image src='/pics/bullet.gif'>
  </if>
 </ifbiff>
</if>
</element>

<element name='topics_line'>
<if what='$arrow'>
 <tr class='topics-arrow' valign='top'>
<else>
 <tr valign='top'>
</if>
 <if what='$indent>0'>
  <tdspan span='$indent'>&nbsp;</tdspan>
 </if>
 <if what='$indent>=0'>
  <td width='$$style_topics_arrow_width'>
   <topics_ner time='$time' arrow='$arrow' nobullet='$nobullet'>
  </td>
 </if>
 <tdspan span='$span'>
  <ifne what='$title'>
   <a href='$href' title='$title' class='$class'><asp>
  <else>
   <a href='$href' class='$class'><asp>
  </ifne>
  <asp>$text<asp>
  <ifne what='$count'>
   <asp>&nbsp;<span class='topics-answers'>($count)</span><asp>
  </ifne></a>
  <ifne what='$rating'><br><rating value='$rating'></ifne>
 </tdspan>
</tr>
</element>

<element name='topics_section'>
<tr valign='top'>
 <if what='$indent>0'>
  <tdspan span='$indent'>&nbsp;</tdspan>
 </if>
 <assign name='headspan' value!='$span+1'>
 <tdspan class='$class' span='$headspan'>$title</tdspan>
</tr>
</element>

<element name='topics_splitter'>
<assign name='splitspan' value!='$span+$indent+1'>
<tr valign='top'>
 <tdspan span='$splitspan'>$text</tdspan>
</tr>
</element>

<element name='topics_static'>
<tr valign=top>
 <if what='$indent>0'>
  <tdspan span='$indent'>&nbsp;</tdspan>
 </if>
 <if what='$indent>=0'>
  <td width=$$style_topics_arrow_width>
   <if what='$nobullet'>
    &nbsp;
   <else>
    <image src='/pics/bullet-mrd.gif'>
   </if>
  </td>
 </if>
 <tdspan span='$span'>$text</tdspan>
</tr>
</element>

<element name='topics_table'>
<ifne what='$title'>
 <div class='topics-header' width='100%'>$title</div>
 <assign name='margin' value=''>
<else>
 <assign name='margin' value='style="margin-top: 10px"'>
</ifne>
<ifne what='$class'>
 <assign name='tableclass' value#='topics $class'>
<else>
 <assign name='tableclass' value='topics'>
</ifne>
<if what='$nomargin'>
 <table class='$tableclass' width=100% style='margin-top: 0'>
<else>
 <table class='$tableclass' width=100% $margin>
</if>
</element>

<element name='/topics_table'>
</table>
</element>

<element name='upper_level'>
<ife what='$title'>
 <assign name='title' value#='К разделу <<$name>>'>
</ife>
<table><tr>
 <td width=20><image src='/pics/up-level.gif'></td>
 <td><a href='$href' class='ninept'>$=title</a></td>
</tr></table>
</element>

<element name='topics'>
<require_once name='$$menu_file'>
<exec element='$$menu_element' arg1='$$menu_index' arg2='$$menu_base'>
</element>
