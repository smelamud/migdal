<< @(#) $Id$ >>

<element name='posting_selflink'>
<selflink href='$posting.GrpDetailsHref'>
</element>

<element name='topiclink'>
<assign name='href' value#='$prefix$posting.GrpGeneralHref'>
<location_info path='$href'>
<a href='$href' class='$class'>$=,TitleFull</a>
</element>

<element name='editlink'>
<a href="${posting.GrpDetailsHref}edit/?redirid=$_"
   ><notenglish>Изменить<else>Edit</notenglish></a>
</element>

<element name='discusslink'>
<notenglish>
 <table cellspacing=0 cellpadding=0><tr>
 <td>
  <ifnzero what='$posting.Answers'>
   <a href='/forum/$posting.Id/'><asp>
    <asp><notenglish>Обсудить в форуме<else>Comments</notenglish><asp>
    <asp>&nbsp;($posting.Answers)<asp>
   <asp></a>
  <else>
   <a href='/forum/$posting.Id/add/'><asp>
    <asp><notenglish>Обсудить в форуме<else>Comments</notenglish><asp>
   <asp></a>
  </ifnzero>
 </td>
 <ifbiff time='$posting.LastAnswer'>
  <td>&nbsp;<image src='/pics/discussion-new.gif'></td>
 <else>
  <td>&nbsp;<image src='/pics/discussion.gif'></td>
 </ifbiff>
 </tr></table>
</notenglish>
</element>

<element name='printlink'>
<table cellspacing=0 cellpadding=0><tr>
 <td><image src='/pics/print.gif'>&nbsp;</td>
 <td>
  <a href='$posting.GrpDetailsHref?&print=1' target='_blank'><asp>
   <notenglish>Для печати<else>Print version</notenglish></a>
 </td>
</tr></table>
</element>

<element name='posting_og_image'>
<if what='$posting.hasImage'>
 <og_image src='$posting.ImageURL'>
</if>
</element>

<element name='posting_image'>
<assign name='al' value=''>
<assign name='alt' value=''>
<assign name='rl' value=''>
<ifne what='$align'>
 <assign name='al' value#='align="$align"'>
</ifne>
<ifne what='$title'>
 <assign name='alt' value#='alt="$=title" title="$=title"'>
</ifne>
<ifne what='$rel'>
 <assign name='rl' value#='rel="$rel"'>
</ifne>
<if what='$posting.hasLargeImage'>
 <ife what='$href'>
  <div class='pic-glass' style='width: ${posting.SmallImageX}px'>
   <a class='enlargeable' href='$posting.LargeImageURL'
      data-title-large='$title_large' $rl>
 <else>
  <a href='$href'>
 </ife>
    <asp><img width='$posting.SmallImageX' height='$posting.SmallImageY'
              $al $alt src='$posting.SmallImageURL'><asp>
  </a>
 <ife what='$href'>
   <assign name='glass_x' value!='$posting.SmallImageX - 22'>
   <assign name='glass_y' value!='$posting.SmallImageY - 22'>
   <div class='glass' style='top: ${glass_y}px; left: ${glass_x}px'></div>
  </div>
 </ife>
<else>
 <ifne what='$href'>
  <a href='$href'>
 </ifne>
  <asp><img width='$posting.ImageX' height='$posting.ImageY' $al $alt
        src='$posting.ImageURL'><asp>
 <ifne what='$href'>
  </a>
 </ifne>
</if>
</element>

<element name='posting_controls'>
<notprint>
 <table width=$len class='posting-bottom'><tr>
  <td>
   <table cellspacing=0 cellpadding=0><tr>
    <td><posting_selflink posting='$posting'></td>
    <td>&nbsp;&nbsp;&nbsp;</td>
    <td><printlink posting='$posting'></td>
    <td>&nbsp;&nbsp;&nbsp;</td>
    <td>
     <iswrite what='$posting'>
      <editlink posting='$posting'>
     </iswrite>
    </td>
   </tr></table>
  </td>
  <if what='$showdiscuss'>
   <td align=right><discusslink posting='$posting'></td>
  </if>
 </tr></table>
</notprint>
</element>

<element name='posting'>
<if what='$posting.GrpTapeCenter'><center></if>
 <require_once name='$posting.GrpTapeFile'>
 <exec element='$posting.GrpTapeElement' arg1='$posting' arg2='$showtopic'
       arg3='$showdiscuss' arg4='$shorten'>
<if what='$posting.GrpTapeCenter'></center></if>
</element>
