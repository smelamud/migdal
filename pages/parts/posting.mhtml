<< @(#) $Id$ >>

<element name='posting_selflink'>
<selflink href='$posting.GrpDetailsHref'>
</element>

<element name='topiclink'>
<assign name='href' value#='$prefix$posting.GrpGeneralHref'>
<location_info path='$href'>
<a href='$href' class='$class'>$=,TitleFull</a>
</element>

<element name='editlink'>
<a href="${posting.GrpDetailsHref}edit/?redirid=$_"><asp>
 <notenglish>Изменить<else>Edit</notenglish></a>
</element>

<element name='discusslink'>
<notenglish>
 <span>
  <ifnzero what='$posting.Answers'>
   <a href='/forum/$posting.Id/'><asp>
    <asp><notenglish>Обсудить в форуме<else>Comments</notenglish><asp>
    <asp>&nbsp;($posting.Answers)<asp>
   <asp></a><asp>
  <else>
   <a href='/forum/$posting.Id/add/'><asp>
    <asp><notenglish>Обсудить в форуме<else>Comments</notenglish><asp>
   <asp></a><asp>
  </ifnzero>
  <ifbiff time='$posting.LastAnswer'>
   <asp>&nbsp;<image src='/pics/discussion-new.gif'>
  <else>
   <asp>&nbsp;<image src='/pics/discussion.gif'>
  </ifbiff>
 </span>
</notenglish>
</element>

<element name='printlink'>
<span>
 <image src='/pics/print.gif' style='position: relative; top: 1px'>&nbsp;<asp>
 <asp><a href='$posting.GrpDetailsHref?&print=1' target='_blank'><asp>
  <notenglish>Для печати<else>Print version</notenglish></a>
</span>
</element>

<element name='posting_og_image'>
<if what='$posting.hasImage'>
 <og_image src='$posting.ImageURL'>
</if>
</element>

<element name='posting_image'>
<assign name='float' value='float: none'>
<assign name='alt' value=''>
<assign name='rl' value=''>
<ifne what='$align'>
 <if what="$align != 'center'">
  <if what="$align == 'left'">
   <assign name='float' value='float: left; clear: left; margin-right: 1em'>
  <else>
   <assign name='float' value='float: right; clear: right; margin-left: 1em'>
  </if>
 <else>
  <assign name='float'
          value='margin-left: auto; margin-right: auto; clear: both'>
 </if>
</ifne>
<ifne what='$image_title'>
 <assign name='alt' value#='alt="$=image_title" title="$=image_title"'>
</ifne>
<ifne what='$rel'>
 <assign name='rl' value#='rel="$rel"'>
</ifne>
<ifne what='$title_large_id'>
 <assign name='tl' value#='data-title-large-id="$title_large_id"'>
<else>
 <assign name='tl' value#='data-title-large="$title_large"'>
</ifne>
<div class='pic' style='width: ${posting.SmallImageX}px; $float'>
 <if what='$posting.hasLargeImage || $enlarge_always'>
  <ife what='$href'>
   <a class='enlargeable' href='$posting.LargeImageURL' $tl&sp;$rl>
  <else>
   <a href='$href'>
  </ife>
  <if what='!$hollow'>
   <asp><img width='$posting.SmallImageX' height='$posting.SmallImageY'
             $alt src='$posting.SmallImageURL'><asp>
  <else>
   &nbsp;
  </if>
  </a>
  <if what="$href == '' && !$hollow">
   <assign name='glass_x' value!='$posting.SmallImageX - 22'>
   <assign name='glass_y' value!='$posting.SmallImageY - 22'>
   <div class='glass' style='top: ${glass_y}px; left: ${glass_x}px'></div>
  </if>
 <else>
  <ifne what='$href'>
   <a href='$href'>
  </ifne>
  <asp><img width='$posting.ImageX' height='$posting.ImageY' $alt
        src='$posting.ImageURL'><asp>
  <ifne what='$href'>
   </a>
  </ifne>
 </if>
 <if what='!$hollow'>
  <outer>
   <div class='buttons'>
    <inner>
     <ifne what='$edithref'>
      <if what="$edithref == 'auto'">
       <assign name='edithref'
               value#='${posting.GrpDetailsHref}edit/?redirid=$_'>
      </if>
      <notenglish>
       <assign name='tooltip' value='Изменить'>
      <else>
       <assign name='tooltip' value='Edit'>
      </notenglish>
      <span><a href='$edithref'><asp>
       <image src='/pics/edit.png' title='$tooltip' alt='$tooltip'>
      <asp></a></span>
     </ifne>
     <ifne what='$rmhref'>
      <notenglish>
       <assign name='tooltip' value='Убрать'>
      <else>
       <assign name='tooltip' value='Remove'>
      </notenglish>
      <span><a href='$rmhref'><asp>
       <image src='/pics/remove.png' title='$tooltip' alt='$tooltip'>
      <asp></a></span>
     </ifne>
    </inner>
   </div>
  </outer>
 </if>
 <ifne what='$title'>
  <div class='pic-title'>$title</div>
 </ifne>
 <if what='$rating != 0 && !$hollow'>
  <assign name='rating_y' value!='$posting.SmallImageY - 25'>
  <rating value='$rating' style#='top: ${rating_y}px'>
 </if>
</div>
</element>

<element name='posting_controls'>
<notprint>
 <table width=$len class='posting-bottom'><tr>
  <td>
   <table cellspacing=0 cellpadding=0><tr>
    <td><posting_selflink posting='$posting'></td>
    <if what='$showprint'>
     <td>&nbsp;&nbsp;&nbsp;</td>
     <td><printlink posting='$posting'></td>
    </if>
    <if what='$showedit'>
     <td>&nbsp;&nbsp;&nbsp;</td>
     <td>
      <iswrite what='$posting'>
       <editlink posting='$posting'>
      </iswrite>
     </td>
    </if>
   </tr></table>
  </td>
  <if what='$showdiscuss'>
   <td align=right><discusslink posting='$posting'></td>
  </if>
 </tr></table>
</notprint>
</element>

<element name='posting'>
<if what='$posting.GrpTapeCenter'><center></if>
 <require_once name='$posting.GrpTapeFile'>
 <exec element='$posting.GrpTapeElement' arg1='$posting' arg2='$showtopic'
       arg3='$showdiscuss' arg4='$shorten'>
<if what='$posting.GrpTapeCenter'></center></if>
</element>
