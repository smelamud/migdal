<element name='banners'>
<www>
 <array name='urls'
	val1='http://www.odessitclub.org/'
	val2='http://www.lookstein.org/russian/'
	val3='http://www.antho.net/'
	val4='http://www.spectr.org/'
	val5='http://www.jewniverse.ru/'
	val6='http://velelens.livejournal.com/'>
 <array name='pics'
	val1='/pics/banners/ioc.gif'
	val2='/pics/banners/lookstein.gif'
	val3='http://www.antho.net/banners/88/88x31-03.gif'
	val4='http://www.spectr.org/images/spectr88x31.gif'
	val5='/pics/banners/jewniverse.jpg'
	val6='/pics/banners/secret.jpg'>
 <array name='alts'
        val1='Всемирный&sp;клуб&sp;одесситов'
        val2='Еврейский&sp;педсовет'
        val3='Jerusalem&sp;Anthologia'
	val4='Журнал&sp;"Спектр"'
	val5='Jewniverse&sp;-&sp;Yiddish&sp;Shtetl'
	val6='Еженедельник&sp;"Секрет"'>
 <assign name='count' value!='count($urls)'>
 <iterate_random_seq n=3 min=1 max='$count'>
 <for>
  <assign name='url' value!='$urls[$. - 1]'>
  <assign name='pic' value!='$pics[$. - 1]'>
  <assign name='alt' value!='$alts[$. - 1]'>
  <a href='$url' target='_blank'>
   <img src='$pic' width='88' height='31' alt='$alt'></a>
 </for>
 &nbsp;
 &nbsp;
</www>
</element>
