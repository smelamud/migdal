<element name='banners'>
<www>
 <array name='urls'
	val1='http://www.odessitclub.org/'
	val2='http://www.lookstein.org/russian/'
	val3='http://www.antho.net/'
	val4='http://www.rjews.net/gazeta/news.html'
	val5='http://www.spectr.org/'
	val6='http://www.jewniverse.ru/'
	val7='http://futureisrael.org/ind-ru.html'>
 <array name='pics'
	val1='/pics/banners/ioc.gif'
	val2='/pics/banners/lookstein.gif'
	val3='http://www.antho.net/banners/88/88x31-03.gif'
	val4='http://www.rjews.net/gazeta/a7ban.gif'
	val5='http://www.spectr.org/images/spectr88x31.gif'
	val6='/pics/banners/jewniverse.jpg'
	val7='http://futureisrael.org/ifg-ie-88x31.gif'>
 <array name='alts'
        val1='&nil;'
        val2='&nil;'
        val3='Jerusalem&sp;Anthologia'
	val4='Jerusalem&sp;chronikles'
	val5='Журнал&sp;"Спектр"'
	val6='Jewniverse&sp;-&sp;Yiddish&sp;Shtetl'
	val7='Будущее&sp;Правительство&sp;Израиля'>
 <assign name='count' value!='count($urls)'>
 <iterate_random_seq n=3 min=1 max='$count'>
 <for>
  <assign name='url' value!='$urls[$. - 1]'>
  <assign name='pic' value!='$pics[$. - 1]'>
  <assign name='alt' value!='$alts[$. - 1]'>
  <a href='$url' target=_blank>
   <img src='$pic' width=88 height=31 border=0 alt='$alt'></a>
 </for>
 &nbsp;
 &nbsp;
</www>
</element>
