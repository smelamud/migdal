<< @(#) $Id$ >>

<relogin>

<element name='form_relogin'>
<error id='*EL_INVALID' text='Неверный ник или пароль'>
<form_line title='Подписать сообщение как'>
 <ifzero what='$relogin'>
  <logged>
   <assign name='relogin' value='*RELOGIN_SAME'>
  <else>
   <assign name='relogin' value!='$noguests ? *RELOGIN_LOGIN : *RELOGIN_GUEST'>
  </logged>
 </ifzero>
 <table border='0' cellspacing='0' cellpadding='3'>
  <tr valign='middle'>
   <if what='!$noguests'>
    <td width='1'>
     <radio id='relogin-guest' name='relogin' value='*RELOGIN_GUEST'
            checked!='$relogin==*RELOGIN_GUEST' onclick='$onclick'>
    </td>
    <td>Имя</td>
    <td>
     <input type=text name='guest_login' value='$$=userGuestLogin' size=15
            maxlength=30
	    onkeypress='document.getElementById("relogin-guest").checked=true'>
    </td>
    <td colspan=4>
     <label for='relogin-guest'>без пароля (гостевой вход)</label>
    </td>
   <else>
    <td width='1' align='center'>
     (&nbsp;)
    </td>
    <td colspan=6><i>гости не могут писать сюда</i></td>
   </if>
  </tr>
  <logged>
   <tr valign='middle'>
    <td width='1'>
     <radio id='relogin-same' name='relogin' value='*RELOGIN_SAME'
            checked!='$relogin==*RELOGIN_SAME' onclick='$onclick'>
    </td>
    <td colspan=6>
     <label for='relogin-same'>Зарегистрированный пользователь</label>
     <b><a href='/users/$$#userFolder/'>$$=userLogin</a></b>
    </td>
   </tr>
  </logged>
  <tr valign='middle'>
   <td width='1'>
    <radio id='relogin-login' name='relogin' value='*RELOGIN_LOGIN'
           checked!='$relogin==*RELOGIN_LOGIN' onclick='$onclick'>
   </td>
   <td>Ник</td>
   <td>
    <input type=text name='login' value='$=login' size=15 maxlength=30
           onkeypress='document.getElementById("relogin-login").checked=true'>
   </td>
   <td>Пароль</td>
   <td>
    <input type=password name='password' size=15
           onkeypress='document.getElementById("relogin-login").checked=true'>
   </td>
   <td>Войти?</td>
   <td><checkbox_button name='remember' checked='$remember'></td>
   <master>
    <tr valign='top'>
     <td width='1'>&nbsp;</td>
     <td colspan=6>
      <a href='/register/?redirid=$_'>Зарегистрироваться</a>&nbsp;&nbsp;<asp>
      <asp><a href='/remember-password/?redirid=$_'>Забыли пароль?</a>
     </td>
    </tr>
   </master>
  </tr>
 </table>
</form_line>
</element>
