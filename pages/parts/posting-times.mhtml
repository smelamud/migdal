<< @(#) $Id$ >>

<element name='topic' params='posting,showtopic'>
<if what='$showtopic'>
 <topiclink posting='$posting'><br>
</if>
</element>

<element name='further' params='posting,title'>
<p>
 <image src='/pics/further.gif'>&sp;
 <a href='$posting.GrpDetailsHref'>$title</a>
</p>
</element>

<element name='posting_times'>
<dl class='posting'>
 <dt>
  <topic posting='$posting' showtopic='$showtopic'>
  <vote_panel align='right' id='$posting.Id' rating='$posting.Rating'>
  <a class='posting-subject'
     href='$posting.GrpDetailsHref'>$=posting.Heading</a>
  <ifne what='$posting.Author'>
   <br><span class='posting-author'>$=posting.Author</span>
  </ifne>
 </dt>
 <dd>
 <if what='$posting.hasImage'>
  <posting_image posting='$posting' title_large='$posting.TitleLineHTML'
                 align='left'>
 </if>
 $posting.BodyHTML<asp>
 <further posting='$posting' title='Читать статью'>
 <posting_controls posting='$posting' showdiscuss='$showdiscuss'>
</dl>
</element>
