<< @(#) $Id$ >>

<element name='batcher' params='&list,parent_id'>
<div class='batcher'>
 <posting_obj id='$parent_id'>
 <if what='$,isPostable'>
  <div class='adder'>
   <image src='/pics/sheet.gif'>&sp;
   <a href='${,GrpDetailsHref}discuss/add/?redirid=$_'>Добавить комментарий</a>
  </div>
 </if>
 <spin list='$list'>
 <div class='clear-floats'></div>
</div>
</element>

<element name='forums'>
<iterate_forumlist parent_id='$parent_id' limit='$limit' offset='$offset'
                   sort='*SORT_RSENT'>
<batcher list='$;' parent_id='$parent_id'>
<outer><table width=100% cellspacing=0 cellpadding=0 class='forums'><tr><td>
 <inner>
  <error id='*EMH_NO_ENTRY' text='Такого сообщения не существует'>
  <error id='*EMH_NO_MODERATE' text='Вы не модератор'>
 </inner>
</tr></td></table></outer>
 <for>
  <forum forum='$.'>
 </for>
<ifnzero what='$;Count'>
 <batcher list='$;' parent_id='$parent_id'>
</ifnzero>
</element>
