<< @(#) $Id$ >>

<conf>
<ident name='topic_id'>
<ident name='topic_id2'>
<string name='grp'>
<string name='grp2'>
<int name='recursive'>
<int name='recursive2'>
<int name='user_id'>
<int name='showshadows'>
<string name='path'>
<int name='limit'>

<ifnzero what='$topic_id2'>
 <array name='topic_ids' val1='$topic_id' val2='$topic_id2'>
 <array name='recursives' val1='$recursive' val2='$recursive2'>
<else>
 <array name='topic_ids' val1='$topic_id'>
 <array name='recursives' val1='$recursive'>
</ifnzero>
<ifne what='$grp2'>
 <grp_join name='grps' grp1='$grp' grp2='$grp2'>
<else>
 <assign name='grps' value='$grp'>
</ifne>

<ifzero what='$limit'>
 <assign name='limit' value='20'>
</ifzero>

<assign name='the_site' value#='http://$userDomain.$siteDomain'>

<element name='item_image' params='posting'>
<if what='$posting.hasImage'>
 <if what='$posting.hasLargeImage'>
  &lt;a href='$$the_site$posting.LargeImageURL'
	title='Нажмите, чтобы увеличить'&gt;
  <asp>&lt;img border=0 width='$posting.SmallImageX'
               height='$posting.SmallImageY'
	       src='$$the_site$posting.SmallImageURL'&gt;<asp>
  &lt;/a&gt;
 <else>
  <asp>&lt;img border=0 width='$posting.ImageX' height='$posting.ImageY'
	       src='$$the_site$posting.ImageURL'&gt;<asp>
 </if>
</if>
</element>

<element name='item_further' params='posting,title'>
&lt;p&gt;
 &lt;a href='$$the_site$posting.GrpDetailsHref'&gt;<asp>
  <asp>&#187; $=title&lt;/a&gt;
&lt;/p&gt;
</element>

<element name='item_further_url' params='posting,url'>
&lt;p&gt;
 &lt;a href='$$the_site/actions/link/$posting.Id/?okdir=$#url'&gt;<asp>
  <asp>&#187; Подробности на другом сайте&lt;/a&gt;
&lt;/p&gt;
</element>

<xml type='text/xml; charset="utf-8"'>
 <preamble_xml>

 <html_cache ident#='rss-$topic_id-$topic_id2-$grp-$grp2-$user_id'
             period!='1 * 60 * 60'>
  <topic_obj name='topic' id='$topic_id'>
  <location_info name='loc' path='$path'>

  <&nil;rss version="2.0">
   <channel>
    <title><asp>
     <notenglish>Мигдаль<else>Migdal</notenglish>
     <if what="$loc.Title!='' && $loc.Title!='Главная' && $loc.Title!='Main'">
      &sp;- $=loc.Title<asp>
     </if>
    </title>
    <link>$the_site$path</link>
    <&nil;description><asp>
     <ifne what='$topic.Body'>
      $=topic.Body
     <else>
      <asp>Мигдаль<asp>
     </ifne>
    </description>
    <&nil;image>
     <url>${the_site}/pics/big-tower.gif</url>
     <title>Мигдаль</title>
     <link>$the_site/</link>
    </image>
    <language>ru-ru</language>
    <webMaster>webmaster@migdal.ru (Dmitry E. Melamud)</webMaster>
    <posting_last grp='$grps' topic_id='$topic_ids' recursive='$recursives'>
    <assign name='date' value#='$,@D, $,@d&sp;$,@M&sp;$,@Y&sp;$,@H:$,@i:$,@s&sp;GMT+2'>
    <pubDate>$date</pubDate>
    <lastBuildDate>$date</lastBuildDate>
    <generator>Migdal website kernel</generator>
    <ttl>60</ttl>
    <iterate_postinglist grp='$grps' topic_id='$topic_ids'
                         recursive='$recursives'
			 user='$user_id' limit='$limit' sort='*SORT_SENT'
			 showshadows='$showshadows' as_guest='*true'>
    <for>
     <item>
      <location_info path#='/$.GrpGeneralHref'>
      <title><asp>
       $=.Heading
       <if what="$,TitleFull!='Untitled'">
	&sp;- $=,TitleFull
       </if>
      </title>
      <link>$the_site$.GrpDetailsHref</link>
      <&nil;description>
       <outer>
	&lt;table width='100%' cellspacing='0' cellpadding='0'&gt;
	 &lt;tr valign='top'&gt;
	  &lt;td align='left' width='105'&gt;
	   <inner><item_image posting='$.'></inner>
	  &lt;/td&gt;
	  &lt;td&gt;
	   <common>
	    $=.BodyHTML
	    <ifne what='$.Author'>
	     &lt;p&gt;&lt;i&gt;$=.Author&lt;/i&gt;&lt;/p&gt;
	    </ifne>
	   </common>
	  &lt;/td&gt;
	 &lt;/tr&gt;
	&lt;/table&gt;
       </outer>
       <if what='$.hasLargeBody'>
	<if what='$.Grp != *GRP_BOOK_CHAPTERS'>
	 <item_further posting='$.'
		       title!="!$$englishDomain ? 'Читать статью'
		                                : 'Read article'">
	<else>
	 <item_further posting='$.'
		       title!="!$$englishDomain ? 'Читать главу книги'
		 			        : 'Read book chapter'">
	</if>
       </if>
       <ifne what='$.URL'>
	<item_further_url posting='$.' url='$.URL'>
       </ifne>
      </description>
      <guid isPermaLink="false">urn:entry:$.Id</guid>
      <pubDate>$.Sent@D, $.Sent@d&sp;$.Sent@M&sp;$.Sent@Y&sp;$.Sent@H:$.Sent@i:$.Sent@s&sp;GMT+2</pubDate>
      <comments>$the_site/forum/$.Id/</comments>
     </item>
    </for>
   </channel>
  </rss>
 </html_cache>
</xml>
