<< @(#) $Id$ >>

<element name='perror'>
<if what='$$err==$id'>
 <tr><tdspan span=$span>
  <a name='error'>
  <font color='$color'>$text</font>
 </tdspan></tr>
</if>
</element>

<element name='SenderLink'>
$message.LoginLink
<if what='$message.isSenderVisible'>
 (<a href='useredit.php?editid=$message.SenderId&redir=$_'>подробнее</a>)
</if>
</element>

<element name='Navigator'>
<br><table width=100%><tr>
 <td align=left width=30%>
  <ifnzero what='$list.Offset'>
   <a href="$[offset='$list.PrevOffset']">&lt;-- Предыдущие</a>
  </ifzero>
 </td>
 <td align=center width=40%>
  <if what='$list.Size<=$list.Limit'>
   Всего: $list.Size
  <else>
   <form method=post action='actions/goto.php'>
    <input type='hidden' name='redir' value='$-'>
    <input type='hidden' name='size' value='$list.Size'>
    [<edit name='value' value='$list.BeginValue' size=2 maxlength=5><<
    >>-$list.EndValue] из $list.Size
   </form>
  </if>
 </td>
 <td align=right width=30%>
  <if what='$list.EndValue<$list.Size'>
   <a href="$[offset='$list.NextOffset']">Следующие --&gt;</a>
  </if>
 </td>
</tr></table><br>
</element>

<element name='Batcher'>
<table width=100%>
 <form method=get action='$~'>
  <hiddenget remove='$var'>
  <tr><td align=right><table><tr valign=center>
  <td>Показывать по&nbsp;</td>
  <td><select name='$var'>
   <array val1='10 15 20 25 30 35 40' val2='$value'>
   <iterate_sortarray>
   <for>
    <if what='$value==$.'>
     <option value=$. selected>$.
    <else>
     <option value=$.>$.
    </if>
   </for>
  </select></td>
  <td>сообщений&nbsp;</td>
  <td><input type=submit value='Изменить'></td>
  </tr></table></td></tr>
 </form>
</table><br>
</element>
