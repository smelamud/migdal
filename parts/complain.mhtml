<< @(#) $Id$ >>

<macro name='rebe'>
 <if what='$complain.isRebe'><font color=red></if>
</macro>

<macro name='/rebe'>
 <if what='$complain.isRebe'></font></if>
</macro>

<element name='Complain'>
<table width=100% class='complain'>
<tr><td>
 <table width=100%>
  <error id='*EC_NO_ASSIGN' span=2
         text='Вы не имеете права направлять жалобы на рассмотрение'>
  <error id='*EC_NO_COMPLAIN' text='Такой жалобы не существует' span=2>
  <error id='*EC_LOGIN_ASSIGN' text='Такой пользователь не зарегистрирован'
         span=2>
  <error id='*EC_SQL_ASSIGN' text='Ошибка SQL при обновлении записи'
         color=magenta span=2>
  <tr>
   <td>
    <judge>
     <form method=post action='actions/complainassign.php'>
     <input type=hidden name='redir' value='$-'>
     <input type=hidden name='id' value='$complain.Id'>
      <table>
       <tr>
	<td><edit name='login' size=15 maxlength=30></td>
	<td><input type=submit value='Поручить'></td>
       </tr>
      </table>
     </form>
    <else>
     &nbsp;
    </judge>
   </td>
  </tr>
  <tr>
   <td>$complain.SentView</td>
   <td align=right><b>Закрыто: </b>$complain.ClosedView</td>
  </tr>
  <tr>
   <td><b><rebe>$complain.Subject</rebe></b></td>
   <td align=right><rebe><senderlink message='$complain'></rebe></td>
  </tr>
 </table>
</td></tr>
<tr><td>
 <rebe>$complain.HTMLBody</rebe>
</td></tr>
<tr>
<td>
<isedit name='complain'>
 <a href="complainedit.php?editid=$complain.Id&redir=$_"
  >[Изменить]</a>
</isedit>
</td>
<td align=right>
<if what='$discuss'>
 <a href='complainforum.php?redir=$_&compid=$complain.Id'>Обсудить ($complain.AnswerCount)</a>
</if>
</td>
</tr>
</table>
</element>
