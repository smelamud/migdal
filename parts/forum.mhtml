<< @(#) $Id$ >>

<macro name='rebe'>
 <if what='$forum.isRebe'><font color=red></if>
</macro>

<macro name='/rebe'>
 <if what='$forum.isRebe'></font></if>
</macro>

<element name='Forum'>
<grps>
<table width=100%>
<tr>
 <td width=25%>
 <rebe><senderlink message='$forum'></rebe><br>
 $forum.SentView<br>
 <isedit name='forum'>
  <a href="messageedit.php?editid=$forum.Id&grp=*GRP_FORUMS&redir=$_"
   >[Изменить]</a>
  <moderator>
   <if what='$forum.isDisabled'>
    <a href="actions/moderate.php?editid=$forum.Id&hide=0&redir=$_"
     >[Разрешить показ]</a>
   <else>
    <a href="actions/moderate.php?editid=$forum.Id&hide=1&redir=$_"
     >[Запретить показ]</a>
   </if>
  </moderator>
 </isedit>
 </td>
 <td width=75% align=left valign=top>
  <rebe>$forum.Body</rebe>
 </td>
</tr>
</table>
</element>
